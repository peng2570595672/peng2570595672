.index
    width 100vw
    height 100vh
    background-color #fefdfd
    &::before
        display block
        content ''
        height 0.1rpx
    & > .image
        display block
        margin 80rpx auto 0
        width 304rpx
        height 238rpx
    & > .payText
        display flex
        height 76rpx
        font-size 60rpx
        font-weight 500
        margin-top 30rpx
        align-items center
        justify-content center
    & > .btn
        color #fff
        margin 28rpx
        width 694rpx
        height 110rpx
        display flex
        font-size 36rpx
        font-weight 400
        align-items center
        border-radius 64rpx
        justify-content center
        background-color #2A4F44
        font-family PingFangSC-Semibold, PingFang SC
        text-shadow 0 -8rpx 30rpx rgba(223, 223, 223, 0.36)
        box-shadow 0 -8rpx 30rpx 0 rgba(223, 223, 223, 0.36), 0 4rpx 2rpx 0 rgba(212, 212, 212, 0)
        position fixed
        bottom 100rpx