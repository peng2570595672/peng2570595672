@import "../../../style/base.styl";
.root
	min-height 100vh
	padding-bottom 104rpx
	& > .title
		margin-top 40rpx
		display flex
		align-items center
		padding 0 30rpx
		height 56rpx
		font-size 40rpx
		font-weight 500
		&:before
			margin-right 10rpx
			content ''
			width 10rpx
			height 10rpx
			border 6rpx solid $fontColor
			border-radius 50%
		& > text
			margin-left 12rpx
			font-size 24rpx
			color #7A7F83
			transform translateY(8rpx)
	& > .subtitle
		color #66666d
		font-size 28rpx
		line-height 40rpx
		padding-left 60rpx
		padding-right 40rpx
		margin-top 20rpx
		margin-bottom 40rpx
	.ul
		width 100%
		padding-left 60rpx
		.li
			padding-right 60rpx
			padding-top 60rpx
			border-top 2rpx solid rgba(176, 176, 176, .29)
			margin-bottom 60rpx
			&:last-child
				margin-bottom 0
			image
				display block
				margin 0 auto
				&[data-tag="gif"]
					width 638rpx
					height 358rpx
			.title
				color #33333d
				font-size 28rpx
				line-height 40rpx
				font-weight 500
				margin-bottom 20rpx
			.desc
				color #66666d
				font-size 28rpx
				line-height 40rpx
				margin-top 20rpx
			.prompt
				color #33333d
				font-size 32rpx
				line-height 36rpx
				font-weight 500
				margin-top 30rpx
	.next
		width 630rpx
		height 98rpx
		line-height 98rpx
		border-radius 49rpx
		font-size 40rpx
		text-align center
		color #fff
		background linear-gradient(45deg, #14ac69, #84d157)
		margin 32rpx auto 0
		&:active
			opacity .8
		&.disabled
			opacity .24
