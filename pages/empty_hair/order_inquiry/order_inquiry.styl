@import "../../../style/base.styl";
.container
	width 100vw
	min-height 100vh
	padding 32rpx 28rpx 120rpx
	box-sizing border-box
	display flex
	flex-direction column
	background-color #ECECEC
	// 输入开始
	.input-wrapper
		padding 48rpx 36rpx
		background #fff
		border-radius 16rpx
		.input-title
			font-size: 32rpx;
			font-family: PingFang SC-Semibold, PingFang SC;
			font-weight: 600;
			color: $fontColor3;
			line-height: 38rpx;
			margin-bottom 4rpx
		.tips
			height 22rpx
			padding-left 28rpx
			font-size: 18rpx;
			font-family: PingFang SC-Regular, PingFang SC;
			font-weight: 400;
			color: #F19C38;
			line-height: 22rpx;
			padding-top 2rpx
		.input-item
			position relative
			display flex
			align-items center
			font-size 28rpx
			height: 88rpx;
			padding 0 28rpx
			background: #F6F6F6;
			color #33333D
			border-radius 8rpx
			margin-top 24rpx
			& > input
				display flex
				align-items center
				flex 1
				height 48rpx
			// 获取验证码
			.validate-code
				width: 158rpx;
				height: 60rpx;
				display flex
				align-items center
				justify-content center
				border-radius 8rpx
				font-size: 20rpx;
				font-family: PingFang SC-Regular, PingFang SC;
				font-weight: 400;
				color: #2A4F44;
				border: 1rpx solid #2A4F44;
				&.ok
					font-weight 500
					color $fontColor
				&.acquisition
					color $fontColor
					font-weight 400!important
	// 下一步
	.btn
		display flex
		align-items center
		justify-content center
		margin 72rpx 16rpx 36rpx
		height: 110rpx;
		font-size: 36rpx;
		font-family: PingFang SC-Medium, PingFang SC;
		font-weight: 500;
		color: #FFFFFF;
		box-shadow: 0rpx 4rpx 2rpx 0rpx rgba(211.5760973095894,211.5761125087738,211.5761125087738,0.5);
		border-radius 55rpx
		background: $newFontColor
		&.unavailable
			background #C0C0C0
	.protocol
		display flex
		align-items center
		justify-content center
		font-size: 20rpx;
		font-family: Source Han Sans CN-Regular, Source Han Sans CN;
		font-weight: 400;
		color #4191F0
		.label
			color $fontColor3
		.circle
			width: 24rpx;
			height: 24rpx;
			border-radius: 22rpx;
			border: 2rpx solid #4D4D51;
			margin-right 10rpx
			box-sizing border-box
			&.check-circle
				border: 8rpx solid #39812B;
				background #fff
	.fill
		flex 1
	.bottom-container
		display flex
		align-items center
		justify-content center
		font-size 24rpx
		color #4D4D51
		view
			margin 0 16rpx
