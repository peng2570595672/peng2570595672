.container {
  width: 100vw;
  min-height: 100vh;
  padding: 32rpx 28rpx 120rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  background-color: #ececec;
}
.container .input-wrapper {
  padding: 48rpx 36rpx;
  background: #fff;
  border-radius: 16rpx;
}
.container .input-wrapper .input-title {
  font-size: 32rpx;
  font-family: PingFang SC-Semibold, PingFang SC;
  font-weight: 600;
  color: #33333d;
  line-height: 38rpx;
  margin-bottom: 4rpx;
}
.container .input-wrapper .tips {
  height: 22rpx;
  padding-left: 28rpx;
  font-size: 18rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: #f19c38;
  line-height: 22rpx;
  padding-top: 2rpx;
}
.container .input-wrapper .input-item {
  position: relative;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  height: 88rpx;
  padding: 0 28rpx;
  background: #f6f6f6;
  color: #33333d;
  border-radius: 8rpx;
  margin-top: 24rpx;
}
.container .input-wrapper .input-item > input {
  display: flex;
  align-items: center;
  flex: 1;
  height: 48rpx;
}
.container .input-wrapper .input-item .validate-code {
  width: 158rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: #2a4f44;
  border: 1rpx solid #2a4f44;
}
.container .input-wrapper .input-item .validate-code.ok {
  font-weight: 500;
  color: #2fb565;
}
.container .input-wrapper .input-item .validate-code.acquisition {
  color: #2fb565;
  font-weight: 400 !important;
}
.container .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 72rpx 16rpx 36rpx;
  height: 110rpx;
  font-size: 36rpx;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #fff;
  box-shadow: 0rpx 4rpx 2rpx 0rpx rgba(212,212,212,0.5);
  border-radius: 55rpx;
  background: #2a4f44;
}
.container .btn.unavailable {
  background: #c0c0c0;
}
.container .protocol {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-family: Source Han Sans CN-Regular, Source Han Sans CN;
  font-weight: 400;
  color: #4191f0;
}
.container .protocol .label {
  color: #33333d;
}
.container .protocol .circle {
  width: 24rpx;
  height: 24rpx;
  border-radius: 22rpx;
  border: 2rpx solid #4d4d51;
  margin-right: 10rpx;
  box-sizing: border-box;
}
.container .protocol .circle.check-circle {
  border: 8rpx solid #39812b;
  background: #fff;
}
.container .fill {
  flex: 1;
}
.container .bottom-container {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #4d4d51;
}
.container .bottom-container view {
  margin: 0 16rpx;
}
