.iconfont
	font-family "iconfont" !important
	font-size 16px
	font-style normal
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
mixinsWidthHeight($width = 100%, $height = 100%)
	width $width
	height $height
mixinsIconfont($content='',$size=16px,$color=#5EBE68)
	content $content
	font-size $size
	color $color
mixinsPositionPack($position=relative)
	position $position
	left 50%
	transform translateX(-50%)
textLineCenter($height)
	text-align center
	line-height $height
flexModule($align=normal,$justify=normal)
	display flex
	align-items $align
	justify-content $justify
.index
	margin 0
	padding 0
	width 100vw
	min-height 100vh
	background-color #ECECEC
	&::before
		display block
		content ''
		height 0.01rpx
		background-color #ECECEC
	&::after
		display block
		content ''
		height 56rpx
	/* 公共模块 */
	.module
		margin 28rpx
		padding 28rpx
		border-radius 16rpx
		background-color #fff
		letter-spacing 0.38rpx
		font-family PingFangSC-Regular, PingFang SC
		box-shadow 0px 4rpx 2rpx 0rpx rgba(212, 212, 212, 0.5)
		.title
			font-size 34rpx
			font-weight 600
			color #33333D
			font-family PingFangSC-Semibold, PingFang SC
		.subTitle
			font-size 24rpx
			font-weight normal
			margin-top 20rpx
			letter-spacing 0.32rpx
			font-variation-settings "opsz" auto
			color #262626
	.module1
		height auto
		padding 40rpx 0rpx
		background transparent
		box-shadow none
	.module2,.module3
		height 136rpx
		padding 20rpx 48rpx
		flexModule(center,space-between)
		&::after
			mixinsIconfont('\e60e',32rpx,#000)
			transform rotateZ(-180deg)
		.subMod2
			flexModule(center,normal)
			.pic
				margin-right 28rpx
				mixinsWidthHeight(92rpx,92rpx)
			.text1
				font-size 36rpx
				font-weight 500
				letter-spacing 0.8rpx
				font-variation-settings "opsz" auto
				color #000000
	.image
		mixinsWidthHeight()