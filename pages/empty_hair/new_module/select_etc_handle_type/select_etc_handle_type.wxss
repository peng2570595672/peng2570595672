.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.index {
  margin: 0;
  padding: 0;
  width: 100vw;
  min-height: 100vh;
  background-color: #ececec;
/* 公共模块 */
}
.index::before {
  display: block;
  content: '';
  height: 0.01rpx;
  background-color: #ececec;
}
.index::after {
  display: block;
  content: '';
  height: 56rpx;
}
.index .module {
  margin: 28rpx;
  padding: 28rpx;
  border-radius: 16rpx;
  background-color: #fff;
  letter-spacing: 0.38rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  box-shadow: 0px 4rpx 2rpx 0rpx rgba(212,212,212,0.5);
}
.index .module .title {
  font-size: 34rpx;
  font-weight: 600;
  color: #33333d;
  font-family: PingFangSC-Semibold, PingFang SC;
}
.index .module .subTitle {
  font-size: 24rpx;
  font-weight: normal;
  margin-top: 20rpx;
  letter-spacing: 0.32rpx;
  font-variation-settings: "opsz" auto;
  color: #262626;
}
.index .module1 {
  height: auto;
  padding: 40rpx 0rpx;
  background: transparent;
  box-shadow: none;
}
.index .module2,
.index .module3 {
  height: 136rpx;
  padding: 20rpx 48rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.index .module2::after,
.index .module3::after {
  content: '\e60e';
  font-size: 32rpx;
  color: #000;
  transform: rotateZ(-180deg);
}
.index .module2 .subMod2,
.index .module3 .subMod2 {
  display: flex;
  align-items: center;
  justify-content: normal;
}
.index .module2 .subMod2 .pic,
.index .module3 .subMod2 .pic {
  margin-right: 28rpx;
  width: 92rpx;
  height: 92rpx;
}
.index .module2 .subMod2 .text1,
.index .module3 .subMod2 .text1 {
  font-size: 36rpx;
  font-weight: 500;
  letter-spacing: 0.8rpx;
  font-variation-settings: "opsz" auto;
  color: #000;
}
.index .image {
  width: 100%;
  height: 100%;
}
