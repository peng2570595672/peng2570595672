<!--pages/moving_integral/bound_changyou/bound_changyou.wxml-->
<view class="bound_changyou">
  <view class="main_1">
    <text>欢迎，{{phone_number}}</text>
    <text>移动积分: {{moving_integral}}</text>
    <view><image src="../assets/money2.png"/></view>
  </view>
  <view class="main_2">
    <view></view>
    <text>积分兑高速路费补贴最高立减20元</text>
    <text>规则说明</text>
  </view>
  <view class="main_3" >
    <view></view>
    <view wx:for="{{pass_ticket}}" wx:key="index" data-item="{{item}}" wx:if="index === " class="ticket_exchange">
      <view class="upper">
          <view class="upper_money">
            <text>￥</text>
            <text>{{item.goodsPrice}}</text>
          </view>
          <text>通行券</text>
          <text>{{item.goodPoints}}移动积分</text>
        </view>
        <view class="lower">
          <button style="background-color: {{item.goodPoints <= moving_integral ? 'rgba(255, 179, 59, 1)' : 'rgba(234, 234, 234, 1)'}}"
                  catchtap="confirm_exchange" 
				  disabled="{{item.goodPoints <= moving_integral ? false : true}}"
				  data-index="{{index}}"
				  >立即兑换</button>
        </view>
    </view>
  </view>
  <view class="footers">
    <text>由上海分互链信息技术有限公司提供积分兑换</text>
  </view>
</view>