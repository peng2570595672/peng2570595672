/* pages/moving_integral/bound_changyou/bound_changyou.wxss */
.bound_changyou {
  /* height: 100vh; */
  position: relative;
  background: linear-gradient(rgba(0, 184, 92, 1), rgba(246, 246, 246, 1))
}

.main_1 {
  width: 100%;
  height: 256rpx;
  display: flex;
  position: relative;
  top: 6rpx;
}

.main_1 text {
  font-size: 34rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  position: absolute;
  left: 64rpx;
}

.main_1 text:nth-of-type(1) {
  top: 54rpx;
}

.main_1 text:nth-of-type(2) {
  top: 126rpx;
}

.main_1 view {
  width: 328rpx;
  height: 256rpx;
  position: absolute;
  right: 20rpx;
  overflow: hidden;
}
.main_1 view image {
  width: 100%;
  height: 100%;
}

.main_2 {
  width: 686rpx;
  height: 74rpx;
  border-radius: 16rpx;
  position: relative;
  top: 20rpx;
  left: 32rpx;
}
.main_2 view {
  width: 686rpx;
  height: 74rpx;
  border-radius: 16rpx;
  background: url("https://file.cyzl.com/g001/M00/91/D0/oYYBAGLvgdiAUi7dAAAUGwcw6jI836.png") no-repeat;
  background-size: 100% 100%;
  opacity: 0.25;
}

.main_2 text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  position: absolute;
  top: 18rpx;
  opacity: 1;
}

.main_2 text:nth-of-type(1) {
  left: 32rpx;
}

.main_2 text:nth-of-type(2) {
  right: 32rpx;
}

.main_3 {
  width: 686rpx;
  height: auto;
  border-radius: 16rpx;
  position: relative;
  top: 40rpx;
  left: 32rpx;
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 50rpx;
}

.main_3>view:nth-of-type(1) {
  position: absolute;
  width: 686rpx;
  height: 100%;
  border-radius: 16rpx;
  background: url('https://file.cyzl.com/g001/M07/91/D0/oYYBAGLvg0uAL94KAAAKhAa7I30472.png') no-repeat;
  background-size: 100% 100%;
  opacity: 0.25;
}
.main_3 .ticket_exchange {
  width: 298rpx;
  height: 432rpx;
  margin-top: 46rpx;
  margin-left: 30rpx;
  background: url(https://file.cyzl.com/g001/M07/91/D0/oYYBAGLvhTKAGehJAAAEnD2rknU775.png) no-repeat;
  background-size: 100% 100%;
  z-index: 100;
  position: relative;
}
.main_3 .ticket_exchange .upper {
  width: 100%;
  height: 70%;
  position: relative;
  
}
.main_3 .ticket_exchange .lower {
  width: 100%;
  height: 30%;
  position: relative;
}


.main_3 .ticket_exchange .upper .upper_money{
  position: relative;
  color: #00B85C;
}

.main_3 .ticket_exchange .upper .upper_money text:nth-of-type(1){
  font-size: 34rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  position: absolute; 
  bottom: 0rpx;
  left: 10%;
}

.main_3 .ticket_exchange .upper .upper_money text:nth-of-type(2){
  display: block;
  width: 100%;
  height: 150rpx;
  font-size: 144rpx;
  font-weight: 400;
  font-family: PingFangSC-Semibold, PingFang SC;
  text-align: center;
}

.main_3 .ticket_exchange .upper>text {
  display: block;
  text-align: center;
  font-size: 34rpx;
  margin-top: 25rpx;
}

.main_3 .ticket_exchange .upper>text:nth-of-type(1){
  color: rgba(0, 184, 92, 1);
  overflow-wrap: break-word;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
}

.main_3 .ticket_exchange .upper>text:nth-of-type(2){
  overflow-wrap: break-word;
  color: rgba(255, 192, 0, 1);
  font-family: PingFangSC-Regular, PingFang SC;
  margin-top: 20rpx;
  font-weight: 400;
}

.main_3 .ticket_exchange .lower button{
  width: 80%;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}


.footers {
  width: 528rpx;
  height: 200rpx;
  /* background-color: khaki; */
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #99999D;
  text-align: center;
  line-height: 200rpx;
  margin: 40rpx 0rpx 0rpx 112rpx;
}