  position: absolute;
  top: 18rpx;
}

.main_2 text:nth-of-type(1) {
  left: 32rpx;
}

.main_2 text:nth-of-type(2) {
  right: 32rpx;
}

.main_3 {
  width: 686rpx;
  height: auto;
  background: linear-gradient(42deg, rgba(255,255,255,0.1900) 0%, rgba(255,255,255,0.1300) 100%);
  border-radius: 16rpx;
  position: relative;
  top: 40rpx;
  left: 32rpx;
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 50rpx;
  /* overflow: hidden; */
}
.main_3 .ticket_exchange {
  width: 298rpx;
  height: 432rpx;
  margin-top: 46rpx;
  margin-left: 30rpx;
  background-color: snow;
  position: relative;
}
.main_3 .ticket_exchange .upper {
  width: 100%;
  height: 70%;
  position: relative;
  border-bottom: 1rpx dashed #E5E5E5 ;
}
.main_3 .ticket_exchange .lower {
  width: 100%;
  height: 30%;
  position: relative;
}

.main_3 .ticket_exchange .upper::before {
  width: 60rpx;
  height: 60rpx;
  -webkit-clip-path: circle(34.0% at 0 49%);
  clip-path: circle(34.0% at 0 49%);
  background: linear-gradient(#a7edd4,#b6f0db);
  transform: translateY(30rpx);
  position: absolute;
  bottom: 0;
  left: 0;
  content: "";
  z-index: 100;
}
.main_3 .ticket_exchange .upper::after {
  width: 60rpx;
  height: 60rpx;
  -webkit-clip-path: circle(34.0% at 100% 50%);
  clip-path: circle(34.0% at 100% 50%);
  background: linear-gradient(#a7edd4,#b6f0db);
  transform: translateY(30rpx);
  position: absolute;
  bottom: 0;
  right: 0;
  content: "";
  z-index: 100;
}

.main_3 .ticket_exchange .upper .upper_money{
  position: relative;
  color: #00B85C;
}

.main_3 .ticket_exchange .upper .upper_money text:nth-of-type(1){
  font-size: 34rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  position: absolute; 
  bottom: 0rpx;
  left: 10%;
}

.main_3 .ticket_exchange .upper .upper_money text:nth-of-type(2){
  display: block;
  width: 100%;
  height: 150rpx;
  font-size: 144rpx;
  font-weight: 600;
  font-family: PingFangSC-Semibold, PingFang SC;
  text-align: center;
}

.main_3 .ticket_exchange .upper>text {
  display: block;
  text-align: center;
  font-size: 34rpx;
  margin-top: 25rpx;
}

.main_3 .ticket_exchange .upper>text:nth-of-type(1){
  color: rgba(0, 184, 92, 1);
  overflow-wrap: break-word;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
}

.main_3 .ticket_exchange .upper>text:nth-of-type(2){
  overflow-wrap: break-word;
  color: rgba(255, 192, 0, 1);
  font-family: PingFangSC-Regular, PingFang SC;
  margin-top: 20rpx;
  font-weight: 400;
}

.main_3 .ticket_exchange .lower button{
  width: 80%;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}


