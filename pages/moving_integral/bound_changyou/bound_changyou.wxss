/* pages/moving_integral/bound_changyou/bound_changyou.wxss */
.bound_changyou {
  width: 100wh;
  height: 100vh;
}

.main {
  height: 80vh;
  background: linear-gradient(#00B85C, #fff)
}

.main .main1 {
  height: 104rpx;
  width: 90%;
  margin: 0 5% 0 5%;
  color: #fff;
  padding-top: 60rpx;
  margin-bottom: 50rpx;
}

.main .main1 view {
  text-align: left;
  height: 32rpx;
  overflow-wrap: break-word;
  line-height: 32rpx;
}

.main .main1 view:nth-of-type(1) {
  font-size: 34rpx;
  margin-bottom: 40rpx;
  text-indent: 1rem;
}

.main .main1 view:nth-of-type(2) {
  font-size: 34rpx;
  text-align: left;
  text-indent: 1rem;
}

.main .main2 {
  position: absolute;
  width: 290rpx;
  height: 243rpx;
  top: 20rpx;
  right: 5%;
}

.main .main3 {
  width: 90%;
  margin: 0 5% 0 5%;
  height: 650rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  display: flex;
}

.main .main3 .ticket_exchange {
  width: 42.5%;
  height: 70%;
  /* background-color: rgba(255, 255, 255, 0); */
  margin: 15% 0 0 5%;
  border-radius: 20rpx;
  overflow: hidden;
}

.main .main3 .ticket_exchange .upper {
  width: 100%;
  height: 65%;
  background-color: #fff;
  position: relative;
  border-bottom: 1rpx dashed #E5E5E5 ;
}
.main .main3 .ticket_exchange .lower {
  width: 100%;
  height: 35%;
  background-color: #fff;
  position: relative;
}

.main .main3 .ticket_exchange .upper::before {
  width: 60rpx;
  height: 60rpx;
  -webkit-clip-path: circle(34.0% at 0 49%);
  clip-path: circle(34.0% at 0 49%);
  background: linear-gradient(#a7edd4,#b6f0db);
  transform: translateY(30rpx);
  position: absolute;
  bottom: 0;
  left: 0;
  content: "";
  z-index: 100;
}

.main .main3 .ticket_exchange .upper::after {
  width: 60rpx;
  height: 60rpx;
  -webkit-clip-path: circle(34.0% at 100% 50%);
  clip-path: circle(34.0% at 100% 50%);
  background: linear-gradient(#a7edd4,#b6f0db);
  transform: translateY(30rpx);
  position: absolute;
  bottom: 0;
  right: 0;
  content: "";
  z-index: 100;
}




.main .main4 {
  width: 90%;
  height: 80rpx;
  color: #fff;
  line-height: 80rpx;
  margin: 30rpx 5% 0 5%;
  background-color: #10C96C;
  border-radius: 20rpx;
  opacity: 0.6;
  display: flex;
  justify-content: space-around;
}

.footers {
  text-align: center;
  color: #8b8a8a;
  text-align: center;
  margin-top: 140rpx;
}