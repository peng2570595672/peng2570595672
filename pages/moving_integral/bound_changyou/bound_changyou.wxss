}

.main_1 text {
  font-size: 34rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  position: absolute;
  left: 64rpx;
}

.main_1 text:nth-of-type(1) {
  top: 54rpx;
}

.main_1 text:nth-of-type(2) {
  top: 126rpx;
}

.main_1 view {
  width: 328rpx;
  height: 256rpx;
  background-color: sandybrown;
  position: absolute;
  right: 20rpx;
}

.main_2 {
  width: 686rpx;
  height: 74rpx;
  border-radius: 16rpx;
  /* background: linear-gradient(rgba(16, 201, 108, 1),rgba(157, 255, 206, 1)); */
  background: linear-gradient(117deg, #10C96C 0%, #9DFFCE 100%);
