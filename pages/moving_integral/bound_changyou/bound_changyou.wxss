/* pages/moving_integral/bound_changyou/bound_changyou.wxss */
.bound_changyou {
  /* height: 100vh; */
  height: 100%;
  position: relative;
  background: linear-gradient(rgba(0, 184, 92, 1), rgba(246, 246, 246, 1))
}

.main_1 {
  width: 100%;
  height: 256rpx;
  display: flex;
  position: relative;
  top: 6rpx;
}

.main_1 text {
  font-size: 34rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  position: absolute;
  left: 64rpx;
}

.main_1 text:nth-of-type(1) {
  top: 54rpx;
}

.main_1 text:nth-of-type(2) {
  top: 126rpx;
}

.main_1 view {
  width: 328rpx;
  height: 256rpx;
  position: absolute;
  right: 20rpx;
  overflow: hidden;
}

.main_1 view image {
  width: 100%;
  height: 100%;
}

.main_2 {
  width: 686rpx;
  height: 74rpx;
  border-radius: 16rpx;
  position: relative;
  top: 20rpx;
  left: 32rpx;
}

.main_2 view {
  width: 686rpx;
  height: 74rpx;
  border-radius: 16rpx;
  background: url("https://file.cyzl.com/g001/M00/91/D0/oYYBAGLvgdiAUi7dAAAUGwcw6jI836.png") no-repeat;
  background-size: 100% 100%;
  opacity: 0.25;
}

.main_2 text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  position: absolute;
  top: 18rpx;
  opacity: 1;
}

.main_2 text:nth-of-type(1) {
  left: 32rpx;
}

.main_2 text:nth-of-type(2) {
  right: 32rpx;
}

.main_3 {
  width: 686rpx;
  height: auto;
  border-radius: 16rpx;
  position: relative;
  top: 40rpx;
  left: 32rpx;
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 50rpx;
}

.main_3>view:nth-of-type(1) {
  position: absolute;
  width: 686rpx;
  height: 100%;
  border-radius: 16rpx;
  background: url('https://file.cyzl.com/g001/M07/91/D0/oYYBAGLvg0uAL94KAAAKhAa7I30472.png') no-repeat;
  background-size: 100% 100%;
  opacity: 0.25;
}

.main_3 .ticket_exchange {
  width: 298rpx;
  height: 432rpx;
  margin-top: 46rpx;
  margin-left: 30rpx;
  background: url(https://file.cyzl.com/g001/M07/91/D0/oYYBAGLvhTKAGehJAAAEnD2rknU775.png) no-repeat;
  background-size: 100% 100%;
  z-index: 100;
  position: relative;
}

.main_3 .ticket_exchange .upper {
  width: 100%;
  height: 70%;
  position: relative;

}

.main_3 .ticket_exchange .lower {
  width: 100%;
  height: 30%;
  position: relative;
}


.main_3 .ticket_exchange .upper .upper_money {
  position: relative;
  color: #00B85C;
}

.main_3 .ticket_exchange .upper .upper_money text:nth-of-type(1) {
  font-size: 34rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  position: absolute;
  bottom: 0rpx;
  left: 10%;
}

.main_3 .ticket_exchange .upper .upper_money text:nth-of-type(2) {
  display: block;
  width: 100%;
  height: 150rpx;
  font-size: 144rpx;
  font-weight: 400;
  font-family: PingFangSC-Semibold, PingFang SC;
  text-align: center;
}

.main_3 .ticket_exchange .upper>text {
  display: block;
  text-align: center;
  font-size: 34rpx;
  margin-top: 25rpx;
}

.main_3 .ticket_exchange .upper>text:nth-of-type(1) {
  color: rgba(0, 184, 92, 1);
  overflow-wrap: break-word;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
}

.main_3 .ticket_exchange .upper>text:nth-of-type(2) {
  overflow-wrap: break-word;
  color: rgba(255, 192, 0, 1);
  font-family: PingFangSC-Regular, PingFang SC;
  margin-top: 20rpx;
  font-weight: 400;
}

.main_3 .ticket_exchange .lower button {
  width: 80%;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* 弹窗============================================ */
.page_container {
  width: 100%;
  height: 100%;
  background-color: rgba(76, 76, 76, 0.8000);
  z-index: 100;
  position: absolute;
  top: 0;
}

.moving_integral_pop-up {
  width: 640rpx;
  height: 892rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  position: fixed;
  z-index: 110;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.moving_integral_pop-up>.scroll_pop-up {
  width: 568rpx;
  height: 684rpx;
  color: #000000;
  line-height: 46rpx;
  margin: 64rpx 0 0 48rpx;

}


.moving_integral_pop-up .scroll_pop-up view {
  width: 532rpx;
  height: auto;
}

.moving_integral_pop-up .scroll_pop-up view:nth-of-type(1) {
  font-size: 26rpx;
  font-weight: 500;
  font-family: PingFangSC-Medium, PingFang SC;
  color: #000000;
  padding-bottom: 20rpx;
}

.moving_integral_pop-up .scroll_pop-up view:nth-of-type(2) {
  font-size: 24rpx;
  font-weight: 400;
  font-family: PingFangSC-Regular, PingFang SC;
  padding-bottom: 20rpx;
}

::-webkit-scrollbar {
  width: 12rpx;
  height: 672rpx;
  border-radius: 6rpx;
  background: rgba(240, 240, 240, 1);
}

/*定义滚动条轨道 内阴影+圆角*/
::-webkit-scrollbar-track {
  border-radius: 12rpx;
}

/*定义滑块 内阴影+圆角*/
::-webkit-scrollbar-thumb {
  border-radius: 12rpx;
  background-color: rgba(216, 216, 216, 1);
}


.moving_integral_pop-up .solid {
  width: 100%;
  height: 2rpx;
  background: rgba(0, 0, 0, 0.1000);
  margin-top: 36rpx;
}

.moving_integral_pop-up .btn_scroll {
  width: 100%;
  height: 106rpx;
  display: flex;
}

.moving_integral_pop-up .btn_scroll button {
  outline: none;
  border: none;
  width: 80%;
  height: 100%;
  border-radius: 0;
  color: #576B95;
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  letter-spacing: 2rpx;
  line-height: 106rpx;
  background-color: #fff;
}

/* 验证码弹窗 */
.verification_code {
  width: 640rpx;
  height: 464rpx;
  border-radius: 16rpx;
  background-color: #fff;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 100;
}

.verification_code view:nth-of-type(1) {
  width: 544rpx;
  height: 96rpx;
  text-align: center;
  margin: 64rpx 48rpx 0 48rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #000000;
  line-height: 48rpx;
}

.verification_code view:nth-of-type(1) .number_phone {
  color: rgba(25, 191, 107, 1);
}

.verification_code view:nth-of-type(2) {
  width: 512rpx;
  height: 82rpx;
  position: relative;
  top: 34rpx;
  left: 64rpx;
  display: flex;
  justify-content: space-between;
}

.verification_code view:nth-of-type(2) text {
  display: inline-block;
  width: 68rpx;
  height: 98rpx;
  text-align: center;
  font-size: 70rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  line-height: 88rpx;
  border-bottom: 6rpx solid rgba(216, 216, 216, 1);
  margin-top: -6rpx;
  color: #00B85C;
}

.verification_code view:nth-of-type(2) input {
  width: 100%;
  height: 98rpx;
  color: rgba(0, 0, 0, 0);
  position: absolute;
  opacity: 0;
}

.verification_code button {
  width: 100%;
  height: 48rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  line-height: 48rpx;
  background-color: #fff;
  border: none;
  position: relative;
  top: 100rpx;
}

.footers {
  width: 528rpx;
  height: 200rpx;
  /* background-color: khaki; */
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #99999D;
  text-align: center;
  line-height: 200rpx;
  margin: 40rpx 0rpx 0rpx 112rpx;
}