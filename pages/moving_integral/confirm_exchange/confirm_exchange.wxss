/* 确认兑换按钮 */
.btn {
  width: 100%;
  height: 170rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
}
.btn>.confirmBtnControll {
  width: 610rpx;
  height: 98rpx;
  border-radius: 50rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 98rpx;
}

.btn>.iphonModel {
  position: fixed;
  left: 70rpx;
  bottom: 60rpx;
}

.btn>.iphonModelIpad {
  margin-top: 100rpx;
}

.btn>.ok {
  background: linear-gradient(to right, #00AF62, #68D33F);
  box-shadow: 0px 8rpx 10rpx 0px rgba(104, 211, 63, 0.2000);
}

.btn>.err {
  background-color: #ccc;
}

/* 验证码弹窗 */
.verification_code {
  width: 640rpx;
  height: 464rpx;
  border-radius: 16rpx;
  background-color: #fff;
  box-sizing: border-box;
  box-shadow: 0rpx 0rpx 10rpx 1rpx #ccc;
  position: fixed;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 100;
}

.verification_code view:nth-of-type(1) {
  width: 544rpx;
  height: 96rpx;
  text-align: center;
  margin: 64rpx 48rpx 0 48rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #000000;
  line-height: 48rpx;
}

.verification_code view:nth-of-type(1) .number_phone {
  color: rgba(25, 191, 107, 1);
}

.verification_code view:nth-of-type(2) {
  width: 512rpx;
  height: 98rpx;
  position: relative;
  top: 34rpx;
  left: 64rpx;
  display: flex;
  overflow: hidden;
  justify-content: space-around;
}

.verification_code view:nth-of-type(2) text {
  display: inline-block;
  width: 68rpx;
  height: 98rpx;
  text-align: center;
  font-size: 70rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  line-height: 88rpx;
  border-bottom: 6rpx solid rgba(216, 216, 216, 1);
  margin-top: -6rpx;
  color: #00B85C;
}

.verification_code view:nth-of-type(2) input {
  width: 200%;
  height: 98rpx;
  color: transparent;
  text-indent: -999rem;
  position: absolute;
  left: -512rpx;
  opacity: 0;
}