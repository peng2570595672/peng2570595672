<!--pages/moving_integral/unbound_changyou/unbound_changyou.wxml-->
<view class="unbound_changyou">
  <view class="main1">
    <view>
      <text>欢迎，{{phone_number}}</text>
    </view>
    <view>
      <text>移动积分：{{moving_integral}}</text>
      <text catchtap="btn">规则说明</text>
    </view>
  </view>
  <!-- 遮罩层 -->
  <view class="page_container" wx:if="{{mask}}"></view>
	
	<!-- 授权弹窗 -->
  <view class="moving_integral_pop-up" wx:if="{{movingIntegralControl}}">
  	<scroll-view class="scroll_pop-up" scroll-y="true">
  	  <view>{{arr1.title}}</view>
  	  <view>{{arr1.text1}}<text>\n</text>{{arr1.text2}}<text>\n</text>{{arr1.text3}}<text>\n</text>{{arr1.text4}}</view>
  	</scroll-view>
  	<view class="solid"></view>
  	<view class="btn_scroll">
  	  <button id="cancel" catchtap="btnMovingIntegral">取消</button>
  	  <button id="confirm" catchtap="btnMovingIntegral">继续</button>
  	</view>
   </view>

  <!-- 验证码弹窗 -->
  <view class="verification_code" wx:if="{{verification_code}}">
    <view>
      <text>积分兑换服务需短信验证码确认\n</text>
      <text>验证码已下发至<text class="number_phone">{{15870105554}}</text></text>
    </view>
    <view>
      <input type="text" bindinput="input_change" maxlength="6"/>
      <text style="border-bottom: {{ vc_value[0] ? '6rpx solid #8D8D8D ' : '6rpx solid #D8D8D8' }}">{{vc_value[0]}}</text>
      <text style="border-bottom: {{ vc_value[1] ? '6rpx solid #8D8D8D ' : '6rpx solid #D8D8D8' }}">{{vc_value[1]}}</text>
      <text style="border-bottom: {{ vc_value[2] ? '6rpx solid #8D8D8D ' : '6rpx solid #D8D8D8' }}">{{vc_value[2]}}</text>
      <text style="border-bottom: {{ vc_value[3] ? '6rpx solid #8D8D8D ' : '6rpx solid #D8D8D8' }}">{{vc_value[3]}}</text>
      <text style="border-bottom: {{ vc_value[4] ? '6rpx solid #8D8D8D ' : '6rpx solid #D8D8D8' }}">{{vc_value[4]}}</text>
      <text style="border-bottom: {{ vc_value[5] ? '6rpx solid #8D8D8D ' : '6rpx solid #D8D8D8' }}">{{vc_value[5]}}</text>
    </view>
    <button catchtap="btn_verification_code">{{get_code}}
      <text wx:if="time_flag"><text>(</text>{{set_time_out}}<text>)</text></text>
    </button>
  </view>
 <!-- 关闭遮慕层和验证框 -->
  <button class="btn_off" wx:if="{{btn_off}}" catchtap="btn_off">X</button>

  <view class="footers">
    <text>由上海分互链信息技术有限公司提供积分兑换</text>
  </view>

</view>