/* pages/moving_integral/unbound_changyou/unbound_changyou.wxss */
.unbound_changyou {
  position: relative;
  width: 100%;
  height: 100vh;
}

.main1 {
  height: 104rpx;
  width: 90%;
  margin: 0 5% 0 5%;
  padding-top: 60rpx;
  margin-bottom: 50rpx;
}

.main1 view {
  text-align: left;
  height: 32rpx;
  overflow-wrap: break-word;
  line-height: 32rpx;
}

.main1 view:nth-of-type(1) {
  font-size: 34rpx;
  margin-bottom: 40rpx;
  text-indent: 1rem;
}

.main1 view:nth-of-type(2) {
  text-align: left;
  text-indent: 1rem;
  display: flex;
  justify-content: space-between;
}

.main1 view:nth-of-type(2) text:nth-of-type(1) {
  font-size: 34rpx;
}

.page_container {
  width: 100%;
  height: 100vh;
  background-color: rgba(76, 76, 76, 0.8000);
  z-index: 50;
  position: absolute;
  top: 0;
}

.moving_integral_pop-up {
  width: 640rpx;
  height: 892rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  position: absolute;
  z-index: 100;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.moving_integral_pop-up>.scroll_pop-up {
  width: 568rpx;
  height: 684rpx;
  color: #000000;
  line-height: 46rpx;
  margin: 64rpx 0 0 48rpx;

}


.moving_integral_pop-up .scroll_pop-up view {
  width: 532rpx;
  height: auto;
}

.moving_integral_pop-up .scroll_pop-up view:nth-of-type(1) {
  font-size: 26rpx;
  font-weight: 500;
  font-family: PingFangSC-Medium, PingFang SC;
  color: #000000;
  padding-bottom: 20rpx;
}

.moving_integral_pop-up .scroll_pop-up view:nth-of-type(2) {
  font-size: 24rpx;
  font-weight: 400;
  font-family: PingFangSC-Regular, PingFang SC;
  padding-bottom: 20rpx;
}

::-webkit-scrollbar {
  width: 12rpx;
  height: 672rpx;
  border-radius: 6rpx;
  background: rgba(240, 240, 240, 1);
}

/*定义滚动条轨道 内阴影+圆角*/
::-webkit-scrollbar-track {
  border-radius: 12rpx;
}

/*定义滑块 内阴影+圆角*/
::-webkit-scrollbar-thumb {
  border-radius: 12rpx;
  background-color: rgba(216, 216, 216, 1);
}


.moving_integral_pop-up .solid {
  width: 100%;
  height: 2rpx;
  background: rgba(0, 0, 0, 0.1000);
  margin-top: 36rpx;
}

.moving_integral_pop-up .btn_scroll {
  width: 100%;
  height: 106rpx;
  display: flex;
}

.moving_integral_pop-up .btn_scroll button {
  outline: none;
  border: none;
  width: 50%;
  height: 100%;
  border-radius: 0;
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  letter-spacing: 2rpx;
  line-height: 106rpx;
  background-color: #fff;
}

.moving_integral_pop-up .btn_scroll button:nth-of-type(1) {
  border-right: 1rpx solid rgba(0, 0, 0, 0.1000);
  color: #000000;
}

.moving_integral_pop-up .btn_scroll button:nth-of-type(2) {
  color: #576B95;
}

/* 验证码弹窗 */
.verification_code {
  width: 640rpx;
  height: 464rpx;
  border-radius: 16rpx;
  background-color: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 100;
}

.verification_code view:nth-of-type(1) {
  width: 544rpx;
  height: 96rpx;
  text-align: center;
  margin: 64rpx 48rpx 0 48rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #000000;
  line-height: 48rpx;
}

.verification_code view:nth-of-type(1) .number_phone {
  color: rgba(25, 191, 107, 1);
}

.verification_code view:nth-of-type(2) {
  width: 512rpx;
  height: 82rpx;
  position: relative;
  top: 34rpx;
  left: 64rpx;
  display: flex;
  justify-content: space-between;
}

.verification_code view:nth-of-type(2) text {
  display: inline-block;
  width: 68rpx;
  height: 98rpx;
  text-align: center;
  font-size: 70rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  line-height: 88rpx;
  border-bottom: 6rpx solid rgba(216, 216, 216, 1);
  margin-top: -6rpx;
  color: #00B85C;
}

.verification_code view:nth-of-type(2) input {
  width: 100%;
  height: 98rpx;
  color: rgba(0, 0, 0, 0);
  position: absolute;
  opacity: 0;
}

.verification_code button {
  width: 100%;
  height: 48rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  line-height: 48rpx;
  background-color: #fff;
  border: none;
  position: relative;
  top: 100rpx;
}

.btn_off {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  border-radius: 50%;
  color: rgba(136, 135, 135, 0.8);
  background-color: #fff;
  position: fixed;
  top: 50rpx;
  right: 50rpx;
  z-index: 120;
}


.footers {
  width: 528rpx;
  height: 48rpx;
  position: fixed;
  left: 112rpx;
  bottom: 82rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #99999D;
  text-align: center;
}