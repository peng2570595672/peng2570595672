@import "../../../style/base.styl";
.order-detail
	display flex
	min-height 97vh
	flex-direction column
	// 标题
	.title
		margin-top 40rpx
		display flex
		align-items center
		padding 0 32rpx
		height 56rpx
		font-size 34rpx
		font-weight 500
		&::before
			margin-right 10rpx
			content ''
			width 8rpx
			height 44rpx
			background #00B85C
	// 信息显示开始
	.item
		display flex
		align-items center
		margin-left 30rpx
		padding-right 32rpx
		font-size 28rpx
		border-bottom 1rpx solid rgba(0, 0, 0, 0.1);
		& > view
			padding-top 30rpx
			padding-bottom 10rpx
			&:first-of-type
				flex 1
				color #66666E
				font-family: PingFangSC-Regular, PingFang SC;
				font-weight: 400;
			&:last-of-type
				font-family: PingFangSC-Medium, PingFang SC;
				font-weight: 500;
				color: #33333E;
			&.un-pay
				color #FFC000
			&.success
				color #00B85C
	.split
		margin-top 10rpx
		height 20rpx
		background: #F7F7F7
	.auto-fill
		flex 1
	// 按钮开始
	// 下一步
	.btn
		display flex
		align-items center
		justify-content center
		background: #F2F2F2;
		border-radius: 8rpx;
		margin 30rpx 192rpx
		height 98rpx
		font-size 36rpx
		font-weight 500
		color #07C160
	.customer-service
		margin-top 32rpx
		display flex
		align-items center
		justify-content center
		color #66666E
		font-size 28rpx
		margin-bottom 88rpx
		&.empty
			margin-top 130rpx
		& > view
			&:last-of-type
				color #00B1FF
