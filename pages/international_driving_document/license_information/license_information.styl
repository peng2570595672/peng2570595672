@import "../template/step_template/step_template.styl";
@import "../../../style/base.styl";
.content
	display flex
	flex-direction column
	min-height 100vh
	background: rgba(237, 237, 237, 0.9);
	.memo
		margin-top 32rpx
		padding 38rpx 22rpx 12rpx 32rpx
		background #FFC300
		font-size 24rpx
		font-family: PingFangSC-Regular, PingFang SC;
		font-weight: 400;
		color: #FF422A;
		line-height: 34rpx;
	.tips-title
		margin 38rpx 22rpx 12rpx 32rpx
		font-size: 28rpx;
		font-family: PingFangSC-Regular, PingFang SC;
		font-weight: 400;
		color: #000000;
		line-height: 40rpx;
	.tips-content
		margin 0rpx 22rpx 0rpx 32rpx
		font-size: 24rpx;
		font-family: PingFangSC-Regular, PingFang SC;
		font-weight: 400;
		color: rgba(0,0,0,0.5)
		line-height: 34rpx;
	// 标题
	.title
		margin-top 40rpx
		display flex
		align-items center
		padding 0 32rpx
		height 56rpx
		font-size 34rpx
		font-weight 500
		&::before
			margin-right 10rpx
			content ''
			width 8rpx
			height 44rpx
			background #00B85C
	// 内容
	.content-wrapper
		margin 20rpx 32rpx 10rpx
		overflow hidden
		.item
			display flex
			align-items center
			font-size 28rpx
			border-bottom 1rpx solid #F8F8F8
			box-sizing border-box
			color rgba(0,0,0,0.5)
			& > view
				padding-top 30rpx
				padding-bottom 10rpx
				flex .35
			& > input,
			& > picker
				width 100%
				text-align right
				color rgba(0,0,0,0.9)
				padding-top 30rpx
				padding-bottom 10rpx
				flex .65
				font-weight 400
				line-height 48rpx
				.no-value
					color #ccc
				.picker-address
					color #ccc
					&.have-value
						color $fontColor3
		.name-item
			display flex
			align-items center
			font-size 28rpx
			border-bottom 1rpx solid #F8F8F8
			box-sizing border-box
			color rgba(0,0,0,0.5)
			& > view
				padding-top 30rpx
				padding-bottom 10rpx
			.middle
				flex 1
				text-align right
				color rgba(0,0,0,0.9)
				padding-top 30rpx
				padding-bottom 10rpx
				font-weight 400
				line-height 48rpx
			.right
				text-align right
				color rgba(0,0,0,0.9)
				padding-top 30rpx
				padding-bottom 10rpx
				font-weight 400
				line-height 48rpx
				.no-value
					color #ccc
		.picker-item
			display flex
			align-items center
			font-size 28rpx
			border-bottom 1rpx solid #F8F8F8
			box-sizing border-box
			color rgba(0,0,0,0.5)
			& > view
				padding-top 30rpx
				padding-bottom 10rpx
			& > picker
				width 100%
				color rgba(0,0,0,0.9)
				padding-top 30rpx
				padding-bottom 10rpx
				flex 1
				font-weight 400
				line-height 48rpx
			.picker
				text-align center
				color #ccc
				&.have-value
					color $fontColor3
			.sample
				text-align right
				color #00B1FF
	// 下一步
	.btn
		display flex
		align-items center
		justify-content center
		margin 108rpx 32rpx 196rpx
		height 98rpx
		font-size 40rpx
		font-weight 500
		color #fff
		border-radius 49rpx
		background: linear-gradient(45deg, #00AF62 0%, #68D33F 100%);
		&.available
			animation btnFadeIn .3s
			animation-fill-mode forwards
		&.unavailable
			opacity .6
			animation btnFadeOut .3s
			animation-fill-mode forwards
	.alert-for-sample
		position fixed
		left 0
		top 0
		right 0
		bottom 0
		background rgba(0, 0, 0, .7)
		overflow-x hidden
		overflow-y auto
		-webkit-overflow-scrolling touch
		display flex
		flex-direction column
		justify-content center
		align-items center
		z-index 999
		.alert-for-sample-content
			display flex
			flex-direction column
			justify-content center
			align-items center
			background: #FFFFFF;
			left 56rpx
			right 56rpx
			padding-top 64rpx
			border-radius 16rpx
			.dialog-title
				font-size: 34rpx;
				font-family: PingFangSC-Medium, PingFang SC;
				font-weight: 500;
				color: #000000;
			.sample-content
				width: 544rpx;
				height: 306rpx;
				margin 32rpx 48rpx
				background: #E5E5E5;
				border-radius: 2rpx;
				.sample-image
					margin 22rpx 0rpx 18rpx 40rpx
					width: 420rpx;
					height: 266rpx;
			.tips
				width 100%
				text-align center
				font-size: 34rpx;
				font-family: PingFangSC-Regular, PingFang SC;
				font-weight: 400;
				color rgba(0,0,0,0.5)
				padding-bottom 64rpx
				border-bottom 1rpx solid #E5E5E5
			.cancel
				margin 30rpx 0rpx
				width 100%
				text-align center
				font-size: 34rpx;
				font-family: PingFangSC-Medium, PingFang SC;
				font-weight: 500;
				color: #576B95;
