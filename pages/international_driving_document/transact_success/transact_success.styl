@import "../../../style/base.styl";
.signed_successfully
	display flex
	flex-direction column
	background #FFFFFF
	min-height 100vh
	.title
		margin-top 8%
		text-align center
		font-size: 34rpx;
		font-family: Helvetica;
		color: #000000;
		line-height: 40rpx;
	// 成功结果
	image
		display block
		margin 28rpx auto 0
		height 238rpx
		width 304rpx
	// 主标题
	.signed_title
		display flex
		align-items center
		justify-content center
		height 76rpx
		font-size 44rpx
		font-family: PingFangSC-Regular, PingFang SC;
		font-weight: 400;
	.tips
		margin 32rpx 46rpx
		font-size: 28rpx;
		font-family: PingFangSC-Regular, PingFang SC;
		font-weight: 400;
		color: #66666E;
	.order-btn
		display flex
		align-items center
		justify-content center
		margin 300rpx 32rpx 32rpx 32rpx
		height: 98rpx;
		color #fff
		font-size 32rpx
		background: linear-gradient(45deg, #00AF62 0%, #68D33F 100%);
		border-radius: 50rpx;
	.return-btn
		display flex
		align-items center
		justify-content center
		margin 0rpx 32rpx
		font-weight 500
		height 98rpx
		font-size 32rpx
		color #00B85C
		border-radius 50rpx
		border: 2rpx solid #00B85C;
	.customer-service
		display flex
		align-items center
		justify-content center
		color #66666E
		font-size 28rpx
		margin-top 44rpx
		margin-bottom 88rpx
		& > view
			&:last-of-type
				color #00B1FF
