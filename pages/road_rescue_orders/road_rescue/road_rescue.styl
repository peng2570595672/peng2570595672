@font-face
    font-family 'iconfont' /* Project id 1514406 */
    src url('//at.alicdn.com/t/font_1514406_r2ex32p9up.woff2?t=1651741878795') format('woff2'), url('//at.alicdn.com/t/font_1514406_r2ex32p9up.woff?t=1651741878795') format('woff'), url('//at.alicdn.com/t/font_1514406_r2ex32p9up.ttf?t=1651741878795') format('truetype')
.iconfont
    font-family 'iconfont' !important
    font-size 16px
    font-style normal
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
mixinsWidthHeight($width = 100%, $height = 100%)
    width $width
    height $height
maxMixinsWidthHeight($width = 100%, $height = 100%)
    width $width
    min-height $height
mixinsIconfont($content='',$size=16px,$color=#5EBE68)
    content $content
    font-size $size
    color $color
mixinsPositionPack($position=relative)
    position $position
    left 50%
    transform translateX(-50%)
textLineCenter($height)
    text-align center
    line-height $height
flexModule($align=normal,$justify=normal)
    display flex
    align-items $align
    justify-content $justify
.index
    maxMixinsWidthHeight(100vw,100vh)
    &::before
        content ''
        display block
        mixinsWidthHeight(,24rpx)
    .module
        margin 20rpx 35rpx 0rpx 35rpx
        padding 0rpx 30rpx
        border-radius 16rpx
        box-shadow 4rpx 4rpx 46rpx 0rpx rgba(125,132,158,0.1)
    .moduleOne
        height 220rpx
        border-radius 32rpx
        // background #0f0
        font-family PingFangSC-Medium, PingFang SC
        .upper
            mixinsWidthHeight(,120rpx)
            border-bottom: 2rpx solid #F1F1F1
            .attrVal
                padding-top 24rpx
                // background #3a8ee1
                mixinsWidthHeight(,56rpx)
                flexModule(center,space-between)
                .attr
                    font-size 40rpx
                    font-weight 500
                    color #33333E
                    line-height 56rpx
                .val
                    font-size 28rpx
                    font-weight 400
                    color #E9CA7B
                    line-height 40rpx
        .below
            .nameStatus
                margin-top 24rpx
                flexModule(center,space-between)
                .name
                    font-size 28rpx
                    font-weight 400
                    color #99999D
                    line-height 44rpx
                .status
                    font-size 28rpx
                    font-weight 400
                    color rgba(49,164,121,1)
                    line-height 40rpx
                    &::after
                        // margin-left 10rpx
                        display inline-block
                        content "\e661"
                        font-size 30rpx
                        color rgba(49,164,121,1)
                        transform rotateZ(-90deg)

    .image
        mixinsWidthHeight()
    .split
        mixinsWidthHeight(,108rpx)