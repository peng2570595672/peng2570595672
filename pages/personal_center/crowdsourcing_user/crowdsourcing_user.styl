@import "../../../style/base.styl";
page
	background #F7F7F7
.my_crowdsourcing_gains
	padding-bottom 30rpx
	.list
		width 690rpx
		height 186rpx
		background #FFFFFF
		box-shadow 0rpx 4rpx 8rpx 0rpx rgba(234,233,233,0.5)
		padding 20rpx 30rpx
		box-sizing border-box
		border-radius 20rpx
		margin 31rpx auto 0
		.vehicle
			display flex
			line-height 56rpx
			& > view:first-child
				flex 1 1 auto
				font-size 40rpx
				color $fontColor3
			& > view:last-child
				width 148rpx
				height 40rpx
				line-height 40rpx
				text-align center
				background #2FB565
				border-radius 20rpx
				opacity 0.6
				font-size 20rpx
				color #fff
				&.close
					background #FA6400
				&.activate
					background #039EEB
				&.transact
					background #F7B500
		.name,
		.add_time
			padding 10rpx 0
			font-size 24rpx
			color $fontColor6
		.add_time
			color $fontColor9
.empty
	text-align center
	color $fontColor6
	font-size 32rpx
	image
		width 192rpx
		margin 23.5vh 0 5vh
	view
		line-height 44rpx
