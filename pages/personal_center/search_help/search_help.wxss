page {
  background: #f7f7f7;
}
page .help-center .help-list .help-search {
  background: #fff;
  padding: 60rpx 0 40rpx;
  margin-bottom: 20rpx;
}
page .help-center .help-list .help-search>input {
  width: 92%;
  height: 70rpx;
  line-height: 70rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #17ad69;
  padding-left: 40rpx;
  background: #f5f5f5;
  border-radius: 35rpx;
  margin: 0 auto;
}
page .help-center .help-list .list {
  background: #fff;
}
page .help-center .help-list .list .list-title {
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 32rpx;
  text-indent: 44rpx;
  color: #33333d;
  border-bottom: 2rpx solid #ececec;
}
page .help-center .help-list .list .list-content {
  height: 98rpx;
  line-height: 98rpx;
  font-size: 28rpx;
  color: #66666d;
  border-bottom: 2rpx solid #ececec;
  margin-left: 40rpx;
}
page .help-center .help-list .list>view:last-child {
  border-bottom: 0;
}
page .mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  background: rgba(0,0,0,0.6);
}
page .mask .top {
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  width: 100%;
  height: 25%;
  background: rgba(0,0,0,0);
}
page .mask .wrapper {
  position: fixed;
  left: 0rpx;
  top: 25%;
  right: 0;
  bottom: 0;
  height: 75%;
  background: #fff;
  border-radius: 32rpx 32rpx 0px 0px;
}
page .mask .wrapper .details-title {
  padding: 90rpx 52rpx 0;
  font-size: 40rpx;
  color: #33333d;
}
page .mask .wrapper .details-list {
  font-size: 30rpx;
  text-align: justify;
  padding: 50rpx 54rpx 0;
  display: flex;
  line-height: 44rpx;
  color: #66666d;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
}
page .mask .wrapper .details-list .label {
  text-align: center;
  font-size: 100rpx;
  color: #33333d;
  margin-top: -5rpx;
  margin-right: 20rpx;
}
page .mask .wrapper .details-list .char {
  flex: 9.5;
}
