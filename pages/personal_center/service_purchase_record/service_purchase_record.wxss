.content {
  background: #fafafa;
  height: 100vh;
}
.content .list-vehicle {
  padding: 64rpx 76rpx 32rpx 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.content .list-vehicle .label {
  width: 190rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0,0,0,0.5);
}
.content .list-vehicle .list-title {
  display: flex;
  align-items: center;
  justify-content: center;
  overflow-x: auto;
  white-space: nowrap;
}
.content .list-vehicle .list-title .list-title-child {
  display: inline-block;
  font-size: 28rpx;
  text-align: center;
  color: rgba(0,0,0,0.8);
  line-height: 50rpx;
  margin-right: 26rpx;
}
.content .list-vehicle .list-title .tab-index {
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #000;
  border-bottom: 6rpx solid #1ba566;
}
.content .service {
  margin: 0rpx 32rpx;
  background: #fff;
  box-shadow: 0rpx 0rpx 18rpx 0rpx rgba(0,0,0,0.04);
  border-radius: 16rpx;
}
.content .service .service-detail {
  display: flex;
  align-items: center;
  height: 150rpx;
  margin: 0rpx 32rpx;
  border-bottom: 1rpx dashed rgba(0,0,0,0.1);
}
.content .service .service-detail .left {
  flex: 1;
  display: flex;
  flex-direction: column;
  color: rgba(0,0,0,0.3);
  line-height: 34rpx;
}
.content .service .service-detail .left > view:first-child {
  font-size: 34rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000;
  line-height: 48rpx;
}
.content .service .service-detail .right {
  display: flex;
  flex-direction: column;
}
.content .service .service-detail .right > view:first-child {
  font-size: 34rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 500;
  color: #000;
  line-height: 48rpx;
}
.content .service .service-detail .right .status {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #2fb565;
  line-height: 34rpx;
}
.content .service .list-service {
  margin-top: 26rpx;
  margin-left: 32rpx;
  display: flex;
  flex-wrap: wrap;
}
.content .service .list-service .item .item-content {
  margin-bottom: 12rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 296rpx;
  height: 100rpx;
  background: #2fb565;
  color: #fff;
  font-size: 28rpx;
}
.content .service .list-service .item .item-content .img {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 10rpx;
  height: 44rpx;
  width: 44rpx;
  background: #fff;
  border-radius: 50%;
}
.content .service .list-service .item .item-content .img > image {
  height: 40rpx;
  width: 40rpx;
}
.content .service .list-service .item .item-content .item-name {
  margin: 0rpx 8rpx;
}
.content .service .list-service .item .item-content .item-symbol {
  font-size: 26rpx;
  line-height: 34rpx;
}
.content .service .list-service .item .item-content .num {
  font-size: 24rpx;
  line-height: 34rpx;
  margin: 0rpx 8rpx;
}
.content .service .list-service .item .item-content:nth-child(odd) {
  margin-right: 24rpx;
}
.content .service .list-service .item .item-content:nth-child(odd)::before,
.content .service .list-service .item .item-content:nth-child(odd)::after {
  position: absolute;
  top: 50%;
  display: inline-block;
  width: 28rpx;
  height: 22rpx;
  content: '';
  border-radius: 50%;
  background-color: #fff;
  transform: translateY(-50%);
}
.content .service .list-service .item .item-content:nth-child(odd)::before {
  left: -20rpx;
}
.content .service .list-service .item .item-content:nth-child(odd)::after {
  left: auto;
  right: -20rpx;
}
.content .service .service-tips {
  padding-top: 22rpx;
  padding-bottom: 32rpx;
  text-align: center;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0,0,0,0.3);
  line-height: 34rpx;
}
