@import "../../../style/base.styl";
page
	background #F7F7F7
.order_instructions
	padding-bottom 178rpx
	// 扣费信息
	.arrears_information
		padding 32rpx 60rpx 30rpx
		background #fff
		font-size 28rpx
		font-family PingFangSC-Regular,PingFang SC;
		font-weight 400
		color #FF0000
		line-height 48rpx
		margin-bottom 20rpx
	// 欠费金额
	.arrears_amount
		background #fff
		padding 30rpx 0rpx
		margin-bottom 20rpx
		&>view
			padding 8rpx 60rpx
			font-size 28rpx
			line-height 48rpx
			border-bottom 1rpx solid #EDEDED
			.explain
				color $fontColor9
		.line
			display flex
		.line view:first-child
			flex 4
			height 48rpx
			line-height 48rpx
			color $fontColor6
		.line view:last-child
			flex 6
			text-align right
			color $fontColor3
		&>view:last-child
			border 0
	// 欠费说明
	.arrears_instructions
		background #fff
		padding 30rpx 62rpx 30rpx 66rpx
		font-size 24rpx
		line-height 34rpx
		margin-bottom 20rpx
		&>view
			&>view:first-child
				color $fontColor6
			&>view:last-child
				color $fontColor9
	//底部补缴
	.payment
		position fixed
		left 0
		bottom 0
		width 100%
		height 178rpx
		font-size 24rpx
		color #9D9DA0
		text-align center
		background #fff
		button
			width 84%
			height 98rpx
			line-height 98rpx
			background linear-gradient(to right, $deepThemeColor, $shallowThemeColor)
			box-shadow 0px 8rpx 10rpx 0px rgba(132,209,87,0.2)
			border-radius 50rpx
			font-size 40rpx
			color #FFFFFF
			margin-top 40rpx
