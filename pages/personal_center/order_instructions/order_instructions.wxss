page {
  background: #f7f7f7;
}
.order_instructions {
  padding-bottom: 178rpx;
}
.order_instructions .arrears_information {
  padding: 32rpx 60rpx 30rpx;
  background: #fff;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #f00;
  line-height: 48rpx;
  margin-bottom: 20rpx;
}
.order_instructions .payment-of-success {
  color: #99999d;
}
.order_instructions .arrears_amount {
  background: #fff;
  padding: 30rpx 0rpx;
  margin-bottom: 20rpx;
}
.order_instructions .arrears_amount>view {
  padding: 8rpx 60rpx;
  font-size: 28rpx;
  line-height: 48rpx;
  border-bottom: 1rpx solid #ededed;
}
.order_instructions .arrears_amount>view .explain {
  color: #99999d;
}
.order_instructions .arrears_amount .line {
  display: flex;
}
.order_instructions .arrears_amount .line view:first-child {
  flex: 4;
  height: 48rpx;
  line-height: 48rpx;
  color: #66666d;
}
.order_instructions .arrears_amount .line view:last-child {
  flex: 6;
  text-align: right;
  color: #33333d;
}
.order_instructions .arrears_amount>view:last-child {
  border: 0;
}
.order_instructions .arrears_instructions {
  background: #fff;
  padding: 30rpx 62rpx 30rpx 66rpx;
  font-size: 24rpx;
  line-height: 34rpx;
  margin-bottom: 20rpx;
}
.order_instructions .arrears_instructions>view>view:first-child {
  color: #66666d;
}
.order_instructions .arrears_instructions>view>view:last-child {
  color: #99999d;
}
.order_instructions .payment {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 178rpx;
  font-size: 24rpx;
  color: #9d9da0;
  text-align: center;
  background: #fff;
}
.order_instructions .payment button {
  width: 84%;
  height: 98rpx;
  line-height: 98rpx;
  background: linear-gradient(to right, #15ad69, #84d157);
  box-shadow: 0px 8rpx 10rpx 0px rgba(132,209,87,0.2);
  border-radius: 50rpx;
  font-size: 40rpx;
  color: #fff;
  margin-top: 40rpx;
}
