@import "../../../style/base.styl";
page
	min-height 100vh
	box-sizing border-box
	background #fff
	display flex
	flex-direction column
.my_order
	// 提示
	.prompt
		height 80rpx
		background #F4F4F4
		view
			width 100%
			height 80rpx
			background #FF563C
			opacity .52
			text-align center
			font-size 24rpx
			line-height 80rpx
			color rgba(244,244,244,1)
	// 拆分总计
	.split-total
		padding 20rpx 40rpx 40rpx
		border-bottom 1rpx solid #E7E7E7
		.serial-number
			font-size 28rpx
			font-family PingFangSC-Semibold, PingFang SC
			font-weight 600
			color $fontColor3
			line-height 40rpx
			padding-bottom 20rpx
		.split-amount
			box-sizing border-box
			display flex
			font-size 28rpx
			height 40rpx
			color $fontColor6
			align-items center
			& > view
				flex 1
				text
					font-weight 600
					font-family PingFangSC-Semibold, PingFang SC
					color $fontColor3
					&.buckling-failure
						color #FF563C
			& > view:last-child
				text-align right
	// 拆分列表
	.split-order-list
		padding-bottom 178rpx
		.split-order-item
			padding 28rpx 40rpx
			border-bottom 1rpx solid #E7E7E7
			& > view
				display flex
				height 48rpx
				align-items center
				& > view:first-child
					flex 1 1 auto
				&.order-message
					font-size 28rpx
					font-family PingFangSC-Regular, PingFang SC
					font-weight 400
					color $fontColor3
					padding-bottom 30rpx
				& > view:last-child
					font-size 36rpx
					font-family ArialMT
					color #2FB565
					&.fail
						color #FF563C
				&.order-status
					font-size 24rpx
					font-family PingFangSC-Regular, PingFang SC
					font-weight 400
					color $fontColor9
					& > view:last-child
						font-size 24rpx
	//底部补缴
	.payment
		position fixed
		left 0
		bottom 0
		width 100%
		height 178rpx
		padding 40rpx 0
		box-sizing border-box
		font-size 24rpx
		color #9D9DA0
		text-align center
		background #fff
		border-top 1rpx solid #E7E7E7
		button
			width 84%
			height 98rpx
			line-height 98rpx
			background linear-gradient(to right, $deepThemeColor, $shallowThemeColor)
			box-shadow 0px 8rpx 10rpx 0px rgba(132,209,87,0.2)
			border-radius 50rpx
			font-size 40rpx
			color #FFFFFF
