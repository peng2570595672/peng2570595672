@import "../../../style/base.styl";
page
	min-height 100vh
	box-sizing border-box
	background #fff
	display flex
	flex-direction column
.my_order
	padding-left 30rpx
	// 拆分总计
	.split-total
		padding 20rpx 32rpx 40rpx
		padding-left 0
		border-bottom 1rpx solid #E7E7E7
		.serial-number
			font-size 32rpx
			color $fontColor9
			line-height 44rpx
			padding 50rpx 0 32rpx
		.total-amount
			font-size 72rpx
			font-family PingFangSC-Medium, PingFang SC
			font-weight 500
			color $fontColor3
			line-height 100rpx
			padding-bottom 8rpx
		.split-amount
			box-sizing border-box
			display flex
			font-size 28rpx
			height 40rpx
			color $fontColor6
			align-items center
			& > view
				color $fontColor6
				&.buckling-failure
					color #FF563C
					margin-left 34rpx
	// 拆分列表
	.split-order-list
		padding-bottom 224rpx
		.split-order-item
			padding 28rpx 40rpx 28rpx 0
			border-bottom 1rpx solid #E7E7E7
			& > view
				display flex
				height 48rpx
				align-items center
				& > view:first-child
					flex 1 1 auto
				&.order-message
					font-size 28rpx
					font-family PingFangSC-Regular, PingFang SC
					font-weight 400
					color $fontColor3
					padding-bottom 30rpx
				& > view:last-child
					font-size 36rpx
					font-family ArialMT
					color #2FB565
					&.fail
						color #FF563C
				&.order-status
					font-size 24rpx
					font-family PingFangSC-Regular, PingFang SC
					font-weight 400
					color $fontColor9
					& > view:last-child
						font-size 24rpx
	//底部补缴
	.payment
		position fixed
		left 0
		bottom 0
		width 100%
		height 204rpx
		padding 20rpx 0
		font-size 24rpx
		color $fontColor6
		text-align center
		background #fff
		border-top 1rpx solid rgba(0, 0, 0, 0.1)
		button
			width 84%
			height 98rpx
			line-height 98rpx
			background linear-gradient(to right, $deepThemeColor, $shallowThemeColor)
			box-shadow 0px 8rpx 10rpx 0px rgba(132,209,87,0.2)
			border-radius 50rpx
			font-size 40rpx
			color #FFFFFF
		.payment-tips
			padding-top 18rpx
