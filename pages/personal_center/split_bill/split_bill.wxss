page {
  min-height: 100vh;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  flex-direction: column;
}
.my_order {
  padding-left: 30rpx;
}
.my_order .split-total {
  padding: 20rpx 32rpx 40rpx;
  padding-left: 0;
  border-bottom: 1rpx solid #e7e7e7;
}
.my_order .split-total .serial-number {
  font-size: 32rpx;
  color: #99999d;
  line-height: 44rpx;
  padding: 50rpx 0 32rpx;
}
.my_order .split-total .total-amount {
  font-size: 72rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #33333d;
  line-height: 100rpx;
  padding-bottom: 8rpx;
}
.my_order .split-total .split-amount {
  box-sizing: border-box;
  display: flex;
  font-size: 28rpx;
  height: 40rpx;
  color: #66666d;
  align-items: center;
}
.my_order .split-total .split-amount > view {
  color: #66666d;
}
.my_order .split-total .split-amount > view.buckling-failure {
  color: #ff563c;
  margin-left: 34rpx;
}
.my_order .split-order-list {
  padding-bottom: 224rpx;
}
.my_order .split-order-list .split-order-item {
  padding: 28rpx 40rpx 28rpx 0;
  border-bottom: 1rpx solid #e7e7e7;
}
.my_order .split-order-list .split-order-item > view {
  display: flex;
  height: 48rpx;
  align-items: center;
}
.my_order .split-order-list .split-order-item > view > view:first-child {
  flex: 1 1 auto;
}
.my_order .split-order-list .split-order-item > view.order-message {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #33333d;
  padding-bottom: 30rpx;
}
.my_order .split-order-list .split-order-item > view > view:last-child {
  font-size: 36rpx;
  font-family: ArialMT;
  color: #2fb565;
}
.my_order .split-order-list .split-order-item > view > view:last-child.fail {
  color: #ff563c;
}
.my_order .split-order-list .split-order-item > view.order-status {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #99999d;
}
.my_order .split-order-list .split-order-item > view.order-status > view:last-child {
  font-size: 24rpx;
}
.my_order .payment {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 204rpx;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #66666d;
  text-align: center;
  background: #fff;
  border-top: 1rpx solid rgba(0,0,0,0.1);
}
.my_order .payment button {
  width: 84%;
  height: 98rpx;
  line-height: 98rpx;
  background: linear-gradient(to right, #15ad69, #84d157);
  box-shadow: 0px 8rpx 10rpx 0px rgba(132,209,87,0.2);
  border-radius: 50rpx;
  font-size: 40rpx;
  color: #fff;
}
.my_order .payment .payment-tips {
  padding-top: 18rpx;
}
