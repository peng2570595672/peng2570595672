page {
  min-height: 100vh;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  flex-direction: column;
}
.my_order .split-total {
  padding: 20rpx 40rpx 40rpx;
  border-bottom: 1rpx solid #e7e7e7;
}
.my_order .split-total .serial-number {
  font-size: 28rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #33333d;
  line-height: 40rpx;
  padding-bottom: 20rpx;
}
.my_order .split-total .split-amount {
  box-sizing: border-box;
  display: flex;
  font-size: 28rpx;
  height: 40rpx;
  color: #66666d;
  align-items: center;
}
.my_order .split-total .split-amount > view {
  flex: 1;
}
.my_order .split-total .split-amount > view text {
  font-weight: 600;
  font-family: PingFangSC-Semibold, PingFang SC;
  color: #33333d;
}
.my_order .split-total .split-amount > view text.buckling-failure {
  color: #ff563c;
}
.my_order .split-total .split-amount > view:last-child {
  text-align: right;
}
.my_order .split-order-list {
  padding-bottom: 178rpx;
}
.my_order .split-order-list .split-order-item {
  padding: 28rpx 40rpx;
  border-bottom: 1rpx solid #e7e7e7;
}
.my_order .split-order-list .split-order-item > view {
  display: flex;
  height: 48rpx;
  align-items: center;
}
.my_order .split-order-list .split-order-item > view > view:first-child {
  flex: 1 1 auto;
}
.my_order .split-order-list .split-order-item > view.order-message {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #33333d;
  padding-bottom: 30rpx;
}
.my_order .split-order-list .split-order-item > view > view:last-child {
  font-size: 36rpx;
  font-family: ArialMT;
  color: #2fb565;
}
.my_order .split-order-list .split-order-item > view > view:last-child.fail {
  color: #ff563c;
}
.my_order .split-order-list .split-order-item > view.order-status {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #99999d;
}
.my_order .split-order-list .split-order-item > view.order-status > view:last-child {
  font-size: 24rpx;
}
.my_order .payment {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 178rpx;
  padding: 40rpx 0;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #9d9da0;
  text-align: center;
  background: #fff;
  border-top: 1rpx solid #e7e7e7;
}
.my_order .payment button {
  width: 84%;
  height: 98rpx;
  line-height: 98rpx;
  background: linear-gradient(to right, #15ad69, #84d157);
  box-shadow: 0px 8rpx 10rpx 0px rgba(132,209,87,0.2);
  border-radius: 50rpx;
  font-size: 40rpx;
  color: #fff;
}
