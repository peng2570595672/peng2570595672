@import "../../../style/base.styl";
.container
	display flex
	flex-direction column
	align-items center
	background #ECECEC
	padding 102rpx 28rpx 0
	box-sizing border-box
	min-height 100vh
	.sign-item
		width: 694rpx;
		height: 200rpx;
		display flex
		align-items center
		background: #F6F6F6;
		padding: 0 36rpx;
		box-sizing border-box
		border-radius: 16rpx;
		margin-bottom 28rpx
		.left
			flex 1
			color: #000000;
			.title
				font-size: 32rpx;
				font-family: PingFang SC-Semibold, PingFang SC;
				font-weight: 600;
				margin-bottom 8rpx
			.sub-title
				width 360rpx
				font-size: 24rpx;
				font-family: PingFang SC-Regular, PingFang SC;
				font-weight: 400;
		.btn
			width: 152rpx;
			height: 64rpx;
			display flex
			align-items center
			justify-content center
			background: #C9CBC9;
			font-size: 28rpx;
			font-family: PingFang SC-Regular, PingFang SC;
			font-weight: 400;
			color: #FFFFFF;
			border-radius 16rpx
	.complete
		width: 590rpx;
		height: 110rpx;
		display flex
		align-items center
		justify-content center
		background: #C9CBC9;
		font-size: 36rpx;
		font-family: PingFang SC-Semibold, PingFang SC;
		font-weight: 600;
		color: #FFFFFF;
		margin-top 92rpx
		border-radius 55rpx
		&.complete-ok
			background #5EBE68
