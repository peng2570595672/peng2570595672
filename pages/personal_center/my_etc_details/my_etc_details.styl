//渐变主题色
$themeColor1 = #1FD1B1;
$themeColor2 = #5DE59A;
.index
	background: #F5F5F5
	min-height 100vh
	.equipment_top
		width 100%
		height 42vh
		background #ffffff
		//设备图片
		&>view:nth-child(1)
			padding-top 58rpx
			padding-left 250rpx
			& > view
				width 262rpx
				height 184rpx
				background rgba(71,75,72,1)
		//		车牌号码
		&>view:nth-child(2)
			display flex
			flex-direction row
			padding-top 80rpx
			font-size 28rpx
			font-family PingFangSC-Regular,PingFang SC
			&>view:first-child
				flex 5
				color rgba(102,102,109,1)
				padding-left 60rpx
			&>view:last-child
				flex 5
				text-align right
				color rgba(51,51,61,1)
				padding-right 60rpx
		//		设备状态
		&>view:nth-child(3)
			display flex
			flex-direction row
			padding-top 22rpx
			font-size 28rpx
			font-family PingFangSC-Regular,PingFang SC
			&>view:first-child
