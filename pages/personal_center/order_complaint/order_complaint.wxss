page {
  background: #f7f7f7;
}
.order_complaint {
  padding-bottom: 178rpx;
}
.order_complaint .problem {
  background: #fff;
  margin-top: 20rpx;
}
.order_complaint .problem .title {
  padding: 30rpx 40rpx 28rpx;
  border-bottom: 1rpx solid #ededed;
}
.order_complaint .problem .title .placeholder-class {
  color: #66666d;
}
.order_complaint .problem .title input {
  font-size: 32rpx;
  line-height: 48rpx;
  color: #66666d;
}
.order_complaint .problem .content {
  padding: 30rpx 40rpx 28rpx;
}
.order_complaint .problem .content .placeholder-class {
  color: #99999d;
}
.order_complaint .problem .content textarea {
  width: 100%;
  height: 230rpx;
  font-size: 28rpx;
  line-height: 48rpx;
  color: #99999d;
}
.order_complaint .prompt {
  padding: 20rpx 40rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  color: #66666d;
}
.order_complaint .payment {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 178rpx;
  font-size: 24rpx;
  color: #9d9da0;
  text-align: center;
}
.order_complaint .payment button {
  width: 84%;
  height: 98rpx;
  line-height: 98rpx;
  background: linear-gradient(to right, #15ad69, #84d157);
  box-shadow: 0px 8rpx 10rpx 0px rgba(132,209,87,0.2);
  border-radius: 50rpx;
  font-size: 40rpx;
  color: #fff;
  margin-top: 40rpx;
}
