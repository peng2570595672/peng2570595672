<view class="order_complaint">
	<!--问题输入开始-->
	<view class="problem">
		<view class="title">
			<input class="input-item" placeholder="标题"  placeholder-class="placeholder-class" bindinput="bindInputChange" bindblur="validate" value="{{title}}" data-name="title"/>
		</view>
		<view class="content">
			<textarea class="weui-textarea" placeholder="请描述您遇到的问题……" placeholder-class="placeholder-class" bindinput="bindInputChange" bindblur="validate" value="{{content}}" data-name="content"/>
		</view>
	</view>
	<!--问题输入结束-->
	<!--提示开始-->
	<view class="prompt">提交后，我们将在48小时内解答您的疑问！</view>
	<!--提示结束-->
	<!--手机输入框开始-->
	<view class="problem phone">
		<view class="title">
			<input class="input-item" placeholder="输入您的手机号"  placeholder-class="placeholder-class" bindinput="bindInputChange" bindblur="validate" value="{{phone}}" data-name="phone"/>
		</view>
	</view>
	<!--手机输入框结束-->
	<!--提示开始-->
	<view class="prompt">请输入您的联系电话，我们或将通过电话联系解决您遇到 的问题！</view>
	<!--提示结束-->
	<!--提交开始-->
	<view class="payment">
		<button catchtap="cancel">取消</button>
		<button catchtap="go">提交</button>
	</view>
	<!--提交结束-->
</view>
