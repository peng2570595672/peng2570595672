@import "../../../style/base.styl";
page
	background #F7F7F7
.order_complaint
	padding-bottom 178rpx
	// 问题
	.problem
		background #fff
		margin 20rpx 40rpx 0
		padding 0 30rpx
		.title
			padding 30rpx 0rpx 28rpx
			border-bottom 1rpx solid #EDEDED
			.placeholder-class
				color $fontColor3
			input
				font-size 40rpx
				font-weight 500
				line-height 48rpx
				color $fontColor3
		.content
			padding 30rpx 0rpx 28rpx
			.placeholder-class
				color $fontColor6
			textarea
				width 100%
				height 230rpx
				font-size 32rpx
				line-height 48rpx
				color $fontColor6
	// 手机输入
	.phone
		.title
			border 0
			.placeholder-class
				color $fontColor6
			input
				font-size 32rpx
				font-weight 400
				line-height 48rpx
				color $fontColor6
	// 提示
	.prompt
		padding 20rpx 70rpx
		line-height 34rpx
		font-size 24rpx
		color $fontColor6
	//底部补缴
	.payment
		position fixed
		left 0
		bottom 0
		width 100%
		height 178rpx
		font-size 24rpx
		color #9D9DA0
		button
			display inline-block
			width 302rpx
			height 98rpx
			line-height 98rpx
			background #CCCCCC
			box-shadow 0px 8rpx 10rpx 0px rgba(132,209,87,0.2)
			border-radius 50rpx
			font-size 40rpx
			color #FFFFFF
			margin-top 40rpx
			margin-left 40rpx
		button:last-child
			float right
			right 40rpx
			background linear-gradient(45deg,rgba(20,172,105,1) 0%,rgba(132,209,87,1) 100%)
