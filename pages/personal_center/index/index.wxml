<view class="index">
	<!--顶部开始-->
	<view class="top">

		<!--返回按钮-->
		<view  class="back iconfont" catchtap="onClickBackHandle"></view>

		<!--扫一扫-->
		<view class="scan iconfont" catchtap="scan"></view>

		<!--头像-->
		<view class="head_portrait">
			<image src="https://file.cyzl.com/g001/M05/06/AA/oYYBAF4DGH2AbtywAAAJ4NK4Ik0837.png"></image>
		</view>

		<!--登陆状态-->
		<view class="landing_status">
			<view>未登录</view>
		</view>

		<!--会员权益-->
		<view class="vip_equity" catchtap="go" data-url="member_benefits">
			<view>
				<text class="iconfont">会员权益</text>
			</view>
		</view>
	</view>
	<!--顶部结束-->

	<!--用户导航栏开始-->
	<view class="user_nav">
		<!--我的ETC开始-->
		<view class="user_item" catchtap="go" data-url="my_etc">
			<view class="user_item_icon iconfont user_icon_etc"></view>
			<view class="user_item_text">我的ETC</view>
		</view>
		<!--我的ETC结束-->

		<!--ETC账单开始-->
		<view class="user_item" catchtap="go" data-url="my_order">
			<view class="user_item_icon iconfont user_icon_order"></view>
			<view class="user_item_text">ETC账单</view>
		</view>
		<!--ETC账单结束-->

		<!--我的卡劵开始-->
		<view class="user_item" catchtap="go" data-url="servicec_card_voucher">
			<view class="user_item_icon iconfont user_icon_card"></view>
			<view class="user_item_text iconfont">我的卡劵</view>
		</view>
		<!--我的卡劵结束-->

		<!--帮助中心开始-->
		<view class="user_item" catchtap="go" data-url="help_center">
			<view class="user_item_icon iconfont user_icon_help"></view>
			<view class="user_item_text">帮助中心</view>
		</view>
		<!--帮助中心结束-->
	</view>
	<!--用户操作选项结束-->

	<!--关注公众号活动开始-->
	<view class="activity_follow iconfont" catchtap="showDetail">
		<!--活动logo展示-->
		<view class="activity_img">
			<image src="https://file.cyzl.com/g001/M05/00/22/oYYBAF4BqEaAKGuRAAARqy9QsRU750.svg" ></image>
		</view>

		<!--活动文字描述开始-->
		<view class="activity_msg">
			<view>关注公众号</view>
			<view>最新资讯秒服务秒GET!</view>
		</view>
		<!--活动文字描述结束-->
	</view>

	<!--关注公众号活动弹框-->
	<view class="detail_mask animated {{showDetailWrapper ? 'fadeIn':'fadeOut'}}" wx:if="{{showDetailMask}}">
		<view class="detail_wrapper animated {{showDetailWrapper ? 'fadeIn':'fadeOut'}}" wx:if="{{showDetailMask}}">
			<view class="top1">
				<image src="https://file.cyzl.com/g001/M05/06/D6/oYYBAF4DHV-AX8S8AABiDQ58WJ0402.png">
				</image>
				<button class="activity_button">发送数字“9”关注</button>
			</view>
		</view>
	</view>
	<!--关注公众号活动结束-->


</view>
