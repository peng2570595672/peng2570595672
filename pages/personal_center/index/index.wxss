page {
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background: #f6f6f6;
}
page .index .top {
  width: 100%;
  height: 592rpx;
  background: linear-gradient(156deg, #17ad69 0%, #7fd058 100%);
}
page .index .top .scan {
  display: flex;
  margin-left: 654rpx;
  padding-top: 160rpx;
}
page .index .top .scan::before {
  content: '\e63c';
  color: #fff;
  font-size: 60rpx;
}
page .index .top .head_portrait {
  position: relative;
  display: flex;
  align-items: center;
}
page .index .top .head_portrait > image {
  margin-top: -28rpx;
  margin-left: 316rpx;
  width: 120rpx;
  height: 120rpx;
}
page .index .top .landing_status {
  display: flex;
  margin-left: 324rpx;
}
page .index .top .landing_status > view {
  display: inline-block;
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #fff;
}
page .index .top .vip_equity {
  display: flex;
  margin-top: 20rpx;
  margin-left: 276rpx;
}
page .index .top .vip_equity > view {
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: rgba(255,255,255,0.3);
  border-radius: 30rpx;
  border: 2rpx solid rgba(255,255,255,0.5);
  font-weight: 600;
  align-items: center;
  text-align: center;
  color: #fff;
}
page .index .top .vip_equity > view > text::after {
  margin-left: 16rpx;
  display: inline-block;
  content: '\e60e';
  transform: scaleX(-1);
}
page .index .user_nav {
  display: flex;
  justify-content: center;
  background: #fff;
  border-radius: 20rpx;
  margin: -100rpx 30rpx;
  width: 682rpx;
  height: 200rpx;
  background: #fff;
  color: #99999d;
}
page .index .user_nav .user_item {
  margin-left: 70rpx;
  text-align: center;
  flex: 0 0 100rpx;
  margin-top: 30rpx;
}
page .index .user_nav .user_item:first-of-type {
  margin-left: 0;
}
page .index .user_nav .user_item > view > image {
  width: 100%;
  height: 100%;
}
page .index .user_nav .user_item > view:first-of-type {
  background: #ffc75e;
  width: 100rpx;
  height: 100rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 50rpx;
  box-shadow: 0 6rpx 10rpx 0 rgba(126,132,156,0.1);
}
page .index .user_nav .user_item > view:last-of-type {
  margin-top: 8rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  color: $fontColor6;
}
page .index .activity_follow {
  display: flex;
  flex-direction: row;
  margin: 130rpx 30rpx;
  width: 682rpx;
  height: 140rpx;
  border-radius: 20rpx;
  background: #fff;
  align-items: center;
}
page .index .activity_follow .activity_img {
  margin-left: 30rpx;
}
page .index .activity_follow .activity_img > image {
  width: 130rpx;
  height: 130rpx;
}
page .index .activity_follow .activity_msg {
  margin-left: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
}
page .index .activity_follow .activity_msg>view:first-child {
  font-size: 16px;
  color: #333;
}
page .index .activity_follow .activity_msg>view:last-child {
  color: #999;
}
page .index .activity_follow::after {
  width: 28rpx;
  height: 52rpx;
  margin-left: 200rpx;
  color: #999;
  display: inline-block;
  content: '\e60e';
  transform: scaleX(-1);
}
page .index .detail_mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.4);
}
page .index .detail_mask .detail_wrapper .top1 > image {
  width: 600rpx;
  height: 800rpx;
  margin: 268rpx 74rpx 0 72rpx;
}
page .index .detail_mask .detail_wrapper .activity_button {
  width: 360rpx;
  height: 80rpx;
  background: linear-gradient(108deg, #ffad3e 0%, #ff8325 100%);
  box-shadow: 0rpx 8rpx 10rpx 0rpx rgba(255,136,40,0.3);
  border-radius: 45rpx;
  margin-top: -150rpx;
  color: #fff;
}
