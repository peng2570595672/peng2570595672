page {
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background: #f6f6f6;
}
page .index .top {
  width: 100%;
  height: 592rpx;
  background: linear-gradient(to right, #17ad69, #7fd058);
}
page .index .top .back {
  display: flex;
  text-align: center;
  padding-top: 8%;
  margin-left: 20rpx;
}
page .index .top .back::before {
  content: '\e60e';
  color: #fff;
  font-size: 50rpx;
}
page .index .top .scan {
  display: flex;
  margin-left: 654rpx;
  padding-top: 60rpx;
}
page .index .top .scan::before {
  content: '\e63c';
  color: #fff;
  font-size: 50rpx;
}
page .index .top .head_portrait {
  position: relative;
  display: flex;
  justify-content: center;
  border-radius: 50%;
  color: rgba(255,255,255,0.4);
}
page .index .top .head_portrait .uesr_head {
  overflow: hidden;
  display: block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  text-align: center;
}
page .index .top .landing_status {
  display: flex;
  justify-content: center;
}
page .index .top .landing_status > view {
  font-size: 36rpx;
  color: #fff;
  font-weight: 400;
  font-family: PingFangSC-Regular, PingFang SC;
}
page .index .top .vip_equity {
  display: flex;
  margin-top: 20rpx;
  justify-content: center;
}
page .index .top .vip_equity > view {
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: rgba(255,255,255,0.3);
  border-radius: 30rpx;
  border: 2rpx solid rgba(255,255,255,0.5);
  font-weight: 600;
  align-items: center;
  text-align: center;
  color: #fff;
}
page .index .top .vip_equity > view > text::after {
  font-size: 24rpx;
  margin-left: 16rpx;
  display: inline-block;
  content: '\e60e';
  transform: scaleX(-1);
}
page .index .user_nav {
  display: flex;
  width: 682rpx;
  height: 200rpx;
  border-radius: 20rpx;
  margin: -100rpx 30rpx;
  background: #fff;
}
page .index .user_nav .user_item {
  flex: 2.5;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  text-align: center;
  width: 682rpx;
  height: 200rpx;
}
page .index .user_nav .user_item .user_item_icon {
  width: 78rpx;
  height: 78rpx;
  background: #ffc75e;
  border-radius: 50rpx;
  margin: auto;
  line-height: 78rpx;
  text-align: center;
  margin-top: 40rpx;
  margin-bottom: 14rpx;
}
page .index .user_nav .user_item .user_item_icon > view {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  margin: -82rpx 0 0 64rpx;
}
page .index .user_nav .user_item .user_item_icon.user_icon_etc::before {
  content: '\e64b';
  color: #fff;
  font-size: 50rpx;
}
page .index .user_nav .user_item .user_item_icon.user_icon_order::before {
  content: '\e649';
  color: #fff;
  font-size: 55rpx;
}
page .index .user_nav .user_item .user_item_icon.user_icon_card::before {
  content: '\e64c';
  color: #fff;
  font-size: 55rpx;
}
page .index .user_nav .user_item .user_item_icon.user_icon_help::before {
  content: '\e645';
  color: #fff;
  font-size: 55rpx;
}
page .index .user_nav .user_item .user_item_text {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: #999;
}
page .index .activity_follow {
  display: flex;
  flex-direction: row;
  margin: 130rpx 30rpx;
  width: 682rpx;
  height: 140rpx;
  border-radius: 20rpx;
  background: #fff;
  align-items: center;
}
page .index .activity_follow .activity_img {
  margin-left: 30rpx;
}
page .index .activity_follow .activity_img > image {
  width: 110rpx;
  height: 110rpx;
}
page .index .activity_follow .activity_msg {
  margin-left: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
}
page .index .activity_follow .activity_msg>view:first-child {
  font-size: 16px;
  color: #333;
}
page .index .activity_follow .activity_msg>view:last-child {
  width: 300rpx;
  color: #999;
}
page .index .activity_follow::after {
  margin-left: 140rpx;
  color: #999;
  display: inline-block;
  content: '\e60e';
  transform: scaleX(-1);
  font-size: 40rpx;
}
page .index .detail_mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.7);
}
page .index .detail_mask .detail_wrapper .top1 {
  position: absolute;
  z-index: 1;
}
page .index .detail_mask .detail_wrapper .top1 > image {
  width: 600rpx;
  height: 800rpx;
  margin: 268rpx 74rpx 0 72rpx;
}
page .index .detail_mask .detail_wrapper .activity_button {
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
  text-align: center;
  z-index: 2;
  width: 360rpx;
  height: 80rpx;
  background: linear-gradient(to right, #ffad3e, #ff8325);
  box-shadow: 0rpx 8rpx 10rpx 0rpx rgba(255,136,40,0.3);
  border-radius: 45rpx;
  margin-top: -150rpx;
  line-height: 80rpx;
}
page .index .detail_mask .detail_wrapper .activity_button > text {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #fff;
}
page .index .detail_mask .detail_wrapper .close_button {
  position: absolute;
  left: 638rpx;
  right: 0;
  margin-top: -790rpx;
  z-index: 2;
}
page .index .detail_mask .detail_wrapper .close_button::before {
  content: '\e63d';
  color: #fff;
  font-size: 18rpx;
}
