//渐变主题色
$themeColor1 = #1FD1B1;
$themeColor2 = #5DE59A;
page
	width 100%
	height 100vh
	overflow hidden
	background rgba(246,246,246,1);
	.index
		//顶部
		.top
			width 100%
			height 592rpx
			background linear-gradient(156deg,rgba(23,173,105,1) 0%,rgba(127,208,88,1) 100%)
			.back
				display flex
				text-align center
				padding-top 8%
				margin-left 20rpx
				&::before
					content '\e60e'
					color rgba(255,255,255,1)
					font-size 50rpx
			.scan
				display flex
				margin-left 654rpx
				padding-top 60rpx
				&::before
					content '\e63c'
					color rgba(255,255,255,1)
					font-size 50rpx
			//头像
			.head_portrait
				position relative
				display flex
				align-items center
				color rgba(255,255,255,0.4)
				& > image
					margin-top -18rpx
					margin-left 316rpx
					width 120rpx
					height 120rpx
					opacity 0.25
			//登录状态
			.landing_status
				display flex
				justify-content center
				& > view
					font-size 36rpx
					color rgba(255,255,255,1)
					font-weight 400
					font-family PingFangSC-Regular,PingFang SC
			//会员权益
			.vip_equity
				display flex
				margin-top 20rpx
				justify-content center
				& > view
					width 200rpx
					height 50rpx
					line-height 50rpx
					background rgba(255,255,255,0.3)
					border-radius 30rpx
					border 2rpx solid rgba(255,255,255,0.5)
					font-weight 600
					align-items center
					text-align center
					color #ffffff
					& > text
						&::after
							font-size 24rpx
							margin-left 16rpx
							display inline-block
							content '\e60e'
							transform scaleX(-1)
		//用户导航栏
		.user_nav
			display flex
			width 682rpx
			height 200rpx
			border-radius 20rpx
			margin -100rpx 30rpx
			background rgba(255,255,255,1)
			.user_item
				flex 2.5
				justify-content center
				align-items center
				flex-direction column
				text-align center
				width 682rpx
				height 200rpx
				.user_item_icon
					width 78rpx
					height 78rpx
					background rgba(255,199,94,1)
					border-radius 50rpx
					margin auto
					line-height 78rpx
					text-align center
					margin-top 40rpx
					margin-bottom 14rpx
					& > view
						width 20rpx
						height 20rpx
						background rgba(255,0,0,1)
						border-radius 50%
						margin -82rpx 0 0 64rpx
					&.user_icon_etc
						&::before
							content '\e64b'
							color rgba(255,255,255,1)
							font-size 50rpx
					&.user_icon_order
						&::before
							content '\e649'
							color rgba(255,255,255,1)
							font-size 55rpx
					&.user_icon_card
						&::before
							content '\e64c'
							color rgba(255,255,255,1)
							font-size 55rpx
					&.user_icon_help
						&::before
							content '\e645'
							color rgba(255,255,255,1)
							font-size 55rpx
				.user_item_text
					font-size 24rpx
					font-family PingFangSC-Regular,PingFang SC
					color rgba(153,153,153,1)
		//关注活动
		.activity_follow
			display flex
			flex-direction row
			margin 130rpx 30rpx
			width 682rpx
			height 140rpx
			border-radius 20rpx
			background white
			align-items center
			.activity_img
				margin-left 30rpx
				& > image
					width 110rpx
					height 110rpx
			.activity_msg
				margin-left 20rpx
				font-family PingFangSC-Regular,PingFang SC
				&>view:first-child
					font-size 16px
					color rgba(51,51,51,1)
				&>view:last-child
					width 300rpx
					color rgba(153,153,153,1)
			&::after
				margin-left 140rpx
				color rgba(153,153,153,1)
				display inline-block
				content '\e60e'
				transform scaleX(-1)
				font-size 40rpx
		//关注活动弹框
		.detail_mask
			position fixed
			left 0
			top 0
			right 0
			bottom 0
			background rgba(0, 0, 0, .7)
			.detail_wrapper
				.top1
					position absolute
					z-index 1
					& > image
						width 600rpx
						height 800rpx
						margin 268rpx 74rpx 0 72rpx
				.activity_button
					position absolute
					left 0
					right 0
					margin 0 auto
					text-align center
					z-index 2
					width 360rpx
					height 80rpx
					background linear-gradient(108deg,rgba(255,173,62,1) 0%,rgba(255,131,37,1) 100%)
					box-shadow 0rpx 8rpx 10rpx 0rpx rgba(255,136,40,0.3)
					border-radius 45rpx
					margin-top -150rpx
					line-height 80rpx
					& > text
						font-size 32rpx
						font-family PingFangSC-Medium,PingFang SC
						font-weight 500
						color rgba(255,255,255,1)
				.close_button
					position absolute
					left 638rpx
					right 0
					margin-top -790rpx
					z-index 2
					&::before
						content '\e63d'
						color #ffffff
						font-size 18rpx








