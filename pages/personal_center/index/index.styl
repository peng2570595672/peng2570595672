.agreement-mask
	position fixed
	left 0
	top 0
	right 0
	bottom 0
	background rgba(0, 0, 0, .7)
	.agreement-wrapper
		display flex
		flex-direction column
		position absolute
		left 56rpx
		right 56rpx
		top 50%
		transform translate(0, -50%)
		background: #FFFFFF;
		border-radius 16rpx;
		z-index 2
		text-align center
