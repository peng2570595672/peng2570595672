@import "../../../style/base.styl";
//渐变主题色
$themeColor1 = #17AD69;
$themeColor2 = #7FD058;
page
	width 100%
	height 100vh
	background rgba(246,246,246,1);
	.index
		box-sizing border-box
		padding-bottom 20rpx
		//顶部
		.top
			width 100%
			height 370rpx
			background-image: url("https://file.cyzl.com/g001/M07/35/57/oYYBAGCHavGADs8nAABuRTPYSgw934.png")
			background-size: 100% 100%;
			background-repeat: no-repeat;
			-moz-background-size:100% 100%
			.head_scan
				display flex
				padding 30rpx 66rpx
				//头像
				.head_portrait
					display flex
					border-radius 50%
					color rgba(255,255,255,0.4)
					.uesr_head
						overflow hidden
						display block
						width 120rpx
						height 120rpx
						border-radius 50%
						text-align center
				//border: 2px solid #fff;
				//box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
				//登录状态
				.landing_status
					display flex
					flex-direction column
					flex 1
					justify-content center
					margin-left 40rpx
					.wx-nick
						font-size 34rpx
						font-family: PingFangSC-Medium, PingFang SC;
						font-weight: 500;
						color: #000000;
					& > view
						font-size 28rpx
						color rgba(0,0,0,0.5)
						font-weight 400
						font-family PingFangSC-Regular,PingFang SC
				.scan-item
					display flex
					flex-direction column
					justify-content center
					align-items center
					& > text
						margin-top 4rpx
						font-size 22rpx
						color rgba(51,51,61,0.7)
					.scan
						&::before
							content '\e63c'
							color rgba(255,255,255,1)
							font-size 40rpx
		// 广告位
		.notice
			height 104rpx
			background #F8FFF8
			padding-left 32rpx
			padding-right 38rpx
			width 686rpx
			box-shadow 0rpx 4rpx 12rpx 0rpx rgba(0,0,0,0.04)
			margin -190rpx 32rpx 0rpx
			box-sizing border-box
			border-radius 16rpx
			& > view
				display flex
				height 78rpx
				align-items center
				.notice-left
					flex 1
					color rgba(0,0,0,.3)
					font-size 24rpx
					&::before
						content '\e698'
						font-size 28rpx
						color #00B85C
						margin-right 14rpx
				.notice-right
					width 12rpx
					height 12rpx
					background #FF3C48
					border-radius 50%
					&.no-notice-bg
						display none
				&::after
					line-height 78rpx
					content '\e60e'
					font-size 22rpx
					color rgba(0,0,0,.3)
					margin-left 14rpx
					transform rotateZ(-180deg)
		//用户导航栏
		.user_nav
			display flex
			width 686rpx
			height 172rpx
			border-radius 20rpx
			margin -170rpx 30rpx 0rpx
			background rgba(255,255,255,1)
			.user_item
				flex 2.5
				justify-content center
				align-items center
				flex-direction column
				text-align center
				width 682rpx
				.user_item_icon
					width 72rpx
					height 72rpx
					margin auto
					line-height 72rpx
					text-align center
					margin-top 40rpx
					position relative
					&.update
						& > view
							position absolute
							width 16rpx
							height 16rpx
							background rgba(255,0,0,1)   // 消息通知红点
							border-radius 50%
							right 8rpx
							top 74rpx
					.img
						height 68rpx
						width 68rpx
					.user_icon_card
						height 76rpx
						width 76rpx
					& > view
						width 20rpx
						height 20rpx
						//background rgba(255,0,0,1)   消息通知红点
						border-radius 50%
						margin -82rpx 0 0 64rpx
					&.user_icon_order
						&::before
							content '\e649'
							color rgba(255,255,255,1)
							font-size 55rpx
					&.user_icon_card
						&::before
							content '\e64c'
							color rgba(255,255,255,1)
							font-size 55rpx
					&.user_icon_help
						&::before
							content '\e645'
							color rgba(255,255,255,1)
							font-size 55rpx
				.user_item_text
					font-size 24rpx
					font-family PingFangSC-Regular,PingFang SC
					color #000000
			&.user-nav-top
				margin-top -24rpx
    // 权益商城 banner
    .equity-mall
      height 200rpx
      overflow hidden
      .equity-mall-img
        width 757rpx
        height 200rpx
        margin-left -7.5rpx
		// 付费权益
		.pay-interest
			display flex
			flex-direction column
			background: #FFFFFF;
			box-shadow: 0rpx 0rpx 18rpx 0rpx rgba(0, 0, 0, 0.04);
			border-radius: 16rpx;
			width 686rpx
			margin -5rpx 30rpx 30rpx 30rpx
			.pay-interest-title
				margin 32rpx 0rpx 0rpx 32rpx
				font-size 34rpx;
				font-family: PingFangSC-Regular, PingFang SC;
				font-weight: 400;
				color: #000000;
			.pay-interest-content
				display flex
				flex-wrap wrap
				align-items center
				margin-bottom 32rpx
				.pay-interest_item
					width 158rpx
					background transparent
					padding 0
					margin-left 8rpx
					margin-top 28rpx
					justify-content center
					align-items center
					flex-direction column
					text-align center
					.pay-interest-item-icon
						text-align center
						padding 0
						margin 0
						&::before
							font-size 44rpx
						&.purchase_records
							&::before
								content '\e688'
								color #FBA820
						&.characteristic_service
							&::before
								content '\e68a'
								color #3FB064
						&.server
							&::before
								content '\e697'
								color #3FB064
						&.coupon_redemption_centre
							&::before
								content '\e689'
								color #C87D2F
						&.life_service
							&::before
								content '\e68c'
								color #39A6F8
						&.car_service
							&::before
								content '\e687'
								color #6467F0
						&.basic_services
							&::before
								content '\e68b'
								color #FFC300
						.img
							height 46rpx
							width 46rp
						.life_service_icon
							height 42rpx
							width 42rpx
						.coupon_redemption_icon
							height 52rpx
							width 52rpx
					.pay-interest_item_text
						margin-top 8rpx
						font-size 24rpx
						font-family PingFangSC-Regular,PingFang SC
						color #969393
				.coupon_item
					width 158rpx
					text-align center
					image
						width 46rpx
					.pay-interest_item_text
						margin-top 0rpx
		//关注活动
		.activity_follow
			display flex
			flex-direction row
			margin 30rpx 30rpx 0
			width 686rpx
			height 140rpx
			border-radius 20rpx
			background white
			align-items center
			.activity_img
				margin-left 30rpx
				&::before
					content '\e686'
					color #FA5151
					font-size 32rpx
				&.help-center
					&::before
						content '\e68f'
						color #FAC451
			.activity_msg
				flex 1
				margin-left 20rpx
				font-size 34rpx
				text-align left
				line-height 44rpx
				font-family PingFangSC-Regular,PingFang SC
				color #000000
				&.update
					position relative
					&::after
						position absolute
						right 50rpx
						top 16rpx
						content ''
						width 16rpx
						height 16rpx
						border-radius 50%
						background #FF3C48
			.activity_right
				color #576B95
				font-size 24rpx
				margin-right 20rpx
		.auth
			text-align center
			font-size: 28rpx;
			font-family: PingFangSC-Regular, PingFang SC;
			font-weight: 400;
			color: rgba(0,0,0,0.5);
			line-height: 40rpx;
			padding-top 32rpx
	//关注活动弹框
	.detail_mask
		position fixed
		left 0
		top 0
		right 0
		bottom 0
		background rgba(0, 0, 0, .7)
		.detail_wrapper
			display flex
			flex-direction column
			position absolute
			left 56rpx
			right 56rpx
			top 50%
			transform translate(0, -50%)
			background: #FFFFFF;
			border-radius 16px;
			z-index 2
			.public-account-title
				margin 64rpx 48rpx 32rpx 48rpx
				font-size: 34rpx;
				font-family: PingFangSC-Medium, PingFang SC;
				font-weight: 500;
				color: #000000;
				line-height: 48rpx;
				text-align center
			& > image
				margin-left 32rpx
				margin-right 32rpx
				width 574rpx
				height 306rpx
			.public-account-tips
				text-align center
				margin-top 32rpx
				padding-bottom 64rpx
				font-size: 34rpx;
				font-family: PingFangSC-Medium, PingFang SC;
				font-weight: 500;
				color rgba(0,0,0,0.5)
				line-height: 48rpx;
				border-bottom 1rpx solid #E5E5E5
			.activity_button
				text-align center
				& > button
					text-align center
					background-color transparent
					font-size 34rpx;
					font-family: PingFangSC-Medium, PingFang SC;
					font-weight: 500;
					color: #576B95;
					line-height 48rpx;
					margin 30rpx
	.crowdsourcing_msg
		width 682rpx
		background #FFFFFF
		padding 30rpx 30rpx
		border-radius 20rpx
		box-sizing border-box
		margin 30rpx
		// 标题
		.title
			display flex
			align-items center
			color #000000
			font-size 34rpx
			font-weight 400
		// 众包推广信息
		& > view
			display flex
			& > view
				flex 1
				font-size 29rpx
				color rgba(0,0,0,0.5)
				padding 40rpx 0 20rpx
			& > view:last-child
				font-size 40rpx
				text-align right
				color $fontColor3
		& > view:nth-child(3)
			border-top 1rpx solid #E8E8E8
			border-bottom 1rpx solid #E8E8E8
		& > view:last-child
			padding 36rpx 0 44rpx
		button
			display flex
			background none
			font-size 32rpx
			color #2FB565
			font-weight 500
			height 40rpx
			line-height 40rpx
			font-family PingFangSC-Medium, PingFang SC
			justify-content center
			vertical-align top
			image
				width 40rpx
				margin-right 10rpx
	.invite_friends
		text-align center
		margin-top 20rpx
		image
			width 682rpx
.pictorial
	position fixed
	top 0
	left -9999rpx
	width 593rpx
	height 790rpx
	z-index 12
