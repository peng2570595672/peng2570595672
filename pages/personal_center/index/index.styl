//渐变主题色
$themeColor1 = #1FD1B1;
$themeColor2 = #5DE59A;
.index
	background #F6F6F6
	height 2000rpx
	//顶部
	.top
		width 100%
		height 592rpx
		background linear-gradient(156deg,rgba(23,173,105,1) 0%,rgba(127,208,88,1) 100%)
		//头像
		.head_portrait
			position relative
			display flex
			align-items center
			& > image
				background rgba(255,255,255,0.4)
				margin-top 150rpx
				margin-left 316rpx
				width 120rpx
				height 120rpx
				border-radius 50%
		//登陆状态
		.landing_status
			display flex
			margin-top 22rpx
			margin-left 324rpx
			& > view
				display inline-block
				margin-top 19rpx
				font-size 36rpx
				color white
		//会员权益
		.vip_equity
			display flex
			margin-top 22rpx
			margin-left 276rpx
			& > view
				width 200rpx
				height 50rpx
				background rgba(255,255,255,0.3)
				border-radius 30rpx
				border 2rpx solid rgba(255,255,255,0.5)
				font-weight 600
				text-align center
				padding-top 10rpx
				color white
	//用户导航栏
	.user_nav
		display flex
		justify-content center
		background rgba(255,255,255,1)
		border-radius 20rpx
		margin -100rpx 30rpx
		width 682rpx
		height 200rpx
		background rgba(255,255,255,1)
		color #99999d
		.user_item
			margin-left 70rpx
			text-align center
			flex 0 0 100rpx
			margin-top 30rpx
			&:first-of-type
				margin-left 0
			& > view
				& > image
					width 100%
					height 100%
				&:first-of-type
					background #FFC75E
					width 100rpx
					height 100rpx
					padding 20rpx
					box-sizing border-box
					border-radius 50rpx
					box-shadow:0 6rpx 10rpx 0 rgba(126,132,156,0.1)
				&:last-of-type
					margin-top 8rpx
					font-size 24rpx
					line-height 40rpx
					color $fontColor6
	//关注活动
	.activity_follow
		display flex
		flex-direction row
		margin 130rpx 30rpx
		width 682rpx
		height 140rpx
		border-radius 20rpx
		background white
		.activity_img
			margin-left 50rpx
			& > image
				width 130rpx
				height 130rpx
		.activity_msg
			margin-left  50rpx
			margin-top 30rpx
			font-family PingFangSC-Regular,PingFang SC
			&>view:first-child
				font-size 16px
				color rgba(51,51,51,1)
			&>view:last-child
				color rgba(153,153,153,1)





