@import "../../../style/base.styl"
@import "../../../style/my_animate.styl"
@import "animate.styl";
page
	display block
	position relative
	width 100vw
	min-height 100vh
	background linear-gradient(360deg,rgba(233,83,49,1) 0%,rgba(242,165,73,1) 100%)
	.recharge-container
		display block
		position relative
		width 100vw
		min-height 100vh
		background linear-gradient(360deg,rgba(233,83,49,1) 0%,rgba(242,165,73,1) 100%)
		.top
			.top-title
				text-align center
				width  100%
				height 104rpx
				font-size 70rpx
				font-weight 600
				font-family HYYaKuHeiW
				color rgba(255,255,255,1)
				line-height 104rpx
				text-shadow 0rpx 4rpx 8rpx rgba(176,33,0,0.36)
			.top-tips
				text-align center
				width  100%
				height 70rpx
				font-size 50rpx
				font-family PingFangSC-Semibold,PingFang SC
				color rgba(255,255,255,1)
				line-height 72rpx
				letter-spacing 4rpx
		.buy-list
			position absolute
			top 284rpx
			& > view
				width 188rpx
				height 32rpx
				background rgba(0,0,0,0.2)
				border-radius 0rpx 28rpx 28rpx 0rpx
				font-size 20rpx
				font-family PingFangSC-Regular,PingFang SC
				font-weight 400
				color rgba(255,255,255,1)
				line-height 32rpx
				text-indent 8rpx
			& > view:nth-child(2)
				width 224rpx
				height 40rpx
				line-height 40rpx
				border-radius 0rpx 35rpx 35rpx 0rpx
				font-size 24rpx
				margin 14rpx 0
		.body
			.coupon-img
				display flex
				flex-direction column
				justify-content center
				align-items center
				image
					width 522rpx
					height 270rpx
			.body-coupon
				width 710rpx
				height 350rpx
				margin -10rpx 20rpx 0 20rpx
				display flex
				flex-direction column
				justify-content center
				align-items center
				background rgba(255,255,255,1)
				border-radius 20rpx
				.coupon
					width 654rpx
					height 268rpx
					background-image  url("https://file.cyzl.com/g001/M05/1C/58/oYYBAF7ZqP2ACV61AAQygVRvr-8774.png")
					background-size 100% 100%
					.icon
						margin-left 40rpx
						font-size 50rpx
						font-style oblique
						font-family DIN-BlackItalicAlt,DIN
						font-weight normal
						color rgba(255,255,255,1)
						line-height 160rpx
					.amount
						margin-top -110rpx
						width 132rpx
						height 160rpx
						margin-left 50rpx
						font-size 100rpx
						font-style oblique
						font-weight 900
						font-family DIN-BlackItalicAlt,DIN
						color rgba(255,255,255,1)
						line-height 160rpx
					.line
						margin-top -140rpx
						margin-left 198rpx
						border-right 3rpx dashed #fff
						width 2rpx
						height 110rpx
					.coupon-info
						margin-top -120rpx
						margin-left 250rpx
						display flex
						flex-direction column
						justify-content center
						align-items flex-start
						.item-name
							font-size 32rpx
							font-weight 600
							line-height 44rpx
							color rgba(255,255,255,1)
						.item-restrictions
							margin-bottom 10rpx
							font-size 28rpx
							font-weight 400
							line-height 40rpx
							color rgba(255,255,255,1)
						.item-expiration-date
							font-size 24rpx
							font-weight 400
							color rgba(255,255,255,1)
			.body-directions
				position relative
				padding 30rpx
				font-size 28rpx
				line-height 50rpx
				color rgba(255,255,255,1)
				text-align right
				&:after
					content "\e63e"
					color rgba(255,255,255,.22)
					padding-left 10rpx
			.button-buy
				margin -10rpx 20rpx 20rpx 20rpx
				width 710rpx
				height 350rpx
				display flex
				flex-direction column
				justify-content center
				align-items flex-start
				background rgba(255,255,255,1)
				border-radius 20rpx
				.button-buy-plates
					margin-left 60rpx
					display flex
					align-items center
					padding 10rpx 30rpx
					height 56rpx
					font-size 44rpx
					font-weight 500
					&::before
						margin-right 10rpx
						content ''
						width 6rpx
						height 6rpx
						border 10rpx solid $error
						border-radius 50%
					& > text
						margin-left 12rpx
						font-size 24rpx
						color #7A7F83
						transform translateY(8rpx)
				.button-plates-border
					width 80%
					height 2rpx
					margin-left 80rpx
					background #979797
					opacity .13
				.button-promote-name
					font-size 28rpx
					margin 30rpx 0 30rpx 80rpx
				.button-btn-buy
					width 564rpx
					height 108rpx
					line-height 108rpx
					text-align center
					font-size 44rpx
					font-family PingFangSC-Medium,PingFang SC
					font-weight 500
					color rgba(255,255,255,1)
					background linear-gradient(169deg,rgba(244,182,63,1) 0%,rgba(223,93,40,1) 100%)
					box-shadow 0rpx 4rpx 12rpx 0px rgba(176,33,0,0.36)
					border-radius 54rpx
					margin 0 auto
			.footer-title
				margin-top 30rpx
				text-align center
				font-size 24rpx
				font-family PingFangSC-Regular,PingFang SC
				font-weight 400
				letter-spacing 4rpx
				color rgba(255,255,255,1)
				line-height 34rpx
			.footer-bottom
				margin-top 50rpx
				text-align center
				font-size 28rpx
				padding-bottom 30rpx
				color rgba(255,255,255,1)
				width 750rpx
				text
					border-bottom 1rpx solid #fff
		.alert-mask
			position fixed
			left 0
			top 0
			right 0
			bottom 0
			background rgba(0, 0, 0, 0.3)
			z-index 3
			overflow-x hidden
			overflow-y auto
			-webkit-overflow-scrolling touch
			.wrapper
				position absolute
				left 0
				right 0
				top 0
				bottom 0
				width 621rpx
				height 486rpx
				text-align center
				background #E95331
				border-radius 20rpx
				padding-bottom 30rpx
				margin auto
				.close
					position absolute
					right 0
					left 0
					bottom -120rpx
					margin 0 auto
					padding 52rpx 40rpx 30rpx 30rpx
					&:before
						display block
						content '\e63d'
						color #fff
						width 56rpx
						height 56rpx
						line-height 56rpx
						border-radius 56rpx
						text-align center
						border 1rpx solid #fff
						margin 0 auto
				.head1
					position relative
					font-size 36rpx
					text-align center
					padding 44rpx 0 24rpx 0
					color #fff
					.square
						text:first-child
							position absolute
							left 27%
							top 55%
							width 20rpx
							height 20rpx
							border 4rpx solid #FFAF9A
							transform rotateZ(60deg)
						text:last-child
							position absolute
							left 38%
							top 11%
							width 14rpx
							height 14rpx
							border 4rpx solid #FFEC9A
							transform rotateZ(10deg)
				.cont1
					font-size 26rpx
					line-height 46rpx
					color #333
					text-align justify
					padding 0 40rpx
					display flex
					flex-direction row
					flex-wrap nowrap
					justify-content flex-start
					background #fff
					border-left #E95331 solid 20rpx
					border-right #E95331 solid 20rpx
					.table
						margin 20rpx 0 0 0
						.tr
							display flex
							flex-direction row
							flex-wrap nowrap
							justify-content flex-start
							width 100%
							height 50rpx
							align-items center
							&:last-child > .td
								border-bottom solid rgba(0,0,0,0.3) 1rpx
							.td
								display flex
								justify-content center
								border-top solid rgba(0,0,0,0.3) 1rpx
								border-left solid rgba(0,0,0,0.3) 1rpx
								padding-left 10rpx
								&:first-child
									width 40%
								&:last-child
									width 60%
									border-right solid rgba(0,0,0,0.3) 1rpx
							.th
								display flex
								width 50%
								justify-content center
								padding-left 10rpx
								border-top solid rgba(0,0,0,0.3) 1rpx
								border-left solid rgba(0,0,0,0.3) 1rpx
								&:first-child
									width 40%
								&:last-child
									width 60%
									border-right solid rgba(0,0,0,0.3) 1rpx
					.table-prompt
						position relative
						top 10rpx
						display block
				.first
					padding-top 30rpx
				.last
					padding-bottom 30rpx
	//购买成功弹窗
	.trading-mask
		position fixed
		left 0
		top 0
		right 0
		bottom 0
		background rgba(0, 0, 0, .7)
		z-index 8
		.trading-wrapper
			position absolute
			left 0
			right 0
			top 50%
			transform translate(0, -50%)
			width 80%
			min-height 200rpx
			margin 0 auto
			z-index 9
		.trading-box
			position absolute
			height 290rpx
			bottom 0
			left 0
			right 0
			margin auto
			z-index 10
			font-size 32rpx
			color #33333d
			background #fff
			border-radius 20rpx
			&>view
				text-align center
				padding 0 30rpx
			&>view:first-child
				font-size 40rpx
				padding 40rpx 0 20rpx
			&>view.trading-button
				text-align center
				margin-top 40rpx
				text
					display inline-block
					width 50%
					height 76rpx
					line-height 76rpx
					text-align center
					color #fff
					background linear-gradient(169deg,rgba(244,182,63,1) 0%,rgba(223,93,40,1) 100%)
					border-radius 38rpx
				text.lucency
					opacity .3
