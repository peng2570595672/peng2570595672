.basic-service
	background #FAFAFA
	display flex
	flex-direction column
	.content
		height 100vh
		margin-top 20rpx
		background #ffffff
		display flex
		flex-direction column
		.service-nav
			display flex
			flex-wrap wrap
			height 400rpx
			padding 0rpx 32rpx
			align-items center
			.service-item
				width 158rpx
				margin-top 62rpx
				margin-right 18rpx
				justify-content center
				align-items center
				flex-direction column
				text-align center
				.service-item-icon
					text-align center
					margin-bottom 14rpx
					.img
						height 68rpx
						width 68rpx
			.service-item:nth-child(4)
				margin-right 0rpx !important
				&.text
					margin-top 60rpx
					.service-item-text
						color rgba(0,0,0,0.1)
				.service-item-text
					font-size 24rpx
					font-family PingFangSC-Regular,PingFang SC
					color #000000
		.more-text
			display flex
			align-items center
			justify-content center
			text-align center
			margin-top 24rpx
			font-size 24rpx
			font-family PingFangSC-Regular,PingFang SC
			color rgba(0, 0, 0, 0.25);
		.fill
			flex 1
	//关注活动弹框
	.detail_mask
		position fixed
		left 0
		top 0
		right 0
		bottom 0
		background rgba(0, 0, 0, .7)
		.detail_wrapper
			position absolute
			left 0
			right 0
			bottom 0
			height 624rpx
			background #FFFFFF;
			border-radius: 12rpx 12rpx 0rpx 0rpx;
			z-index 2
			.item
				display flex
				margin-left 32rpx
				&.quality
					&::before
						display flex
						align-items center
						justify-content center
						width 48rpx
						height 55rpx
						content '\e65f'
						font-size 42rpx
						color #10AEFF
				&::before
					display flex
					align-items center
					justify-content center
					width 48rpx
					height 55rpx
					content '\e664'
					font-size 42rpx
					color #6467F0
				.item-content
					display flex
					flex-direction column
					margin-left 20rpx
					margin-right 100rpx
					font-size 28rpx
					font-family PingFangSC-Semibold, PingFang SC
					font-weight: 400;
					color #000000
					.top
						margin-top 10rpx
						color rgba(150,150,150,0.9)
						line-height 34rpx
						.btn-online
							padding-left 10rpx
							font-size 24rpx
							color #10AEFF
							text-decoration-line underline
		.close_button
			width 60rpx
			height 60rpx
			line-height 72rpx
			margin 60rpx
			&::before
				content '\e60e'
				color #91A29A
				font-size 40rpx
