<!--pages/personal_center/basic_services/basic_services.wxml-->
<view class="basic-service">
	<view class="content">
		<!--用户导航栏开始-->
		<view class="service-nav">
			<!--我的ETC开始-->
			<view class="service-item" catchtap="go" data-type="1">
				<view class="service-item-icon">
					<!--更新提示-->
					<image class="img" src="/pages/personal_center/assets/etc_equipment.svg"></image>
				</view>
				<view class="service-item-text">ETC设备</view>
			</view>
			<!--我的ETC结束-->

			<!--ETC账单开始-->
			<view class="service-item" catchtap="go" data-type="2">
				<view class="service-item-icon">
					<!--更新提示-->
					<image class="img" src="/pages/personal_center/assets/online_icon.svg"></image>
				</view>
				<view class="service-item-text">在线客服</view>
			</view>
			<!--ETC账单结束-->

			<!--开发票开始-->
			<view class="service-item" catchtap="go" data-type="3">
				<view class="service-item-icon">
					<image class="img" src="/pages/personal_center/assets/invoice.svg"></image>
				</view>
				<view class="service-item-text">开发票</view>
			</view>
			<!--开发票结束-->
			<!--质保两年开始-->
			<view class="service-item" catchtap="go" data-type="4">
				<view class="service-item-icon">
					<image class="img" src="/pages/personal_center/assets/quality_assurance.svg"></image>
				</view>
				<view class="service-item-text">质保两年</view>
			</view>
			<!--质保两年结束-->

			<!--通行折扣开始-->
			<view class="service-item" catchtap="go" data-type="5">
				<view class="service-item-icon">
					<image class="img" src="/pages/personal_center/assets/pass_the_discount.svg"></image>
				</view>
				<view class="service-item-text">通行折扣</view>
			</view>
			<!--通行折扣结束-->
		</view>
		<text class="more-text">-更多服务即将上线-</text>
		<view class="fill"></view>
	</view>
	<view catchtap="hide" class="detail_mask animated {{showDetailWrapper ? 'fadeIn' : 'fadeOut'}}" wx:if="{{showDetailWrapper}}">
		<view catchtap="close" class="detail_wrapper animated {{showDetailWrapper ? 'zoomInOther' : 'zoomOutOther'}}">
			<view class="close_button iconfont" catchtap="hide"></view>
			<view class="item {{iconType === 4 ? 'quality' : ''}} iconfont">
				<view class="item-content quality" wx:if="{{iconType === 4}}">
					<view>设备质保两年</view>
					<div class="top">ETC设备两年内非人为损坏可提供保修服务。如有需要请联系
						<span class="btn-online" catchtap="online">在线客服</span>
					</div>
				</view>
				<view wx:else class="item-content">
					<view>高速通行9.5折</view>
					<view class="top">全国高速走ETC车道享受不低于95折优惠。使用说明：进出高速收费站时走ETC通道</view>
				</view>
			</view>
		</view>
	</view>
</view>
