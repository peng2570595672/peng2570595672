@font-face {
  font-family: 'iconfont'; /* Project id 1514406 */
  src: url("//at.alicdn.com/t/c/font_1514406_r9qjj5a9q1.woff2?t=1696902252008") format('woff2'), url("//at.alicdn.com/t/c/font_1514406_r9qjj5a9q1.woff?t=1696902252008") format('woff'), url("//at.alicdn.com/t/c/font_1514406_r9qjj5a9q1.ttf?t=1696902252008") format('truetype');
}
.iconfont {
  font-family: 'iconfont' !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.index {
  width: 100vw;
  min-height: 100vh;
  background: #ededed;
}
.index::after {
  display: block;
  content: '';
  width: 100%;
  height: 20rpx;
}
.index .module {
  padding: 28rpx;
  margin: 20rpx 28rpx;
  border-radius: 16rpx;
  background-color: #fff;
  font-family: PingFangSC-Regular, PingFang SC;
  box-shadow: 0 4rpx 2rpx 0 rgba(255,255,255,0.5);
}
.index .module1 {
  width: 100vw;
  height: 18rpx;
}
.index .module1 .picker {
  width: 100vw;
  height: 100rpx;
  font-size: 28rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-around;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
}
.index .module2 {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.index .module2 .leftImg {
  overflow: hidden;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
}
.index .module2 .leftImg .image {
  width: 100%;
  height: 100%;
}
.index .module2 .rightText {
  width: 540rpx;
}
.index .module2 .rightText .networkName {
  font-size: 28rpx;
  font-weight: 500;
  line-height: 32rpx;
  text-align: justify /* 浏览器可能不支持 */;
  letter-spacing: 0rpx;
  color: #000;
}
.index .module2 .rightText .addrNavPhone {
  margin-top: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.index .module2 .rightText .addrNavPhone > text {
  width: 380rpx;
  font-size: 24rpx;
  line-height: 28rpx;
  color: #333;
  text-align: justify;
  display: flex;
  align-items: center;
  justify-content: normal;
}
.index .module2 .rightText .addrNavPhone > text::before {
  height: 100%;
  margin-right: 8rpx;
  content: '\e64d';
  font-size: 12px;
  color: #4b576e;
}
.index .module2 .rightText .addrNavPhone .navPhone {
  width: 120rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.index .module2 .rightText .addrNavPhone .navPhone .nav::before {
  content: '\e6bc';
  font-size: 18px;
  color: #4b576e;
}
.index .module2 .rightText .addrNavPhone .navPhone .phone::before {
  content: '\e6bd';
  font-size: 18px;
  color: #4b576e;
}
