@font-face {
  font-family: 'iconfont';  /* Project id 1514406 */
  src: url('//at.alicdn.com/t/c/font_1514406_r9qjj5a9q1.woff2?t=1696902252008') format('woff2'),
       url('//at.alicdn.com/t/c/font_1514406_r9qjj5a9q1.woff?t=1696902252008') format('woff'),
       url('//at.alicdn.com/t/c/font_1514406_r9qjj5a9q1.ttf?t=1696902252008') format('truetype');
}
.iconfont
    font-family 'iconfont' !important
    font-size 16px
    font-style normal
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
mixinsWidthHeight($width = 100%, $height = 100%)
    width $width
    height $height
minWidthHeight($width = 100%, $height = 100%)
    width $width
    min-height $height
mixinsIconfont($content='',$size=16px,$color=#5EBE68)
    content $content
    font-size $size
    color $color
mixinsPositionPack($position=relative)
    position $position
    left 50%
    transform translateX(-50%)
textLineCenter($height)
    text-align center
    line-height $height
flexStyle($align = center, $justify = center)
    display flex
    align-items $align
    justify-content $justify
.index
    minWidthHeight(100vw,100vh)
    background #ededed
    &::after
        display block
        content ''
        mixinsWidthHeight(100%,20rpx)
    .module
        padding 28rpx
        margin 20rpx 28rpx
        border-radius 16rpx
        background-color #ffffff
        font-family PingFangSC-Regular, PingFang SC
        box-shadow 0 4rpx 2rpx 0 rgba(255, 255, 255, 0.5)
    .module1
        mixinsWidthHeight(100vw,100rpx)
        background #fff
        .picker
            height 100rpx
            margin  0rpx 28rpx
            font-size: 28rpx;
            letter-spacing: 2.14rpx;
            flexStyle(center,space-around)
            // .addr

    .module2
        .networkName
            margin-top 20rpx
            font-size 28rpx
            font-weight 500
            line-height 32rpx
            text-align justify /* 浏览器可能不支持 */
            letter-spacing 0rpx
            color #000000
        .addrNavPhone
            margin-top 12rpx
            flexStyle(center,space-between)
            & > text
                width 460rpx
                font-size 24rpx
                line-height 28rpx
                color #333333
                text-align justify
                &::before
                    height 100%
                    margin-right 8rpx
                    mixinsIconfont('\e64d',12px,#4B576E)
            .navPhone
                width 120rpx
                flexStyle(center,space-between)
                .nav
                    &::before
                        mixinsIconfont('\e6bc',18px,#4B576E)
                .phone
                    &::before
                        mixinsIconfont('\e6bd',18px,#4B576E)