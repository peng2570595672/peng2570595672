<view class="user-agreement">
	<view wx:if="{{isPassengerCarActivation}}">
        <view class="title">客车</view>
        <view class="list" wx:for="{{carAgreementList}}" wx:key="index">
            <view class="item" catchtap="carAgreementHandle" data-index="{{index}}">
                <view class="name">{{item.name}}</view>
                <view class="update" wx:if="{{item.update === 1}}">有更新</view>
            </view>
        </view>
    </view>
	<view wx:if="{{isTruckActivation}}">
        <view class="title truck">货车</view>
        <view class="list" wx:for="{{truckAgreementList}}" wx:key="index">
            <view class="item" catchtap="truckAgreementHandle" data-index="{{item.id}}">
                <view class="name">{{item.name}}</view>
                <view class="update" wx:if="{{item.update === 1}}">有更新</view>
            </view>
        </view>
    </view>
</view>
