.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.index {
  margin: 0;
  padding: 0;
  width: 100vw;
  min-height: 100vh;
  background-color: #ececec;
/* 顶部占位 */
/* 公共模块 */
}
.index .split {
  width: 100%;
  height: 0rpx;
  overflow: hidden;
}
.index .module {
  width: 658rpx;
  margin-top: 28rpx;
  border-radius: 16rpx;
  background-color: #fff;
  padding: 28rpx 0rpx 28rpx 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  box-shadow: 0px 4rpx 2rpx 0rpx rgba(212,212,212,0.5);
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}
.index .module .title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e1e1e;
  font-family: PingFangSC-Semibold, PingFang SC;
}
.index .module .iconNameSpot {
  display: flex;
  height: 68rpx;
  align-items: center;
  margin-bottom: 24rpx;
  justify-content: space-between;
  border-bottom: 2rpx solid #e7e7e7;
  position: relative;
}
.index .module .iconNameSpot .new-icon {
  position: absolute;
  right: 6rpx;
  top: 6rpx;
  width: 8rpx;
  height: 8rpx;
  background-color: #ff3c48;
  border-radius: 50%;
}
.index .module .iconNameSpot .icon {
  width: 42rpx;
  height: 42rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.index .module .iconNameSpot .icon::before {
  display: block;
  content: "\e6a5";
  opacity: 0.8;
}
.index .module .iconNameSpot .name {
  width: 580rpx;
  height: 68rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #1e1e1e;
  line-height: 68rpx;
  margin-left: 14rpx;
  font-family: PingFangSC-Regular, PingFang SC;
}
.index .module .iconNameSpot .spot {
  width: 20rpx;
  height: 20rpx;
  margin-right: 36rpx;
  border-radius: 50%;
}
.index .module .iconNameSpot .spot.shows {
  background-color: #ff1e00;
}
