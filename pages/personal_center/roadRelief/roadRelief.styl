@font-face
    font-family 'iconfont' /* Project id 1514406 */
    src url('//at.alicdn.com/t/font_1514406_r2ex32p9up.woff2?t=1651741878795') format('woff2'), url('//at.alicdn.com/t/font_1514406_r2ex32p9up.woff?t=1651741878795') format('woff'), url('//at.alicdn.com/t/font_1514406_r2ex32p9up.ttf?t=1651741878795') format('truetype')
.iconfont
    font-family 'iconfont' !important
    font-size 16px
    font-style normal
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
image 
    width 100%
    height 100%
    display block
mixinsWidthHeight($width = 100%, $height = 100%)
    width $width
    height $height
maxMixinsWidthHeight($width = 100%, $height = 100%)
    width $width
    min-height $height
mixinsIconfont($content='',$size=16px,$color=#5EBE68)
    content $content
    font-size $size
    color $color
mixinsPositionPack($position=relative)
    position $position
    left 50%
    transform translateX(-50%)
textLineCenter($height)
    text-align center
    line-height $height
flexModule($align=normal,$justify=normal)
    display flex
    align-items $align
    justify-content $justify
.index
    maxMixinsWidthHeight(100vw,100vh)
    background-color #ECECEC
    .activity-content-img
        position relative
        .pseudoClass
            display block
            position absolute
            bottom 30rpx
            left 25rpx
            mixinsWidthHeight(150rpx,40rpx)
            background-color rgba(0, 0, 0, 0.4)
            text-align center
            line-height 40rpx
            font-size 20rpx
            color white
            border-radius 26rpx
    .textTitle
        margin 30rpx 25rpx 
        line-height 44rpx
        font-weight 600
        color #1E1E1E
        font-size 32rpx
    .module
        margin 30rpx 25rpx 
        padding 20rpx 30rpx
        border-radius 16rpx
        box-shadow 4rpx 4rpx 46rpx 0rpx rgba(125,132,158,0.1)
    .moduleOne
        background-color #fff
        border-radius 16rpx
        font-family PingFang SC
        // margin 20rpx autu
        .upper
            border-bottom 1rpx solid #f3f0f0
            .attrVal
                // background #3a8ee1
                mixinsWidthHeight(,100rpx)
                line-height 100rpx
                flexModule(center,space-between)
                font-size 36rpx
                .attr
                    mixinsWidthHeight(170rpx,60rpx)
                    line-height 60rpx
                    color #ffffff
                    font-size 24rpx
                    text-align center
                    background-color #2A4F44
                    border-radius 32rpx

                .status
                    font-weight normal
                    color #5EBE68
                .val
                    font-size 28rpx
                    font-weight 400
                    line-height 40rpx
        .below
            margin-top 30rpx
            .nameStatus
                flexModule(center,space-between)
                line-height 60rpx
                padding-right 5rpx
                font-size 24rpx
                .attr
                    color #666666
                .val
                    color #000000
    .empty
        font-size 28rpx
        font-weight 400
        color #99999D
        margin-top 200rpx
        flexModule(center, center)
        flex-direction column
        font-family PingFangSC-Medium, PingFang SC
        &::before
            display block
            content "\e649"
            font-size 120rpx
            margin-bottom 30rpx
            color #99999D
    .image
        mixinsWidthHeight()
    .split
        mixinsWidthHeight(,108rpx)