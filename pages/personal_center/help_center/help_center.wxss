page {
  background: #f7f7f7;
}
page .help-center .service {
  height: 234rpx;
  background: linear-gradient(to bottom, #15ad69, #84d157);
  filter: blur(0px);
  color: #fff;
  padding: 0 30rpx;
}
page .help-center .service .service-name {
  font-size: 40rpx;
  font-weight: 500;
  line-height: 56rpx;
  padding-top: 30rpx;
}
page .help-center .service .service-btn {
  height: 80rpx;
  padding-top: 20rpx;
}
page .help-center .service .service-btn button {
  width: 43.5%;
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  background: rgba(255,255,255,0.3);
  border-radius: 20rpx;
}
page .help-center .service .service-btn button text::before {
  content: '\e602';
  color: #fff;
  font-size: 38rpx;
}
page .help-center .service .service-btn button .online-service::before {
  content: '\e612';
  margin-right: 20rpx;
}
page .help-center .service .service-btn>button:last-child {
  float: right;
}
page .help-center .help-list {
  background: #fff;
}
page .help-center .help-list .help-search {
  padding: 45rpx 0;
}
page .help-center .help-list .help-search>view {
  width: 90%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  color: #d4d4d6;
  background: #f5f5f5;
  border-radius: 35rpx;
  margin: 0 auto;
}
page .help-center .help-list .help-search>view text {
  display: flex;
  align-items: center;
}
page .help-center .help-list .help-search>view text::before {
  content: '\e744';
  color: #d4d4d6;
  font-size: 60rpx;
  margin: 0 10rpx 0 30rpx;
}
page .help-center .help-list .list .list-title {
  width: 100%;
  height: 80rpx;
  overflow-x: auto;
  white-space: nowrap;
  border-bottom: 2rpx solid #ececec;
}
page .help-center .help-list .list .list-title .list-title-child {
  display: inline-block;
  width: 132rpx;
  font-size: 32rpx;
  text-align: center;
  color: #33333d;
  line-height: 60rpx;
  margin: 0 40rpx;
}
page .help-center .help-list .list .list-title .list-title-child>view {
  width: 132rpx;
  height: 8rpx;
}
page .help-center .help-list .list .list-title .tab_index>view {
  border-radius: 6rpx;
  background: linear-gradient(to right, #15ad69, #84d157);
}
page .help-center .help-list .list .list-content {
  height: 98rpx;
  line-height: 98rpx;
  font-size: 28rpx;
  color: #66666d;
  border-bottom: 2rpx solid #ececec;
  margin-left: 40rpx;
}
page .help-center .help-list .list>view:last-child {
  border-bottom: 0;
}
page .mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  background: rgba(0,0,0,0.6);
}
page .mask .top {
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  width: 100%;
  height: 25%;
  background: rgba(0,0,0,0);
}
page .mask .wrapper {
  position: fixed;
  left: 0rpx;
  top: 25%;
  right: 0;
  bottom: 0;
  height: 75%;
  background: #fff;
  border-radius: 32rpx 32rpx 0px 0px;
}
page .mask .wrapper .details-title {
  padding: 90rpx 52rpx 50rpx;
  font-size: 40rpx;
  color: #33333d;
}
page .mask .wrapper .details-list {
  height: 60%;
  overflow-y: scroll;
}
page .mask .wrapper .details-list .details-list-box .cont1 {
  font-size: 30rpx;
  text-align: justify;
  padding: 0 54rpx 50rpx;
  display: flex;
  line-height: 44rpx;
  color: #66666d;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
}
page .mask .wrapper .details-list .details-list-box .cont1 .label::before {
  flex: 0.5;
  content: '\e604';
  line-height: 28rpx;
  color: #33333d;
  font-size: 24rpx;
  margin-right: 18rpx;
}
page .mask .wrapper .details-list .details-list-box .cont1 .char {
  flex: 9.5;
}
page .mask .wrapper .details-list .details-list-box>view:last-child {
  padding-bottom: 0;
}
page .mask .wrapper .is-scroll {
  position: fixed;
  bottom: 0;
  z-index: 2;
  width: 100%;
  font-size: 28rpx;
  line-height: 184rpx;
  text-align: center;
  color: #66666d;
  background: linear-gradient(180deg, rgba(255,255,255,0.2) 0%, #fff 100%);
  padding-top: 74rpx;
}
page .replace {
  padding-top: 58rpx;
  color: #0091ff;
  text-align: center;
  font-size: 32rpx;
}
