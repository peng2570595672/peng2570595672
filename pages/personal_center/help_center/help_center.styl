@import "../../../style/base.styl";
page
	background #F7F7F7
	.help-center
		// 售后服务/在线客服
		.service
			height 234rpx
			background linear-gradient(to bottom, $deepThemeColor, $shallowThemeColor)
			filter blur(0px)
			color #fff
			padding 0 30rpx
			.service-name
				font-size 40rpx
				font-weight 500
				line-height 56rpx
				padding-top 30rpx
			.service-btn
				height 80rpx
				padding-top 20rpx
				button
					width 43.5%
					display inline-block
					height 80rpx
					line-height 80rpx
					font-size 32rpx
					color #fff
					background rgba(255,255,255,0.3)
					border-radius 20rpx
					text::before
						content '\e602'
						color #fff
						font-size 38rpx
					.online-service::before
						content '\e612'
						margin-right 20rpx
				&>button:last-child
					float right
		// 帮助列表
		.help-list
			background #fff
			//搜索
			.help-search
				padding 45rpx 0
				&>view
					width 90%
					height 70rpx
					line-height 70rpx
					font-size 32rpx
					color #D4D4D6
					background #F5F5F5
					border-radius 35rpx
					margin 0 auto
					text
						display flex
						align-items center
					text::before
						content '\e744'
						color #D4D4D6
						font-size 60rpx
						margin 0 10rpx 0 30rpx
			.list
				//tab切换
				.list-title
					width 100%
					height 80rpx
					overflow-x auto
					white-space nowrap
					border-bottom 2rpx solid #ECECEC
					.list-title-child
						display inline-block
						width 132rpx
						font-size 32rpx
						text-align center
						color $fontColor3
						line-height 60rpx
						margin 0 40rpx
						&>view
							width 132rpx
							height 8rpx
					.tab_index
						&>view
							border-radius 6rpx
							background linear-gradient(to right, $deepThemeColor, $shallowThemeColor)
				//帮助中心列表
				.list-content
					height 98rpx
					line-height 98rpx
					font-size 28rpx
					color $fontColor6
					border-bottom 2rpx solid #ECECEC
					margin-left 40rpx
				&>view:last-child
					border-bottom 0
	// 弹出详情
	.mask
		position fixed
		left 0
		top 0
		right 0
		bottom 0
		z-index 2
		background: rgba(0, 0, 0, .6)
		//蒙版
		.top
			position fixed
			left 0
			top 0
			bottom 0
			z-index 2
			width 100%
			height 25%
			background: rgba(0, 0, 0, 0)
		//详情页面
		.wrapper
			position fixed
			left 0rpx
			top 25%
			right 0
			bottom 0
			z-index 3
			height 75%
			background #fff
			border-radius 32rpx 32rpx 0px 0px
			.details-title
				padding 90rpx 52rpx 50rpx
				font-size 40rpx
				color $fontColor3
			.details-list
				height 75%
				overflow-y scroll
				margin-bottom 20rpx
				.details-list-box
					.cont1
						font-size 30rpx
						text-align justify
						padding 0 54rpx 50rpx
						display flex
						line-height 44rpx
						color $fontColor6
						flex-direction row
						flex-wrap nowrap
						justify-content flex-start
						.label::before
							flex .5
							content '\e604'
							line-height 28rpx
							color $fontColor3
							font-size 24rpx
							margin-right 18rpx
						.char
							flex 9.5
					&>view:last-child
						padding-bottom 0
			// 详情列表超出显示提示
			.is-scroll
				position fixed
				bottom 0
				z-index 2
				width 100%
				font-size 28rpx
				line-height 152rpx
				text-align center
				color $fontColor6
				background #F4F4F4
				opacity .93
	// 换一批
	.replace
		padding-top 58rpx
		color #0091FF
		text-align center
		font-size 32rpx
	.not-scroll
		position fixed
		z-index 1
		left 0
		right 0
		width 100%
		height 100%
