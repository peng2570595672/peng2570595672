<view class="member_benefits">
	<!--会员头部开始-->
	<view class="members-top">
		<view class="members-top-bg">
			<image src = 'https://file.cyzl.com/g001/M05/E8/C4/oYYBAF38ONiAQIlRAAAelkTjuSQ237.png' wx:if="{{!isMembers}}"></image>
			<image src = 'https://file.cyzl.com/g001/M05/EB/6D/oYYBAF38dA6ADPLUAAAfzvekoo4387.png' wx:if="{{isMembers}}"></image>
		</view>
		<view class="members-top-content">
			<view class="header">
				<image src="https://dss1.bdstatic.com/70cFvXSh_Q1YnxGkpoWK1HF6hhy/it/u=1493390342,3676083771&fm=26&gp=0.jpg"></image>
			</view>
			<view class="user">
				<view>小男孩</view>
				<view><button class="{{isMembers === true ? 'active':''}}">普通用户</button></view>
			</view>
			<view class="member iconfont" wx:if="{{!isMembers}}"><text >成为会员</text></view>
		</view>
	</view>
	<!--会员头部结束-->
	<!--会员权益列表开始-->
	<view class="benefits">
		<view class="benefits-list">
			<view class="benefits-content">
				<view class="benefits-top">会员权益</view>
				<view class="list-box">
					<view wx:for="{{benefitsList}}" wx:key="index" class="list-content iconfont icon{{item.id}} {{isMembers === true ? 'icon-active':''}}" catchtap="showDetail" data-content="{{item}}">
						<view class="list-title">{{item.title}}</view>
					</view>
				</view>
				<view class="as-member" wx:if="{{!isMembers}}">
					<button>成为会员</button>
				</view>
				<view class="prompt" wx:if="{{!isMembers}}"><text class="iconfont">升级为会员后，可激活所有功能</text></view>
			</view>
		</view>
		<view class="benefits-button-bg"></view>
	</view>
	<!--会员权益列表结束-->
	<!--弹出详情开始-->
	<view class="mask animated {{showDetailWtapper?'slideInUp':'slideInDown'}}" wx:if="{{showDetailMask}}">
		<view class="top" catchtap="hide"></view>
		<view class="wrapper animated {{showDetailWtapper?'slideInDown':'slideOutDown'}}">
			<view class="details-title iconfont icon{{detailsContent.id}}"><text>{{detailsContent.title}}</text></view>
			<view class="details-content">{{detailsContent.content}}</view>
			<view class="as-member" wx:if="{{!isMembers}}">
				<button>成为会员</button>
			</view>
			<view class="prompt" wx:if="{{!isMembers}}"><text class="iconfont">升级为会员后，可激活所有功能</text></view>
		</view>
	</view>
	<!--弹出详情结束-->
</view>
