.container {
  background: #fff;
  padding: 0 34rpx;
  box-sizing: border-box;
  min-height: 100vh;
}
.container > image {
  display: block;
  margin: 132rpx auto 40rpx;
  width: 304rpx;
  height: 214rpx;
}
.container .title {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  font-weight: normal;
  line-height: 47.6rpx;
  color: #000;
}
.container .btn-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 80rpx;
}
.container .btn-wrapper .btn {
  width: 330rpx;
  height: 98rpx;
  border-radius: 49rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  font-weight: 500;
  color: #2a4f44;
  margin: auto;
  border: 2rpx solid #2a4f44;
}
.container .btn-wrapper .btn.reexchange {
  border: 0;
  background: #2a4f44;
  color: #fff;
}
.container .tips {
  margin-top: 20rpx;
  font-size: 28rpx;
  font-weight: normal;
  line-height: 39.2rpx;
  text-align: center;
  color: #000;
  opacity: 0.5;
}
