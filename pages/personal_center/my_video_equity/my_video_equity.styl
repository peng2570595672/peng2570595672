@import "../../../style/base.styl";
@import "../../../style/animate.styl";
.container
	display flex
	flex-direction column
	background #ECECEC
	padding: 36rpx 40rpx 20rpx;
	min-height 100vh
	box-sizing border-box
	font-family: PingFang SC;
	.equity-container
		.title
			display flex
			align-items center
			color #000
			font-size 36rpx
			margin-bottom 24rpx
			text
				margin-left 20rpx
				font-size: 28rpx;
				color: #00B578;
		.video-list
			.video-item
				display flex
				align-items center
				height: 138rpx;
				padding 0 24rpx
				border-radius: 16rpx;
				background #ffffff
				margin-bottom 20rpx
				.logo
					display flex
					align-items center
					justify-content center
					image
						width 90rpx
						height: 90rpx;
				.item-title
					flex 1
					font-size: 28rpx;
					color: #211F1E;
					margin-left 20rpx
				.item-btn
					width: 140rpx;
					height: 48rpx;
					border-radius: 24rpx;
					background: #2A4F44;
					display flex
					align-items center
					justify-content center
					font-size: 24rpx;
					font-weight: 500;
					color: #FFFFFF;
					&.converted
						background #C0C0C0
		.introduce
			font-size: 22rpx;
			font-weight: normal;
			line-height: 34rpx;
			.introduce-title
				font-weight: 500;
				color: rgba(0, 0, 0, 0.6);
				padding-top 20rpx
			.introduce-content
				color: rgba(0, 0, 0, 0.5);
				padding-bottom: 20rpx;
.alert-box
	position fixed
	left 0
	right 0
	top 0
	bottom 0
	background: rgba(0,0,0, .5)
	z-index 9999999999999
	// 支付方式
	.alert-wrapper
		position fixed
		left 0
		right 0
		bottom 0
		display flex
		flex-direction column
		height 620rpx
		background: #fff
		border-top-left-radius 40rpx
		border-top-right-radius 40rpx
		// 关闭
		.alert-close
			position absolute
			right 36rpx
			top 36rpx
			&:before
				display block
				content '\e63d'
				font-size 28rpx
				color #979797
		// 标题
		.alert-title
			margin-top 40rpx
			display flex
			align-items center
			justify-content center
			height 38rpx
			font-size 32rpx
			font-weight 600
		.alert-content
			padding 70rpx 44rpx
			font-family: PingFang SC;
			.alert-input
				height: 100rpx;
				display flex
				align-items center
				border-radius: 16rpx;
				background: #EEEEEE;
				font-size: 28rpx;
				padding 0 36rpx
				color: #211F1E;
			.tips
				font-size: 24rpx;
				font-weight: normal;
				line-height: 28rpx;
				color: #FCA629;
				margin-top 24rpx
				margin-bottom 114rpx
			.alert-btn
				display flex
				align-items center
				justify-content center
				height: 110rpx;
				border-radius: 55rpx;
				background: #2A4F44;
				box-shadow: 0rpx 4rpx 2rpx 0rpx rgba(212, 212, 212, 0);
				font-size: 36rpx;
				font-weight: 600;
				color: #FFFFFF;
