@import "../../../style/base.styl";
page
	background #F3F3F3
	// 常见问题
	.common-problem
		background #fff
		padding-left 32rpx
		margin-bottom 20rpx
		.item
			position relative
			padding 30rpx 0
			border-bottom 1rpx solid rgba(0, 0, 0, 0.1)
			.item-title
				height 48rpx
				display flex
				align-items center
				background #fff
				color $fontColor6
				font-size 28rpx
				.problem-title
					flex 1
				.iconfont
					margin-right 42rpx
					&::after
						display inline-block
						content '\e60e'
						font-size 32rpx
						color rgba(0, 0, 0, 0.3)
					&.down
						transition: .4s
						transform rotateZ(90deg)
					&.up
						transition: .4s
						transform rotateZ(270deg)
			.details
				font-size 24rpx
				color rgba(0, 0, 0, 0.3)
				padding-top 26rpx
				padding-right 32rpx
				line-height 34rpx
				&.show
					display block
				&.hide
					display none
		& > view:last-child
			border-bottom 0
