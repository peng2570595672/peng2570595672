@import "../../../style/base.styl";
page
	min-height 100vh
	background #fff
.my_order
	padding-top 88rpx
	// 欠费通知
	.notice
		position fixed
		top 0
		z-index 999
		width 100%
		height 120rpx
		background #F4F4F4
		.notice-box
			background #fff
			height 60rpx
			line-height 60rpx
			display flex
			padding 0 30rpx
			margin 30rpx
			&>view:first-child
				flex 8
				font-size 24rpx
				color #FF563C
			&>view:last-child
				flex 2
				font-size 20rpx
				color #6D7278
				text-align right
	//通行总额
	.total-cost
		padding 20rpx 0 18rpx
		font-size 24rpx
		color $fontColor9
		line-height 40rpx
		text-indent 40rpx
		border-bottom 1rpx solid #E7E7E7
		&>view:first-child
			color $fontColor6
			font-weight 600
	//订单列表
	.order-list
		.order-list-content
			padding 34rpx 40rpx 28rpx
			border-bottom 1rpx solid #E7E7E7
			.order-list-top
				display flex
				height 64rpx
				line-height 56rpx
				.license-plate
					flex 6
					font-size 40rpx
					font-weight 500
					color $fontColor3
					text
						vertical-align middle
						font-size 20rpx
						color #39A6F8
						margin-left 28rpx
				.fail-money,
				.success-money
					flex 4
					font-size 40rpx
					color #FF563C
					line-height 64rpx
					text-align right
				.success-money
					color #2FB565
			.site
				font-size 24rpx
				line-height 40rpx
				color $fontColor6
				padding 10rpx 0
				text::after
					content '\e651'
					color $fontColor6
					font-size 24rpx
			.order-list-bottom
				display flex
				font-size 24rpx
				color $fontColor9
				line-height 30rpx
				.accounting-time,
				.processing-fail,
				.processing-time
					flex 5
				.processing-fail
					text-align right
					color #FF563C
					line-height 40rpx
				.processing-time
					text-align right
.is_owes
	padding-top 208rpx
