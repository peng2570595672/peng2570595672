.iconfont {
    font-family: "iconfont" !important;
    font-size: 16px;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

.index {
    margin: 0;
    padding: 0;
    width: 100vw;
    height: 100vh;
    background: linear-gradient(180deg, #FBE7CA 0%, #EBEDF0 83%, #EBEDF0 100%);
}

.index .swiperBox {
    width: 100%;
    height: 100%;
}

.index .swiperBox {
    height: 100%;
}

.index .swiperBox .title {
    width: 638rpx;
    height: 200rpx;
    margin-top: 80rpx;
    position: relative;
    left: 50%;
    transform: translateX(-50%);
}

.index .swiperBox .title .icon {
    height: 74rpx;
    width: 100rpx;
    position: relative;
    left: 50%;
    transform: translateX(-50%);
}

.index .swiperBox .title .icon .image {
    width: 100%;
    height: 100%;
}

.index .swiperBox .title .text1 {
    font-size: 40rpx;
    font-weight: 600;
    color: #B36C3B;
    text-align: center;
    font-family: PingFangSC-Semibold, PingFang SC;
}

.index .swiperBox .content {
    width: 638rpx;
    height: 996rpx;
    position: relative;
    top: 20rpx;
    left: 50%;
    transform: translateX(-50%);
}

.index .swiperBox .content .bgImg {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -1;
    opacity: 1;
}

.index .swiperBox .content .bgImg .images {
    width: 100%;
    height: 100%;
}

.index .swiperBox .content .contentText {
    width: 446rpx;
    text-align: center;
    position: relative;
    left: 50%;
    top: 440rpx;
    transform: translateX(-50%);
}

.index .swiperBox .content .contentText .text {
    text-align: justify;
}

.index .swiperBox .content .contentText .text .span {
    color: #00A9FF;
}


.index .swiperBox .bgColorOne {
    width: 750rpx;
    height: 446rpx;
    background: #FFFFFF;
    border-radius: 30rpx 30rpx 0rpx 0rpx;
    backdrop-filter: blur(10rpx);
    box-shadow: 0rpx 50rpx 50rpx rgba(255, 255, 255, 0.68);
    position: fixed;
    bottom: 146rpx;
    opacity: 0.68;
    z-index: -2;
}

.index .swiperBox .bgColorTwo {
    width: 750rpx;
    height: 520rpx;
    opacity: 0.38;
    overflow: hidden;
    background-color: rgba(255, 255, 255, 0.82);
    backdrop-filter: blur(10rpx);
    clip-path: polygon(50% 21%, 100% 0, 100% 100%, 0 100%, 0 0);
    -webkit-clip-path: polygon(50% 21%, 100% 0, 100% 100%, 0 100%, 0 0);
    box-shadow: 0rpx 42rpx 26rpx 0rpx rgba(190, 156, 124, 0.8), inset 0rpx 18rpx 42rpx 0rpx rgba(255, 255, 255, 0.42), inset 0rpx 2rpx 6rpx 0rpx rgba(255, 255, 255, 0.68);
    position: fixed;
    bottom: 0rpx;
    z-index: 20;
}

.index .swiperBox .bgColorTwo .btn {
    width: 468rpx;
    height: 124rpx;
    font-weight: 600;
    color: #A95F2C;
    font-size: 36rpx;
    text-align: center;
    margin-top: 120rpx;
    border-radius: 68rpx;
    line-height: 124rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    background: linear-gradient(65deg, #DEB893 0%, #F8E5D2 100%);
    box-shadow: 0rpx 16rpx 30rpx 0rpx rgba(170, 118, 68, 0.54), 0rpx 4rpx 8rpx 0rpx #C59061, 0rpx -4rpx 36rpx 0rpx rgba(214, 186, 159, 0.63), inset 0rpx 4rpx 0rpx 0rpx rgba(255, 255, 255, 0.71), inset -12rpx 12rpx 10rpx 0rpx rgba(255, 255, 255, 0.5), inset 0rpx 32rpx 14rpx 0rpx rgba(0, 0, 0, 0.07), inset 0rpx -6rpx 14rpx 0rpx #CA9E73, inset -2rpx 4rpx 6rpx 0rpx rgba(255, 255, 255, 0.5);
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
}

.index .dots {
    position: fixed;
    bottom: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
}

.index .dots .littleDots {
    width: 30rpx;
    height: 10rpx;
    margin: 0 6rpx;
    border-radius: 10rpx;
    background-color: #fff;
}

.index .dots .active {
    width: 60rpx;
    background-color: orange;
}






















