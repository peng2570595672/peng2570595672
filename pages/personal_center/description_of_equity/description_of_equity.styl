mixinsWidthHeight($width=100%, $height=100%)
    width $width
    height $height
mixinsPosition($position=relative)
    position $position
    left 50%
    transform translateX(-50%)
.iconfont
    font-family 'iconfont' !important
    font-size 16px
    font-style normal
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
.index
    margin 0
    padding 0
    width 100vw
    height 100vh
    background linear-gradient(180deg, #FBE7CA 0, #EBEDF0 83%, #EBEDF0 100%)
    .swiperBox
        mixinsWidthHeight()
        display flex
        justify-content center
        .title
            mixinsWidthHeight(,17vh)
            display flex
            text-align center
            margin-bottom 20rpx
            align-items flex-end
            justify-content center
            overflow hidden
            .icon
                mixinsWidthHeight(,74rpx)
                text-align center
                margin-top 30rpx
                .image
                    mixinsWidthHeight(100rpx,74rpx)
            .text1
                font-size 40rpx
                font-weight 600
                color #B36C3B
                text-align center
                font-family PingFangSC-Semibold, PingFang SC
        /* 图片 */
        .content
            mixinsWidthHeight(698rpx,75vh)
            overflow hidden /* margin 0rpx 56rpx */
            mixinsPosition()
            .images
                 mixinsWidthHeight()
            .contentText
                width 446rpx
                font-weight 400
                font-size 28rpx
                color #B5774C
                text-align center
                font-family PingFangSC-Regular, PingFang SC
                mixinsPosition(absolute)
                top 40vh
                .text
                    text-align justify
                    .span
                        color #00A9FF
        .bgColorOne
            mixinsWidthHeight(750rpx,32vh)
            background #FFFFFF
            border-radius 30rpx 30rpx 0 0
            backdrop-filter blur(10rpx)
            box-shadow 0 50rpx 50rpx rgba(255, 255, 255, 0.68)
            position fixed
            bottom 146rpx
            opacity 0.68
            z-index -2
        .bgColorTwo
            mixinsWidthHeight(750rpx,32vh)
            opacity 0.38
            overflow hidden
            background-color rgba(255, 255, 255, 0.72)
            backdrop-filter blur(10rpx)
            clip-path polygon(50% 21%, 100% 0, 100% 100%, 0 100%, 0 0)
            -webkit-clip-path polygon(50% 21%, 100% 0, 100% 100%, 0 100%, 0 0)
            box-shadow 0 -20rpx 24rpx 0 rgba(206, 130, 59, 0.31), inset 0 22rpx 42rpx 0 #FFFFFF
            position fixed
            bottom 0
            z-index 20
            .btn
                mixinsWidthHeight(50vw,8vh)
                font-weight 600
                color #A95F2C
                font-size 36rpx
                text-align center
                margin-top 120rpx
                border-radius 68rpx
                line-height 8vh
                font-family PingFangSC-Semibold, PingFang SC
                background linear-gradient(65deg, #DEB893 0, #F8E5D2 100%)
                box-shadow 0 16rpx 30rpx 0 rgba(170, 118, 68, 0.54), 0 4rpx 8rpx 0 #C59061, 0 -4rpx 36rpx 0 rgba(214, 186, 159, 0.63), inset 0 4rpx 0 0 rgba(255, 255, 255, 0.71), inset -12rpx 12rpx 10rpx 0 rgba(255, 255, 255, 0.5), inset 0 32rpx 14rpx 0 rgba(0, 0, 0, 0.07), inset 0 -6rpx 14rpx 0 #CA9E73, inset -2rpx 4rpx 6rpx 0 rgba(255, 255, 255, 0.5)
                mixinsPosition(absolute)
    .dots
        position fixed
        bottom 120rpx
        display flex
        justify-content center
        align-items center
        width 100%
        .littleDots
            mixinsWidthHeight(30rpx,10rpx)
            margin 0 6rpx
            border-radius 10rpx
            background-color #fff
        .active
            width 60rpx
            background-color orange
