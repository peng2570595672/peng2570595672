@import "../../../style/base.styl";
.my-etc
	min-height 100vh
	display flex
	flex-direction column
	.tab-choice
		display flex
		margin 40rpx 66rpx 30rpx
		& > view
			color $fontColor6
			font-size 48rpx
			line-height 80rpx
			font-family PingFangSC-Semibold, PingFang SC
			font-weight 600
			text-align center
			margin-right 38rpx
			.line
				width 120rpx
				height 12rpx
			&.active
				color $fontColor3
				font-size 56rpx
				.line
					background #2FB565
	
	.item
		margin 0 34rpx
		margin-top 20rpx
		padding 0 24rpx
		height 220rpx
		box-shadow 4rpx 4rpx 46rpx 0 rgba(126,132,156,0.1)
		border-radius 32rpx
		background #fff
		&:first-of-type
			margin-top 48rpx
		&:last-of-type
			margin-bottom 20rpx
		// 顶部开始
		.top
			display flex
			height 122rpx
			padding-top 24rpx
			border-bottom 1rpx solid #F2F2F2
			box-sizing border-box
			.left
				flex 1
				padding-left 6rpx
				.car-no
					display flex
					align-items center
					height 56rpx
					font-size 40rpx
					font-weight 500
				.channel
					margin-top -4rpx
					display flex
					align-items center
					margin-bottom 10rpx
					font-size 24rpx
					color $fontColor9
			.center
				flex 1
				line-height 62rpx
				justify-content:  center
				margin-left -130rpx
				font-weight 500
				font-size 22rpx
			.right
				margin-top 8rpx
				padding-right 12rpx
				font-size 28rpx
				&.caution
					color #F7B500
				&.failed
					color $error
				&.succeed
					color $fontColor
		// 顶部结束
		.bottom
			position relative
			display flex
			padding-top 24rpx
			padding-bottom 28rpx
			& > view
				display flex
				height 44rpx
				color $fontColor9
				&:first-of-type
					flex 1
				&.iconfont
					display flex
					align-items center
					padding-right 12rpx
					&::after
						content '\e60e'
						font-size 32rpx
						transform rotateZ(-180deg)
		.moreStatus
			width 100%
			display flex
			flex-direction column
			align-items flex-end
			position absolute
			left 0
			bottom -60rpx
			z-index 9901
			view
				background-color #fff
				color black	
				// border 1px solid #000
				line-height 2
				&:hover
					border-bottom 1px solid #000
	.auto-fill
		flex 1
	// 没有车
	.no-car
		flex 1
		text-align center
		height 80vh
		image
			width 414rpx
			margin 30vh 0 22rpx
		view
			color $fontColor6
			line-height 44rpx
			font-size 32rpx
			font-weight 500
	// 新增办理开始
	.btn
		display flex
		align-items center
		justify-content center
		margin 26rpx 60rpx 40rpx
		height 98rpx
		font-size 40rpx
		font-weight 500
		color #fff
		background: linear-gradient(to right, $deepThemeColor, $shallowThemeColor)
		border-radius 49rpx
