//渐变主题色
$themeColor1 = #1FD1B1;
$themeColor2 = #5DE59A;
.index
	padding-top 20rpx
	padding-bottom 20rpx
	background: #F5F5F5
	min-height 100vh
	//我的车辆
	.new-item
		margin 20rpx 30rpx
		margin-top 0
		padding 0 28rpx
		display flex
		flex-direction column
		min-height 208rpx
		border-radius 20rpx
		box-shadow:0 4rpx 20rpx 0 rgba(153,153,153,0.2);
		background: #fff
		//我的车辆信息顶部
		.new-item-top
			display flex
			align-items center
			box-sizing border-box
			margin-bottom 10rpx
			& > view
				//display flex
				&:first-of-type
					flex 5
					flex-direction: column
					&>view:first-child
						font-size 40rpx
						color rgba(51,51,61,1)
						font-family PingFangSC-Medium,PingFang SC
					&>view:last-child
						font-size 24rpx
						color rgba(153,153,157,1)
						font-family PingFangSC-Regular,PingFang SC
				&:last-of-type
					flex 5
					text-align right
					color rgba(247,181,0,1)
		//我的车辆信息底部
		.new-item-bottom
			border-top 1rpx solid #E5E5E5
			display flex
			align-items center
			flex 0 0 88rpx
			font-size 24rpx
			color #999
			& > view
				&:first-of-type
					flex 5
					font-size 28rpx
					color rgba(153,153,157,1)
				&:last-of-type
					flex 5
					text-align right
					font-size 28rpx
					color rgba(153,153,157,1)
	//新增车辆
	.bottom-container
		position absolute
		left 0
		right 0
		bottom 40rpx
		width 100%
		button
			width 630rpx
			height 98rpx
			background linear-gradient(45deg,rgba(20,172,105,1) 0%,rgba(132,209,87,1) 100%)
			box-shadow 0rpx 8rpx 10rpx 0rpx rgba(132,209,87,0.2)
			border-radius 49rpx
			font-size 40rpx
			font-family PingFangSC-Medium,PingFang SC
			font-weight 500
			color rgba(255,255,255,1)
