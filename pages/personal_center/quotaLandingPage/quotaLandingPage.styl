image
    width 100%
    height 100%
    display block
.index
    font-family PingFang SC
    padding 0
    margin 0
    width 100vw
    height auto
    z-index 100
    background linear-gradient(181deg, #332DA7 0.5%, #785AF0 96%)
    .one
        width 100%
        height auto
        position relative
        .withholding
            opacity 1
        .rules-box
            display flex
            flex-direction column
            justify-content center
            align-items center
            position absolute
            right 0
            top 10rpx
            view
                margin-bottom 8rpx
                width 114rpx
                height 60rpx
                line-height 60rpx
                border-radius 16rpx 
                margin-right 20rpx
                text-align center
                font-size 24rpx
                background: rgba(0, 0, 0, 0.17);
                color: rgba(255, 255, 255, 0.8);
    .two
        width 100%
        height auto
        padding 0rpx 28rpx
        box-sizing border-box
        .images
            box-sizing border-box
            position relative
            height 580rpx
            border-radius: 24rpx;
            margin-bottom 25rpx
            background: linear-gradient(180deg, #FFEFE5 0%, #FFFFFF 22%);
            .title
                width 400rpx
                position absolute
                vertical-align middle
                left 20rpx
                top 20rpx
                display flex
                .pic
                    width 40rpx
                    height 46rpx
                    margin 0 10rpx
                .hight_text
                    display flex
                    align-items center
                .des
                    font-size 32rpx
                    font-weight 500
                    color #000
            .couponAmount
                width 70%
                display flex
                justify-content space-around
                margin-left 100rpx
                padding-top 120rpx
                .pic
                    width 200rpx
                    height 178rpx
                    position relative
                    .price
                        color #E8113D
                        display flex
                        align-items center
                        position absolute
                        left 25%
                        top 10%
                        .big
                            font-family D-DIN-PRO
                            font-size 54rpx
                    .num
                        font-size 26rpx
                        position absolute
                        left 40%
                        bottom 8%
                        color #FFFFFF
                    .des
                        position absolute
                        left 35%
                        top 49%
                        font-size 20rpx
            .eventAwards
                position absolute
                right 25%
                top 60%
                position absolute
                min-width 360rpx
                height 84rpx
                line-height 84rpx
                border-radius 55rpx 
                text-align center
                font-size 36rpx
                background linear-gradient(133deg, #FFE6B5 -34%, #FFBD00 97%)
                color #A21D01;
            .over
                background #dddad9;
                color white
            .description
                position absolute
                bottom 10rpx
                left 0%
                font-size 24rpx
                line-height 32rpx
                text-align justify
                margin  30rpx
                colro #000000

    /* 模块 */
    .module
        height auto
        text-align center
        font-family PingFangSC-Regular, PingFang SC
        &.four
            height auto
            border-top 2rpx dashed transparent
            position relative
            padding-bottom 50rpx
        .title
            height 44rpx
            font-size 32rpx
            font-weight 600
            color #4D4D51
            line-height 44rpx
            padding-top 50rpx
            margin-left 28rpx
        .textLeft
            text-align left
            color #FFFFFF
            padding-top 30rpx
        .answersQuestions
            margin 0rpx 28rpx
            height auto
            text-align left
            color #FFFFFF
            margin-top 30rpx
            padding-bottom 22rpx
            font-family PingFangSC-Medium, PingFang SC
            .questions
                display flex
                .questionsImg
                    width 24rpx
                    height 24rpx
                    line-height 42rpx
                    image
                        width 100%
                        height 100%
                .questionsTitle
                    width 616rpx
                    font-size 28rpx
                    font-weight 500
                    margin-left 8rpx
                    line-height 40rpx
                    text-align justify
                .age_address
                    width 616rpx
                    line-height 48rpx
                    margin-left -520rpx
                    font-size 22rpx
                    font-weight 400
                    color #FFFFFF
            .answer
                height auto
                opacity 0.8
                font-size 22rpx
                font-weight 400
                color #FFFFFF
                line-height 40rpx
                text-align justify
                margin 8rpx 30rpx 0 30rpx
                font-family PingFangSC-Regular, PingFang SC
            .onlineSpan
                color rgba(47, 200, 224, 1)
        .moreQuestions
            width 200rpx
            font-size 28rpx
            font-weight 400
            color #00A9FF
            line-height 22rpx
            font-family PingFangSC-Regular, PingFang SC
            position relative
            top 10rpx
            left 50%
            transform translateX(-50%)
            
     /* 占位 */
    .split
        height 60rpx
        overflow hidden
    .popup 
        position: fixed
        left: 0
        top: -80rpx
        width: 100%
        height: 100%
        display: flex
        justify-content: center
        align-items: center
        .popup-content 
            background-color: rgba(0, 0, 0, 0.6)
            max-width 50%
            max-height 140rpx
            line-height 2
            color white
            padding: 30rpx 20rpx
            border-radius: 16rpx
        

