@import "../../../style/base.styl";
.container
	height 100vh
	display flex
	justify-content center
	background #fff
	padding-top 288rpx
	box-sizing border-box
	text-align center
	.logo
		width 370rpx
	.tips
		font-size: 28rpx;
		font-family: PingFang SC-Regular, PingFang SC;
		font-weight: 400;
		color: rgba(30,30,30,0.7515);
		line-height: 40rpx;
		padding-bottom 112rpx
	.btn
		width: 590rpx;
		height: 110rpx;
		display flex
		align-items center
		justify-content center
		border-radius: 55rpx;
		font-size: 36rpx;
		font-family: PingFang SC-Semibold, PingFang SC;
		font-weight: 600;
		&.confirm
			background #2A4F44
			color #fff
		&.cancel
			border: 2rpx solid #2A4F44;
			font-size 28rpx
			color #2A4F44
			margin-top 28rpx
