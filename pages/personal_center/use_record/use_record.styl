page
	background: #F3F3F3

.use_record
	min-height 100vh
	background: #F3F3F3
	.content
		.date
			display flex
			align-items center
			padding-left 32rpx
			height 120rpx
			font-size 36rpx
			color #666
			background: #F3F3F3
		.item
			display flex
			background: #fff
			.left
				padding-top 38rpx
				text-align center
				width 139rpx
				flex 0 0 139rpx
				font-size 36rpx
				color #999
			.middle
				flex 1
				padding 38rpx 0
				border-bottom 1rpx solid #E5E5E5
				.car_no
					font-size 40rpx
				.info
					margin-top 5rpx
					font-size 30rpx
					color #999
			.right
				display flex
				padding 0 29rpx
				align-items center
				font-size 36rpx
				color #1AAD19
				font-weight bold
				border-bottom 1rpx solid #E5E5E5
	.empty
		margin: 0 auto
		margin-top: 50%
		width: 388rpx
		transform translateY(-50%)
		& > image
			width: 100%
			height: 281rpx
		& > view
			margin-top: 48rpx
			text-align: center
			font-size: 32rpx
			color: #ccc
	.detail_mask
		position fixed
		left 0
		top 0
		right 0
		bottom 0
		background: rgba(0, 0, 0, .4)
		.detail_wrapper
			position fixed
			left 0
			right 0
			bottom 0
			background: #fff
			border-top-left-radius 20rpx
			border-top-right-radius 20rpx
			.top
				text-align center
				border-bottom 1rpx solid #E5E5E5
				margin 0 45rpx
				padding-bottom 31rpx
				box-sizing border-box
				.title
					margin-top 50rpx
					font-size 32rpx
					color #000
				.price
					margin-top 20rpx
					font-size 32rpx
					& > text
						font-size 69rpx
				.tip
					font-size 24rpx
					color #999
			.bottom
				width 100%
				.item
					margin-top 20rpx
					padding-left 170rpx
					font-size 30rpx
					color #666
				.detail_btn
					margin 60rpx auto
					display flex
					align-items center
					justify-content center
					width 300rpx
					height 70rpx
					font-size 32rpx
					color #fff
					border-radius 35rpx
					background: #1AAD19
