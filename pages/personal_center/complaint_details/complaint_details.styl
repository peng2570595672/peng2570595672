@import "../../../style/base.styl";
page
	background #F7F7F7
.complaint_details
	// 提示
	.prompt
		text-align center
		height 102rpx
		line-height 102rpx
		font-size 24rpx
		color #fff
		background #2FB565
		opacity .59
	// 申诉信息
	.complaint_information
		padding 60rpx 40rpx 10rpx 56rpx
		&>view
			display flex
			font-size 28rpx
			padding-top 20rpx
			color $fontColor6
			&>view:first-child
				flex 4
				height 48rpx
			&>view:last-child
				flex 6
				text-align right
	// 申诉问题
	.complaint_problem
		margin 0 38rpx 86rpx 40rpx
		padding 20rpx 22rpx 0rpx 20rpx
		color $fontColor6
		background #fff
		&>view:first-child
			font-size 28rpx
			font-weight 500
			line-height 40rpx
		&>view:last-child
			padding 10rpx 0
			font-size 24rpx
			font-weight 400
			line-height 34rpx
	//  反馈信息
	.feedback_information
		&>view
			&>view:first-child
				color #2FB565
	// 反馈问题
	.feedback_problem
		padding-bottom 42rpx
		background rgba(47,181,101,0.8)
		color #fff
		&>view:nth-child(2),
		&>view:last-child
			padding 0
			font-size 24rpx
			font-weight 400
			line-height 34rpx
