mixinsWidthHeight($width=100%, $height=100%)
    width $width
    height $height
mixinsPosition($position=relative)
    position $position
    left 50%
    transform translateX(-50%)
.iconfont
    font-family 'iconfont' !important
    font-size 16px
    font-style normal
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
.index
    margin 0
    padding 0
    width 100vw
    min-height 100vh
    .moduleOne
        padding 90rpx 0 40rpx 0
        position relative
        top 16rpx
    .module
        width 694rpx
        border-radius 16rpx
        background-color #fff
        font-family PingFangSC-Regular, PingFang SC
        mixinsPosition()
        .attr
            display flex
            height 60rpx
            margin 0 28rpx
            align-items center
            margin-top 10rpx
            justify-content space-between
            border-bottom 1px solid #E0E0E0
            .attrName
                font-size 28rpx
                font-weight 400
                color #1E1E1E
                font-family PingFangSC-Regular, PingFang SC
            .headImg
                mixinsWidthHeight(90rpx,90rpx)
                overflow hidden
                text-align center
                line-height 90rpx
                border-radius 50%
                margin-top -60rpx
                background-color #ECECEC
                border 5rpx solid #BDE3D7
            .yes
                border 5rpx solid #E9CA7B
            .headImg 
                .images
                    margin 0
                    padding 0
                    border none
                    display block
                    mixinsWidthHeight(90rpx,90rpx)
                    border-radius 50%
                .image
                    mixinsWidthHeight()
            .attrValue .input
                mixinsWidthHeight(322rpx,60rpx)
                font-size 28rpx
                font-weight 600
                color #262626
                text-align right
                font-family PingFangSC-Semibold, PingFang SC
        .tips
            font-size 20rpx
            font-weight 400
            color #F19C38
            margin 16rpx 28rpx 0 28rpx
            font-family PingFangSC-Regular, PingFang SC
    /* 底部悬浮按钮 */
    .bottomBtn
        display flex
        mixinsWidthHeight(750rpx,244rpx)
        align-items center
        background #FFFFFF
        justify-content center
        box-shadow 0 -8rpx 30rpx 0 rgba(223, 223, 223, 0.36)
        border-radius 16rpx 16rpx 0 0
        opacity 0.9
        position fixed
        bottom 0
        .btnClose
            mixinsWidthHeight(662rpx,110rpx)
            font-size 36rpx
            font-weight 600
            color #FFFFFF
            text-align center
            line-height 110rpx
            border-radius 64rpx
            background #2A4F44
            font-family PingFangSC-Semibold, PingFang SC
            box-shadow 0 -8rpx 30rpx 0 rgba(223, 223, 223, 0.36), 0 4rpx 2rpx 0 rgba(212, 212, 212, 0.5)