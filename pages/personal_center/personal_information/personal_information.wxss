.iconfont {
    font-family: "iconfont" !important;
    font-size: 16px;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

.index {
    margin: 0;
    padding: 0;
    width: 100vw;
    min-height: 100vh;
}

.index .module {
    width: 694rpx;
    border-radius: 16rpx;
    background-color: #fff;
    font-family: PingFangSC-Regular, PingFang SC;
    position: relative;
    left: 50%;
    transform: translateX(-50%);
}

.index .moduleOne {
    padding: 90rpx 0rpx 40rpx 0rpx;
    position: relative;
    top: 16rpx;
}

.index .module .attr {
    display: flex;
    height: 60rpx;
    margin: 0rpx 28rpx;
    align-items: center;
    margin-top: 10rpx;
    justify-content: space-between;
    border-bottom: 1px solid #E0E0E0;
}

.index .module .attr .attrName {
    font-size: 28rpx;
    font-weight: 400;
    color: #1E1E1E;
    font-family: PingFangSC-Regular, PingFang SC;
}

.index .module .attr .headImg {
    width: 90rpx;
    height: 90rpx;
    overflow: hidden;
    text-align: center;
    line-height: 90rpx;
    border-radius: 50%;
    margin-top: -60rpx;
    background-color: #ECECEC;
    border: 5rpx solid #BDE3D7;
}

.index .module .attr .yes {
    border: 5rpx solid #E9CA7B;
}

.index .module .attr .headImg .images {
    margin: 0;
    padding: 0;
    border: none;
    display: block;
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
}

.index .module .attr .headImg .image {
    width: 100%;
    height: 100%;
}

.index .module .attr .attrValue .input {
    width: 322rpx;
    height: 60rpx;
    font-size: 28rpx;
    font-weight: 600;
    color: #262626;
    text-align: right;
    font-family: PingFangSC-Semibold, PingFang SC;
}

.index .module .tips {
    font-size: 20rpx;
    font-weight: 400;
    color: #F19C38;
    margin: 16rpx 28rpx 0rpx 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
}

/* 底部悬浮按钮 */
.index .bottomBtn {
    display: flex;
    width: 750rpx;
    height: 244rpx;
    align-items: center;
    background: #FFFFFF;
    justify-content: center;
    box-shadow: 0rpx -8rpx 30rpx 0rpx rgba(223, 223, 223, 0.36);
    border-radius: 16rpx 16rpx 0rpx 0rpx;
    opacity: 0.9;
    position: fixed;
    bottom: 0rpx;
}

.index .bottomBtn .btnClose {
    width: 662rpx;
    height: 110rpx;
    font-size: 36rpx;
    font-weight: 600;
    color: #FFFFFF;
    text-align: center;
    line-height: 110rpx;
    border-radius: 64rpx;
    background: #2A4F44;
    font-family: PingFangSC-Semibold, PingFang SC;
    box-shadow: 0rpx -8rpx 30rpx 0rpx rgba(223, 223, 223, 0.36), 0px 4rpx 2rpx 0rpx rgba(212, 212, 212, 0.5);
}