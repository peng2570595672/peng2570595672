@import "../../../style/base.styl";
@font-face {
	font-family: 'iconfont';  /* project id 1514406 */
	src: url('//at.alicdn.com/t/font_1514406_rx3tpwk54p.eot');  src: url('//at.alicdn.com/t/font_1514406_rx3tpwk54p.eot?#iefix') format('embedded-opentype'), url('//at.alicdn.com/t/font_1514406_rx3tpwk54p.woff2') format('woff2'), url('//at.alicdn.com/t/font_1514406_rx3tpwk54p.woff') format('woff'), url('//at.alicdn.com/t/font_1514406_rx3tpwk54p.ttf') format('truetype'), url('//at.alicdn.com/t/font_1514406_rx3tpwk54p.svg#iconfont') format('svg');
}
$fontColorB = #B2B2B2
page
	min-height 100vh
	background #F7F7F7
	overflow scroll
.collect-paid-up-interest
	color $fontColor3
	font-family PingFangSC-Regular,PingFang SC
	.top-img
		padding 58rpx 34rpx 0
		image
			width 100%
	//车牌选择
	.select-vehicle
		padding 40rpx 40rpx 0 30rpx
		.title
			display flex
			align-items center
			font-size 36rpx
			height 50rpx
			padding-bottom 10rpx
			.sign
				display flex
				align-items center
				justify-content center
				width 20rpx
				height 20rpx
				border-radius 50%
				background-image linear-gradient(36deg,rgba(20,172,105,1) 0%,rgba(132,209,87,1) 100%)
				margin-right 10rpx
				text
					display block
					width 10rpx
					height 10rpx
					background-color #fff
					border-radius 50%
			.vehicle
				flex-grow 1
				display flex
				height 20rpx
				align-items center
			.arrow
				&::after
					display inline-block
					height 20rpx
					content '\e652'
					font-size 24rpx
					transform rotate(-90deg)
					transition:.4s;
					margin-left 24rpx
			.show-vehicle-list
				&::after
					transform rotate(0deg)
					transition:.4s;
		.vehicle-list
			color $fontColor6
			font-size 40rpx
			line-height 56rpx
			border-bottom 2rpx solid #B0B0B0
			padding 26rpx 0
			& > view
				display inline-block
			& > view:nth-child(-3n+14)
				padding 0 40rpx
	// 月份选择
	.list
		padding 0 44rpx
		//tab切换
		.list-title
			width 100%
			height 80rpx
			overflow-x auto
			white-space nowrap
			.list-title-child
				display inline-block
				font-size 36rpx
				text-align center
				color $fontColor6
				line-height 50rpx
				margin 0 23rpx
				&>view:last-child
					font-size 22rpx
					line-height 32rpx
			.tab-index
				color #2FB565
				font-size 40rpx
				&>view:last-child
					font-size 26rpx
					color #2FB565
		.vouchers-list
			padding-top 30rpx
			.item
				width 690rpx
				height 200rpx
				padding-left 178rpx
				color #fff
				background-image url("https://file.cyzl.com/g001/M06/01/B8/oYYBAGARL1SATDv9AAA_YkIJ_nY013.png")
				background-size cover
				border-radius 20rpx
				box-sizing border-box
				margin-bottom 20rpx
				.vouchers-title
					display flex
					padding-top 20rpx
					padding-bottom 4rpx
					padding-right 40rpx
					font-size 36rpx
					color #FFFFFF
					line-height 52rpx
					.name
						flex 1
					.instructions
						display flex
						min-width 136rpx
						font-size 28rpx
						text-align right
						align-items center
						&::after
							display flex
							content '\e60e'
							transform rotate(180deg)
							margin-left 10rpx
				.vouchers-price
					width 284rpx
					font-size 24rpx
					line-height 40rpx
					padding-bottom 12rpx
					border-bottom 2rpx solid rgba(51, 51, 61, .1)
				.vouchers-bottom
					display flex
					padding-top 10rpx
					font-size 24rpx
					line-height 40rpx
					& > view:first-child
						flex 1
					& > view:last-child
						padding-right 40rpx
						.btn
							display flex
							min-width 136rpx
							height 40rpx
							align-items center
							justify-content center
							font-size 24rpx
							letter-spacing 2rpx
							&.receive
								background #F7B500
								box-shadow 0rpx 4rpx 8rpx 0rpx rgba(119,119,119,0.32)
								border-radius 55rpx
							&.not-click
								-webkit-filter grayscale(100%)
								-moz-filter grayscale(100%)
								-ms-filter grayscale(100%)
								-o-filter grayscale(100%)
								pointer-events none
				&.traffic-ticket
					background-image url("https://file.cyzl.com/g001/M06/01/B9/oYYBAGARMNCALVXWAABEZvkrV4g151.png")
				&.parking-ticket
					background-image url("https://file.cyzl.com/g001/M05/01/BA/oYYBAGARMSeAFCXEAAA_ti2-ND8153.png")
		&>view:last-child
			border-bottom 0
	// 字重字体
	.weight
		font-weight 500
		font-family PingFangSC-Medium,PingFang SC


