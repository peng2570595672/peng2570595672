@import "../../../style/base.styl";
.service_card_voucher_details
	min-height 100vh
	box-sizing border-box
	padding 42rpx 30rpx 20rpx
	background #50DC92
	//卡券
	.ticket-card
		background #fff
		padding 42rpx 28rpx 0rpx
		margin-bottom 20rpx
		border-radius 20rpx
		// 卡券顶部
		.ticket-top
			position relative
			text-align center
			color $fontColor6
			font-size 28rpx
			line-height 40rpx
			font-weight 500
			.card-voucher-name
				font-size 48rpx
				line-height 64rpx
				color $fontColor3
				margin 50rpx 0 10rpx
			.period-of-validity
				font-weight 400
				opacity .85
				margin 40rpx 0
			.ticket-status
				position absolute
				right 0rpx
				top 20rpx
				color $fontColor9
				&::after
					text-align right
					font-size 140rpx
			.ticket-status-used
				&::after
					content '\e653'
			.ticket-status-overdue
				&::after
					content '\e654'
			.activate-now
				height 60rpx
				line-height 60rpx
				color #fff
				font-size 30rpx
				border-radius 40rpx
				margin 20rpx 0
		// 卡券底部
		.ticket-bottom
			.ticket-bottom-item
				padding 28rpx 0 30rpx
				border-top 2rpx dashed #EBEBED
				.entry
					display flex
					font-size 28rpx
					color $fontColor6
					line-height 40rpx
					&>view:first-child
						flex 4
						text-indent 12rpx
					&>view:last-child
						flex 6
						text-align right
					&>view:nth-child(2)
						margin-bottom 20rpx
				.instructions
					font-size 32rpx
					color $fontColor3
					.elaborate
						flex 0
					.elaborate::after
						flex 0
						display inline-block
						text-align right
						content '\e652'
						font-size 24rpx
						color $fontColor9
						transition all .3s
						transform: rotate(0deg)
				.show-elaborate
					.elaborate::after
						transition all .3s
						transform: rotate(180deg)
			.remark
				padding 28rpx 0 30rpx
				border-top 2rpx dashed #EBEBED
				color $fontColor9
