@font-face
    font-family 'iconfont' /* Project id 1514406 */
    src url('//at.alicdn.com/t/font_1514406_r2ex32p9up.woff2?t=1651741878795') format('woff2'), url('//at.alicdn.com/t/font_1514406_r2ex32p9up.woff?t=1651741878795') format('woff'), url('//at.alicdn.com/t/font_1514406_r2ex32p9up.ttf?t=1651741878795') format('truetype')
.iconfont
    font-family 'iconfont' !important
    font-size 16px
    font-style normal
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
mixinsWidthHeight($width = 100%, $height = 100%)
    width $width
    height $height
maxMixinsWidthHeight($width = 100%, $height = 100%)
    width $width
    min-height $height
mixinsIconfont($content='',$size=16px,$color=#5EBE68)
    content $content
    font-size $size
    color $color
mixinsPositionPack($position=relative)
    position $position
    left 50%
    transform translateX(-50%)
textLineCenter($height)
    text-align center
    line-height $height
flexModule($align=normal,$justify=normal)
    display flex
    align-items $align
    justify-content $justify
.index
    maxMixinsWidthHeight(100vw,100vh)
    &::before
        content ''
        display block
        mixinsWidthHeight(,24rpx)
    .module
        margin 20rpx 35rpx 0rpx 35rpx
        padding 0rpx 30rpx
        border-radius 16rpx
        box-shadow 4rpx 4rpx 46rpx 0rpx rgba(125,132,158,0.1)
    .moduleOne
        height 200rpx
        border-radius 32rpx
        background #0f0
    .moduleTwo
        height auto
        overflow hidden
        margin-top 40rpx
        .title
            margin-top 38rpx
            mixinsWidthHeight(,56rpx)
            flexModule(center,normal)
            .img1
                mixinsWidthHeight(52rpx,52rpx)
                margin-right 8rpx
            .text1
                font-size 28rpx
                font-family PingFangSC-Medium, PingFang SC
                font-weight 500
                color #000000
                line-height 56rpx
        .content
            & > .title
                margin-top 30rpx
                font-size 28rpx
                font-family PingFangSC-Medium, PingFang SC
                font-weight 500
                color #7E5219
                line-height 36rpx
            .text2
                font-size 24rpx
                font-family PingFangSC-Regular, PingFang SC
                font-weight 400
                color #7E5219
                line-height 36rpx
                text-align justify
                padding-bottom 30rpx
                border-bottom 1rpx solid rgba(126,82,25,0.13)
                .text3
                    display block
    
    .image
        mixinsWidthHeight()
    .split
        mixinsWidthHeight(,108rpx)