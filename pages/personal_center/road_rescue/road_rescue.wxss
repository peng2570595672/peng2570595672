}
.iconfont {
  font-family: 'iconfont' !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.index {
  width: 100vw;
  min-height: 100vh;
}
.index::before {
  content: '';
  display: block;
  width: 100%;
  height: 24rpx;
}
.index .module {
  margin: 20rpx 35rpx 0rpx 35rpx;
  padding: 0rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 4rpx 4rpx 46rpx 0rpx rgba(125,132,158,0.1);
}
.index .moduleOne {
  height: 200rpx;
  border-radius: 32rpx;
  background: #0f0;
}
.index .moduleTwo {
  height: auto;
  overflow: hidden;
  margin-top: 40rpx;
}
.index .moduleTwo .title {
  margin-top: 38rpx;
  width: 100%;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: normal;
}
.index .moduleTwo .title .img1 {
  width: 52rpx;
  height: 52rpx;
  margin-right: 8rpx;
}
.index .moduleTwo .title .text1 {
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #000;
  line-height: 56rpx;
}
.index .moduleTwo .content > .title {
  margin-top: 30rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #7e5219;
  line-height: 36rpx;
}
.index .moduleTwo .content .text2 {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #7e5219;
  line-height: 36rpx;
  text-align: justify;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid rgba(126,82,25,0.13);
}
.index .moduleTwo .content .text2 .text3 {
  display: block;
}
.index .image {
  width: 100%;
  height: 100%;
}
.index .split {
  width: 100%;
  height: 108rpx;
}
