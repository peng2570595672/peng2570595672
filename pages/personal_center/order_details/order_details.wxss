  right: 80rpx;
  bottom: 530rpx;
}
.order_details .pingAn .image {
  width: 200%;
  height: 150%;
}
.order_details .keFu {
  width: 90rpx;
  height: 160rpx;
  background: #fff;
  box-shadow: 0rpx 4rpx 16rpx 0rpx rgba(0,0,0,0.2);
  border-radius: 46rpx;
  position: fixed;
  right: 28rpx;
  bottom: 300rpx;
  z-index: 100;
  text-align: center;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
