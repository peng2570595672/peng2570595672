page {
  background: #f7f7f7;
}
.order_details {
  padding-bottom: 240rpx;
}
.order_details .deduction-amount {
  text-align: center;
  font-size: 76rpx;
  font-weight: 500;
  color: #33333d;
  line-height: 53px;
  padding: 86rpx 0 66rpx;
  border-bottom: 1rpx solid #ccc;
  background: #fff;
}
.order_details .deduction-amount .deduction-amount-title {
  font-size: 32rpx;
  color: #99999d;
  font-weight: 400;
  line-height: 44rpx;
  margin-top: 86rpx;
}
.order_details .deduction-amount .failure-prompted {
  font-size: 24rpx;
  color: #f00;
  line-height: 24rpx;
}
.order_details .deduction-details {
  background: #fff;
  padding: 20rpx 60rpx;
  margin-bottom: 20rpx;
}
.order_details .deduction-details>view {
  display: flex;
  font-size: 28rpx;
  padding-top: 30rpx;
}
.order_details .deduction-details>view>view:first-child {
  flex: 4;
  height: 48rpx;
  color: #66666d;
}
.order_details .deduction-details>view>view:last-child {
  flex: 6;
  text-align: right;
  color: #33333d;
}
.order_details .deduction-details>view.instructions {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #99999d;
}
.order_details .payment {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 240rpx;
  font-size: 24rpx;
  color: #9d9da0;
  text-align: center;
  background: #fff;
}
.order_details .payment .payment-prompt {
  padding: 34rpx 0 20rpx;
}
.order_details .payment button {
  width: 84%;
  height: 98rpx;
  line-height: 98rpx;
  background: linear-gradient(to right, #14ac69, #84d157);
  box-shadow: 0px 8rpx 10rpx 0px rgba(132,209,87,0.2);
  border-radius: 50rpx;
  font-size: 40rpx;
  color: #fff;
}
