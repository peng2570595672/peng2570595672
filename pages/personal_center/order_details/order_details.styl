@import "../../../style/base.styl";
page
	background #F7F7F7
.order_details
	.deduction-amount
		position relative
		text-align center
		font-size 76rpx
		font-weight 500
		color $fontColor3
		line-height 53px
		border-bottom 5rpx dashed #fff
		background linear-gradient(to right, #FFFFFF , $fontColor9 , #FFFFFF)
		background-origin border-box
		.doubt
			position absolute
			top 32rpx
			right 62rpx
			line-height 38rpx
			background #fff
			text
				//position absolute
				//top 10rpx
				//right -3rpx
				//display inline-block
				//width 20rpx
				//height 20rpx
				//background #f00
				//border-radius 50%
		.doubt::before
			content '\e650'
			color #039EEB
			font-size 38rpx
		.deduction-amount-box
			padding 80rpx 16rpx 68rpx 28rpx
			background #fff
			.deduction-amount-title
				font-size 32rpx
				color $fontColor9
				font-weight 400
				line-height 44rpx
			.failure-prompted
				font-size 24rpx
				color #FF0000
				line-height 24rpx
	//扣费详情
	.deduction-details
		background #fff
		padding 20rpx 60rpx
		margin-bottom 20rpx
		&>view
			display flex
			font-size 28rpx
			padding-top 20rpx
			&>view:first-child
				flex 4
				height 48rpx
				color $fontColor6
			&>view:last-child
				flex 6
				text-align right
				color $fontColor3
	//底部补缴
	.payment
		position fixed
		left 0
		bottom 0
		width 100%
		height 240rpx
		font-size 24rpx
		color #9D9DA0
		text-align center
		background #fff
		.payment-prompt
			padding 34rpx 0 20rpx
		button
			width 84%
			height 98rpx
			line-height 98rpx
			background linear-gradient(to right, $deepThemeColor, $shallowThemeColor)
			box-shadow 0px 8rpx 10rpx 0px rgba(132,209,87,0.2)
			border-radius 50rpx
			font-size 40rpx
			color #FFFFFF
.is-arrears
	padding-bottom 240rpx
