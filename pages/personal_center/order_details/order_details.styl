@import "../../../style/base.styl";
page
	background #F7F7F7
.order_details
	padding-bottom 240rpx
	.deduction-amount
		text-align center
		font-size 76rpx
		font-weight 500
		color $fontColor3
		line-height 53px
		border-bottom 5rpx dashed #fff
		background linear-gradient(to right, #FFFFFF , $fontColor9 , #FFFFFF)
		background-origin border-box
		.deduction-amount-box
			padding 80rpx 16rpx 68rpx 28rpx
			background #fff
			.deduction-amount-title
					font-size 32rpx
					color $fontColor9
					font-weight 400
					line-height 44rpx
			.failure-prompted
				font-size 24rpx
				color #FF0000
				line-height 24rpx
	//扣费详情
	.deduction-details
		background #fff
		padding 20rpx 60rpx
		margin-bottom 20rpx
		&>view
			display flex
			font-size 28rpx
			padding-top 20rpx
			&>view:first-child
				flex 4
				height 48rpx
				color $fontColor6
			&>view:last-child
				flex 6
				text-align right
				color $fontColor3
		&>view.instructions
			display block
			text-align right
			font-size 24rpx
			color $fontColor9
	//底部补缴
	.payment
		position fixed
		left 0
		bottom 0
		width 100%
		height 240rpx
		font-size 24rpx
		color #9D9DA0
		text-align center
		background #fff
		.payment-prompt
			padding 34rpx 0 20rpx
		button
			width 84%
			height 98rpx
			line-height 98rpx
			background linear-gradient(to right, $deepThemeColor, $shallowThemeColor)
			box-shadow 0px 8rpx 10rpx 0px rgba(132,209,87,0.2)
			border-radius 50rpx
			font-size 40rpx
			color #FFFFFF
