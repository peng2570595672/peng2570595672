@import "../../../style/base.styl";
.prompt
	width 100%
	& > view
		view
			width 100%
			background rgba(255,86,60,.52)
			padding 16rpx 32rpx 16rpx 25rpx
			text-align left
			font-size 24rpx
			line-height 40rpx
			box-sizing border-box
			color rgba(244,244,244,1)
			text
				text-decoration underline
.order_details
	.deduction-amount
		position relative
		text-align center
		font-size 76rpx
		font-weight 500
		color $fontColor3
		height 284rpx
		display flex
		justify-content center
		line-height 284rpx
		margin 0 32rpx
		box-sizing border-box
		background #fff
		border-bottom 1rpx solid rgba(0, 0, 0, 0.1)
		text
			font-size 28rpx
			color #FF563C
			line-height 320rpx
		&.buckling-failure
			height 228rpx
			line-height 228rpx
			text
				line-height 270rpx
	//扣费详情
	.deduction-details
		background #fff
		padding 0 32rpx 32rpx
		&>view
			display flex
			font-size 28rpx
			padding-top 26rpx
			&>view:first-child
				flex 1
				height 48rpx
				color $fontColor6
				&.deductions-money
					color $fontColor3
			&>view:last-child
				flex 1
				text-align right
				font-family PingFangSC-Medium, PingFang SC
				font-weight 500
				color $fontColor3
				&.deductions
					color #F7B500
				&.refund-success
					color #27B266
			&.add-border
				border-bottom 1rpx solid rgba(0, 0, 0, 0.1)
				border-top 1rpx solid rgba(0, 0, 0, 0.1)
		&>view:first-child
			padding-top 32rpx
		.consumption-type
			padding 0
			height 115rpx
			line-height 115rpx
	// 费用疑问
	.doubt
		height 98rpx
		display flex
		align-items center
		justify-content flex-end
		margin 0 32rpx
		border-bottom 1rpx solid rgba(0, 0, 0, 0.1)
		border-top 1rpx solid rgba(0, 0, 0, 0.1)
		color #039EEB
		font-size 28rpx
		&::before
			content '\e650'
			font-size 32rpx
			margin-right 14rpx
		&.not-border-bottom
			border-bottom 0
	.line
		height 32rpx
		background #EEEEEE
	//底部补缴
	.payment
		position fixed
		left 0
		bottom 0
		width 100%
		height 204rpx
		padding 20rpx 0
		font-size 24rpx
		color $fontColor6
		text-align center
		background #fff
		border-top 1rpx solid rgba(0, 0, 0, 0.1)
		button
			width 84%
			height 98rpx
			line-height 98rpx
			background linear-gradient(to right, $deepThemeColor, $shallowThemeColor)
			box-shadow 0px 8rpx 10rpx 0px rgba(132,209,87,0.2)
			border-radius 50rpx
			font-size 40rpx
			color #FFFFFF
		.payment-tips
			padding-top 18rpx
	// 微保活动
	.micro-insurance
		position fixed
		bottom 25%
		right 56rpx
		image
			width 140rpx
		.close_button
			width 49rpx
			height 49rpx
			line-height 49rpx
			margin 20rpx auto
			text-align center
			border-radius 50%
			background #D4D4D4
			&::before
				content '\e63d'
				color #fff
				font-size 30rpx
.is-arrears
	padding-bottom 224rpx
