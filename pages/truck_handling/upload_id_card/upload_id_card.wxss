@keyframes btnFadeIn {
  from {
    opacity: 0.2;
  }
  to {
    opacity: 1;
  }
}
@keyframes btnFadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0.2;
  }
}
.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f6f6f6;
}
.page .title {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx 0;
  height: 56rpx;
  font-size: 40rpx;
  font-weight: 500;
}
.page .title::before {
  margin-right: 10rpx;
  content: '';
  width: 10rpx;
  height: 10rpx;
  border: 6rpx solid #2fb565;
  border-radius: 50%;
}
.page .sub-title {
  font-size: 24rpx;
  color: #66666d;
  line-height: 40rpx;
  padding: 10rpx 0 20rpx 80rpx;
}
.page .photo-wrapper {
  display: flex;
  justify-content: space-between;
  padding: 14rpx 80rpx 116rpx 60rpx;
}
.page .photo-wrapper > view:first-child {
  margin-right: 30rpx;
}
.page .photo-wrapper .photo {
  position: relative;
  overflow: hidden;
  width: 290rpx;
  height: 230rpx;
  border: 4rpx dashed rgba(39,178,102,0.53);
  border-radius: 20rpx;
  text-align: center;
}
.page .photo-wrapper .photo .not-upload {
  padding: 30rpx 0;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #33333d;
  line-height: 40px;
}
.page .photo-wrapper .photo .not-upload .img-box {
  height: 98rpx;
  position: relative;
}
.page .photo-wrapper .photo .not-upload .img-box .img {
  width: 162rpx;
  height: 98rpx;
}
.page .photo-wrapper .photo .not-upload .img-box .ico {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 43rpx;
  height: 36rpx;
}
.page .photo-wrapper .photo .identify {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(47,181,101,0.64);
  font-size: 24rpx;
  color: #fff;
}
.page .photo-wrapper .photo .identify image {
  width: 50rpx;
  height: 50rpx;
  margin: 70rpx 0 8rpx;
}
.page .photo-wrapper .photo .success {
  width: 100%;
  height: 100%;
}
.page .photo-wrapper .photo.not-border {
  border: 0;
}
.page .input-wrapper {
  margin: 0 40rpx;
  background: #fff;
  box-shadow: 4rpx 12rpx 56rpx 0px rgba(102,102,109,0.19);
  border-radius: 12rpx;
}
.page .input-wrapper .input-item {
  position: relative;
  display: flex;
  align-items: center;
  height: 88rpx;
  color: #99999d;
  font-size: 32rpx;
  padding: 30rpx 40rpx 10rpx;
  box-sizing: border-box;
  border-top: solid 2rpx rgba(230,230,230,0.3);
}
.page .input-wrapper .input-item > view {
  display: flex;
  flex: 0 0 148rpx;
}
.page .input-wrapper .input-item > input {
  flex: 1;
  z-index: 0 !important;
  text-align: right;
  font-size: 32rpx;
  color: #333;
}
.page .input-wrapper .input-item .validate-code {
  flex: 0 0 216rpx;
  width: 216rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-left: 50rpx;
  height: 44rpx;
  font-size: 32rpx;
  color: #99999d;
  border-left: 1rpx solid #d8d8d8;
  box-sizing: border-box;
}
.page .input-wrapper .input-item .validate-code.ok {
  font-weight: 500;
  color: #2fb565;
}
.page .input-wrapper .input-item .validate-code.acquisition {
  color: #2fb565;
  font-weight: 400 !important;
}
.page .input-wrapper .input-bottom {
  padding-bottom: 30rpx;
}
.page .input-wrapper .input-bottom input {
  text-align: left;
}
.page .fill {
  flex: 1;
}
.page .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20rpx 60rpx 40rpx;
  height: 98rpx;
  font-size: 40rpx;
  font-weight: 500;
  color: #fff;
  border-radius: 49rpx;
  background: linear-gradient(to right, #15ad69, #84d157);
}
.page .btn.available {
  animation: btnFadeIn 0.3s;
  animation-fill-mode: forwards;
}
.page .btn.unavailable {
  animation: btnFadeOut 0.3s;
  animation-fill-mode: forwards;
}
