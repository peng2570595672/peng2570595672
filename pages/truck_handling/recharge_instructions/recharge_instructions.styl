@import "../../../style/base.styl";
.recharge-instructions
	width 100%
	padding 32rpx
	box-sizing border-box
	height 100vh
	.card
		background #F6F6F6
		border-radius 16rpx
		padding 38rpx 24rpx 32rpx 26rpx
		box-sizing border-box
		.title
			color rgba(0, 0, 0, .9)
			font-size 34rpx
			line-height 48rpx
			padding-bottom 32rpx
		.transfer
			display flex
			align-items center
			justify-content space-between
			font-size 24rpx
			line-height 34rpx
			& > view
				& > view
					padding-bottom 6rpx
					&.tips
						color #FFC300
						font-size 18rpx
						line-height 26rpx
					&:first-child
						color rgba(0, 0, 0, .3)
				&:last-child
					text-align right
	// 介绍
	.instructions
		background #F6F6F6
		margin-top 30rpx
		padding 32rpx
		font-size 24rpx
		color rgba(0, 0, 0, .8)
		.content
			display flex
			align-items baseline
			line-height 36rpx
			padding-bottom 22rpx
			&::before
				display flex
				height 36rpx
				font-size 30rpx
				line-height 36rpx
				align-items flex-end
				content '•'
				margin-right 10rpx
				color #07C160
		.table
			margin 0rpx 0 22rpx 25rpx
			.tr
				background #E1E1E1
				display flex
				flex-direction row
				flex-wrap nowrap
				justify-content flex-start
				width 100%
				height 50rpx
				align-items center
				border-bottom 2rpx solid #F6F6F6
				&:last-child > .td
					border-bottom 0
				.td
					height 50rpx
					background #E1E1E1
					display flex
					align-items center
					justify-content center
					padding-left 10rpx
					&:first-child
						width 50%
					&:last-child
						width 50%
						border-left 2rpx solid #F6F6F6
				.th
					display flex
					width 50%
					height 50rpx
					align-items center
					background #E1E1E1
					justify-content center
					padding-left 10rpx
					&:first-child
						width 50%
					&:last-child
						width 50%
						border-left 2rpx solid #F6F6F6
		& > view:last-child
			padding-bottom 0
	// 下一步
	.btn
		display flex
		align-items center
		justify-content center
		margin 34rpx 0rpx 70rpx
		height 98rpx
		font-size 40rpx
		font-weight 500
		color #fff
		border-radius 49rpx
		background: linear-gradient(to right , $deepThemeColor, $shallowThemeColor)
