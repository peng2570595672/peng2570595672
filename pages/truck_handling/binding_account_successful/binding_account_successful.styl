@import "../../../style/base.styl";
.binding_account
	display flex
	flex-direction column
	padding 84rpx 32rpx 0rpx
	box-sizing border-box
	min-height 100vh
	// 标题
	.title
		display flex
		align-items center
		font-size 34rpx
		font-weight 600
		color #000
		justify-content center
		padding-bottom 32rpx
		&::before
			content '\e638'
			font-size 48rpx
			color #15AD69
			margin-right 12rpx
			font-weight 400
	.card
		height 240rpx
		background-image url("data:image/png;base64,")
		background-size 354rpx 316rpx
		background-repeat no-repeat
		background-position 400rpx
		background-color #C25255
		color #fff
		padding 32rpx 24rpx
		box-sizing border-box
		box-shadow 0rpx 6rpx 16rpx 0rpx rgba(0, 0, 0, 0.1)
		font-family PingFangSC-Medium, PingFang SC
		border-radius 20rpx
		.name
			display flex
			padding-bottom 46rpx
			height 66rpx
			align-items center
			font-size 24rpx
			font-weight 600
			text
				opacity .5
			&::before
				opacity 1
				content '\e66f'
				font-size 66rpx
				font-weight 400
				color #fff
				margin-right 28rpx
		.card-no
			font-size 46rpx
			line-height 64rpx
			margin-left 110rpx
	// 下一步
	.btn
		display flex
		align-items center
		justify-content center
		margin 186rpx 0 32rpx
		height 98rpx
		font-size 40rpx
		font-weight 500
		color #fff
		border-radius 49rpx
		background: linear-gradient(to right , $deepThemeColor, $shallowThemeColor)
	.tips
		text-align center
		font-size 24rpx
		color rgba(0, 0, 0, .3)
