@keyframes btnFadeIn {
  from {
    opacity: 0.2;
  }
  to {
    opacity: 1;
  }
}
@keyframes btnFadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0.2;
  }
}
.information_validation {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: #f6f6f6;
}
.information_validation .photo-wrapper {
  display: flex;
  justify-content: space-between;
  padding: 68rpx 80rpx 42rpx 60rpx;
}
.information_validation .photo-wrapper > view:first-child {
  margin-right: 30rpx;
}
.information_validation .photo-wrapper .photo {
  position: relative;
  overflow: hidden;
  width: 290rpx;
  height: 230rpx;
  border: 4rpx dashed rgba(39,178,102,0.53);
  border-radius: 20rpx;
  text-align: center;
}
.information_validation .photo-wrapper .photo .not-upload {
  padding: 30rpx 0;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #33333d;
  line-height: 40px;
}
.information_validation .photo-wrapper .photo .not-upload .img-box {
  height: 98rpx;
  position: relative;
}
.information_validation .photo-wrapper .photo .not-upload .img-box .img {
  width: 162rpx;
  height: 98rpx;
}
.information_validation .photo-wrapper .photo .not-upload .img-box .ico {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 43rpx;
  height: 36rpx;
}
.information_validation .photo-wrapper .photo .identify {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(47,181,101,0.64);
  font-size: 24rpx;
  color: #fff;
}
.information_validation .photo-wrapper .photo .identify image {
  width: 50rpx;
  height: 50rpx;
  margin: 70rpx 0 8rpx;
}
.information_validation .photo-wrapper .photo .success {
  width: 100%;
  height: 100%;
}
.information_validation .photo-wrapper .photo.not-border {
  border: 0;
}
.information_validation .title {
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  padding: 0 40rpx;
  height: 56rpx;
  font-size: 40rpx;
  font-weight: 500;
}
.information_validation .title::before {
  margin-right: 24rpx;
  content: '';
  width: 10rpx;
  height: 10rpx;
  border: 6rpx solid #2fb565;
  border-radius: 50%;
}
.information_validation .tips {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  padding-left: 80rpx;
  height: 40rpx;
  font-size: 24rpx;
  color: #66666d;
}
.information_validation .content-wrapper {
  margin: 20rpx 40rpx 10rpx;
  min-height: 352rpx;
  box-shadow: 4rpx 12rpx 56rpx 0 rgba(102,102,109,0.19);
  border-radius: 12px;
  background: #fff;
  overflow: hidden;
}
.information_validation .content-wrapper .item {
  display: flex;
  align-items: center;
  padding: 0 40rpx;
  font-size: 32rpx;
  color: #99999d;
  border-bottom: 1rpx solid #f8f8f8;
  box-sizing: border-box;
}
.information_validation .content-wrapper .item > view {
  padding-top: 30rpx;
  padding-bottom: 10rpx;
  flex: 0.35;
}
.information_validation .content-wrapper .item > input,
.information_validation .content-wrapper .item > picker,
.information_validation .content-wrapper .item > textarea {
  padding-top: 30rpx;
  padding-bottom: 10rpx;
  flex: 0.65;
  font-weight: 400;
  line-height: 48rpx;
  text-align: right;
  color: #66666d;
}
.information_validation .content-wrapper .item > textarea {
  line-height: 0;
}
.information_validation .content-wrapper .item .ownership-type {
  display: flex;
  color: #66666d;
  flex: 0.65;
  justify-content: right;
}
.information_validation .content-wrapper .item .ownership-type > view {
  flex: 1;
  justify-content: right;
  text-align: right;
  margin-left: 50rpx;
}
.information_validation .content-wrapper .item .ownership-type > view::before {
  content: '';
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #c8c8c8;
  margin-right: 10rpx;
}
.information_validation .content-wrapper .item .ownership-type > view.active::before {
  background: linear-gradient(50deg, #14ac69 0%, #84d157 100%);
}
.information_validation .content-wrapper .item .ownership-type > view:first-child {
  margin-left: 20rpx;
}
.information_validation .content-wrapper .item.axle {
  display: flex;
  border: 0;
}
.information_validation .content-wrapper .item.axle .choice-axle {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  background: #f3f3f3;
  position: relative;
}
.information_validation .content-wrapper .item.axle .choice-axle::after {
  position: absolute;
  right: 20rpx;
  content: '\e60e';
  transform: rotateZ(-90deg);
}
.information_validation .content-wrapper .item.axle input {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}
.information_validation .content-wrapper .parameter {
  display: block;
  border: 1rpx solid rgba(151,151,151,0.34);
  margin: 10rpx 40rpx 42rpx;
  padding-right: 20rpx;
  padding-left: 24rpx;
}
.information_validation .content-wrapper .parameter > view:first-child {
  border-bottom: 1rpx solid #eaeaea;
}
.information_validation .content-wrapper .parameter .parameter-item {
  display: flex;
  height: 98rpx;
  color: #66666d;
}
.information_validation .content-wrapper .parameter .parameter-item .parameter-title {
  flex: 0.35;
  font-size: 24rpx;
  line-height: 34rpx;
  padding-top: 24rpx;
}
.information_validation .content-wrapper .parameter .parameter-item .parameter-detailed {
  display: flex;
  flex: 0.65;
}
.information_validation .content-wrapper .parameter .parameter-item .parameter-detailed > view {
  padding-top: 14rpx;
}
.information_validation .content-wrapper .parameter .parameter-item .parameter-detailed > view > view:first-child {
  height: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}
.information_validation .content-wrapper .parameter .parameter-item .parameter-detailed > view > view:last-child {
  font-size: 12rpx;
  line-height: 16rpx;
  padding-top: 8rpx;
}
.information_validation .content-wrapper .parameter .parameter-item .parameter-detailed > view:nth-child(odd) {
  width: 116rpx;
  text-align: center;
}
.information_validation .content-wrapper .parameter .parameter-item .parameter-detailed > view:nth-child(odd) > view:first-child {
  background: #f3f3f3;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
}
.information_validation .content-wrapper .parameter .parameter-item .parameter-detailed > view:nth-child(even) {
  margin-left: 2rpx;
  margin-right: 5rpx;
}
.information_validation .content-wrapper .split {
  margin: 0 32rpx;
  border-bottom: 1rpx dashed #979797;
}
.information_validation .open {
  display: flex;
  align-items: center;
  padding-right: 88rpx;
  height: 48rpx;
  font-size: 24rpx;
  color: #39a6f8;
}
.information_validation .open > view {
  flex: 1;
}
.information_validation .open > text {
  display: block;
}
.information_validation .open > text::after {
  margin-left: 6rpx;
  display: inline-block;
  content: '\e60e';
  transition: all 0.3s;
  transform: rotateZ(-90deg);
}
.information_validation .auto-fill {
  flex: 1;
}
.information_validation .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 60rpx;
  margin-top: 46rpx;
  margin-bottom: 40rpx;
  height: 98rpx;
  font-size: 40rpx;
  font-weight: 500;
  color: #fff;
  border-radius: 49rpx;
  background: linear-gradient(to right, #15ad69, #84d157);
}
.information_validation .btn.available {
  animation: btnFadeIn 0.3s;
  animation-fill-mode: forwards;
}
.information_validation .btn.unavailable {
  animation: btnFadeOut 0.3s;
  animation-fill-mode: forwards;
}
