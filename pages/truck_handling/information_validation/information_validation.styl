@import "../../../style/base.styl";
@import "../../../style/my_animate.styl";
.information_validation
	display flex
	flex-direction column
	min-height 100vh
	background #F6F6F6
	// 上传身份证
	.photo-wrapper
		display flex
		justify-content space-between
		padding 68rpx 80rpx 42rpx 60rpx
		& > view:first-child
			margin-right 30rpx
		.photo
			position relative
			overflow hidden
			width 290rpx
			height 230rpx
			border 4rpx dashed rgba(39, 178, 102, .53)
			border-radius 20rpx
			text-align center
			.not-upload
				padding 30rpx 0
				font-size 28rpx
				font-family PingFangSC-Regular, PingFang SC
				font-weight 400
				color $fontColor3
				line-height 40px
				.img-box
					height 98rpx
					position relative
					.img
						width 162rpx
						height 98rpx
					.ico
						position absolute
						left 0
						right 0
						top 0
						bottom 0
						margin auto
						width 43rpx
						height 36rpx
			.identify
				position absolute
				z-index 1
				top 0
				left 0
				width 100%
				height 100%
				background rgba(47, 181, 101, .64)
				font-size 24rpx
				color #fff
				image
					width 50rpx
					height 50rpx
					margin 70rpx 0 8rpx
			.success
				width 100%
				height 100%
			&.not-border
				border 0
	// 标题
	.title
		margin-top 40rpx
		display flex
		align-items center
		padding 0 40rpx
		height 56rpx
		font-size 40rpx
		font-weight 500
		&::before
			margin-right 24rpx
			content ''
			width 10rpx
			height 10rpx
			border 6rpx solid $fontColor
			border-radius 50%
	// 提示
	.tips
		margin-top 10rpx
		display flex
		align-items center
		padding-left 80rpx
		height 40rpx
		font-size 24rpx
		color $fontColor6
	// 内容
	.content-wrapper
		margin 20rpx 40rpx 10rpx
		min-height 352rpx
		box-shadow:4rpx 12rpx 56rpx 0 rgba(102,102,109,0.19)
		border-radius: 12px
		background #fff
		overflow hidden
		.item
			display flex
			align-items center
			padding 0 40rpx
			font-size 32rpx
			color $fontColor9
			border-bottom 1rpx solid #F8F8F8
			box-sizing border-box
			& > view
				padding-top 30rpx
				padding-bottom 10rpx
				flex .35
			& > input,
			& > picker,
			& > textarea
				padding-top 30rpx
				padding-bottom 10rpx
				flex .65
				font-weight 400
				line-height 48rpx
				text-align right
				color $fontColor6
			& > textarea
				line-height 0
			.ownership-type
				display flex
				color $fontColor6
				flex .65
				justify-content right
				& > view
					flex 1
					justify-content right
					text-align right
					margin-left 50rpx
					&::before
						content ''
						display inline-block
						width 20rpx
						height 20rpx
						border-radius 50%
						background #C8C8C8
						margin-right 10rpx
					&.active
						&::before
							background linear-gradient(50deg, #14AC69 0%, #84D157 100%)
				& > view:first-child
					margin-left 20rpx
			&.axle
				display flex
				border 0
				.choice-axle
					flex 1
					display flex
					align-items center
					justify-content center
					text-align center
					background #F3F3F3
					&::after
						content '\e60e'
						margin-left 56rpx
						transform rotateZ(-90deg)
		.parameter
			display block
			border 1rpx solid rgba(151,151,151,.34)
			margin 10rpx 40rpx 42rpx
			padding-right 20rpx
			padding-left 24rpx
			& > view:first-child
				border-bottom 1rpx solid #EAEAEA
			.parameter-item
				display flex
				height 98rpx
				color $fontColor6
				.parameter-title
					flex .35
					font-size 24rpx
					line-height 34rpx
					padding-top 24rpx
				.parameter-detailed
					display flex
					flex .65
					& > view
						padding-top 14rpx
						& > view:first-child
							height 52rpx
							display flex
							align-items center
							justify-content center
							font-size 24rpx
						& > view:last-child
							font-size 12rpx
							line-height 16rpx
							padding-top 8rpx
					& > view:nth-child(odd)
						width 116rpx
						text-align center
						& > view:first-child
							background #F3F3F3
							font-family PingFangSC-Semibold, PingFang SC
							font-weight 600
					& > view:nth-child(even)
						margin-left 2rpx
						margin-right 5rpx
		.split
			margin 0 32rpx
			border-bottom 1rpx dashed #979797
	// 展开
	.open
		display flex
		align-items center
		padding-right 88rpx
		height 48rpx
		font-size 24rpx
		color $blueColor
		& > view
			flex 1
		& > text
			display block
			&::after
				margin-left 6rpx
				display inline-block
				content '\e60e'
				transition all .3s
				transform rotateZ(-90deg)
	// 自动填充
	.auto-fill
		flex 1
	// 确认按钮
	.btn
		display flex
		align-items center
		justify-content center
		margin 0 60rpx
		margin-top 46rpx
		margin-bottom 40rpx
		height 98rpx
		font-size 40rpx
		font-weight 500
		color #fff
		border-radius 49rpx
		background: linear-gradient(to right , $deepThemeColor, $shallowThemeColor)
		&.available
			animation btnFadeIn .3s
			animation-fill-mode forwards
		&.unavailable
			animation btnFadeOut .3s
			animation-fill-mode forwards
