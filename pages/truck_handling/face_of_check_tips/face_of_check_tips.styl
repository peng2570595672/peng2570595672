@import "../../../style/base.styl";
@import "../../../style/my_animate.styl";
.container
	display flex
	flex-direction column
	padding 98rpx 52rpx 108rpx
	box-sizing border-box
	background #F6F6F6
	min-height 100vh
	.h3
		font-size 40rpx
		font-family PingFangSC-Semibold, PingFang SC
		font-weight 600
		color #33333E
		line-height 56rpx
		text-align center
	.h4
		font-size 32rpx
		font-family PingFangSC-Semibold, PingFang SC
		font-weight 600
		color #33333E
		line-height 56rpx
		padding-top 32rpx
	.logo
		text-align center
		padding 102rpx 0
		.img
			width 232rpx
			height 232rpx
	.tips
		display flex
		align-items center
		font-size 32rpx
		font-family PingFangSC-Regular, PingFang SC
		font-weight 400
		color #66666E
		line-height 44rpx
		padding-bottom 32rpx
		&::before
			content ''
			width 16rpx
			height 16rpx
			border-radius 50%
			background #00B85C
			margin-right 16rpx
	.fill
		flex 1
	// 下一步
	.btn
		display flex
		align-items center
		justify-content center
		height 98rpx
		font-size 40rpx
		font-weight 500
		color #fff
		border-radius 49rpx
		background: linear-gradient(to right , $deepThemeColor, $shallowThemeColor)
		&.available
			animation btnFadeIn .3s
			animation-fill-mode forwards
		&.unavailable
			animation btnFadeOut .3s
			animation-fill-mode forwards
