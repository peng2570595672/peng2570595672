@import "../../../style/base.styl";
@import "../../../style/my_animate.styl";
.binding_account
	display flex
	flex-direction column
	padding-bottom 75rpx
	box-sizing border-box
	min-height 100vh
	.tips
		display flex
		align-items center
		justify-content center
		height 112rpx
		color #FF422A
		font-size 28rpx
		background rgba(255,195,0,.46)
	// 标题
	.title
		display flex
		align-items center
		font-size 34rpx
		font-family PingFangSC-Medium, PingFang SC;
		font-weight 500
		color #000
		margin 32rpx 32rpx 0
		&::before
			margin-right 8rpx
			content ''
			width 8rpx
			height 44rpx
			background #2FB565
	.sub-title
		font-size 24rpx
		color rgba(0, 0, 0, .3)
		padding-top 6rpx
		padding-left 20rpx
		margin 0 32rpx
	// 输入开始
	.input-wrapper
		margin 0 32rpx
		.input-item
			position relative
			display flex
			align-items center
			padding-top 36rpx
			padding-bottom 12rpx
			font-size 32rpx
			color rgba(0, 0, 0, .5)
			border-bottom 1rpx solid #E8E8E8
			&.choose-bank
				&::after
					position absolute
					content '\e661'
					right 0
			& > view
				display flex
				align-items center
				flex 0 0 148rpx
				height 48rpx
				color $fontColor9
			& > input,
			& > picker
				//width 600rpx
				display flex
				align-items center
				flex 1
				height 48rpx
				font-size 32rpx
				.persons
					width 600rpx
				.logo::before
					content ''
				.icbc::before
					color #C71A0B
					font-size 34rpx
					content '\e66f'
					margin-right 12rpx
				.abchina::before
					color #3BBDA9
					font-size 40rpx
					content '\e672'
					margin-right 12rpx
				.boc::before
					color #A71E32
					font-size 40rpx
					content '\e674'
					margin-right 12rpx
				.ccb::before
					color #0366B3
					font-size 40rpx
					content '\e671'
					margin-right 12rpx
				.bankcomm::before
					color #02367A
					font-size 40rpx
					content '\e670'
					margin-right 12rpx
				.psbc::before
					color #007E3E
					font-size 34rpx
					content '\e66e'
					margin-right 12rpx
				.other::before
					color #63E0DF
					font-size 40rpx
					content '\e654'
					margin-right 12rpx
				& > text
					&:after
						display flex
						align-items center
						content '\e622'
						font-size 44rpx
						height 32rpx
						color #5D5D5D
						margin-left 20rpx
						padding-left 20rpx
						border-left 1rpx solid #979797
						transform translateY(2rpx)
			// 自动定位
			.address
				&::before
					display inline-block
					content ''
					flex 0 0 28rpx
					width 28rpx
					height 40rpx
					background: url("data:image/png;base64,") no-repeat center
					-webkit-background-size: contain
					background-size: contain
			.detail-info
				width 640rpx!important
			.picker
				color #ccc
				&.have-value
					color $fontColor3
			// 自动填充
			.auto-fill
				height 48rpx
				line-height 46rpx
				gradualChange(to right, $deepThemeColor, $shallowThemeColor)
				font-size 26rpx
				font-weight 500
				box-sizing content-box
			// 拍照
			.photograph
				&::before
					display inline-block
					content '\e65c'
					flex 0 0 28rpx
					font-size 36rpx
					color #2FB565
			// 获取验证码
			.validate-code
				flex 0 0 216rpx
				width 216rpx
				display flex
				align-items center
				justify-content center
				padding-left 50rpx
				height 44rpx
				font-size 32rpx
				color $fontColor9
				border-left 1rpx solid #D8D8D8
				box-sizing border-box
				&.ok
					font-weight 500
					color $fontColor
				&.acquisition
					color $fontColor
					font-weight 400!important
	// 高度填充
	.fill
		flex 1
	// 协议
	.agreement
		display flex
		align-items center
		height 48rpx
		font-size 24rpx
		color $fontColor9
		padding-left 104rpx
		padding-bottom 22rpx
		& > text
			color $fontColor
		&::before
			margin-right 10rpx
			width 28rpx
			height 28rpx
			content '\e6e4'
			font-size 30rpx
			color $fontColor9
			border-radius 50%
		&.selected::before
			color #00B85C
	.protocol-info
		.protocol
			color #00B85C
			font-size 24rpx
			font-family PingFangSC-Medium, PingFang SC
			font-weight 500
			line-height 48rpx
			padding-left 104rpx
	// 下一步
	.btn
		display flex
		align-items center
		justify-content center
		height 98rpx
		font-size 40rpx
		font-weight 500
		margin 20rpx 32rpx 0
		color #fff
		border-radius 49rpx
		background: linear-gradient(to right , $deepThemeColor, $shallowThemeColor)
		&.available
			animation btnFadeIn .3s
			animation-fill-mode forwards
		&.unavailable
			animation btnFadeOut .3s
			animation-fill-mode forwards

