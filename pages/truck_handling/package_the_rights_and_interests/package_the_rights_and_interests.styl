@import "../../../style/base.styl";
// 以下配置用于stylus编译后不添加前缀 如@-moz-keyframes 小程序会报错
vendors = official
mixinsWidthHeight($width = 100%, $height = 100%)
    width $width
    height $height
mixinsIconfont($content='',$size=16px,$color=#5EBE68)
    content $content
    font-size $size
    color $color
mixinsPositionPack($position=relative)
    position $position
    left 50%
    transform translateX(-50%)
.iconfont
    font-family 'iconfont' !important
    font-size 16px
    font-style normal
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
$yellowColor = #FFC300;
.package-the-rights-and-interests
	min-height 100vh
	padding-bottom 292rpx
	box-sizing border-box
	background #F6F6F6
	.proging
		padding-left 30rpx
		padding-left: 30rpx
		line-height 2
		font-weight: bold
		.vehPlates
			color #333
	/* tab 选择区域 */
	.package_tab
			margin 32rpx 0 0 0
			width 694rpx
			display flex
			flex-direction: column
			mixinsPositionPack()
			font-size: 34rpx
			background-color #fff
			border-radius: 16rpx
			.package_tab_top
					display flex
					border-bottom 1px solid #dfdede
					.item
							width 33%
							display: flex
							justify-content: center
							height 150rpx
							align-items: center
							.confirm
									mixinsWidthHeight(40rpx,40rpx)
									border-radius 50%
									background-color #fff
									border 1px solid #dddbdb
									margin-left: 15rpx
							.tick
									&::before
											display block
											mixinsWidthHeight(40rpx,40rpx)
											mixinsIconfont('\e669',22rpx,#FFFFFF)
											text-align center
											line-height 44rpx
											border-radius 50%
											background-color #5cee3f
											border 1px solid #5cee3f
			.package_tab_bottom
					font-size: 22rpx
					line-height 44rpx
					color #666
					padding: 30rpx 25rpx
					.title
						color #666
	/* 货车套餐模块 */
	.package_huoche
			.module
					width 694rpx
					border-radius 16rpx
					background-color #F9F6EF
					margin 32rpx 0 0 0
					font-family PingFangSC-Regular, PingFang SC
					box-shadow 0 4rpx 2rpx 0 rgba(212, 212, 212, 0.5)
					mixinsPositionPack()
					/* 活动提示模块 */
					.active
							color #fff
							height 36rpx
							font-weight 400
							font-size 16rpx
							text-align center
							line-height 30rpx
							padding 0 20rpx
							letter-spacing 3rpx
							background-color #E9CA7B
							font-family PingFangSC-Regular, PingFang SC
							border-top-right-radius 16rpx
							border-bottom-left-radius 16rpx
							position absolute
							top 0
							right 0
							z-index 10
					.activeChange
							position absolute
							top -4rpx
							right -4rpx
							border-top 4rpx solid #E9CA7B
							border-right 4rpx solid #E9CA7B
					.subUpperPart
							border-radius 16rpx
					/* 套餐模块的上半部分 */
					.upperPart
							opacity 1
							overflow hidden
							position relative
							border-top-right-radius 16rpx
							border-top-left-radius 16rpx
							background-color #fff
							background-size 100% 100%
							padding 38rpx 28rpx 40rpx 28rpx
							.bgImg
									mixinsWidthHeight(234rpx,234rpx)
									position absolute
									right -50rpx
									bottom -100rpx
									z-index 1
									opacity 0.1
									image
											mixinsWidthHeight()
							.titleMOney
									height 54rpx
									display flex
									align-items center
									justify-content space-between
									.title
											font-size 32rpx
											font-weight 600
											color #1E1E1E
									.money
											height 54rpx
											font-size 50rpx
											color #2A4F44
											line-height 54rpx
											font-style oblique
											font-family Arial-BoldItalicMT, Arial
							.titleExplain
									mixinsWidthHeight(632rpx,47rpx)
									font-size 20rpx
									font-weight 400
									color #FFFDFD
									line-height 47rpx
									border-radius 16rpx
									background #E9CA7B
									border-top-right-radius 0
									font-family PingFangSC-Regular, PingFang SC
									position relative
									&::before
											display block
											content ''
											border 10rpx solid
											border-color transparent #E9CA7B #E9CA7B transparent
											position absolute
											top -10rpx
											right 0
									.planSpan
											padding-left 28rpx
							.imgExplain
									height auto
									&::before
											border 0
									image
											width 632rpx
							.subTitle
									height 40rpx
									font-size 28rpx
									font-weight 400
									color #262626
									margin-top 10rpx
									line-height 40rpx
									padding-bottom 15rpx
							.description
									display flex
									flex-wrap wrap
									font-size 24rpx
									font-weight 400
									color #262626
									justify-content space-between
									& > view
											display flex
											flex-wrap wrap
											justify-content space-between
									.descriptionModule
											width 242rpx
											display flex
											align-items center
											margin 12rpx 0 4rpx 0
											.title
												color #666
							// 套餐附加权益信息显示
							.addEquityInfo
									margin-left -30rpx
									margin-right  -30rpx
									margin-bottom:   -38rpx
									position relative
									z-index 100
									margin-top 30rpx
									border-top 1px solid rgb(245, 217, 164)
									font-size 28rpx
									font-weight 500
									line-height 40rpx
									font-family PingFangSC-Medium, PingFang SC
									background rgba(241, 241, 230, 0.846)
									padding-bottom: 20rpx
									box-sizing border-box
									padding-left 30rpx
									.intruduce
											font-size: 20rpx
									.intruduce2
											box-sizing border-box
											line-height 40rpx
											font-size: 26rpx
											font-weight: bold
					/* 套餐模块的下半部分 */
					.lowerpart
							padding 20rpx 28rpx 30rpx 28rpx
							border-bottom-left-radius 16rpx
							border-bottom-right-radius 16rpx
							.titleDetails
									height 40rpx
									display flex
									font-size 28rpx
									font-weight 600
									line-height 40rpx
									align-items center
									justify-content space-between
									font-family PingFangSC-Semibold, PingFang SC
									.titles
											height 100%
											display flex
											.isTtIcon
													mixinsWidthHeight(40rpx,40rpx)
													background url('https://file.cyzl.com/g001/M01/C8/9E/oYYBAGP1z2iAZxFoAAAVlwqnjac464.svg') center no-repeat
													background-size 40rpx 40rpx
											.icon
													&::before
															mixinsWidthHeight(40rpx,40rpx)
															display block
															mixinsIconfont('\e6a1',24rpx,#E9CA7B)
											.text
													font-size 28rpx
													font-weight 600
													color #E9CA7B
													line-height 39rpx
													margin-left 10rpx
											.greenIcon
													&::before
															mixinsWidthHeight(40rpx,40rpx)
															display block
															mixinsIconfont('\e6a1',24rpx,#54B95C)
									.details
											color #00B85C
											mixinsWidthHeight(60rpx,40rpx)
											font-size 28rpx
											font-weight 400
											padding 10rpx 0rpx
											font-family PingFangSC-Regular, PingFang SC
			.minheight
					height 150rpx !important
					overflow hidden
					border 2px solid #a7a3a3
			.moduleOne
					margin-top 38rpx
			.btnHighLight
					border 4rpx solid green
					&::before
							mixinsWidthHeight(42.6rpx,32rpx)
							display block
							mixinsIconfont('\e6c6',20rpx,#FFFFFF)
							text-align center
							line-height 32rpx
							background-color green
							border-top-left-radius 16rpx
							border-bottom-right-radius 16rpx
							position absolute
							top -4rpx
							left -4rpx
							z-index 10
	// 权益选择
	.rights-and-interests
		width 686rpx
		margin 48rpx 32rpx 44rpx 32rpx
		box-sizing border-box
		.rights-and-interests-header
			display flex
			height 48rpx
			align-items center
			font-size 34rpx
			color rgba(0, 0, 0, 0.9)
			&::before
				margin-right 8rpx
				content ''
				width 8rpx
				height 44rpx
				background #2FB565
		.rights-and-interests-list
			margin-top 32rpx
			position relative
			.rights-and-interests-item
				width 100%
				position relative
				display flex
				align-items center
				height 174rpx
				background #fff
				margin-top 12rpx
				&.item-top
					margin-top 32rpx !important
				.label-img
					position absolute
					top -18rpx
					z-index 2
					width 172rpx
					height 32rpx
					display flex
					align-items center
					justify-content center
					background linear-gradient(126deg, #FF007E 0%, #F7A400 100%)
					border-radius 16rpx 16rpx 16rpx 0rpx
					font-size 18rpx
					font-family PingFangSC-Medium, PingFang SC
					font-weight 500
					color #FFFFFF
					text-shadow 0rpx 4rpx 8rpx rgba(0, 0, 0, 0.12)
				&::before,
				&::after
					position absolute
					top 50%
					display inline-block
					width 32rpx
					height 32rpx
					content ''
					border-radius 50%
					background-color #F6F6F6
					transform translateY(-50%)
				&::before
					left -22rpx
				&::after
					left  auto
					right -22rpx
				.left
					margin 32rpx 54rpx
					& > image
						width 144rpx
				.middle
					flex 1
					display flex
					flex-direction column
					.item-title
						color #000000
						font-size: 28rpx;
						font-family: PingFangSC-Regular, PingFang SC;
						font-weight: 400;
						line-height 40rpx
					.item-price
						margin-top 12rpx
						color #00B85C
						font-size 34rpx
						line-height 48rpx
				.right
					margin-right 70rpx
					.item-detail
						font-size 20rpx
						color rgba(0, 0, 0, 0.3)
					.select-item
						margin-top 18rpx
						&::after
							content '\e64f'
							font-size 48rpx
							color rgba(0, 0, 0, 0.1)
						&.item-active
							&::after
								color #07C160
			.rights-and-interests-item:nth-child(odd)
				margin-top 12rpx
		&.my-only-equities
			width 686rpx
			margin 48rpx 32rpx 0
	// 下一步
	.next
		position fixed
		bottom 0
		width 100%
		height 282rpx
		background #FFFFFF
		z-index 3
		// 协议
		.agreement
			display flex
			margin 32rpx 70rpx
			height 48rpx
			font-size 22rpx
			color $fontColor9
			text
				color #00BC58
			&::before
				margin-right 10rpx
				width 28rpx
				height 28rpx
				content '\e6e4'
				font-size 28rpx
				color $fontColor9
				border-radius 50%
			&.selected::before
				color #00B85C
			&.not-agreement::before
				content ''
		.btn
			width 650rpx
			height 96rpx
			line-height 96rpx
			font-size 36rpx
			font-family PingFangSC-Medium, PingFang SC
			font-weight 500
			color #FFFFFF
			text-align center
			background linear-gradient(132deg, #16AD69 0%, #82D057 100%)
			border-radius 48rpx
			&.unavailable
				opacity .6
