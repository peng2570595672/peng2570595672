<view class="page">
    <view class="label">正在申请 {{vehPlates}} 货车ETC</view>
    <!--上传证件部分开始-->
    <view class="photo-wrapper">
        <!--车头照开始-->
        <view class="photo" data-type="101" catchtap="selectionPic">
            <view class="title">请按要求上传相关资料</view>
            <view class="upload">
                <view class="img-box" wx:if="{{faceStatus !== 4}}">
                    <image class="ico" wx:if="{{faceStatus === 1}}" src="/pages/default/assets/tru_camera.svg"></image>
                    <view class="identify" wx:if="{{faceStatus === 2 || faceStatus === 3}}">
                        <image class="refresh" src="/pages/default/assets/refresh.png"></image>
                        <view>{{faceStatus === 2 ? '识别中…' : '重新拍摄'}}</view>
                    </view>
                </view>
                <image class="success" wx:else src="{{headstock.fileUrl}}"></image>
            </view>
            <view>车头照（含车头45°含车牌）</view>
        </view>
        <!--车头照结束-->
    </view>
    <view class="fill"></view>
    <view class="photo-wrapper">
        <!--车头照开始-->
        <view class="photo" data-type="102" catchtap="selectionPic">
            <view class="upload">
                <view class="img-box" wx:if="{{backStatus !== 4}}">
                    <image class="ico" wx:if="{{backStatus === 1}}" src="/pages/default/assets/tru_camera.svg"></image>
                    <view class="identify" wx:if="{{backStatus === 2 || backStatus === 3}}">
                        <image class="refresh" src="/pages/default/assets/refresh.png"></image>
                        <view>{{backStatus === 2 ? '识别中…' : '重新拍摄'}}</view>
                    </view>
                </view>
                <image class="success" wx:else src="{{truckSidePhoto.fileUrl}}"></image>
            </view>
            <view>补充角度照</view>
            <view>补充正面车头照或侧面车身照有利于通过审核</view>
        </view>
        <!--车头照结束-->
    </view>
    <view class="btn {{available ? 'available' : 'unavailable'}}" catchtap="next" wx:if="{{faceStatus === 4}}">确认资料并保存</view>
</view>
<privacy_popup></privacy_popup>