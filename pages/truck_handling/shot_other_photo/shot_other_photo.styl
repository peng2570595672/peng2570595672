@import "../../../style/base.styl";
.shot_other_photo
	height 100vh
	padding-top 48rpx
	display flex
	flex-direction column
	box-sizing border-box
	background: #33333C
	.camera-top
		display flex
		.tips
			position absolute
			left -37vw
			top 33vh
			font-size 26rpx
			color #F7B500
			transform rotate(90deg)
		// 相机
		.camera
			position relative
			width 84vw
			height 68vh
			box-sizing border-box
			border-radius 16rpx
			border 4rpx solid #14AC69
			margin-left 10vw
			.border
				margin 0 auto
				width 84vw
				height 68vh
				&.sample
					transform scale(.8)
	.fill
		flex 1
	// 按钮区域
	.btns
		position fixed
		bottom 60rpx
		left 0
		width 100%
		&.btns-bottom
			bottom 200rpx
		.choice-from-album
			position absolute
			display flex
			align-items center
			justify-content center
			top 46rpx
			right 78rpx
			width 62.6rpx
			height 50rpx
			&::before
				content '\e646'
				color #fff
				font-size 70rpx
		.take-photo
			position absolute
			display flex
			align-items center
			justify-content center
			width 140rpx
			height 140rpx
			border-radius 50%
			background: #fff
			left 50%
			margin-left -70rpx
			& > image
				width 64rpx
				height 54rpx
		.btn
			position fixed
			bottom 60rpx
			left 0
			width 100%
			height 140rpx
			display flex
			align-items center
			justify-content center
			.shoot,
			.complete
				width 188rpx
				height 80rpx
				display flex
				align-items center
				justify-content center
				border-radius 49rpx
				border 2rpx solid
				font-size 32rpx
				font-family PingFangSC-Regular, PingFang SC
				color #27B266
			.complete
				background linear-gradient(45deg, #14AC69 0%, #84D157 100%)
				font-family PingFangSC-Semibold, PingFang SC
				font-weight 600
				color #fff
				border-radius 49rpx
				border 0
				margin-left 80rpx
	// 压缩图片
	.press-canvas
		position fixed
		left -3000rpx
