.content {
  height: 100vh;
  background: #f6f6f6;
}
.content .label {
  padding: 60rpx 40rpx;
  font-size: 40rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #33333d;
}
.content .content-list {
  align-items: center;
  padding: 40rpx 40rpx 16rpx 40rpx;
  background: #fff;
  box-shadow: 2rpx 2rpx 23rpx 0rpx rgba(126,132,156,0.1);
  border-radius: 32rpx;
}
.content .content-list .list-title {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  font-size: 40rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #33333d;
}
.content .content-list .list-title::before {
  margin-right: 10rpx;
  content: '';
  width: 10rpx;
  height: 10rpx;
  border: 6rpx solid #14ac69;
  border-radius: 50%;
}
.content .content-list .list-title > text {
  margin-left: 12rpx;
  font-size: 24rpx;
  color: #7a7f83;
  transform: translateY(8rpx);
}
.content .content-list .list-item {
  display: flex;
  align-items: center;
  padding: 0rpx 30rpx;
  margin-bottom: 30rpx;
  height: 160rpx;
  background: #fff;
  box-shadow: 2rpx 2rpx 23rpx 0rpx rgba(126,132,156,0.1);
  border-radius: 32rpx;
}
.content .content-list .list-item .left {
  display: flex;
  align-items: center;
  flex: 1;
}
.content .content-list .list-item .left .upload-name {
  font-size: 32rpx;
  color: #66666d;
  margin-right: 16rpx;
}
.content .content-list .list-item .left .preview {
  width: 38rpx;
  height: 38rpx;
  box-sizing: content-box;
}
.content .content-list .list-item .btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 126rpx;
  height: 44rpx;
  border-radius: 22rpx;
  border: 1rpx solid rgba(36,177,102,0.32);
  color: #29b365;
  font-size: 24rpx;
}
.content .content-list .list-item .btn.edit {
  border: none !important;
  background: #27b265;
  color: #fff;
}
.content .content-list .list-item .btn.not-edit {
  background: rgba(39,178,101,0.38);
  color: #fff;
  border: none !important;
}
.content .content-list .btn-sign {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 260rpx;
  height: 100rpx;
  background: linear-gradient(49deg, rgba(20,172,105,0.24) 0%, rgba(132,209,87,0.24) 100%);
  border-radius: 50rpx;
  font-size: 40rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #fff;
}
.content .content-list .btn-sign.available {
  background: linear-gradient(45deg, #14ac69 0%, #84d157 100%);
  animation: btnFadeIn 0.3s;
  animation-fill-mode: forwards;
}
.content .content-list .btn-sign.unavailable {
  animation: btnFadeOut 0.3s;
  animation-fill-mode: forwards;
}
.content .content-list .bottom {
  display: flex;
  justify-content: center;
}
.content .content-list .bottom .empty-line {
  width: 268rpx;
  height: 10rpx;
  margin-top: 60rpx;
  background: #606060;
  border-radius: 200rpx;
}
