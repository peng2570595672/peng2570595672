<view class="content">
	<view class="label">正在申请 {{vehPlates}} 货车ETC</view>
	<view class="content-list">
		<view class="list-title">
			请按要求上传相关资料
		</view>
		<view class="list-item">
			<view class="left">
				<view class="upload-name">车主身份证</view>
				<cover-image wx:if="{{orderInfo.isOwner === 1}}" class="preview" src="/pages/default/assets/icon_succeed.png"></cover-image>
			</view>
			<view class="btn {{orderInfo.isOwner === 1 ? contractStatus === 1 ?'not-edit' : 'edit': ''}}" catchtap="go" data-url="upload_id_card">{{orderInfo.isOwner === 1 ? '修改' : '上传'}}</view>
		</view>
		<view class="list-item">
			<view class="left">
				<view class="upload-name">行驶证</view>
				<cover-image wx:if="{{orderInfo.isVehicle === 1}}" class="preview" src="/pages/default/assets/icon_succeed.png"></cover-image>
			</view>
			<view class="btn {{orderInfo.isVehicle === 1 ? contractStatus === 1 ? 'not-edit' : 'edit' : ''}}"
			      catchtap="go" data-url="information_validation">{{orderInfo.isVehicle === 1 ? '修改' : '上传'}}</view>
		</view>
		<view class="list-item">
			<view class="left">
				<view class="upload-name">车辆照片</view>
				<cover-image wx:if="{{orderInfo.isHeadstock === 1}}" class="preview" src="/pages/default/assets/icon_succeed.png"></cover-image>
			</view>
			<view class="btn {{orderInfo.isHeadstock === 1  ? 'edit' : ''}}" catchtap="go" data-url="upload_other_photo">{{orderInfo.isHeadstock === 1 ? '修改' : '上传'}}</view>
		</view>
		<view class="list-item" wx:if="{{orderInfo.isVehicle === 1 && orderInfo.isTraction === 1}}">
			<view class="left">
				<view class="upload-name">道路运输证</view>
				<cover-image wx:if="{{orderInfo.isTransportLicense === 1}}" class="preview" src="/pages/default/assets/icon_succeed.png"></cover-image>
			</view>
			<view class="btn {{orderInfo.isTransportLicense === 1 ? 'edit' : ''}}" catchtap="go" data-url="upload_road_transport_certificate">{{orderInfo.isTransportLicense === 1 ? '修改' : '上传'}}</view>
		</view>
		<view class="btn-sign {{available ? 'available' : 'unavailable'}}" catchtap="onclickSign">
            <view class="animate" wx:if="{{isRequest}}"></view>{{isModifiedData ? '提交审核': '签约微信免密支付'}}
        </view>
		<view class="bottom">
			<view class="empty-line"></view>
		</view>
	</view>
</view>
