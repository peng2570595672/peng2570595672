.content
	height 100vh
	background: #F6F6F6;
	.label
		padding 80rpx 40rpx 40rpx
		font-size: 40rpx;
		line-height 56rpx
		font-family: PingFangSC-Medium, PingFang SC;
		font-weight: 500;
		color: #33333D;
	.content-list
		padding 40rpx 40rpx 16rpx 40rpx
		background #FFFFFF
		box-shadow 2rpx 2rpx 23rpx 0rpx rgba(126, 132, 156, 0.1);
		border-radius 32rpx
		display flex
		flex-direction column
		height calc(100vh - 176rpx)
		box-sizing border-box
		.list-title
			display flex
			align-items center
			margin-bottom 40rpx
			font-size 40rpx;
			font-family: PingFangSC-Medium, PingFang SC;
			font-weight: 500;
			color: #33333D;
			&::before
				margin-right 10rpx
				content ''
				width 10rpx
				height 10rpx
				border 6rpx solid #14AC69
				border-radius 50%
			& > text
				margin-left 12rpx
				font-size 24rpx
				color #7A7F83
				transform translateY(8rpx)
		.list-item
			display flex
			align-items center
			padding 0rpx 30rpx
			margin-bottom 30rpx
			height 160rpx
			background: #FFFFFF;
			box-shadow: 2rpx 2rpx 23rpx 0rpx rgba(126, 132, 156, 0.1);
			border-radius: 32rpx;
			.left
				display flex
				align-items center
				flex 1
				font-size 32rpx
				color #66666D
				&.success
					&::after
						content '\e655'
						font-size 34rpx
						color #15AD69
						margin-left 16rpx
				&.error
					&::after
						content '\e63f'
						font-size 34rpx
						color #F7B500
						margin-left 16rpx
			.btn
				display flex
				justify-content center
				align-items center
				width 126rpx
				height 44rpx;
				border-radius 22rpx;
				border: 1rpx solid rgba(36,177,102,0.32);
				color: #29B365;
				font-size 24rpx
				&.edit
					border none !important
					background #27B265
					color #FFFFFF
				&.not-edit
					background: rgba(39,178,101,0.38);
					color #FFFFFF
					border none !important
		// 高度填充
		.fill
			flex 1
		.btn-sign
			display flex
			align-items center
			justify-content center
			height 100rpx;
			margin 60rpx 0
			background linear-gradient(49deg,rgba(20,172,105,0.24) 0%,rgba(132,209,87,0.24) 100%)
			border-radius: 50rpx;
			font-size 40rpx;
			font-family: PingFangSC-Medium, PingFang SC;
			font-weight: 500;
			color: #FFFFFF
			&.available
				background: linear-gradient(45deg, #14AC69 0%, #84D157 100%);
				animation btnFadeIn .3s
				animation-fill-mode forwards
			&.unavailable
				animation btnFadeOut .3s
				animation-fill-mode forwards


