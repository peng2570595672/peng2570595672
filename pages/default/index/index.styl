@import "../../../style/base.styl";
.index
	// 公共部分
	.btn
		display flex
		align-items center
		justify-content center
		height 98rpx
		font-size 40rpx
		color #fff
		border-radius 49rpx
		background: linear-gradient(to right, $deepThemeColor, $shallowThemeColor)
		box-shadow: 0 8rpx 10rpx 0 rgba(132,209,87,0.2);
	.tips
		display flex
		align-items center
		justify-content center
		margin-top 20rpx
		text-align center
		font-size 24rpx
		height 40rpx
		color $fontColor9
		& > text
			color $error
	// 欢迎语
	.welcome
		margin-top 26rpx
		padding-left 60rpx
		font-size 60rpx
		line-height 60rpx
		& > text
			margin-left 26rpx
			font-size 32rpx
			color $fontColor6
	// 轮播图
	.my-swiper
		margin 40rpx 40rpx 0
		height 394rpx
		border-radius 32rpx
		overflow hidden
		.my-swiper-item
			height 364rpx!important
			background: linear-gradient(to right, $deepThemeColor, $shallowThemeColor)
			border-radius 32rpx
			& > image
				width 100%
				height 100%
		.wx-swiper-dots-horizontal
			 margin-bottom -18rpx
			.wx-swiper-dot
				width 10rpx
				height 10rpx
				background: #E3E5E6
				&.wx-swiper-dot-active
					background: #979999
	// 免费办理
	.free-processing
		margin-top 98rpx
		padding 0 70rpx
		padding-bottom 40rpx
	// 办理中 查看进度 修改资料 审核失败 确认收货并激活 恢复签约 账单
	.processing,.viewing-process,.update-info, .audit-failure, .confirm-receipt, .resume-contract, .bill
		margin-top 40rpx
		padding 0 60rpx 40rpx
		.processing-title
			display flex
			align-items center
			height 48rpx
			& > view
				&:first-of-type
					display flex
					align-items center
					height 48rpx
					flex 1
					font-size 32rpx
				&:last-of-type
					display flex
					height 40rpx
					align-items center
					font-size 24rpx
					color $fontColor9
					&::after
						margin-left 5rpx
						display inline-block
						width 0
						content ''
						border-color rgba(0,0,0,0)
						border-bottom-style solid
						border-right 15rpx solid #FFEC9A
						border-width 15rpx
						transform rotateZ(45deg)
		.btn
			margin 20rpx 10rpx 0
	// 审核失败
	.audit-failure
		.failed
			margin-top 38rpx
			display flex
			align-items center
			justify-content center
			height 74rpx
			color $error
			font-size 40rpx
		.tips
			margin-top 36rpx
	// 账单
	.bill
		padding 0 40rpx
		.processing-title
			margin 0 20rpx
		.bill-info
			margin 20rpx 0
			padding 0 20rpx
			height 178rpx
			box-shadow: 4rpx 4rpx 46rpx 0 rgba(126,132,156,0.1);
			border-radius 32rpx
			& > view
				display flex
				align-items center
				padding 0 20rpx
				&:first-of-type
					height  86rpx
					border-bottom 1rpx solid #F1F1F1
					& > view
						&:first-of-type
							flex 1
							font-size 40rpx
						&:last-of-type
							font-size 24rpx
							color $fontColor9
							&.failed
								color $error
								font-size 32rpx
				&:last-of-type
					height 90rpx
					.up, .down
						display flex
						align-items center
						font-size 28rpx
						color $fontColor9
						& > text
							margin-right 10rpx
							display flex
							align-items center
							justify-content center
							width 28rpx
							height 28rpx
							color #fff
							font-size 20rpx
							background: #FFAF9A
							border-radius 50%
					.down
						margin-left 44rpx
						& > text
							background: #8CD5B5
					.price
						flex 1
						text-align right
						color $deepThemeColor
						font-size 48rpx
		.bill-empty
			display flex
			align-items center
			justify-content center
			margin 20rpx 0
			padding 0 20rpx
			height 178rpx
			box-shadow: 4rpx 4rpx 46rpx 0 rgba(126,132,156,0.1);
			border-radius 32rpx
			& > image
				margin-right 30rpx
				flex 0 0 106rpx
				width 106rpx
				height 106rpx
				border-radius 12rpx
			& > view
				color $fontColor9

	// 分割线
	.split
		height 20rpx
		background: #FAFAFA
		box-shadow:0px -2rpx 0 0 rgba(241,240,245,1);
	// 底部导航
	.nav
		display flex
		justify-content center
		padding-top 50rpx
		.item
			margin-left 70rpx
			text-align center
			flex 0 0 100rpx
			&:first-of-type
				margin-left 0
			& > view
				& > image
					width 100%
					height 100%
				&:first-of-type
					width 100rpx
					height 100rpx
					padding 20rpx
					box-sizing border-box
					border-radius 20rpx
					box-shadow:0 6rpx 10rpx 0 rgba(126,132,156,0.1)
				&:last-of-type
					margin-top 8rpx
					font-size 24rpx
					line-height 40rpx
					color $fontColor6
