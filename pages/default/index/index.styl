@import "../../../style/base.styl";
.index
	width 100%
	background #F6F6F6;
	margin 0
	//顶部
	.top
		width 100%
		padding 40rpx
		background: linear-gradient(180deg, #9dde89 0%, rgba(132, 209, 87, 0) 100%);
		.bg-image
			height 30vh
			background-image url("https://file.cyzl.com/g001/M07/20/C1/oYYBAGBXGReAAL9iAAFY0ECq4wI874.png")
			background-size cover
			.bg-desc
				margin-top 150rpx
				margin-left 10rpx
				.one
					font-size 48rpx
					font-weight Semibold
					color transparent
					text-shadow #33333E 0 0 3rpx
				.two
					font-size 48rpx
					font-weight Semibold
					color transparent
					text-shadow #33333E 0 0 3rpx
					&>text:nth-child(2)
						color #FFC000
						font-weight 500
						text-shadow none
				.three
					font-size 28rpx
					margin-top 18rpx
					font-weight Regular
					color transparent
					text-shadow #66666E 0 0 2rpx

	//用户导航栏
	.btn-content
		display flex
		flex-direction column
		text-align center
		z-index 111
		width 610rpx
		height 190rpx
		border-radius 20rpx
		margin 0 auto
		margin-top -120rpx
		padding 30rpx
		background rgba(255,255,255,1)
		.interior
			image
				margin-top 20epx
				width 130rpx
				height 48rpx
				margin-bottom -15rpx
				padding-left 370rpx
		.trans-tips
			margin-top 10rpx
			margin-bottom 0rpx
			color: transparent;
			letter-spacing 0.32rpx
			text-shadow: #00B1FF 0 0 2rpx
			font-size 22rpx
			&>text:nth-child(2)
				color #F7B500
		.btn
			display flex
			margin 0rpx 30rpx
			height 100rpx
			align-items center
			justify-content center
			background: linear-gradient(90deg, #00AF62 0%, #68D33F 100%);
			box-shadow: 0rpx 4rpx 5rpx 0rpx rgba(132, 209, 87, 0.2);
			border-radius: 50rpx;
			font-size: 40rpx;
			font-family: PingFangSC-Medium, PingFang SC;
			font-weight: 500;
			color: #FFFFFF;
	.service-desc
		margin 30rpx auto
		background: #FFFFFF;
		width 610rpx
		height 348rpx
		justify-items center
		box-shadow: 2rpx 2rpx 23rpx 0rpx rgba(126, 132, 156, 0.1);
		border-radius: 32rpx;
		padding 30rpx
		.title
			display flex
			align-items center
			font-size 40rpx
			height 50rpx
			font-family: PingFangSC-Medium, PingFang SC
			font-weight: bold;
			color: #33333D;
			&::before
				margin-right 10rpx
				content ''
				width 10rpx
				height 10rpx
				border 6rpx solid #14AC69
				border-radius 50%
		.photo
			display flex
			margin-top 20rpx
			border-radius: 20rpx;
			view
				margin-top 12rpx
				margin-right 30rpx
				width 290rpx
				height 92rpx
				.photo-item
					display flex
					flex-direction row
					align-items center
					opacity 0.75
					border 2rpx solid #D4EDCE
					border-radius 20rpx
					.image
						margin-left 34rpx
						border 2rpx dashed #cd5f28
						&.one
							width 42rpx
							height 48rpx
						&.second
							width 52rpx
							height 46rpx
						&.three
							width 42rpx
							height 42rpx
						&.four
							width 48rpx
							height 48rpx
					& > text
						margin-left 14rpx
						font-size: 24rpx;
						font-family: PingFangSC-Medium, PingFang SC;
						font-weight: Regular;
						letter-spacing 0.4rpx
						color: #66666D;
	.handle-desc
		margin 0 auto
		background: #FFFFFF;
		box-shadow: 2rpx 2rpx 23rpx 0rpx rgba(126, 132, 156, 0.1);
		border-radius: 32rpx;
		width 610rpx
		padding 30rpx
		padding-bottom 0rpx
		.process-title
			display flex
			align-items center
			font-size 40rpx
			height 50rpx
			font-family: PingFangSC-Medium, PingFang SC
			font-weight: bold;
			color: #33333D;
			&::before
				margin-right 10rpx
				content ''
				width 10rpx
				height 10rpx
				border 6rpx solid #14AC69
				border-radius 50%
		.material
			margin-top 40rpx
			margin-left 28rpx
			font-size: 32rpx;
			font-family: PingFangSC-Medium, PingFang SC;
			font-weight: Medium;
			color: transparent;
			text-shadow #00B062 0 0 3rpx
		.photo
			display flex
			margin-top 20rpx
			background: #F3FFF9;
			border-radius: 20rpx;
			padding 40rpx 30rpx
			&>.photo-item:nth-child(1)
				display flex
				flex-direction column
				justify-content center
				align-items center
				flex 1
				.image
					width 148rpx
					height 88rpx
					border 2rpx dashed #848181
				& > text
					text-align center
					margin-top 10rpx
					font-size: 24rpx;
					font-family: PingFangSC-Medium, PingFang SC;
					font-weight: 500;
					color: #66666D;
			&>.photo-item:nth-child(2)
				display flex
				flex-direction column
				justify-content center
				align-items center
				flex 1
				.image
					width 140rpx
					height 88rpx
					border 2rpx dashed #848181
				& > text
					text-align center
					margin-top 10rpx
					font-size: 24rpx;
					font-family: PingFangSC-Medium, PingFang SC;
					font-weight: 500;
					color: #66666D;
			&>.photo-item:nth-child(3)
				display flex
				flex-direction column
				justify-content center
				align-items center
				flex 1
				.image
					width 128rpx
					height 90rpx
				& > text
					text-align center
					margin-top 10rpx
					font-size: 24rpx;
					font-family: PingFangSC-Medium, PingFang SC;
					font-weight: 500;
					color: #66666D;
		.progress_wrapper
			margin-top 60rpx
			.item
				position relative
				padding-bottom 40rpx
				border-left 1rpx dashed rgba(167,167,167,0.49)
				&::before
					position absolute
					top -8rpx
					left -9rpx
					content ''
					display inline-block
					width 17rpx
					height 17rpx
					border-radius 50%
					background: #20B068
				&:last-of-type
					border-left 0
					padding-bottom 10rpx
					&::before
						left -8rpx
				.content-title
					position relative
					padding-left 32rpx
					display flex
					align-items center
					font-size 32rpx;
					font-family: PingFangSC-Medium, PingFang SC;
					font-weight: Medium;
					color: transparent;
					text-shadow #15AD69 0 0 3rpx
					transform translateY(-24rpx)
				.content-des
					display flex
					margin-top 10rpx
					padding-left 26rpx
					padding-right 80rpx
					line-height 40rpx
					color rgba(126,132,156,0.85)
					font-size 22rpx
					transform translateY(-24rpx)
			.last
				&::after
					display none!important
	.bottom
		margin-top 30rpx
		height 100rpx
		text-align center
		font-size 24rpx
		color rgba(3,158,235,0.85)
