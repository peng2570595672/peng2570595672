.index {
	padding: 0;
	margin: 0;
	width: 100vw;
	height: auto;
}

/* 顶部banner */
.index .topBanner {
	width: 100%;
	height: 520rpx;
}

.index .topBanner .topImg {
	z-index: -1;
	width: 100%;
	height: 100%;
	display: block;
}

/* 模块 */
.index .module {
	height: auto;
	text-align: center;
	border-radius: 12rpx;
	margin: 28rpx 28rpx 0 28rpx;
	background-color: #FFFFFF;
	font-family: PingFangSC-Regular, PingFang SC;
}

.index .module.one {
	height: 390rpx;
	margin-top: -28rpx;
}

.index .module.three {
	height: auto;
	padding-bottom: 60rpx;
}

.index .module.four {
	height: auto;
	padding-bottom: 50rpx;
	background-color: rgb(28, 86, 97);
	position: relative;
}

.index .module .title {
	height: 44rpx;
	font-size: 32rpx;
	font-weight: 600;
	color: #4D4D51;
	line-height: 44rpx;
	padding-top: 50rpx;
}

.index .module .textLeft {
	text-align: left;
	color: #FFFFFF;
	padding-top: 30rpx;
}

.index .module .billNotice {
	height: 40rpx;
	font-size: 28rpx;
	font-weight: 400;
	color: #4D4D51;
	margin-top: 10rpx;
	line-height: 40rpx;
}

.index .module .imgText {
	height: 130rpx;
	margin: 24rpx 56rpx 0 56rpx;
	background-color: #00AF62;
}

.index .module .buttomText {
	height: 22rpx;
	font-size: 20rpx;
	font-weight: 400;
	line-height: 22rpx;
	margin-top: 38rpx;
}

.index .module .oneButtom {
	color: #B4B4B4;
}

.index .module .twoButtom {
	width: 180rpx;
	height: 20rpx;
	color: #1A5045;
	padding: 10rpx 20rpx;
	border-radius: 20rpx;
	background-color: rgba(200, 200, 200, 0.5);
	position: relative;
	left: 50%;
	transform: translateX(-50%);
}

.index .module .iconImg {
	height: 120rpx;
	margin-top: 50rpx;
	background-color: #00AF62;
}

.index .module .imgTextThree {
	height: 150rpx;
	margin-top: 28rpx;
	background-color: #00AF62;
}

.index .module .answersQuestions {
	width: 100%;
	height: auto;
	text-align: left;
	color: #FFFFFF;
	margin-top: 30rpx;
	padding-bottom: 22rpx;
	font-family: PingFangSC-Medium, PingFang SC;
}

.index .module .answersQuestions .questions {
	display: flex;
}

.index .module .answersQuestions .questions .questionsImg {
	width: 24rpx;
	height: 24rpx;
	line-height: 42rpx;
}

.index .module .answersQuestions .questions .questionsImg image {
	width: 100%;
	height: 100%;
}

.index .module .answersQuestions .questions .questionsTitle {
	width: 616rpx;
	font-size: 28rpx;
	font-weight: 500;
	margin-left: 8rpx;
	line-height: 40rpx;
	text-align: justify;
}

.index .module .answersQuestions .answer {
	height: auto;
	opacity: 0.8;
	font-size: 22rpx;
	font-weight: 400;
	color: #FFFFFF;
	line-height: 40rpx;
	text-align: justify;
	margin: 8rpx 30rpx 0 30rpx;
	font-family: PingFangSC-Regular, PingFang SC
}

.index .module .moreQuestions {
	width: 100rpx;
	height: 22rpx;
	font-size: 16rpx;
	font-weight: 400;
	color: #00A9FF;
	line-height: 22rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	position: absolute;
	right: 30rpx;
	bottom: 20rpx;
}

/* 占位 */
.index .split {
	height: 260rpx;
	overflow: hidden;
}

/* 底部按钮“立即办理” */
.index .handleImmediately {
	width: 100vw;
	height: 244rpx;
	background: #FFFFFF;
	border-radius: 16rpx 16rpx 0px 0px;
	position: fixed;
	opacity: 0.9;
	display: flex;
	align-items: center;
	justify-content: center;
}

.index .handleImmediately button {
	width: 662rpx;
	height: 110rpx;
	color: #FFFFFF;
	line-height: 110rpx;
	background: #2A4F44;
	box-shadow: 0rpx 4rpx 2rpx 0rpx rgba(212, 212, 212, 0.5);
	border-radius: 64rpx;
}
.index .fadeIn {
	position: fixed;
	animation: fade_in 0.2s linear forwards;
}
.index .fadeOut {
	position: fixed;
	animation: fade_out 0.2s linear forwards;
}
@keyframes fade_in {
	0%{
		bottom: -244rpx;
	}
	100%{
		bottom: 0rpx;
	}
}
@keyframes fade_out {
	0%{
		bottom: 0rpx;
	}
	100%{
		bottom: -244rpx;
	}
}
@-webkit-keyframes fade_in {
	0%{
		bottom: -244rpx;
	}
	100%{
		bottom: 0rpx;
	}
}
@-webkit-keyframes fade_out {
	0%{
		bottom: 0rpx;
	}
	100%{
		bottom: -244rpx;
	}
}
