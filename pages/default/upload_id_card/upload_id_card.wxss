@keyframes btnFadeIn {
  from {
    opacity: 0.2;
  }
  to {
    opacity: 1;
  }
}
@keyframes btnFadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0.2;
  }
}
.page {
  height: 100vh;
  padding: 52rpx 32rpx;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  flex-direction: column;
}
.page .label {
  font-size: 28rpx;
  line-height: 40rpx;
  color: rgba(0,0,0,0.5);
}
.page .title {
  display: flex;
  align-items: center;
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #000;
  padding: 32rpx 0 26rpx;
}
.page .title::before {
  margin-right: 8rpx;
  content: '';
  width: 8rpx;
  height: 44rpx;
  background: #2fb565;
}
.page .photo-wrapper {
  display: flex;
  justify-content: space-between;
  padding: 14rpx 0 116rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: rgba(0,0,0,0.5);
}
.page .photo-wrapper > view:first-child {
  margin-right: auto;
}
.page .photo-wrapper .photo {
  position: relative;
  overflow: hidden;
  width: 326rpx;
  height: 332rpx;
  background: #f6f6f6;
  border-radius: 16rpx;
  text-align: center;
}
.page .photo-wrapper .photo .upload .img-box {
  position: relative;
  width: 296rpx;
  height: 192rpx;
  background: #fafafa;
  border-radius: 8rpx;
  margin: 22rpx auto 36rpx;
}
.page .photo-wrapper .photo .upload .img-box .ico {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 56rpx;
  height: 49rpx;
}
.page .photo-wrapper .photo .upload .img-box .identify {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(47,181,101,0.64);
  font-size: 24rpx;
  color: #fff;
}
.page .photo-wrapper .photo .upload .img-box .identify image {
  width: 50rpx;
  height: 50rpx;
  margin: 45rpx 0 8rpx;
}
.page .photo-wrapper .photo .upload .success {
  width: 296rpx;
  height: 192rpx;
  margin: 22rpx auto 36rpx;
}
.page .input-wrapper {
  margin-left: 40rpx;
}
.page .input-wrapper .input-item {
  position: relative;
  display: flex;
  align-items: center;
  height: 88rpx;
  color: #99999d;
  font-size: 32rpx;
  padding: 30rpx 80rpx 10rpx 40rpx;
  box-sizing: border-box;
  border-bottom: solid 2rpx rgba(230,230,230,0.3);
}
.page .input-wrapper .input-item > view {
  display: flex;
  flex: 0 0 148rpx;
}
.page .input-wrapper .input-item > input {
  flex: 1;
  z-index: 0 !important;
  text-align: right;
  font-size: 32rpx;
  color: #333;
}
.page .input-wrapper .input-bottom {
  padding-bottom: 30rpx;
}
.page .input-wrapper .input-bottom input {
  text-align: left;
}
.page .fill {
  flex: 1;
}
.page .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20rpx 0rpx 40rpx;
  height: 98rpx;
  font-size: 40rpx;
  font-weight: 500;
  color: #fff;
  border-radius: 49rpx;
  background: linear-gradient(to right, #15ad69, #84d157);
}
.page .btn.available {
  animation: btnFadeIn 0.3s;
  animation-fill-mode: forwards;
}
.page .btn.unavailable {
  animation: btnFadeOut 0.3s;
  animation-fill-mode: forwards;
}
