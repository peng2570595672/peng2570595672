  width: 8.533333333333333vmin;
  height: 7.2vmin;
}
.photo_recognition_of_driving_license .btns .retry-title {
  position: absolute;
  left: 0;
  right: 0;
  text-align: center;
  height: 7.466666666666667vmin;
  line-height: 7.466666666666667vmin;
  font-size: 3.733333333333333vmin;
  color: #fff;
  top: 62%;
}
