  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  left: 50%;
  margin-left: -4.173333333333333vmin;
  bottom: 13.333333333333334vmin;
  width: 8.346666666666666vmin;
  height: 6.666666666666667vmin;
}
