  border-radius: 0.533333333333333vmin;
}
.photo_recognition_of_driving_license .camera .right .preview-view-wrapper .status {
  position: absolute;
  top: 0;
  right: 0;
  width: 4.533333333333333vmin;
  height: 4.533333333333333vmin;
