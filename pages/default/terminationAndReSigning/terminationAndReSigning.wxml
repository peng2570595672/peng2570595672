<!--pages/default/terminationAndReSigning/terminationAndReSigning.wxml-->
<view class="page">
    <view class="title">
        <view class="top-div">
            <image class="image" src="https://file.cyzl.com/g001/M03/6E/D2/oYYBAGZHCDyAQB3EAAAZwlJrfP0601.svg"
                mode="widthFix"></image>
        </view>
        <view class="text">
            <view >
                只需最后2步
            </view>
            <view>完成更换车牌</view>
        </view>
    </view>
    <view class="module">
        <view class="topTitle">
            <view class="text">
                <view>解除旧车牌微信授权</view>
                <view>签署新车牌服务，需要解除旧车牌绑定</view>
            </view>
            <view class="weChatSign {{ contractStatus ===1 ?'grey':''}}" catchtap="goAndCancelTheContract">{{contractStatus === 1 ? '去解约':'已解约'}}</view>
        </view>
    </view>
    <view class="module">
        <view class="topTitle">
            <view class="text">
                <view>签约新车牌微信授权</view>
                <view>新车牌签约微信后可免密代扣</view>
            </view>
            <view class="weChatSign {{ !finishReContract ? 'grey' :''}}" catchtap="weChatSignBefore">{{finishReContract ? '已签约':'去签约'}}</view>
        </view>
    </view>
    <view class="floatButton">
        <view class="handleImmediately {{finishReContract ? 'finish' : ''}}" catchtap="finish">完成</view>
    </view>
    <popTipComp id="popTipComp" bind:onHandle="onHandle"></popTipComp>
</view>
<privacy_popup></privacy_popup>