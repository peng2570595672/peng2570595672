image {
  width: 100%;
  height: 100%;
  display: block;
}
.page {
  padding: 28rpx;
  height: 100vh;
  background-color: #efefef;
/* 底部悬浮按钮 */
}
.page .title {
  margin-bottom: 52rpx;
  display: flex;
  align-items: flex-start;
}
.page .title .top-div {
  width: 24rpx;
  height: 22rpx;
  margin: 15rpx;
}
.page .title .text {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}
.page .title .text view {
  color: #33333d;
  font-size: 40rpx;
  font-weight: 400;
  line-height: 56rpx;
  font-weight: normal;
  letter-spacing: 0px;
}
.page .floatButton {
  margin: -28rpx;
  width: 100%;
  height: 204rpx;
  opacity: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx 16rpx 0 0;
  box-shadow: 0 -8px 30px 0 rgba(223,223,223,0.36);
  position: fixed;
  bottom: 0;
  z-index: 100;
  background: #fff;
}
.page .floatButton .handleImmediately {
  width: 662rpx;
  height: 110rpx;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  line-height: 110rpx;
  border-radius: 64rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  text-shadow: 0 -8rpx 30rpx rgba(223,223,223,0.36);
  box-shadow: 0 -8rpx 30rpx 0 rgba(223,223,223,0.36), 0 4rpx 2rpx 0 rgba(212,212,212,0);
  background: #c0c0c0;
}
.page .floatButton .finish {
  background: #2a4f44;
}
.page .module {
  width: 100%;
  height: 200rpx;
  border-radius: 20rpx;
  background-color: #fff;
  margin-bottom: 30rpx;
}
.page .module .topTitle {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 30rpx 40rpx;
}
.page .module .topTitle .text {
  display: flex;
  flex-direction: column;
}
.page .module .topTitle .text view:first-child {
  line-height: 80rpx;
  font-weight: 550;
  color: #000;
  font-size: 34rpx;
}
.page .module .topTitle .text view:last-child {
  color: #666;
  line-height: 60rpx;
}
.page .module .topTitle .weChatSign {
  width: 130rpx;
  height: 54rpx;
  margin-top: 25rpx;
  text-align: center;
  line-height: 54rpx;
  border-radius: 24rpx;
  background-color: #e1dfdf;
  color: #fff;
}
.page .module .topTitle .grey {
  background-color: #2a4f44;
}
