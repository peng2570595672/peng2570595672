mixinsWidthHeight($width=100%, $height=100%)
    width $width
    height $height
image
    width 100% 
    height 100%
    display block
.page
    padding 28rpx
    height 100vh
    background-color #efefef
    position relative
    .title
        // mixinsWidthHeight(, 180rpx)
        margin-bottom 52rpx
        display flex
        align-items flex-start
        position relative
        .top-div
            mixinsWidthHeight(24rpx,22rpx)
            margin 15rpx 
        .text
            display flex
            flex-direction column
            align-items flex-start
            justify-content center
            view
                color #33333D
                font-size 40rpx
                font-weight 400
                line-height 56rpx
                font-weight normal
                letter-spacing 0px
    .refresh
        // width 180rpx
        display flex
        height 40rpx
        align-items center
        position absolute
        border-radius 12rpx
        padding 10rpx 20rpx
        // background-color rgb(92, 235, 84)
        right 0
        top 80%
        color #2A4F44
        font-size 24rpx
        .refresh_image
            width 30rpx
            height 30rpx
            margin  0 5rpx
    /* 底部悬浮按钮 */
    .floatButton
        margin -28rpx
        mixinsWidthHeight(,204rpx)
        opacity 1
        display flex
        align-items center
        justify-content center
        border-radius 16rpx 16rpx 0 0
        box-shadow 0 -8px 30px 0 rgba(223, 223, 223, 0.36)
        position fixed
        bottom 0
        z-index 100
        background: #ffffff;
        .handleImmediately
            mixinsWidthHeight(662rpx,110rpx)
            font-size 36rpx
            color #FFFFFF
            text-align center
            line-height 110rpx
            border-radius 64rpx
            font-family: PingFangSC-Regular, PingFang SC;
            text-shadow 0 -8rpx 30rpx rgba(223, 223, 223, 0.36)
            box-shadow 0 -8rpx 30rpx 0 rgba(223, 223, 223, 0.36), 0 4rpx 2rpx 0 rgba(212, 212, 212, 0)
            background #C0C0C0
        .finish
            background #2A4F44
    .module
        mixinsWidthHeight(, 200rpx)
        border-radius 20rpx
        background-color #ffffff
        margin-bottom 30rpx
        .topTitle
            display flex
            justify-content space-between
            align-items flex-start
            padding 30rpx 40rpx
            .text
                // width 60%
                display flex
                flex-direction column
                view:first-child
                    line-height  80rpx
                    font-weight 550
                    color #000
                    font-size  34rpx
                view:last-child
                    color #666
                    line-height 60rpx
            .weChatSign
                mixinsWidthHeight(130rpx, 54rpx)
                margin-top 25rpx
                text-align center
                line-height 54rpx
                border-radius 24rpx
                background-color #e1dfdf
                color #fff
            .grey
                background-color #2A4F44
        .statusText
            line-height 70rpx
    .btm_20
        margin-bottom 60rpx



