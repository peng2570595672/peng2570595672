@import "../../../style/base.styl";
.shot_bank_card
	height 100vh
	background: #33333C
	.title
		display flex
		align-items center
		height 56rpx
		padding-left 60rpx
		font-size 40rpx
		color #fff
	// 相机
	.camera
		position relative
		margin-top 24rpx
		width 100%
		height  748rpx
		box-sizing border-box
		.border
			margin 0 auto
			width 690rpx
			margin-top 130rpx
			height  435.6rpx
		.photo-wrapper
			position absolute
			left 0
			right 0
			bottom 0
			height 182rpx
			display flex
			align-items center
			.preview
				margin-left 30rpx
				display inline-block
				flex 0 0 152rpx
				width 152rpx!important
				height 104rpx
				border-radius 4rpx
				overflow auto
				&:nth-child(1)
					&.succeed,
					&.failed
						&::before
							display flex
							align-items center
							justify-content center
							width 34rpx
							height 34rpx
							position absolute
							top 24rpx
							left 166rpx
							content '\e630'
							font-size 36rpx
							color $deepThemeColor
					&.failed
						&::before
							content '\e626'
							color $error
				&:nth-child(2)
					&.succeed,
					&.failed
						&::before
							display flex
							align-items center
							justify-content center
							width 34rpx
							height 34rpx
							position absolute
							top 24rpx
							left 342rpx
							content '\e630'
							font-size 36rpx
							color $deepThemeColor
					&.failed
						&::before
							content '\e626'
							color $error
	// 按钮区域
	.btns
		position relative
		margin-top 66rpx
		background: red
		.choice-from-album
			position absolute
			display flex
			align-items center
			justify-content center
			top 46rpx
			left 78rpx
			width 62.6rpx
			height 50rpx
			&::before
				content '\e646'
				color #fff
				font-size 70rpx
		.take-photo
			position absolute
			display flex
			align-items center
			justify-content center
			width 140rpx
			height 140rpx
			border-radius 50%
			background: #fff
			left 50%
			margin-left -70rpx
			& > image
				width 64rpx
				height 54rpx
