.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.index {
  margin: 0;
  padding: 0;
  width: 100vw;
  min-height: 100vh;
  background-color: #fff;
}

.changeBg {
  background-color: #ECECEC;
}

/* 顶部组件占位 */
.index .topSplit {
  width: 100%;
  height: 60rpx;
}

/* 公共模块 */
.index .module {
  width: 694rpx;
  border-radius: 16rpx;
  background-color: #fff;
  margin: 32rpx 0rpx 0rpx 0rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}

.index .boxS {
  box-shadow: 0px 4rpx 2rpx 0rpx rgba(212, 212, 212, 0.5);
}

.index .module .titles {
  height: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #000000;
  line-height: 48rpx;
  padding-left: 36rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
}

/* 模块一 */
.index .moduleOne {
  min-height: 400rpx;
  padding: 40rpx 0rpx 20rpx 0rpx;
}

.index .moduleOne .photo-wrapper {
  display: flex;
  height: 330rpx;
  justify-content: space-between;
}

.index .moduleOne .changeOne {
  margin: 20rpx 36rpx 0rpx 36rpx;
}

.index .moduleOne .photo-wrapper .photo {
  width: 326rpx;
  height: 330rpx;
  text-align: center;
  border-radius: 16rpx;
  background: #F6F6F6;
}

.index .moduleOne .photo-wrapper .changeTwo {
  width: 300rpx;
  background-color: #ffffff;
}

.index .moduleOne .photo-wrapper .photo .upload {
  width: 90%;
  height: 192rpx;
  overflow: hidden;
  margin: 22rpx 5%;
  border-radius: 8rpx;
  background: #FAFAFA;
}

.index .moduleOne .photo-wrapper .photo .changeThree {
  width: 100%;
  margin: 22rpx 0%;
}

.index .moduleOne .photo-wrapper .photo .upload .img-box {
  width: 100%;
  height: 100%;
  position: relative;
}

.index .moduleOne .photo-wrapper .photo:nth-of-type(1) .upload .img-box {
  background: url('https://file.cyzl.com/g001/M01/C7/A2/oYYBAGPs5VGAN4KUAAAf_5IXjB0976.png') center no-repeat;
  background-size: 80% 80%;
}

.index .moduleOne .photo-wrapper .photo:nth-of-type(2) .upload .img-box {
  background: url('https://file.cyzl.com/g001/M01/C7/A2/oYYBAGPs5YWAdC_FAAAXSu-w0ZM580.png') center no-repeat;
  background-size: 80% 80%;
}

.index .moduleOne .photo-wrapper .photo .upload .img-box .ico {
  width: 56rpx;
  height: 49rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.index .moduleOne .photo-wrapper .photo .upload .img-box .identify {
  width: 100%;
  height: 100%;
  color: #fff;
  font-size: 24rpx;
  background: rgba(47, 181, 101, 0.64);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.index .moduleOne .photo-wrapper .photo .upload .img-box .identify .refresh {
  width: 50rpx;
  height: 50rpx;
  margin-top: 50rpx;
  text-align: center;
}

.index .moduleOne .photo-wrapper .photo .upload .success {
  width: 100%;
  height: 100%;
}

.index .moduleOne .photo-wrapper .photo .cardText {
  margin-top: 40rpx;
}

/* 模块二 信息显示 */
.index .moduleTwo {
  padding: 40rpx 0rpx;
}

.index .moduleTwo .tips {
  font-size: 20rpx;
  font-weight: 400;
  color: #F19C38;
  margin: 10rpx 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
}

.index .moduleTwo .keyValue {
  height: 66rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0rpx 36rpx 20rpx 36rpx;
  border-bottom: 1px solid #E0E0E0;
  font-family: PingFangSC-Regular, PingFang SC;
}

.index .moduleTwo .keyValue .attrName {
  font-size: 28rpx;
  font-weight: 400;
  color: #1E1E1E;
}

.index .moduleTwo .keyValue .attrValue {
  height: 64rpx;
  display: flex;
  align-items: center;
}

.index .moduleTwo .keyValue .attrValue .input {
  display: block;
  max-width: 400rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #262626;
  text-align: right;
  word-wrap: break-word;
  font-family: PingFangSC-Semibold, PingFang SC;
}

.index .moduleTwo .keyValue .attrValue .textarea {
  display: block;
  max-width: 400rpx;
  height: 100%;
  font-size: 28rpx;
  font-weight: 600;
  color: #262626;
  text-align: right;
  font-family: PingFangSC-Semibold, PingFang SC;
}

.index .moduleTwo .keyValue .attrValue .input-placeholder {
  color: rgba(212, 212, 212, 0.7)
}

/* 占位 */
.index .split {
  width: 100%;
  height: 280rpx;
  overflow: hidden;
}

/* 底部悬浮按钮 */
.index .bottomBtn {
  display: flex;
  width: 750rpx;
  height: 244rpx;
  align-items: center;
  background: #FFFFFF;
  justify-content: center;
  box-shadow: 0rpx -8rpx 30rpx 0rpx rgba(223, 223, 223, 0.36);
  border-radius: 16rpx 16rpx 0rpx 0rpx;
  opacity: 0.9;
  position: fixed;
  bottom: 0rpx;
}

.index .bottomBtn .btnClose {
  width: 662rpx;
  height: 110rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
  text-align: center;
  line-height: 110rpx;
  border-radius: 64rpx;
  background: #C0C0C0;
  font-family: PingFangSC-Semibold, PingFang SC;
  box-shadow: 0rpx -8rpx 30rpx 0rpx rgba(223, 223, 223, 0.36), 0px 4rpx 2rpx 0rpx rgba(212, 212, 212, 0.5);
}

.index .bottomBtn .available {
  background: #2A4F44;
  animation: btnFadeIn 0.3s;
  animation-fill-mode: forwards;
}

.index .bottomBtn .unavailable {
  animation: btnFadeOut 0.3s;
  animation-fill-mode: forwards;
}