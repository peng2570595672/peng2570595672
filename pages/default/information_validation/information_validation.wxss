@keyframes btnFadeIn {
  from {
    opacity: 0.2;
  }
  to {
    opacity: 1;
  }
}
@keyframes btnFadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0.2;
  }
}
.information_validation {
  min-height: 100vh;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  flex-direction: column;
}
.information_validation .label {
  font-size: 28rpx;
  line-height: 40rpx;
  color: rgba(0,0,0,0.5);
  padding: 52rpx 32rpx 0;
}
.information_validation .title {
  display: flex;
  align-items: center;
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #000;
  padding: 32rpx 32rpx 26rpx;
}
.information_validation .title::before {
  margin-right: 8rpx;
  content: '';
  width: 8rpx;
  height: 44rpx;
  background: #2fb565;
}
.information_validation .photo-wrapper {
  display: flex;
  justify-content: space-between;
  padding: 0 32rpx;
}
.information_validation .photo-wrapper > view:first-child {
  margin-right: auto;
}
.information_validation .photo-wrapper .photo {
  position: relative;
  overflow: hidden;
  width: 326rpx;
  height: 332rpx;
  background: #f6f6f6;
  border-radius: 16rpx;
  text-align: center;
}
.information_validation .photo-wrapper .photo .upload .img-box {
  position: relative;
  width: 296rpx;
  height: 192rpx;
  background: #fafafa;
  border-radius: 8rpx;
  margin: 22rpx auto 36rpx;
}
.information_validation .photo-wrapper .photo .upload .img-box .ico {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 56rpx;
  height: 49rpx;
}
.information_validation .photo-wrapper .photo .upload .img-box .identify {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(47,181,101,0.64);
  font-size: 24rpx;
  color: #fff;
}
.information_validation .photo-wrapper .photo .upload .img-box .identify image {
  width: 50rpx;
  height: 50rpx;
  margin: 45rpx 0 8rpx;
}
.information_validation .photo-wrapper .photo .upload .success {
  width: 296rpx;
  height: 192rpx;
  margin: 22rpx auto 36rpx;
}
.information_validation .tips {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  padding-left: 52rpx;
  height: 40rpx;
  font-size: 24rpx;
  color: #66666d;
  opacity: 0.85;
}
.information_validation .content-wrapper {
  padding-left: 32rpx;
  min-height: 352rpx;
  background: #fff;
  overflow: hidden;
}
.information_validation .content-wrapper .item {
  display: flex;
  align-items: center;
  padding-right: 32rpx;
  font-size: 32rpx;
  color: rgba(0,0,0,0.5);
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
  box-sizing: border-box;
}
.information_validation .content-wrapper .item > view {
  padding-top: 30rpx;
  padding-bottom: 10rpx;
  flex: 0.35;
}
.information_validation .content-wrapper .item > input,
.information_validation .content-wrapper .item > picker,
.information_validation .content-wrapper .item > textarea {
  padding-top: 30rpx;
  padding-bottom: 10rpx;
  flex: 0.65;
  font-weight: 400;
  line-height: 48rpx;
  text-align: right;
  color: rgba(0,0,0,0.9);
}
.information_validation .content-wrapper .item > textarea {
  line-height: 0;
}
.information_validation .content-wrapper .item .ownership-type {
  display: flex;
  color: rgba(0,0,0,0.9);
  flex: 0.65;
  justify-content: right;
}
.information_validation .content-wrapper .item .ownership-type > view {
  flex: 1;
  justify-content: right;
  text-align: right;
  margin-left: 50rpx;
}
.information_validation .content-wrapper .item .ownership-type > view::before {
  content: '';
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #c8c8c8;
  margin-right: 10rpx;
}
.information_validation .content-wrapper .item .ownership-type > view.active::before {
  background: linear-gradient(50deg, #14ac69 0%, #84d157 100%);
}
.information_validation .content-wrapper .item .ownership-type > view:first-child {
  margin-left: 20rpx;
}
.information_validation .content-wrapper .item.first {
  border-bottom: 0;
}
.information_validation .content-wrapper .item.axle {
  display: flex;
  border: 0;
}
.information_validation .content-wrapper .item.axle .choice-axle {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  background: #f3f3f3;
  position: relative;
}
.information_validation .content-wrapper .item.axle .choice-axle::after {
  position: absolute;
  right: 20rpx;
  content: '\e60e';
  transform: rotateZ(-90deg);
}
.information_validation .content-wrapper .split {
  margin-right: 32rpx;
  border-bottom: 1rpx dashed #979797;
}
.information_validation .auto-fill {
  flex: 1;
}
.information_validation .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 60rpx;
  margin-top: 46rpx;
  margin-bottom: 40rpx;
  height: 98rpx;
  font-size: 40rpx;
  font-weight: 500;
  color: #fff;
  border-radius: 49rpx;
  background: linear-gradient(to right, #15ad69, #84d157);
}
.information_validation .btn.available {
  animation: btnFadeIn 0.3s;
  animation-fill-mode: forwards;
}
.information_validation .btn.unavailable {
  animation: btnFadeOut 0.3s;
  animation-fill-mode: forwards;
}
