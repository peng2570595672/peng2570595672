page{
	background: #F2F2F2;
}
.fix-tab{
	background-color: #fff;
	height: 88rpx;
	line-height 88rpx
	position: fixed;
	top: 0;
	left: 0;
	z-index: 99;
	width: 100%;
	white-space: nowrap;
	overflow-x: auto;
	padding-left: 24rpx;
	box-sizing border-box
	.tab-item{
		display: inline-block;
		text-align: center;
		background-color: #F6F7F8;
		height: 56rpx;
		line-height: 56rpx;
		border-radius: 30rpx;
		margin-right: 20rpx;
		color: #666;
		font-size: 26rpx;
		padding: 0 24rpx;
		font-weight: 400;
	}
	.active{
		position: relative;
		background: rgba(20,126,74,0.1);
		color: #147E4A;
		font-weight: 500;
	}
}

.list{
	margin-top: 88rpx;
	padding: 24rpx 28rpx;
	.list-item{
		background: #fff;
		border-radius: 24rpx;
		min-height: 204rpx;
		padding: 30rpx;
		box-sizing: border-box;
		margin-bottom: 20rpx;
		.title{
			font-weight: 500;
			color: #19222B;
			font-size: 32rpx;
		}
		.phone-view{
			font-size: 24rpx;
			color: #333;
			display: flex;
			padding-top: 20rpx;
			.first-phone{
				display: flex;
				align-items: center;
				padding-right: 16rpx;
				line-height 20rpx;
				text{
					color #333
				}
				image{
					width: 24rpx;
					height: 24rpx;
					margin-right: 8rpx;
				}
			}
		}
		.location{
			color: #878787;
			padding-top: 20rpx;
			font-size: 22rpx;
			display: flex;
			align-items: center;
			image{
				width: 28rpx;
				height: 28rpx;
			}
		}
	}
}
.border-l-eee{
	border-left: 2rpx solid #666;
}
.p-l-16r{
	padding-left: 16rpx;
}
.p-l-5r{padding-left: 5rpx}
.flex_1{flex: 1;-webkit-flex:1;display: block;min-width: 0;}

