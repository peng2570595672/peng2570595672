@import "../../../style/base.styl";
.signed_successfully
	// 成功结果
	& > image
		display block
		margin 80rpx auto 0
		width 304rpx
		height 238rpx
	// 主标题
	.signed_title
		display flex
		align-items center
		justify-content center
		height 76rpx
		font-size 60rpx
	.signed_subtitle
		margin-top 160rpx
		display flex
		align-items center
		justify-content center
		height 48rpx
		font-size 32rpx
		color $fontColor6
	// 操作部分
	.btns
		margin-top 20rpx
		padding 0 60rpx
		& > view
			display flex
			align-items center
			justify-content center
			height 98rpx
			border-radius 49rpx
			&.upload
				font-size 32rpx
				color #fff
				background: linear-gradient(to right , $deepThemeColor, $shallowThemeColor)
				&::before
					margin-right 20rpx
					display flex
					align-items center
					justify-content center
					width 59rpx
					height 49rpx
					content '\e65c'
					font-size 58rpx
			&:last-of-type
				padding 3rpx
				margin-top 40rpx
				font-size 28rpx
				color $fontColor
				background: linear-gradient(to right , $deepThemeColor, $shallowThemeColor)
				overflow hidden
				& > view
					display flex
					align-items center
					justify-content center
					width 100%
					height 100%
					background: #fff
					border-radius 46rpx
