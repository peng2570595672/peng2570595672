.container
	background-color #2A4F44
	min-height 100vh
	.img
		width 100%
		display block
		font-size 0
		vertical-align top
		margin-top -1rpx
	.sms-box
		padding 18rpx 56rpx
		.input-item
			position relative
			display flex
			align-items center
			height 98rpx
			color #fff
			font-size 44rpx
			box-sizing border-box
			border: 2rpx solid #E4CB86;
			&.phone
				margin-bottom 36rpx
			& > view
				display flex
				flex 0 0 94rpx
				align-items center
				justify-content center
				image
					width 33rpx
					height 42rpx
			& > input
				flex 1
				//z-index 0 !important
				//text-align left
				//font-size 44rpx
				//color #fff
			.placeholder
				font-size 24rpx
			// 获取验证码
			.validate-code
				width 250rpx
				display flex
				align-items center
				justify-content center
				height 54rpx
				font-size 32rpx
				color #E4CB86
				border-left 1rpx solid #E4CB86
				box-sizing border-box
		.sign-tips
			height: 44rpx;
			display flex
			align-items center
			justify-content flex-end
			font-size: 24rpx;
			font-family: PingFang SC-Regular, PingFang SC;
			font-weight: 400;
			color: #4191F0;
			padding-top 16rpx
			padding-bottom: 24rpx;
		.notice
			height: 44rpx;
			font-size: 28rpx;
			font-family: PingFang SC-Semibold, PingFang SC;
			font-weight: 600;
			color: #EC602A;
			line-height: 44rpx;
			&.notice-occupied
				margin-top: 84rpx;
			.waring
				margin-bottom 14rpx
	.canvas-box
		width: 694rpx;
		height: 838rpx;
		background: #FFFFFF;
		border-radius: 16rpx;
		padding 36rpx 0
		box-sizing border-box
		position relative
		margin 14rpx auto 70rpx
		.canvas-title
			height: 34rpx;
			display flex
			align-items center
			font-size: 24rpx;
			font-family: PingFangSC-Regular, PingFang SC;
			font-weight: 400;
			color: #1E1E1E;
			padding-right 34rpx
			line-height: 28px;
			.ico
				width 34rpx
				margin-left 48rpx
				margin-right 22rpx
			.title
				flex 1
			.clear
				font-size 28rpx
		.canvas-content
			width 100%
			height 560rpx
			background url("https://file.cyzl.com/g001/M01/CF/9B/oYYBAGQZCSeASFK1AAAStaH6eaM004.png")
			background-size cover
		.tips
			text-align center
			font-size: 24rpx;
			font-family: PingFang SC-Regular, PingFang SC;
			font-weight: 400;
			color: rgba(30,30,30,0.5);
			line-height: 28rpx;
			margin-bottom 42rpx
		.btn-container
			display flex
			justify-content space-between
			padding 0rpx 28rpx
			box-sizing border-box
			.cancel
				width: 224rpx;
				height: 106rpx;
				display flex
				align-items center
				justify-content center
				background: rgba(255,255,255,0.01);
				border-radius: 53rpx;
				opacity: 1;
				border: 2rpx solid #2A4F44;
				font-size: 32rpx;
				font-family: PingFang SC-Regular, PingFang SC;
				font-weight: 400;
				color: #2A4F44;
