.container
	background-color #2A4F44
	min-height 100vh
	.img
		width 100%
		display block
		font-size 0
		vertical-align top
		margin-top -1rpx
	.canvas-box
		width: 694rpx;
		height: 838rpx;
		background: #FFFFFF;
		border-radius: 16rpx;
		padding 36rpx 0
		box-sizing border-box
		position relative
		margin 14rpx auto 70rpx
		.canvas-title
			height: 34rpx;
			display flex
			align-items center
			font-size: 24rpx;
			font-family: PingFangSC-Regular, PingFang SC;
			font-weight: 400;
			color: #1E1E1E;
			padding-right 34rpx
			line-height: 28px;
			.ico
				width 34rpx
				margin-left 48rpx
				margin-right 22rpx
			.title
				flex 1
			.clear
				font-size 28rpx
		.canvas-content
			width 100%
			height 560rpx
		.tips
			text-align center
			font-size: 24rpx;
			font-family: PingFang SC-Regular, PingFang SC;
			font-weight: 400;
			color: rgba(30,30,30,0.5);
			line-height: 28rpx;
			margin-bottom 42rpx
		.btn-container
			display flex
			justify-content space-between
			padding 0rpx 28rpx
			box-sizing border-box
			.cancel
				width: 224rpx;
				height: 106rpx;
				display flex
				align-items center
				justify-content center
				background: rgba(255,255,255,0.01);
				border-radius: 53rpx;
				opacity: 1;
				border: 2rpx solid #2A4F44;
				font-size: 32rpx;
				font-family: PingFang SC-Regular, PingFang SC;
				font-weight: 400;
				color: #2A4F44;
			.btn
