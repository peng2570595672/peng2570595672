.widget {
  min-height: 100vh;
}
.container {
  background-color: #2a4f44;
  min-height: 120vh;
}
.container .img {
  width: 100%;
  display: block;
  font-size: 0;
  vertical-align: top;
  margin-top: -1rpx;
}
.container .sms-box {
  padding: 18rpx 56rpx;
}
.container .sms-box .input-item {
  position: relative;
  display: flex;
  align-items: center;
  height: 98rpx;
  color: #fff;
  font-size: 44rpx;
  box-sizing: border-box;
  border: 2rpx solid #e4cb86;
}
.container .sms-box .input-item.phone {
  margin-bottom: 36rpx;
}
.container .sms-box .input-item > view {
  display: flex;
  flex: 0 0 94rpx;
  align-items: center;
  justify-content: center;
}
.container .sms-box .input-item > view image {
  width: 33rpx;
  height: 42rpx;
}
.container .sms-box .input-item > input {
  flex: 1;
}
.container .sms-box .input-item .placeholder {
  font-size: 24rpx;
}
.container .sms-box .input-item .validate-code {
  width: 250rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 54rpx;
  font-size: 32rpx;
  color: #e4cb86;
  border-left: 1rpx solid #e4cb86;
  box-sizing: border-box;
}
.container .sms-box .sign-tips {
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  font-size: 24rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: #4191f0;
  padding-top: 16rpx;
  padding-bottom: 24rpx;
}
.container .sms-box .notice {
  height: 44rpx;
  font-size: 28rpx;
  font-family: PingFang SC-Semibold, PingFang SC;
  font-weight: 600;
  color: #ec602a;
  line-height: 44rpx;
}
.container .sms-box .notice.notice-occupied {
  margin-top: 84rpx;
}
.container .sms-box .notice .waring {
  margin-bottom: 14rpx;
}
.container .canvas-box {
  width: 694rpx;
  height: 858rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 36rpx 0;
  box-sizing: border-box;
  position: relative;
  margin: 14rpx auto 70rpx;
}
.container .canvas-box .canvas-title {
  height: 34rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #1e1e1e;
  padding-right: 34rpx;
  line-height: 28px;
}
.container .canvas-box .canvas-title .ico {
  width: 34rpx;
  margin-left: 48rpx;
  margin-right: 22rpx;
}
.container .canvas-box .canvas-title .title {
  flex: 1;
}
.container .canvas-box .canvas-title .clear {
  font-size: 28rpx;
}
.container .canvas-box .canvas-content {
  width: 100%;
  height: 560rpx;
  background: url("https://file.cyzl.com/g001/M01/CF/9B/oYYBAGQZCSeASFK1AAAStaH6eaM004.png");
  background-size: cover;
}
.container .canvas-box .tips {
  text-align: left;
  font-size: 24rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(30,30,30,0.5);
  line-height: 36rpx;
  margin-bottom: 40rpx;
}
.container .canvas-box .btn-container {
  display: flex;
  justify-content: space-between;
  padding: 0rpx 28rpx;
  box-sizing: border-box;
}
.container .canvas-box .btn-container .cancel {
  width: 224rpx;
  height: 106rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255,255,255,0.01);
  border-radius: 53rpx;
  opacity: 1;
  border: 2rpx solid #2a4f44;
  font-size: 32rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: #2a4f44;
}
.container .canvas-box .btn-container .btn {
  width: 388rpx;
  height: 106rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255,255,255,0.01);
  border: 2rpx solid #2a4f44;
  border-radius: 53rpx;
  opacity: 1;
  font-size: 32rpx;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #2a4f44;
}
.container .canvas-box .btn-container .showColor {
  color: #fff;
  background: #2a4f44;
  border: none;
}
.pictorial {
  position: fixed;
  top: 0;
  left: -9999rpx;
  width: 2240rpx;
  height: 3720rpx;
  z-index: 99999999999;
}
.container .canvas-box .btn-radioChange {
  padding: 0 36rpx;
  justify-content: center;
  display: flex;
}
.container .canvas-box .btn-radioChange .oksingIcon {
  transform: scale(0.8);
}
.container .canvas-box .btn-radioChange .top {
  margin-top: -6rpx;
}
