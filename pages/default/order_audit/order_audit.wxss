.signed_successfully {
  display: flex;
  flex-direction: column;
  background: #fff;
  padding: 0 32rpx;
  box-sizing: border-box;
  text-align: center;
  min-height: 100vh;
}
.signed_successfully > image {
  display: block;
  margin: 80rpx auto 0;
  width: 304rpx;
  height: 238rpx;
}
.signed_successfully .signed_title {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 76rpx;
  color: rgba(0,0,0,0.9);
  font-size: 44rpx;
  font-weight: 500;
}
.signed_successfully .tips {
  color: #66666d;
  font-size: 28rpx;
  line-height: 44rpx;
  padding-top: 32rpx;
}
.signed_successfully .tips text {
  color: #39a6f8;
}
.signed_successfully .fill {
  flex: 1;
}
.signed_successfully .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 86rpx 0rpx 48rpx;
  height: 98rpx;
  font-size: 40rpx;
  font-weight: 500;
  color: #fff;
  border-radius: 49rpx;
  background: linear-gradient(to right, #15ad69, #84d157);
}
.signed_successfully .btn.available {
  animation: btnFadeIn 0.3s;
  animation-fill-mode: forwards;
}
.signed_successfully .btn.unavailable {
  animation: btnFadeOut 0.3s;
  animation-fill-mode: forwards;
}
.signed_successfully .service {
  margin-bottom: 90rpx;
  font-size: 28rpx;
  color: #1797f7;
}
