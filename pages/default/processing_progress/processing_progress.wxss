.processing_progress {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}
.processing_progress .title {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  padding: 0 40rpx;
  height: 56rpx;
  font-size: 40rpx;
}
.processing_progress .title.other-title {
  margin-top: 40rpx;
  font-weight: bold;
}
.processing_progress .title::before {
  margin-right: 10rpx;
  content: '';
  width: 10rpx;
  height: 10rpx;
  border: 6rpx solid #2fb565;
  border-radius: 50%;
}
.processing_progress .user-info {
  margin-top: 10rpx;
  padding-left: 80rpx;
  color: #66666d;
  font-size: 24rpx;
}
.processing_progress .user-info > view {
  display: flex;
  align-items: center;
  height: 40rpx;
}
.processing_progress .user-info > view > text:first-of-type {
  margin-right: 20rpx;
}
.processing_progress .progress_wrapper {
  margin: 10rpx 50rpx 0;
  padding-top: 40rpx;
  box-shadow: 4rpx 12rpx 56rpx 0 rgba(102,102,109,0.19);
  border-radius: 12rpx;
}
.processing_progress .progress_wrapper .item {
  position: relative;
  margin-left: 36rpx;
  padding-bottom: 40rpx;
  border-left: 1rpx dashed #cdcdcf;
}
.processing_progress .progress_wrapper .item.current::before {
  background: #2fb565;
}
.processing_progress .progress_wrapper .item.finished .content-title {
  color: #2fb565;
}
.processing_progress .progress_wrapper .item.finished::before {
  background: #2fb565;
}
.processing_progress .progress_wrapper .item.finished::after {
  position: absolute;
  top: 0;
  left: -3rpx;
  content: '';
  display: inline-block;
  width: 4rpx;
  height: 100%;
  background: #2fb565;
}
.processing_progress .progress_wrapper .item::before {
  position: absolute;
  top: -8rpx;
  left: -9rpx;
  content: '';
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #99999d;
}
.processing_progress .progress_wrapper .item:last-of-type {
  border-left: 0;
}
.processing_progress .progress_wrapper .item:last-of-type::before {
  left: -8rpx;
}
.processing_progress .progress_wrapper .item .content-title {
  position: relative;
  padding-left: 26rpx;
  display: flex;
  align-items: center;
  height: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  transform: translateY(-24rpx);
}
.processing_progress .progress_wrapper .item .content-des {
  display: flex;
  margin-top: 10rpx;
  padding-left: 26rpx;
  padding-right: 80rpx;
  line-height: 40rpx;
  color: #66666d;
  font-size: 24rpx;
  transform: translateY(-24rpx);
}
.processing_progress .progress_wrapper .item .content-des.error {
  color: #ff563c;
}
.processing_progress .progress_wrapper .item .content-des.error::before {
  margin-right: 8rpx;
  content: '\e617';
}
.processing_progress .progress_wrapper .item .content-des .refresh {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #39a6f8;
}
.processing_progress .progress_wrapper .item .content-des .refresh::after {
  margin-left: 12rpx;
  content: '\e616';
  font-size: 28rpx;
}
.processing_progress .progress_wrapper .item .content-des .edit {
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  color: #39a6f8;
  font-size: 24rpx;
}
.processing_progress .progress_wrapper .item .content-des .edit::after {
  display: inline-block;
  content: '\e60e';
  transform: rotateZ(-180deg) translateY(2rpx);
}
.processing_progress .progress_wrapper .item .content-des .copy {
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  color: #39a6f8;
  font-size: 24rpx;
}
.processing_progress .progress_wrapper .last::after {
  display: none !important;
}
.processing_progress .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx 60rpx 0;
  height: 98rpx;
  font-size: 40rpx;
  font-weight: 500;
  color: #fff;
  background: linear-gradient(to right, #15ad69, #84d157);
  border-radius: 49rpx;
}
.processing_progress .auto-fill {
  flex: 1;
}
.processing_progress .bottom {
  margin-top: 16rpx;
  margin-bottom: 40rpx;
  height: 40rpx;
  text-align: center;
  font-size: 24rpx;
  color: #e4e4e6;
}
.processing_progress .bottom text {
  color: #39a6f8;
  margin: 0 16rpx;
}
.processing_progress .detail_mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.7);
}
.processing_progress .detail_mask .detail_wrapper {
  position: absolute;
  left: 0;
  right: 0;
  top: 40%;
  transform: translate(0, -50%);
  width: 60%;
  min-height: 400rpx;
  margin: 0 auto;
  z-index: 2;
}
.processing_progress .detail_mask .detail_wrapper > image {
  width: 100%;
}
.processing_progress .detail_mask .activity_button {
  margin: 0 auto;
  text-align: center;
  z-index: 2;
  width: 500rpx;
  height: 90rpx;
}
.processing_progress .detail_mask .activity_button > image {
  width: 120%;
  margin-left: -10%;
  margin-top: -80rpx;
}
.processing_progress .detail_mask .close_button {
  position: absolute;
  left: 615rpx;
  right: 0;
  margin-top: -905rpx;
  z-index: 2;
}
.processing_progress .detail_mask .close_button::before {
  content: '\e63d';
  color: #fff;
  font-size: 18rpx;
}
