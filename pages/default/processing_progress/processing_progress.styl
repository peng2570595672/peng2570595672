@import "../../../style/base.styl";
mixinsWidthHeight($width = 100%, $height = 100%)
    width $width
    height $height
mixinsPositionPack($position=relative)
    position $position
    left 50%
    transform translateX(-50%)
.processing_progress
    display flex
    flex-direction column
    min-height 100vh
    // 车牌
    .title
        margin-top 20rpx
        display flex
        align-items center
        padding 0 40rpx
        height 56rpx
        font-size 40rpx
        &.other-title
            margin-top 40rpx
            font-weight bold
        &::before
            margin-right 10rpx
            content ''
            width 10rpx
            height 10rpx
            border 6rpx solid $fontColor
            border-radius 50%
    // 用户信息
    .user-info
        margin-top 10rpx
        padding-left 80rpx
        color $fontColor6
        font-size 24rpx
        & > view
            display flex
            align-items center
            height 40rpx
            & > text
                &:first-of-type
                    margin-right 20rpx
    // 进度容器
    .progress_wrapper
        margin 10rpx 50rpx 0
        padding-top 40rpx
        box-shadow: 4rpx 12rpx 56rpx 0 rgba(102,102,109,0.19);
        border-radius: 12rpx
        .item
            position relative
            margin-left 36rpx
            padding-bottom 40rpx
            border-left 1rpx dashed #CDCDCF
            &.current
                &::before
                    background: $fontColor
            &.finished
                .content-title
                    color $fontColor
                &::before
                    background: $fontColor
                &::after
                    position absolute
                    top 0
                    left -3rpx
                    content ''
                    display inline-block
                    width 4rpx
                    height 100%
                    background: $fontColor
            &::before
                position absolute
                top -8rpx
                left -9rpx
                content ''
                display inline-block
                width 16rpx
                height 16rpx
                border-radius 50%
                background: $fontColor9
            &:last-of-type
                border-left 0
                &::before
                    left -8rpx
            .content-title
                position relative
                padding-left 26rpx
                display flex
                align-items center
                height 48rpx
                font-size 32rpx
                font-weight 500
                transform translateY(-24rpx)
            .content-des
                display flex
                margin-top 10rpx
                padding-left 26rpx
                padding-right 40rpx
                line-height 40rpx
                color $fontColor6
                font-size 24rpx
                transform translateY(-24rpx)
                &.prompt
                    color #FF3C48
                &.error
                    color $error
                    &::before
                        margin-right 8rpx
                        content '\e617'
                .refresh
                    display flex
                    align-items center
                    margin-left 20rpx
                    font-size 24rpx
                    color $blueColor
                    &::after
                        margin-left 12rpx
                        content '\e616'
                        font-size 28rpx
                .edit
                    margin-left 20rpx
                    display flex
                    align-items center
                    color $blueColor
                    font-size 24rpx
                    &::after
                        display inline-block
                        content '\e60e'
                        transform rotateZ(-180deg) translateY(2rpx)
                .copy
                    margin-left 20rpx
                    display flex
                    align-items center
                    color $blueColor
                    font-size 24rpx
                &.earnest-money
                    display block
                    .money
                        color #00B85C
                    .failure
                        color #FF3C48
                    .precharge
                        color #00B1FF
                &.account
                    display block
                .precharge
                    color #00B1FF
            // 预充方式
            .handle-the-way
                display flex
                height 148rpx
                width 552rpx
                align-items center
                border-radius 16rpx
                margin-top 12rpx
                margin-left 26rpx
                background #F6F6F6
                .name
                    flex 1
                    .top
                        font-size 34rpx
                        line-height 48rpx
                        color rgba(0, 0, 0, .9)
                    .poundage
                        font-size 24rpx
                        line-height 40rpx
                        color rgba(0, 0, 0, .25)
                .choice
                    font-size 24rpx
                    color rgba(0, 0, 0, .1)
                    margin-right 32rpx
                image
                    flex 0 0 48rpx
                    width 48rpx
                    height 48rpx
                    margin-left 24rpx
                    margin-right 12rpx
            .content-info
                background #F0F0F0
                margin 0rpx 40rpx 32rpx 24rpx
                padding 32rpx 18rpx
                font-size 24rpx
                line-height 44rpx
                text
                    padding-left 12rpx
                    color #00A9FF
            .already-prepaid
                text-align right
                color #00B85C
                font-size 24rpx
                padding-right 40rpx
                padding-top 32rpx
        .last
            &::after
                display none!important
    // 确认收货
    .btn
        display flex
        align-items center
        justify-content center
        margin 40rpx 60rpx 0
        height 98rpx
        font-size 40rpx
        font-weight 500
        color #fff
        background: linear-gradient(to right, $deepThemeColor, $shallowThemeColor)
        border-radius 49rpx
    // 自动填充
    .auto-fill
        flex 1
    // 在线客服
    .bottom
        margin-top 16rpx
        margin-bottom 40rpx
        height 40rpx
        text-align center
        font-size 24rpx
        color #E4E4E6
        text
            color $blueColor
            margin 0 16rpx
    //微保活动弹框
    .detail_mask
        position fixed
        left 0
        top 0
        right 0
        bottom 0
        background rgba(0, 0, 0, .7)
        .detail_wrapper
            position absolute
            left 0
            right 0
            top 50%
            transform translate(0, -50%)
            width 100%
            min-height 400rpx
            margin 0 auto
            z-index 2
            & > image
                width 100%
        .activity_button
            margin -80rpx auto 0
            text-align center
            z-index 2
            width 100%
            min-height 30rpx
            button
                width 524rpx
                height 98rpx
                line-height 98rpx
                background linear-gradient(289deg, #5913C8 0%, #D531BE 100%)
                box-shadow 0rpx 4rpx 12rpx 0rpx rgba(0,0,0,0.5)
                border-radius 49rpx
                font-size 50rpx
                font-family PingFangSC-Semibold, PingFang SC
                font-weight 500
                color #F7DC00
                letter-spacing 4rpx
        .close_button
            position absolute
            right 50rpx
            z-index 3
            &::before
                display inline-block
                content '\e63d'
                color #ffffff
                width 54rpx
                height 54rpx
                line-height 54rpx
                text-align center
                border 1rpx solid #ffffff
                border-radius 50%
                opacity .57
                font-size 23rpx
        .bottom_close_button
            margin 80rpx auto 0
            text-align center
            z-index 2
            &::before
                display inline-block
                content '\e63d'
                color #ffffff
                width 66rpx
                height 66rpx
                line-height 66rpx
                text-align center
                border 1rpx solid #ffffff
                border-radius 50%
                opacity .57
                font-size 28rpx
    .moduleFour
        padding 0
        margin 28rpx 28rpx 40rpx 28rpx
        font-family PingFangSC-Medium, PingFang SC
        position relative
        height 166rpx
        overflow hidden
        .swiper
            mixinsWidthHeight(100%,100%)
            .swiper-item
                mixinsWidthHeight(100%,100%)
                .image
                    mixinsWidthHeight(100%,100%)
        .dots
            mixinsWidthHeight(120rpx,8rpx)
            mixinsPositionPack(absolute)
            bottom 8rpx
            display flex
            justify-content center
            z-index 100
            .subDoc
                transition 0.3s
                -webkit-transition 0.3s
                margin-right 6rpx
                mixinsWidthHeight(8rpx,8rpx)
                border-radius 50%
                background #eee
                animation testDoc 0.2 linear reverse
                &.active
                    transition 0.3s
                    -webkit-transition 0.3s
                    mixinsWidthHeight(18rpx,8rpx)
                    border-radius 10rpx
                    background rgba(0, 0, 0, 0.7)
    //通通券弹框
    .coupon_mask
        position fixed
        left 0
        top 0
        right 0
        bottom 0
        background rgba(0, 0, 0, .7)
        .detail_wrapper
            position absolute
            left 0
            right 0
            top 50%
            transform translate(0, -50%)
            width 100%
            min-height 400rpx
            margin 0 auto
            z-index 2
            text-align center
            .mask-bg
                image
                    width 500rpx
            .vip-bg
                position relative
                z-index 1
                margin-top -156rpx
                image
                    width 464rpx
            .mask-btn
                margin-top 20rpx
                image
                    width 686rpx
