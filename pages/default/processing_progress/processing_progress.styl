@import "../../../style/base.styl";
.processing_progress
	display flex
	flex-direction column
	min-height 100vh
	// 车牌
	.title
		margin-top 20rpx
		display flex
		align-items center
		padding 0 40rpx
		height 56rpx
		font-size 40rpx
		&.other-title
			margin-top 40rpx
			font-weight bold
		&::before
			margin-right 10rpx
			content ''
			width 10rpx
			height 10rpx
			border 6rpx solid $fontColor
			border-radius 50%
	// 用户信息
	.user-info
		margin-top 10rpx
		padding-left 80rpx
		color $fontColor6
		font-size 24rpx
		& > view
			display flex
			align-items center
			height 40rpx
			& > text
				&:first-of-type
					margin-right 20rpx
	// 进度容器
	.progress_wrapper
		margin 10rpx 50rpx 0
		padding-top 40rpx
		box-shadow: 4rpx 12rpx 56rpx 0 rgba(102,102,109,0.19);
		border-radius: 12rpx
		.item
			position relative
			margin-left 36rpx
			padding-bottom 40rpx
			border-left 1rpx dashed #CDCDCF
			&.current
				&::before
					background: $fontColor
			&.finished
				.content-title
					color $fontColor
				&::before
					background: $fontColor
				&::after
					position absolute
					top 0
					left -3rpx
					content ''
					display inline-block
					width 4rpx
					height 100%
					background: $fontColor
			&::before
				position absolute
				top -8rpx
				left -9rpx
				content ''
				display inline-block
				width 16rpx
				height 16rpx
				border-radius 50%
				background: $fontColor9
			&:last-of-type
				border-left 0
				&::before
					left -8rpx
			.content-title
				position relative
				padding-left 26rpx
				display flex
				align-items center
				height 48rpx
				font-size 32rpx
				font-weight 500
				transform translateY(-24rpx)
			.content-des
				display flex
				margin-top 10rpx
				padding-left 26rpx
				padding-right 80rpx
				line-height 40rpx
				color $fontColor6
				font-size 24rpx
				transform translateY(-24rpx)
				&.error
					color $error
					&::before
						margin-right 8rpx
						content '\e617'
				.refresh
					display flex
					align-items center
					margin-left 20rpx
					font-size 24rpx
					color $blueColor
					&::after
						margin-left 12rpx
						content '\e616'
						font-size 28rpx
				.edit
					margin-left 20rpx
					display flex
					align-items center
					color $blueColor
					font-size 24rpx
					&::after
						display inline-block
						content '\e60e'
						transform rotateZ(-180deg) translateY(2rpx)
				.copy
					margin-left 20rpx
					display flex
					align-items center
					color $blueColor
					font-size 24rpx
		.last
			&::after
				display none!important
	// 确认收货
	.btn
		display flex
		align-items center
		justify-content center
		margin 40rpx 60rpx 0
		height 98rpx
		font-size 40rpx
		font-weight 500
		color #fff
		background: linear-gradient(to right, $deepThemeColor, $shallowThemeColor)
		border-radius 49rpx
	// 自动填充
	.auto-fill
		flex 1
	// 在线客服
	.bottom
		margin-top 16rpx
		margin-bottom 40rpx
		height 40rpx
		text-align center
		font-size 24rpx
		color #E4E4E6
		text
			color $blueColor
			margin 0 16rpx
	//微保活动弹框
	.detail_mask
		position fixed
		left 0
		top 0
		right 0
		bottom 0
		background rgba(0, 0, 0, .7)
		.detail_wrapper
			position absolute
			left 0
			right 0
			top 50%
			transform translate(0, -50%)
			width 100%
			min-height 400rpx
			margin 0 auto
			z-index 2
			& > image
				width 100%
		.activity_button
			margin -80rpx auto 0
			text-align center
			z-index 2
			width 100%
			min-height 30rpx
			button
				width 524rpx
				height 98rpx
				line-height 98rpx
				background linear-gradient(289deg, #5913C8 0%, #D531BE 100%)
				box-shadow 0rpx 4rpx 12rpx 0rpx rgba(0,0,0,0.5)
				border-radius 49rpx
				font-size 50rpx
				font-family PingFangSC-Semibold, PingFang SC
				font-weight 500
				color #F7DC00
				letter-spacing 4rpx
		.close_button
			position absolute
			right 50rpx
			z-index 3
			&::before
				display inline-block
				content '\e63d'
				color #ffffff
				width 54rpx
				height 54rpx
				line-height 54rpx
				text-align center
				border 1rpx solid #ffffff
				border-radius 50%
				opacity .57
				font-size 23rpx

