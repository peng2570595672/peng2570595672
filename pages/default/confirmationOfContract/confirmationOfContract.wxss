.signed_successfully {
  display: flex;
  flex-direction: column;
  background: #fff;
  min-height: 100vh;
}
.signed_successfully > image {
  display: block;
  margin: 80rpx auto 0;
  width: 304rpx;
  height: 238rpx;
}
.signed_successfully .topSplit {
  width: 100%;
  height: 60rpx;
}
.signed_successfully .signed_title {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 76rpx;
  font-size: 60rpx;
  font-weight: 500;
}
.signed_successfully .img {
  width: 100%;
  height: 300rpx;
}
.signed_successfully .img .imgChange {
  margin: 0 auto;
}
.signed_successfully .size {
  font-size: 36rpx;
  width: 200rpx;
  text-align: center;
  margin-bottom: 50rpx;
  margin-left: 35%;
}
.signed_successfully .text {
  font-size: 26rpx;
  line-height: 36rpx;
  color: #333;
  margin: 0 30rpx;
}
.signed_successfully .box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.signed_successfully .box .btn_te {
  width: 700rpx;
  height: 150rpx;
  border-radius: 16rpx;
  background-color: #f6f6f6;
  margin: 20rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.signed_successfully .box .btn_te text {
  color: #000;
  margin-left: 30rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  margin-bottom: 40rpx;
  font-weight: 600;
}
.signed_successfully .box .btn_te .anniu {
  width: 150rpx;
  height: 64rpx;
  background-color: #c0c0c0;
  border-radius: 16rpx;
  color: #fff;
  text-align: center;
  line-height: 64rpx;
  margin-right: 40rpx;
}
.signed_successfully .box .btn_te .sure {
  background-color: #5ebe68;
}
.signed_successfully .box .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 86rpx 60rpx 30rpx;
  height: 98rpx;
  font-size: 40rpx;
  font-weight: 500;
  color: #fff;
  border-radius: 49rpx;
  background: linear-gradient(to right, $deepThemeColor, $shallowThemeColor);
}
.signed_successfully .box .btn.available {
  animation: btnFadeIn 0.3s;
  animation-fill-mode: forwards;
}
.signed_successfully .box .btn.unavailable {
  animation: btnFadeOut 0.3s;
  animation-fill-mode: forwards;
}
.signed_successfully .floatButton {
  width: 100%;
  height: 244rpx;
  opacity: 1;
  display: flex;
  align-items: center;
  background: #fff;
  justify-content: center;
  border-radius: 16px 16px 0 0;
  box-shadow: 0 -8px 30px 0 rgba(223,223,223,0.36);
  position: fixed;
  bottom: 0;
  z-index: 100;
}
.signed_successfully .floatButton .handleImmediately {
  width: 662rpx;
  height: 110rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  text-align: center;
  line-height: 110rpx;
  background: #c0c0c0;
  border-radius: 64rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  text-shadow: 0 -8rpx 30rpx rgba(223,223,223,0.36);
  box-shadow: 0 -8rpx 30rpx 0 rgba(223,223,223,0.36), 0 4rpx 2rpx 0 rgba(212,212,212,0);
}
.signed_successfully .floatButton .sure {
  background: #2a4f44;
}
