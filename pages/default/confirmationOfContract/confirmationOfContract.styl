// @import "../../../style/base.styl";
mixinsWidthHeight($width=100%, $height=100%)
	width $width
	height $height
.signed_successfully
	display flex
	flex-direction column
	background #FFFFFF
	min-height 100vh
	// 成功结果
	& > image
		display block
		margin 80rpx auto 0
		width 304rpx
		height 238rpx
	.topSplit
		mixinsWidthHeight(,60rpx)
	// 主标题
	.signed_title
		display flex
		align-items center
		justify-content center
		height 76rpx
		font-size 60rpx
		font-weight 500
	.img
		width 100%
		height 300rpx
		.imgChange
			margin 0 auto
	.size
		font-size 36rpx
		width 200rpx
		text-align center
		margin-bottom 50rpx
		margin-left 35%
	.text
		font-size 26rpx
		line-height 36rpx
		color #333
		margin 0 30rpx 

	// 操作部分
	// 下一步
	.box
		display flex
		flex-direction column
		align-items center
		justify-content space-between
		.btn_te
			width 700rpx
			height 150rpx
			border-radius 16rpx
			background-color #F6F6F6
			margin 20rpx 0
			display flex
			align-items center
			justify-content space-between
			text
				color #000000
				margin-left 30rpx
				margin-bottom 30rpx
				box-sizing border-box
				font-size 32rpx
				margin-bottom 40rpx
				font-weight 600
			.anniu
				mixinsWidthHeight(150rpx,64rpx)
				background-color #C0C0C0
				border-radius 16rpx
				color white
				text-align center
				line-height 64rpx
				margin-right 40rpx
			.sure
				background-color #5EBE68
		.btn
			display flex
			align-items center
			justify-content  center
			margin 86rpx 60rpx 30rpx
			height 98rpx
			font-size 40rpx
			font-weight 500
			color #fff
			border-radius 49rpx
			background: linear-gradient(to right , $deepThemeColor, $shallowThemeColor)
			&.available
				animation btnFadeIn .3s
				animation-fill-mode forwards
			&.unavailable
				animation btnFadeOut .3s
				animation-fill-mode forwards
	.floatButton
		mixinsWidthHeight(,244rpx)
		opacity 1
		display flex
		align-items center
		background #ffffff
		justify-content center
		border-radius 16px 16px 0 0
		box-shadow 0 -8px 30px 0 rgba(223, 223, 223, 0.36)
		position fixed
		bottom 0
		z-index 100
		.handleImmediately
			mixinsWidthHeight(662rpx,110rpx)
			font-size 36rpx
			font-weight 600
			color #FFFFFF
			text-align center
			line-height 110rpx
			background #C0C0C0
			border-radius 64rpx
			font-family PingFangSC-Semibold, PingFang SC
			text-shadow 0 -8rpx 30rpx rgba(223, 223, 223, 0.36)
			box-shadow 0 -8rpx 30rpx 0 rgba(223, 223, 223, 0.36), 0 4rpx 2rpx 0 rgba(212, 212, 212, 0)
		.sure
			background #2A4F44
