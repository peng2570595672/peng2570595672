@import "../../../style/base.styl";
@import "../../../style/my_animate.styl";
.receiving_address
	display flex
	flex-direction column
	min-height 100vh
	// 标题
	.title
		margin-top 40rpx
		display flex
		align-items center
		padding 0 30rpx
		height 56rpx
		font-size 40rpx
		font-weight 500
		&::before
			margin-right 10rpx
			content ''
			width 10rpx
			height 10rpx
			border 6rpx solid $fontColor
			border-radius 50%
		& > text
			margin-left 12rpx
			font-size 24rpx
			color #7A7F83
			transform translateY(8rpx)
	// 车牌号
	.car-no-wrapper
		margin-top 21rpx
		display flex
		align-items center
		justify-content center
		& > view
			margin-right 18rpx
			flex 0 0 60rpx
			width 60rpx
			&:last-of-type
				margin-right 0
			&.selected
				& > view:last-of-type
					&::before
						left 0
						right 0
						width 100%
						background: linear-gradient(to right, $deepThemeColor, $shallowThemeColor)
						transition all .5s ease-in-out
						border-radius 4rpx
			&:nth-child(2)
				margin-right  30rpx
			& > view
				&:first-of-type
					display flex
					align-items center
					justify-content center
					height 84rpx
					font-size 60rpx
				&:last-of-type
					position relative
					height 8rpx
					background: $fontColor9
					border-radius 4rpx
					&::before
						content ''
						display block
						position absolute
						width 0
						top 0
						bottom 0
						left 50%
						right 50%
			&.unselected
				margin-right 0
				flex 0 0 60rpx
				width 60rpx
				transform translateY(18rpx)
				& > view
					&:first-of-type
						height 66rpx
						color #F5C065
						border 2rpx dotted #F5C065
						border-radius 8rpx
						&.iconfont
							&::before
								display block
								font-size 24rpx
								content '\e63d'
								font-weight bold
								transform rotateZ(45deg)
					&:last-of-type
						position relative
						text-align center
						height auto
						font-size 16rpx
						color $fontColor
						background: rgba(0,0,0,0)
						transform translateY(18rpx)
	// 车牌颜色
	.choose-car-no-color
		margin-top 50rpx
		margin-bottom 40rpx
		padding 0 60rpx
		display flex
		align-items center
		height 48rpx
		color $fontColor6
		.color-wrapper
			margin-left 10rpx
			display flex
			& > view
				display flex
				margin-right 20rpx
				align-items center
				padding 0 12rpx
				height 40rpx
				font-size 20rpx
				border-style solid
				border-width 2rpx
				border-radius 12rpx
				&:last-of-type
					margin-right 0
				&.blue
					border-color #0EAFE6
					color #0EAFE6
					&.selected
						color #fff
						background: #0EAFE6
				&.green
					border-color $fontColor
					color $fontColor
					&.selected
						color #fff
						background: $fontColor
				&.yellow
					border-color #F7B500
					color #F7B500
					&.selected
						color #fff
						background: #F7B500
	// 分割线
	.split
		height 20rpx
		background: #F7F7F7
	// 输入开始
	.input-wrapper
		padding 0 60rpx
		padding-top 34rpx
		.input-item
			display flex
			align-items center
			padding-top 28rpx
			padding-bottom 20rpx
			font-size 32rpx
			border-bottom 1rpx solid #E8E8E8
			& > view
				display flex
				align-items center
				flex 0 0 148rpx
				height 48rpx
				color $fontColor9
			& > input,
			& > picker
				display flex
				align-items center
				flex 1
				height 48rpx
				font-size 32rpx
			.detail-info
				width 580rpx!important
			.picker
				color #ccc
				&.have-value
					color $fontColor3
			// 自动填充
			.auto-fill
				height 48rpx
				line-height 46rpx
				gradualChange(to right, $deepThemeColor, $shallowThemeColor)
				font-size 26rpx
				font-weight 500
				box-sizing content-box
			// 自动定位
			.iconfont
				&::before
					display inline-block
					content '\e600'
					flex 0 0 28rpx
					height 40rpx
					font-size 40rpx
					gradualChange(to top, $deepThemeColor, $shallowThemeColor)
			// 获取验证码
			.validate-code
				flex 0 0 216rpx
				width 216rpx
				display flex
				align-items center
				justify-content center
				padding-left 50rpx
				height 44rpx
				font-size 32rpx
				color $fontColor9
				border-left 1rpx solid #D8D8D8
				box-sizing border-box
				&.ok
					font-weight 500
					color $fontColor
				&.acquisition
					color $fontColor
					font-weight 400!important
	// 高度填充
	.fill
		flex 1
	// 协议
	.agreement
		display flex
		align-items center
		justify-content center
		height 48rpx
		font-size 24rpx
		color $fontColor9
		&.iphone
			&::before
				transform translateY(-19%)
		& > text
			color $fontColor
		&::before
			margin-right 10rpx
			width 28rpx
			height 28rpx
			content '\e6e4'
			font-size 30rpx
			color $fontColor9
			border-radius 50%
		&.selected::before
			color $shallowThemeColor
	// 下一步
	.btn
		display flex
		align-items center
		justify-content center
		margin 20rpx 60rpx 40rpx
		height 98rpx
		font-size 40rpx
		font-weight 500
		color #fff
		border-radius 49rpx
		background: linear-gradient(to right , $deepThemeColor, $shallowThemeColor)
		&.available
			animation btnFadeIn .3s
			animation-fill-mode forwards
		&.unavailable
			animation btnFadeOut .3s
			animation-fill-mode forwards
