mixinsWidthHeight($width=100%, $height=100%)
    width $width
    height $height
image
    width 100% 
    height 100%
    display block
.container
    min-height 100vh
    background #ECECEC
    padding 32rpx 16rpx
    box-sizing border-box
    .component
        display flex
        margin-bottom 40rpx
        .top-div
            mixinsWidthHeight(24rpx,22rpx)
            margin 15rpx 
        .intru
            font-size 40rpx
            font-weight 400
    .module
        mixinsWidthHeight(, 200rpx)
        border-radius 20rpx
        background-color #ffffff
        margin-bottom 30rpx
        .topTitle
            display flex
            justify-content space-between
            align-items center
            border-radius 16rpx
            padding 30rpx 40rpx
            margin-bottom 30rpx
            background-color #fff
            .text
                display flex
                flex-direction column
                align-items flex-start
                font-family PingFangSC-Regular,PingFang SC
                .point
                    line-height  60rpx
                    position relative
                    font-weight 600
                    display flex
                    color #1E1E1E
                    font-size  48rpx
                    font-family PingFangSC-Regular,PingFang SC
                    &::before
                        content: '\2022' /* 使用Unicode字符 \2022 作为间隔点 */
                        position: absolute
                        // font-size: 1em
                        color: #000
                        top 0
                        left: 30% 
                    .one
                        margin-right 35rpx
                .time
                    color #666
                    font-size 24rpx
                    line-height 60rpx
                    margin-top 10rpx
            .weChatSign
                mixinsWidthHeight(160rpx, 50rpx)
                text-align center
                line-height 50rpx
                font-size 24rpx
                border-radius 24rpx
                background-color #2A4F44
                color #fff
