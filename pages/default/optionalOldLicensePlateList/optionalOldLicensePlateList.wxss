image {
  width: 100%;
  height: 100%;
  display: block;
}
.container {
  min-height: 100vh;
  background: #ececec;
  padding: 32rpx 16rpx;
  box-sizing: border-box;
}
.container .component {
  display: flex;
  margin-bottom: 40rpx;
}
.container .component .top-div {
  width: 24rpx;
  height: 22rpx;
  margin: 15rpx;
}
.container .component .intru {
  font-size: 40rpx;
  font-weight: 400;
}
.container .module {
  width: 100%;
  height: 200rpx;
  border-radius: 20rpx;
  background-color: #fff;
  margin-bottom: 30rpx;
}
.container .module .topTitle {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 16rpx;
  padding: 30rpx 40rpx;
  margin-bottom: 30rpx;
  background-color: #fff;
}
.container .module .topTitle .text {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  font-family: PingFangSC-Regular, PingFang SC;
}
.container .module .topTitle .text .point {
  line-height: 60rpx;
  position: relative;
  font-weight: 600;
  display: flex;
  color: #1e1e1e;
  font-size: 48rpx;
  font-family: PingFangSC-Regular, PingFang SC;
}
.container .module .topTitle .text .point::before {
  content: '\2022' /* 使用Unicode字符 \2022 作为间隔点 */;
  position: absolute;
  font-weight: 400;
  color: #000;
  top: 0;
  left: 30%;
}
.container .module .topTitle .text .point .one {
  margin-right: 35rpx;
}
.container .module .topTitle .text .time {
  color: #666;
  font-size: 24rpx;
  line-height: 60rpx;
  margin-top: 10rpx;
}
.container .module .topTitle .weChatSign {
  width: 160rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 24rpx;
  border-radius: 24rpx;
  background-color: #2a4f44;
  color: #fff;
}
