mixinsWidthHeight($width = 100%, $height = 100%)
    width $width
    height $height
mixinsIconfont($content='',$size=16px,$color=#5EBE68)
    content $content
    font-size $size
    color $color
mixinsPositionPack($position=relative)
    position $position
    left 50%
    transform translateX(-50%)
textLineCenter($height)
    text-align center
    line-height $height
.index
    mixinsWidthHeight(100vw,100vh)
    background #ECECEC
    .topImg
        mixinsWidthHeight(314rpx,230rpx)
        mixinsPositionPack(relative)
        top 22rpx
        .image
            mixinsWidthHeight(100%,100%)
    .text
        margin-top 40rpx
        text-align center
        font-size 36rpx
        font-weight 400
        color #000000
        line-height 48rpx
        font-family PingFang SC-Regular, PingFang SC
    .btn
        mixinsPositionPack(relative)
        mixinsWidthHeight(330rpx,98rpx)
        textLineCenter(98rpx)
        color #fff
        font-size 28rpx
        font-weight 400
        margin-top 206rpx
        background #2A4F44
        border-radius 49rpx 49rpx 49rpx 49rpx
        opacity 1
