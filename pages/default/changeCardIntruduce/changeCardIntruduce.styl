mixinsWidthHeight($width=100%, $height=100%)
    width $width
    height $height
.iconfont
    font-family 'iconfont' !important
    font-size 16px
    font-style normal
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
image
    width 100% 
    height 100%
    display block
.page
    .container
        margin 30rpx 28rpx
        background-color #fff
        .component
            display flex
            .top-div
                mixinsWidthHeight(24rpx,22rpx)
                margin 15rpx 
            .intru
                font-size 40rpx
                font-weight 400
        .text
            display flex
            flex-direction column
            padding-left 44rpx
            margin 20rpx 0
            text
                font-size 28rpx 
                line-height 60rpx
        .pic
            // mixinsWidthHeight(,380rpx)
        .info
            margin-top 20rpx
            padding 30rpx 45rpx
            padding-top 0
            display flex
            flex-direction column
            color #2A4F44
            font-size 32rpx
            justify-content space-between
            position relative
            .tet
                margin 20rpx 0
            .idcard
                margin 20rpx 0
            .messsage
                margin-top 20rpx
                .name
                    line-height 58rpx
            .line
                width 6rpx
                height 90%
                background-color #EAEAEA
                position absolute
                left 10rpx
                top 5%
        .applicationRecords
            color #2A4F44
            mixinsWidthHeight(300rpx,68rpx)
            text-align center
            line-height 68rpx
            margin 0 auto
            margin-top 80rpx
            border-radius: 12rpx;
            border 2rpx solid #2A4F44
    .fill-line
        height 16rpx
        background-color #ececec
    .bottom
        padding-bottom 300rpx
    /* 底部悬浮按钮 */
    .floatButton
        mixinsWidthHeight(,204rpx)
        opacity 1
        display flex
        align-items center
        justify-content center
        border-radius 16rpx 16rpx 0 0
        box-shadow 0 -8px 30px 0 rgba(223, 223, 223, 0.36)
        position fixed
        bottom 0
        z-index 100
        background: #ffffff;
        .handleImmediately
            mixinsWidthHeight(662rpx,110rpx)
            font-size 36rpx
            color #FFFFFF
            text-align center
            line-height 110rpx
            background: #C0C0C0;
            border-radius 64rpx
            font-family: PingFangSC-Regular, PingFang SC;
            text-shadow 0 -8rpx 30rpx rgba(223, 223, 223, 0.36)
            box-shadow 0 -8rpx 30rpx 0 rgba(223, 223, 223, 0.36), 0 4rpx 2rpx 0 rgba(212, 212, 212, 0)
        .btn
            background #2A4F44