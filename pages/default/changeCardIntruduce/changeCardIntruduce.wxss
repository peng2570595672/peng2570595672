.iconfont {
  font-family: 'iconfont' !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
image {
  width: 100%;
  height: 100%;
  display: block;
}
.page .container {
  margin: 30rpx 28rpx;
  background-color: #fff;
}
.page .container .component {
  display: flex;
}
.page .container .component .top-div {
  width: 24rpx;
  height: 22rpx;
  margin: 15rpx;
}
.page .container .component .intru {
  font-size: 40rpx;
  font-weight: 400;
}
.page .container .text {
  display: flex;
  flex-direction: column;
  padding-left: 44rpx;
  margin: 20rpx 0;
}
.page .container .text text {
  font-size: 28rpx;
  line-height: 60rpx;
}
.page .container .info {
  margin-top: 20rpx;
  padding: 30rpx 45rpx;
  padding-top: 0;
  display: flex;
  flex-direction: column;
  color: #2a4f44;
  font-size: 32rpx;
  justify-content: space-between;
  position: relative;
}
.page .container .info .tet {
  margin: 20rpx 0;
}
.page .container .info .idcard {
  margin: 20rpx 0;
}
.page .container .info .messsage {
  margin-top: 20rpx;
}
.page .container .info .messsage .name {
  line-height: 58rpx;
}
.page .container .info .line {
  width: 6rpx;
  height: 90%;
  background-color: #eaeaea;
  position: absolute;
  left: 10rpx;
  top: 5%;
}
.page .container .applicationRecords {
  color: #2a4f44;
  width: 300rpx;
  height: 68rpx;
  text-align: center;
  line-height: 68rpx;
  margin: 0 auto;
  margin-top: 80rpx;
  border-radius: 12rpx;
  border: 2rpx solid #2a4f44;
}
.page .fill-line {
  height: 16rpx;
  background-color: #ececec;
}
.page .bottom {
  padding-bottom: 300rpx;
}
.page .floatButton {
  width: 100%;
  height: 204rpx;
  opacity: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx 16rpx 0 0;
  box-shadow: 0 -8px 30px 0 rgba(223,223,223,0.36);
  position: fixed;
  bottom: 0;
  z-index: 100;
  background: #fff;
}
.page .floatButton .handleImmediately {
  width: 662rpx;
  height: 110rpx;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  line-height: 110rpx;
  background: #c0c0c0;
  border-radius: 64rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  text-shadow: 0 -8rpx 30rpx rgba(223,223,223,0.36);
  box-shadow: 0 -8rpx 30rpx 0 rgba(223,223,223,0.36), 0 4rpx 2rpx 0 rgba(212,212,212,0);
}
.page .floatButton .btn {
  background: #2a4f44;
}
