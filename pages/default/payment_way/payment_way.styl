@import "../../../style/base.styl";
@import "../../../style/my_animate.styl";
.payment-way
	display flex
	flex-direction column
	min-height 100vh
	// 标题
	.title
		margin-top 40rpx
		display flex
		align-items center
		padding 0 30rpx
		height 56rpx
		font-size 40rpx
		&::before
			margin-right 10rpx
			content ''
			width 10rpx
			height 10rpx
			border 6rpx solid $deepThemeColor
			border-radius 50%
		&.other-title
			display flex
			align-items center
			margin-top 64rpx
			& > view
				&.text
					flex 1
				&:last-of-type
					padding-right 50rpx
					display flex
					align-items center
					height 92rpx
					&::before
						display inline-block
						width 42rpx
						height 36rpx
						content '\e61a'
						font-size 36rpx
						color $deepThemeColor
	// 选择支付方式
	.wrapper
		display flex
		align-items center
		margin 20rpx  40rpx 0
		height 154rpx
		border-radius 32rpx
		background: linear-gradient(to right , $deepThemeColor, $shallowThemeColor)
		.iconfont
			width 100%
			display flex
			align-items center
			padding 0 40rpx
			font-size 28rpx
			color #fff
			& > text
				flex 1
			&::after
				content '\e601'
				color #FFEC9A
				font-size 22rpx
	// 确认支付方式
	.choice-payment-way-mask
		margin 20rpx 40rpx
		padding 1rpx
		height 154rpx
		background: linear-gradient(to right, $deepThemeColor, $shallowThemeColor)
		border-radius 32rpx
		overflow hidden
		.choice-payment-way
			display flex
			align-items center
			width 100%
			height 100%
			background: #fff
			border-radius 32rpx
			.left
				display flex
				align-items center
				flex 1
				padding-left 40rpx
				& > image
					flex 0 0 78rpx
					width 78rpx
					height 78rpx
				& > view
					margin-left 20rpx
					.left-title
						display flex
						align-items center
						height 56rpx
						font-size 40rpx
					.left-sub-title
						display flex
						align-items center
						height 44rpx
						font-size 28rpx
						color $fontColor6
			.right
				display flex
				align-items center
				padding-right 40rpx
				height 36rpx
				color #55C28B
	// 提示
	.tips
		display flex
		align-items center
		padding-left 60rpx
		height 40rpx
		font-size 24rpx
		color $fontColor6
	// 银行卡号
	.bank-no
		display flex
		align-items center
		margin 20rpx 40rpx 20rpx
		padding-left 54rpx
		height 92rpx
		background: #FFF6F3
		border-radius 12rpx
		& > input
			flex 1
			font-size 28rpx
		& > view
			padding-right 40rpx
			display flex
			align-items center
			height 92rpx
			&::before
				display inline-block
				width 42rpx
				height 36rpx
				content '\e61a'
				font-size 36rpx
				color $deepThemeColor
				pointer-events none
	// 拍摄身份证
	.shot-id-card
		display flex
		align-items center
		justify-content center
		margin 40rpx 30rpx 28rpx
		width 284rpx
		height 70rpx
		font-size 28rpx
		color #fff
		border-radius 35rpx
		background: linear-gradient(to right , $deepThemeColor, $shallowThemeColor)
		&::before
			display inline-block
			margin-right 10rpx
			width 42rpx
			height 36rpx
			content '\e65c'
			font-size 44rpx
			color #fff
			transform translateY(-6rpx)
			pointer-events none
	// 输入身份证号 和身份证姓名
	.input-wrapper
		padding 0 40rpx
		.photo-wrapper
			padding 10rpx 20rpx 8rpx
			& > image
				display inline-block
				margin-right 20rpx
				width 110rpx
				height 70rpx
		.input-item
			display flex
			padding 16rpx 30rpx 10rpx
			font-size 32rpx
			border-bottom 1rpx solid #F4F4F4
			& > view
				margin-right 30rpx
				flex 0 0 134rpx
				color $fontColor9
				box-sizing border-box
			& > input
				flex 1
			&:last-of-type
				margin-bottom 20rpx
	// 高度填充
	.fill
		flex 1
	// 下一步
	.btn
		display flex
		align-items center
		justify-content center
		margin 20rpx 60rpx 40rpx
		height 98rpx
		font-size 40rpx
		color #fff
		border-radius 48rpx
		background: linear-gradient(to right , $deepThemeColor, $shallowThemeColor)
		&.available
			animation btnFadeIn .3s
			animation-fill-mode forwards
		&.unavailable
			animation btnFadeOut .3s
			animation-fill-mode forwards

