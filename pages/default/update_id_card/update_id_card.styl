@import "../../../style/base.styl";
@import "../../../style/my_animate.styl";
.payment-way
	display flex
	flex-direction column
	min-height 100vh
	// 标题
	.title
		margin-top 40rpx
		display flex
		align-items center
		padding 0 30rpx
		height 56rpx
		font-size 40rpx
		font-weight 500
		&::before
			margin-right 10rpx
			content ''
			width 10rpx
			height 10rpx
			border 6rpx solid $fontColor
			border-radius 50%
		&.other-title
			display flex
			align-items center
			margin-top 64rpx
			& > view
				&.text
					flex 1
				&:last-of-type
					padding-right 50rpx
					display flex
					align-items center
					height 92rpx
					&::before
						display inline-block
						width 42rpx
						height 36rpx
						content '\e61a'
						font-size 36rpx
						color $fontColor

	// 提示
	.tips
		display flex
		align-items center
		padding-left 60rpx
		height 40rpx
		font-size 24rpx
		color $fontColor6
	// 拍摄身份证
	.shot-id-card
		display flex
		align-items center
		justify-content center
		margin 40rpx 60rpx 28rpx
		width 284rpx
		height 70rpx
		font-size 28rpx
		color #fff
		border-radius 35rpx
		background: linear-gradient(to right , $deepThemeColor, $shallowThemeColor)
		&::before
			display inline-block
			margin-right 10rpx
			width 42rpx
			height 36rpx
			content '\e65c'
			font-size 44rpx
			color #fff
			transform translateY(-6rpx)
			pointer-events none
	// 输入身份证号 和身份证姓名
	.input-wrapper
		padding 0 40rpx
		.photo-wrapper
			padding 10rpx 20rpx 8rpx
			& > image
				display inline-block
				margin-right 20rpx
				width 110rpx
				height 70rpx
		.input-item
			display flex
			padding 16rpx 30rpx 10rpx
			font-size 32rpx
			border-bottom 1rpx solid #F4F4F4
			& > view
				margin-right 30rpx
				flex 0 0 134rpx
				color $fontColor9
				box-sizing border-box
			& > input
				flex 1
			&:last-of-type
				margin-bottom 20rpx
			// 获取验证码
			.validate-code
				display flex
				align-items center
				justify-content center
				padding-left 32rpx
				height 44rpx
				font-size 32rpx
				color $fontColor9
				border-left 1rpx solid #D8D8D8
				box-sizing border-box
				&.ok
					font-weight 500
					color $fontColor
				&.acquisition
					color $fontColor
					font-weight 400!important
	// 高度填充
	.fill
		flex 1
	// 下一步
	.submit
		position fixed
		left 0
		bottom 0rpx
		width 100%
		.btn
			display flex
			align-items center
			justify-content center
			margin 86rpx 60rpx 40rpx
			height 98rpx
			font-size 40rpx
			font-weight 500
			color #fff
			border-radius 49rpx
			background: linear-gradient(to right , $deepThemeColor, $shallowThemeColor)
			&.available
				animation btnFadeIn .3s
				animation-fill-mode forwards
			&.unavailable
				animation btnFadeOut .3s
				animation-fill-mode forwards

