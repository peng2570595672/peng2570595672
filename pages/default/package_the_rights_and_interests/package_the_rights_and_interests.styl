@import "../../../style/base.styl";
.package-the-rights-and-interests
	min-height 100vh
	padding-bottom 170rpx
	box-sizing border-box
	background #F5F5F7
	// 套餐选择
	.package-sub-title
		font-size 24rpx
		font-family PingFangSC-Regular, PingFang SC
		font-weight 400
		color #999999
		line-height 34rpx
		padding 20rpx 40rpx 0
	.perch
		height 330rpx
	.swiper-box
		position absolute
		top 0
		left 0
		width 100%
		z-index 999
		.my-swiper
			padding-top 30rpx
			.my-swiper-item
				width 670rpx
				border-radius 20rpx
				.my-swiper-item-box
					width 670rpx
					background: #fff
					border-radius 20rpx
					margin 0 20rpx
					padding-left 30rpx
					padding-right 40rpx
					box-sizing border-box
					font-family PingFangSC-Semibold, PingFang SC
					font-weight 600
					color #333333
					z-index 99999
					.title
						display flex
						height 56rpx
						align-items center
						font-size 36rpx
						padding-top 32rpx
						image
							width 48rpx
							height 44rpx
							margin-right 12rpx
					.sub-title
						font-size 24rpx
						font-family PingFangSC-Regular, PingFang SC
						font-weight 400
						color #999999
						line-height 34rpx
					.details
						display flex
						width 100%
						height 140rpx
						align-items center
						margin-top 28rpx
						font-size 100rpx
						& > view:first-child
							font-size 36rpx
							margin-top -30rpx
						.details-box
							font-size 22rpx
							font-weight 400
							color #999999
							margin-left 20rpx
							&::after
								display inline-block
								content '\e60e'
								transform scaleX(1)
							&.close-details
								&::after
									transform rotateZ(90deg)
									transition .4s
							&.show-details
								&::after
									transform rotateZ(180deg)
									transition .4s
						&.active
							&::after
								flex 1
								text-align right
								content '\e64f'
								font-size 60rpx
								color #1AAE68
					&.my-swiper-item-shadow
						box-shadow 0 10rpx 30rpx 0 rgba(183,183,183,0.50)
						-moz-box-shadow 0 10rpx 30rpx 0 rgba(183,183,183,0.50)
						-webkit-box-shadow 0 10rpx 30rpx 0 rgba(183,183,183,0.50)
		&.swiper-box-perch
			top 54rpx
	.my-swiper-item-details
		width 670rpx
		background #fff
		margin -20rpx auto 0
		padding 40rpx 40rpx 24rpx 30rpx
		box-sizing border-box
		font-size 24rpx
		color #666666
		line-height 34rpx
		border-radius 0rpx 0rpx 20rpx 20rpx
	// 权益选择
	.rights-and-interests
		width 670rpx
		background #fff
		margin -100rpx auto 0
		padding 30rpx
		box-sizing border-box
		border-radius 20rpx
		.rights-and-interests-header
			display flex
			height 40rpx
			align-items center
			font-size 28rpx
			color #999999
			margin-bottom 38rpx
			.line
				width 6rpx
				height 28rpx
				background #16AD69
				border-radius 3rpx
				margin-right 16rpx
			.header
				color #333333
		.rights-and-interests-list
			margin auto
			.rights-and-interests-item
				width 620rpx
				min-height 160rpx
				padding 15rpx 20rpx
				background linear-gradient(95deg, #FFEDCD 0%, #F1D3AF 100%)
				border-radius 20rpx
				box-sizing border-box
				margin-bottom 20rpx
				opacity .6
				color #894040
				font-family PingFangSC-Medium, PingFang SC
				font-weight 500
				.title
					font-size 28rpx
					line-height 40rpx
				.sub-title
					font-size 20rpx
					font-family PingFangSC-Regular, PingFang SC
					font-weight 400
					line-height 28rpx
				.details
					display flex
					width 100%
					height 50rpx
					align-items center
					margin-top 18rpx
					font-size 36rpx
					& > view:first-child
						font-size 28rpx
					.details-box
						font-size 20rpx
						font-weight 400
						margin-left 20rpx
						&::after
							display inline-block
							content '\e60e'
							transform scaleX(-1)
					&.active
						&::after
							flex 1
							text-align right
							content '\e64f'
							font-size 40rpx
				&.item-active
					opacity 1
		&.rights-and-interests-margin
			margin-top 30rpx
		&.rights-and-interests-margin1
			margin-top 0rpx
	// 下一步
	.next
		position fixed
		bottom 0
		width 100%
		height 140rpx
		background #FFFFFF
		.btn
			width 650rpx
			height 96rpx
			line-height 96rpx
			font-size 36rpx
			font-family PingFangSC-Medium, PingFang SC
			font-weight 500
			color #FFFFFF
			text-align center
			background linear-gradient(132deg, #16AD69 0%, #82D057 100%)
			border-radius 48rpx
			margin-top 20rpx
			&.unavailable
				opacity .6
