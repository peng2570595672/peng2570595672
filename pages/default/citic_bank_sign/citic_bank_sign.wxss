.container .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 136rpx 0rpx 48rpx;
  height: 98rpx;
  font-size: 40rpx;
  font-weight: 500;
  color: #fff;
  border-radius: 49rpx;
  background: linear-gradient(to right, #15ad69, #84d157);
}
.container .btn.available {
  animation: btnFadeIn 0.3s;
  animation-fill-mode: forwards;
}
.container .btn.unavailable {
  animation: btnFadeOut 0.3s;
  animation-fill-mode: forwards;
}
