.index {
    margin: 0;
    padding: 0;
    width: 100vw;
    min-height: 100vh;
    background-color: #ECECEC;
}

/* 顶部组件占位 */
.index .topSplit {
    width: 100%;
    height: 60rpx;
}

/* 套餐模块 */
.index .package .module {
    position: relative;
    border-radius: 16rpx;
    background: #FFFFFF;
    border: 4rpx solid #fff;
    margin: 32rpx 28rpx 0rpx 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    box-shadow: 0px 4rpx 2rpx 0rpx rgba(212, 212, 212, 0.5);
}

.index .package .moduleOne {
    margin-top: 38rpx;
}


.index .package .btnHighLight {
    border: 4rpx solid #E9CA7B;
}

.index .package .btnHighLight::before {
    width: 50rpx;
    height: 30rpx;
    display: block;
    color: #FFFFFF;
    font-size: 20rpx;
    content: '\e669';
    text-align: center;
    line-height: 30rpx;
    background-color: #E9CA7B;
    border-top-left-radius: 16rpx;
    border-bottom-right-radius: 16rpx;
    position: absolute;
    top: -4rpx;
    left: -4rpx;
}

/* 套餐模块的上半部分 */
.index .package .module .upperPart {
    padding: 32rpx 28rpx 0rpx 28rpx;
}

.index .package .module .titleMOney {
    height: 54rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.index .package .module .upperPart .titleMOney .title {
    font-size: 32rpx;
    font-weight: 600;
    color: #1E1E1E;
}

.index .package .module .upperPart .titleMOney .money {
    height: 54rpx;
    font-size: 48rpx;
    color: #2A4F44;
    line-height: 54rpx;
    font-weight: normal;
    font-style: oblique;
    font-family: Arial-BoldItalicMT, Arial;
}

.index .package .module .upperPart .subTitle {
    height: 40rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #262626;
    margin-top: 10rpx;
    line-height: 40rpx;
    padding-bottom: 10rpx;
    border-bottom: 2rpx solid #F6F6F6;
}

.index .package .module .upperPart .description {
    display: flex;
    flex-wrap: wrap;
    font-size: 24rpx;
    font-weight: 400;
    color: #262626;
    margin-bottom: 36rpx;
    justify-content: space-between;
}

.index .package .module .upperPart .description .descriptionModule {
    width: 242rpx;
    margin: 12rpx 0 4rpx 0;
}

/* 套餐模块的下半部分 */
.index .package .module .lowerpart {
    height: 300rpx;
    background-color: #F9F6EF;
    padding: 20rpx 28rpx 40rpx 28rpx;
    border-bottom-left-radius: 16rpx;
    border-bottom-right-radius: 16rpx;
}



.index .package .module .lowerpart .titleDetails {
    height: 40rpx;
    display: flex;
    font-size: 28rpx;
    font-weight: 600;
    line-height: 40rpx;
    justify-content: space-between;
}

.index .package .module .lowerpart .titleDetails .titles {
    height: 100%;
    display: flex;
    color: #E9CA7B;
}

.index .package .module .lowerpart .titleDetails .titles .icon {
    width: 40rpx;
    height: 40rpx;
    overflow: hidden;
    margin-right: 10rpx;
    background-color: #2A4F44;
}

.index .package .module .lowerpart .titleDetails .details {
    color: #2A4F44;
}

.index .package .module .close {
    display: none;
}

.index .package .module .open {
    display: block;
}







/* 占位 */
.index .split {
    width: 100%;
    height: 330rpx;
    margin-top: 32rpx;
    overflow: hidden;
}

.index .littleSplit {
    height: 50rpx;
}

/* 支付和协议说明 模块 */
.index .payAndAgreement {
    width: 750rpx;
    height: 330rpx;
    background: #FBFBFB;
    box-shadow: 0rpx -20rpx 16rpx 0rpx rgba(152, 168, 151, 0.11);
    position: fixed;
    bottom: 0rpx;
}

.index .fadeIn {
    position: fixed;
    animation: fade_in 0.7s linear forwards;
    -webkit-animation: fade_in 0.7s linear forwards;
}

.index .fadeOut {
    position: fixed;
    animation: fade_out 0.5s linear forwards;
    -webkit-animation: fade_out 0.5s linear forwards;
}

@keyframes fade_in {
    0% {
        bottom: -330rpx;
    }

    100% {
        bottom: 0rpx;
    }
}

@keyframes fade_out {
    0% {
        bottom: 0rpx;
    }

    100% {
        bottom: -330rpx;
    }
}

@-webkit-keyframes fade_in {
    0% {
        bottom: -330rpx;
    }

    100% {
        bottom: 0rpx;
    }
}

@-webkit-keyframes fade_out {
    0% {
        bottom: 0rpx;
    }

    100% {
        bottom: -330rpx;
    }
}