.index {
    margin: 0;
    padding: 0;
    width: 100vw;
    min-height: 100vh;
    background-color: #ECECEC;
}

/* 顶部组件占位 */
.index .topSplit {
    width: 100%;
    height: 60rpx;
}

/* 套餐模块 */
.index .package .module {
    position: relative;
    border-radius: 16rpx;
    background: #FFFFFF;
    border: 4rpx solid #fff;
    margin: 32rpx 28rpx 0rpx 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    box-shadow: 0px 4rpx 2rpx 0rpx rgba(212, 212, 212, 0.5);
}

.index .package .moduleOne {
    margin-top: 38rpx;
}


.index .package .btnHighLight {
    border: 4rpx solid #E9CA7B;
}

.index .package .btnHighLight::before {
    width: 50rpx;
    height: 30rpx;
    display: block;
    color: #FFFFFF;
    font-size: 20rpx;
    content: '\e669';
    text-align: center;
    line-height: 30rpx;
    background-color: #E9CA7B;
    border-top-left-radius: 16rpx;
    border-bottom-right-radius: 16rpx;
    position: absolute;
    top: -4rpx;
    left: -4rpx;
}

.index .package .module .active {
    color: #fff;
    height: 30rpx;
    font-size: 20rpx;
    text-align: center;
    padding: 0rpx 10rpx;
    letter-spacing: 3rpx;
    background-color: #5EBE68;
    border-top-right-radius: 16rpx;
    border-bottom-left-radius: 16rpx;
    position: absolute;
    top: -4rpx;
    right: -4rpx;
}

/* 套餐模块的上半部分 */
.index .package .module .upperPart {
    opacity: 0.9;
    overflow: hidden;
    position: relative;
    padding: 32rpx 28rpx 0rpx 28rpx;
}

.index .package .module .upperPart .bgImg {
    width: 100%;
    height: 100%;
    position: absolute;
    /* right: 50rpx;
    bottom: -85rpx; */
    overflow: hidden;
    z-index: -1;
    opacity: 0.1;
}

.index .package .module .upperPart .bgImg image {
    width: 100%;
    height: 100%;
}


.index .package .module .titleMOney {
    height: 54rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.index .package .module .upperPart .titleMOney .title {
    font-size: 32rpx;
    font-weight: 600;
    color: #1E1E1E;
}

.index .package .module .upperPart .titleMOney .money {
    height: 54rpx;
    font-size: 48rpx;
    color: #2A4F44;
    line-height: 54rpx;
    font-weight: normal;
    font-style: oblique;
    font-family: Arial-BoldItalicMT, Arial;
}

.index .package .module .upperPart .subTitle {
    height: 40rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #262626;
    margin-top: 10rpx;
    line-height: 40rpx;
    padding-bottom: 10rpx;
    border-bottom: 2rpx solid #F6F6F6;
}

.index .package .module .upperPart .description {
    display: flex;
    flex-wrap: wrap;
    font-size: 24rpx;
    font-weight: 400;
    color: #262626;
    margin-bottom: 36rpx;
    justify-content: space-between;
}

.index .package .module .upperPart .description .descriptionModule {
    width: 242rpx;
    display: flex;
    align-items: center;
    margin: 12rpx 0 4rpx 0;
}

.index .package .module .upperPart .description .descriptionModule .ico {
    width: 40rpx;
    height: 40rpx;
    overflow: hidden;
    margin-right: 8rpx;
    display: flex;
    align-items: center;
}

.index .package .module .upperPart .description .descriptionModule .ico image {
    width: 32rpx;
    height: 24rpx;
}


/* 套餐模块的下半部分 */
.index .package .module .lowerpart {
    width: 638rpx;
    height: 300rpx;
    background-color: #F9F6EF;
    padding: 20rpx 28rpx 40rpx 28rpx;
    border-bottom-left-radius: 16rpx;
    border-bottom-right-radius: 16rpx;
}

.index .package .module .lowerpart .titleDetails {
    height: 40rpx;
    display: flex;
    font-size: 28rpx;
    font-weight: 600;
    line-height: 40rpx;
    justify-content: space-between;
    font-family: PingFangSC-Semibold, PingFang SC;
}

.index .package .module .lowerpart .titleDetails .titles {
    height: 100%;
    display: flex;
}

.index .package .module .lowerpart .titleDetails .titles .icon {
    width: 40rpx;
    height: 40rpx;
    display: flex;
    overflow: hidden;
    margin-right: 10rpx;
    align-items: center;
}

.index .package .module .lowerpart .titleDetails .titles .icon image {
    width: 32rpx;
    height: 24rpx;
}

.index .package .module .lowerpart .titleDetails .titles .text {
    font-size: 28rpx;
    font-weight: 600;
    color: #E9CA7B;
    line-height: 39rpx;
}

.index .package .module .lowerpart .titleDetails .details {
    color: #2A4F44;
}

.index .package .module .close {
    display: none;
}

.index .package .module .open {
    display: block;
}







/* 占位 */
.index .split {
    width: 100%;
    height: 330rpx;
    margin-top: 32rpx;
    overflow: hidden;
}

/* .index .littleSplit {
    height: 50rpx;
} */

/* 支付和协议说明 模块 */
.index .payAndAgreement {
    width: 750rpx;
    height: 330rpx;
    background: #FBFBFB;
    /* padding: 30rpx 38rpx 94rpx 38rpx; */
    box-shadow: 0rpx -20rpx 16rpx 0rpx rgba(152, 168, 151, 0.11);
    position: fixed;
    bottom: 0rpx;
}

.index .payAndAgreement .agreementConfirm {
    height: 84rpx;
    display: flex;
    font-size: 20rpx;
    font-weight: 400;
    color: #000000;
    line-height: 28rpx;
    justify-content: space-between;
    margin: 30rpx 38rpx 0rpx 38rpx;
    font-family: PingFangSC-Regular, PingFang SC;
}

.index .payAndAgreement .agreementConfirm .confirm {
    width: 44rpx;
    height: 44rpx;
    border-radius: 50%;
    background-color: #ccc;
}

.index .payAndAgreement .agreementConfirm .tick::before {
    display: block;
    width: 44rpx;
    height: 44rpx;
    color: #fff;
    content: '\e669';
    font-size: 22rpx;
    text-align: center;
    line-height: 44rpx;
    border-radius: 50%;
    background-color: #39812B;
}

.index .payAndAgreement .agreementConfirm .agreement {
    width: 614rpx;
    height: 100%;
    text-align: justify;
}

.index .payAndAgreement .agreementConfirm .agreement .agreementColor {
    color: #5EBE68;
}

.index .payAndAgreement .moneyPay {
    height: 90rpx;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    margin: 32rpx 38rpx 0rpx 38rpx;
    font-family: Arial-BoldItalicMT, Arial;
}

.index .payAndAgreement .confirmPackage {
    justify-content: space-between;
}

.index .payAndAgreement .moneyPay .money {
    font-size: 44rpx;
    color: #000000;
    line-height: 44rpx;
    font-weight: normal;
}

.index .payAndAgreement .moneyPay .money span {
    font-size: 76rpx;
    line-height: 76rpx;
    font-style: oblique;
}

.index .payAndAgreement .moneyPay .pay {
    width: 348rpx;
    height: 90rpx;
    font-size: 36Rpx;
    font-weight: 600;
    color: #FFFFFF;
    text-align: center;
    line-height: 90rpx;
    border-radius: 64rpx;
    background-color: #ccc;
    box-shadow: 0rpx 4rpx 2rpx 0rpx rgba(212, 212, 212, 0.5);
}

.index .payAndAgreement .moneyPay .payWidth {
    width: 600rpx;
}
.index .payAndAgreement .moneyPay .payColor {
    background-color: #2A4F44;
}








