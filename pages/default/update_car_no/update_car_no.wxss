@keyframes btnFadeIn {
  from {
    opacity: 0.2;
  }
  to {
    opacity: 1;
  }
}
@keyframes btnFadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0.2;
  }
}
.upload-car-no {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}
.upload-car-no .title {
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  height: 56rpx;
  font-size: 40rpx;
  font-weight: 500;
}
.upload-car-no .title::before {
  margin-right: 10rpx;
  content: '';
  width: 10rpx;
  height: 10rpx;
  border: 6rpx solid #2fb565;
  border-radius: 50%;
}
.upload-car-no .title > text {
  margin-left: 12rpx;
  font-size: 24rpx;
  color: #7a7f83;
  transform: translateY(8rpx);
}
.upload-car-no .car-no-wrapper {
  margin-top: 21rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.upload-car-no .car-no-wrapper > view {
  margin-right: 18rpx;
  flex: 0 0 60rpx;
  width: 60rpx;
}
.upload-car-no .car-no-wrapper > view:last-of-type {
  margin-right: 0;
}
.upload-car-no .car-no-wrapper > view.selected > view:last-of-type::before {
  left: 0;
  right: 0;
  width: 100%;
  background: linear-gradient(to right, #15ad69, #84d157);
  transition: all 0.5s ease-in-out;
  border-radius: 4rpx;
}
.upload-car-no .car-no-wrapper > view:nth-child(2) {
  margin-right: 30rpx;
}
.upload-car-no .car-no-wrapper > view > view:first-of-type {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 84rpx;
  font-size: 60rpx;
}
.upload-car-no .car-no-wrapper > view > view:last-of-type {
  position: relative;
  height: 8rpx;
  background: #99999d;
  border-radius: 4rpx;
}
.upload-car-no .car-no-wrapper > view > view:last-of-type::before {
  content: '';
  display: block;
  position: absolute;
  width: 0;
  top: 0;
  bottom: 0;
  left: 50%;
  right: 50%;
}
.upload-car-no .car-no-wrapper > view.unselected {
  margin-right: 0;
  flex: 0 0 60rpx;
  width: 60rpx;
  transform: translateY(18rpx);
}
.upload-car-no .car-no-wrapper > view.unselected > view:first-of-type {
  height: 66rpx;
  color: #f5c065;
  border: 2rpx dotted #f5c065;
  border-radius: 8rpx;
}
.upload-car-no .car-no-wrapper > view.unselected > view:first-of-type.iconfont::before {
  display: block;
  font-size: 24rpx;
  content: '\e63d';
  font-weight: bold;
  transform: rotateZ(45deg);
}
.upload-car-no .car-no-wrapper > view.unselected > view:last-of-type {
  position: relative;
  text-align: center;
  height: auto;
  font-size: 16rpx;
  color: #2fb565;
  background: rgba(0,0,0,0);
  transform: translateY(18rpx);
}
.upload-car-no .choose-car-no-color {
  margin-top: 50rpx;
  margin-bottom: 40rpx;
  padding: 0 60rpx;
  display: flex;
  align-items: center;
  height: 48rpx;
  color: #66666d;
}
.upload-car-no .choose-car-no-color .color-wrapper {
  margin-left: 10rpx;
  display: flex;
}
.upload-car-no .choose-car-no-color .color-wrapper > view {
  display: flex;
  margin-right: 20rpx;
  align-items: center;
  padding: 0 12rpx;
  height: 40rpx;
  font-size: 20rpx;
  border-style: solid;
  border-width: 2rpx;
  border-radius: 12rpx;
}
.upload-car-no .choose-car-no-color .color-wrapper > view:last-of-type {
  margin-right: 0;
}
.upload-car-no .choose-car-no-color .color-wrapper > view.blue {
  border-color: #0eafe6;
  color: #0eafe6;
}
.upload-car-no .choose-car-no-color .color-wrapper > view.blue.selected {
  color: #fff;
  background: #0eafe6;
}
.upload-car-no .choose-car-no-color .color-wrapper > view.green {
  border-color: #2fb565;
  color: #2fb565;
}
.upload-car-no .choose-car-no-color .color-wrapper > view.green.selected {
  color: #fff;
  background: #2fb565;
}
.upload-car-no .choose-car-no-color .color-wrapper > view.yellow {
  border-color: #f7b500;
  color: #f7b500;
}
.upload-car-no .choose-car-no-color .color-wrapper > view.yellow.selected {
  color: #fff;
  background: #f7b500;
}
.upload-car-no .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20rpx 60rpx 40rpx;
  height: 98rpx;
  font-size: 40rpx;
  font-weight: 500;
  color: #fff;
  border-radius: 49rpx;
  background: linear-gradient(to right, #15ad69, #84d157);
}
.upload-car-no .btn.available {
  animation: btnFadeIn 0.3s;
  animation-fill-mode: forwards;
}
.upload-car-no .btn.unavailable {
  animation: btnFadeOut 0.3s;
  animation-fill-mode: forwards;
}
