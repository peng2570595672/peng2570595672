<view class="index">
    <!-- 顶部 进度条 组件 -->
    <view class="topSplit">
        <topProgressBar progressStage="{{topProgressBar}}" />
    </view>
    <view class="module moduleOne">
        <view class="left iconfont {{isIdCardError ? 'error' : ''}}">车主身份证</view>
        <view wx:if="{{ orderDetails.orderType !== 61 && orderInfo.isOwner !== 1 }}" class="btn {{orderInfo.isOwner === 1 ? 'edit': ''}}"
              catchtap="go" data-url="upload_id_card">
            {{orderInfo.isOwner === 1 ? '修改' : '上传'}}
        </view>
        <view wx:else class="icon {{orderInfo.isOwner === 1 ? 'success' : ''}} iconfont"></view>
    </view>
    <view class="module moduleTwo">
        <view class="left iconfont {{orderInfo.isVehicle === 1 ? 'success' : ''}} {{isDrivingLicenseError ? 'error' : ''}}">车辆行驶证</view>
        <view wx:if="{{ orderDetails.orderType !== 61 }}" class="btn {{orderInfo.isVehicle === 1 ? 'edit' : ''}}"
              catchtap="go" data-url="information_validation">
            {{orderInfo.isVehicle === 1 ? '修改' : '上传'}}
        </view>
    </view>
    <view class="module moduleThree" wx:if="{{ orderInfo.obuCardType !== 1 }}">
        <view class="left iconfont {{orderInfo.isHeadstock === 1 ? 'success' : ''}} {{isHeadstockError ? 'error' : ''}}">车辆照片</view>
        <view wx:if="{{ orderDetails.orderType !== 61 }}" class="btn {{orderInfo.isHeadstock === 1  ? 'edit' : ''}}"
              catchtap="go" data-url="upload_other_photo">
            {{orderInfo.isHeadstock === 1 ? '修改' : '上传'}}
        </view>
    </view>
    <view class="tips" wx:if="{{tips}}">
        {{tips}}审核不通过：行驶证车牌号校验失败，请修改。
    </view>

    <view class="bottomBtn">
        <view class="btnClose {{available ? 'available' : 'unavailable'}}" catchtap="subscribe">
            {{isModifiedData ? '提交审核': contractStatus === 1 || !isEtcContractId ? '提交' : '签约代扣通行费'}}
        </view>
    </view>
</view>