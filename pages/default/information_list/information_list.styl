.iconfont
	font-family "iconfont" !important
	font-size 16px
	font-style normal
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

.index
	margin 0
	padding 0
	width 100vw
	min-height 100vh
	background-color #ECECEC
	.topSplit
		width 100%
		height 60rpx
	.module
		display flex
		width 694rpx
		height 152rpx
		align-items center
		border-radius 16rpx
		background-color #F6F6F6
		margin 32rpx 0rpx 0rpx 0rpx
		justify-content space-between
		font-family PingFangSC-Regular, PingFang SC
		box-shadow 0px 4rpx 2rpx 0rpx rgba(212, 212, 212, 0.5)
		position relative
		left 50%
		transform translateX(-50%)
		.left
			font-size 32rpx
			font-weight 600
			color #000000
			line-height 48rpx
			margin-left 36rpx
			font-family PingFangSC-Semibold, PingFang SC
		.success
			padding-right 76rpx
			&::after
				content '\e669'
				font-size 37rpx
				color #07C160
		.error
			&::after
				content '\e66a'
				font-size 37rpx
				color #F7B500
				margin-left 16rpx
		.btn
			display flex
			width 152rpx
			height 64rpx
			color #fff
			font-size 28rpx
			font-weight 400
			margin-right 36rpx
			align-items center
			background #2fb565
			border-radius 16rpx
			justify-content center
			&.edit
				color #ffffff
				background #F19C38
	.tips
		font-size 30rpx
		font-weight 400
		color #f7b500
		padding 32rpx 28rpx 0rpx 28rpx
	.bottomBtn
		display flex
		width 750rpx
		height 244rpx
		align-items center
		background #FFFFFF
		justify-content center
		box-shadow 0rpx -8rpx 30rpx 0rpx rgba(223, 223, 223, 0.36)
		border-radius 16rpx 16rpx 0rpx 0rpx
		opacity 0.9
		position fixed
		bottom 0rpx
		.btnClose
			width 662rpx
			height 110rpx
			font-size 36rpx
			font-weight 600
			color #FFFFFF
			text-align center
			line-height 110rpx
			border-radius 64rpx
			background #C0C0C0
			font-family PingFangSC-Semibold, PingFang SC
			box-shadow 0rpx -8rpx 30rpx 0rpx rgba(223, 223, 223, 0.36), 0rpx 4rpx 2rpx 0rpx rgba(212, 212, 212, 0)
			&.available
				background linear-gradient(45deg, #14AC69 0%, #84D157 100%)
				animation btnFadeIn .3s
				animation-fill-mode forwards
			&.unavailable
				animation btnFadeOut .3s
				animation-fill-mode forwards


