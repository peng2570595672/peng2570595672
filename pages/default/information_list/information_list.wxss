.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.index {
  margin: 0;
  padding: 0;
  width: 100vw;
  min-height: 100vh;
  background-color: #ececec;
}
.index .vehPlates {
  font-size: 20rpx;
  position: absolute;
  top: 0;
  left: 0;
  padding-left: 50rpx;
  z-index: 99;
}
.index .topSplit {
  width: 100%;
  height: 60rpx;
}
.index .module {
  display: flex;
  width: 694rpx;
  height: 152rpx;
  align-items: center;
  border-radius: 16rpx;
  background-color: #f6f6f6;
  margin: 32rpx 0rpx 0rpx 0rpx;
  justify-content: space-between;
  font-family: PingFangSC-Regular, PingFang SC;
  box-shadow: 0px 4rpx 2rpx 0rpx rgba(212,212,212,0.5);
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}
.index .module .left {
  font-size: 32rpx;
  font-weight: 600;
  color: #000;
  line-height: 48rpx;
  margin-left: 36rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
}
.index .module .success {
  padding-right: 76rpx;
}
.index .module .success::after {
  content: '\e669';
  font-size: 37rpx;
  color: #07c160;
}
.index .module .error::after {
  content: '\e66a';
  font-size: 37rpx;
  color: #f7b500;
  margin-left: 16rpx;
}
.index .module .btn {
  display: flex;
  width: 152rpx;
  height: 64rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 400;
  margin-right: 36rpx;
  align-items: center;
  background: #2fb565;
  border-radius: 16rpx;
  justify-content: center;
}
.index .module .btn.edit {
  color: #fff;
  background: #f19c38;
}
.index .tips {
  font-size: 30rpx;
  font-weight: 400;
  color: #f7b500;
  padding: 32rpx 28rpx 0rpx 28rpx;
}
.index .bottomBtn {
  display: flex;
  width: 750rpx;
  height: 244rpx;
  align-items: center;
  background: #fff;
  justify-content: center;
  box-shadow: 0rpx -8rpx 30rpx 0rpx rgba(223,223,223,0.36);
  border-radius: 16rpx 16rpx 0rpx 0rpx;
  opacity: 0.9;
  position: fixed;
  bottom: 0rpx;
}
.index .bottomBtn .btnClose {
  width: 662rpx;
  height: 110rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  text-align: center;
  line-height: 110rpx;
  border-radius: 64rpx;
  background: #c0c0c0;
  font-family: PingFangSC-Semibold, PingFang SC;
  box-shadow: 0rpx -8rpx 30rpx 0rpx rgba(223,223,223,0.36), 0rpx 4rpx 2rpx 0rpx rgba(212,212,212,0);
}
.index .bottomBtn .btnClose.available {
  background: linear-gradient(45deg, #14ac69 0%, #84d157 100%);
  animation: btnFadeIn 0.3s;
  animation-fill-mode: forwards;
}
.index .bottomBtn .btnClose.unavailable {
  animation: btnFadeOut 0.3s;
  animation-fill-mode: forwards;
}
.index .actionSheet {
  position: relative;
}
.index .actionSheet .top {
  text-align: center;
  height: auto;
  font-size: 36rpx;
  font-weight: bold;
}
.index .actionSheet .top .skip {
  height: 60rpx;
  color: #15b1ff;
  line-height: 60rpx;
  text-align: right;
  padding: 5rpx 28rpx;
  font-size: 28rpx;
  position: absolute;
  right: 0;
}
.index .actionSheet .top .head {
  line-height: 120rpx;
  margin-top: 10rpx;
}
.index .actionSheet .top .center {
  text-align: center;
  width: 694rpx;
  height: 400rpx;
  margin-left: 28rpx;
}
.index .actionSheet .top .center .image {
  width: 100%;
  height: 100%;
}
.index .actionSheet .top .desub {
  padding-top: 28rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  margin-bottom: 20rpx;
}
.index .actionSheet .ok {
  height: 80rpx;
  line-height: 80rpx;
}
