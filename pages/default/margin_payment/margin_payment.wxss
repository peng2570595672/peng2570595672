@keyframes btnFadeIn {
  from {
    opacity: 0.2;
  }
  to {
    opacity: 1;
  }
}
@keyframes btnFadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0.2;
  }
}
.margin-payment {
  display: flex;
  min-height: 100vh;
  flex-direction: column;
  overflow: hidden;
}
.margin-payment > image {
  margin: 136rpx auto 128rpx;
  width: 322rpx;
  height: 224rpx;
}
.margin-payment .prompt {
  padding: 0 66rpx 0 60rpx;
  font-size: 28rpx;
  line-height: 40rpx;
}
.margin-payment .fill {
  flex: 1;
}
.margin-payment .btn {
  bottom: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20rpx 60rpx 96rpx;
  height: 98rpx;
  font-size: 40rpx;
  font-weight: 500;
  color: #fff;
  border-radius: 49rpx;
  background: linear-gradient(to right, #15ad69, #84d157);
}
.margin-payment .bottom {
  position: absolute;
  bottom: 0;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #039eeb;
  line-height: 40rpx;
  margin: 30rpx 0;
}
