mixinsWidthHeight($width = 100%, $height = 100%)
    width $width
    height $height
mixinsIconfont($content='',$size=16px,$color=#5EBE68)
    content $content
    font-size $size
    color $color
mixinsPositionPack($position=relative)
    position $position
    left 50%
    transform translateX(-50%)
.iconfont
    font-family 'iconfont' !important
    font-size 16px
    font-style normal
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
.index
    margin 0
    padding 0
    width 100vw
    min-height 100vh
    background-color #2A5044
    .top
        position relative
        mixinsWidthHeight(100vw,628rpx)
        .swiper
            mixinsWidthHeight()
            .swiperItem
                mixinsWidthHeight()
                .image
                    mixinsWidthHeight()
        .regular
            pointer-eventsnone none
            .regular-item
                pointer-eventsauto auto
        .navbar
            width 100vw
            color #fff
            text-align center
            position absolute
            top 0
            .title
                font-size 34rpx
                font-family PingFang SC-Ultralight, PingFang SC
                font-weight 100
                color #ffffff
                .goBack
                    &::before
                        mixinsWidthHeight(50rpx,50rpx)
                        content "\e60e"
                        color #fff
                        font-size 34rpx
                        position absolute
                        left 20rpx
    // 模块
    .module
        margin 0rpx 28rpx 28rpx 28rpx
        background #F8F8F8
        border-radius 16rpx 16rpx 16rpx 16rpx
    .moduleOne
        height 962rpx
        margin-top -100rpx
        position relative
        top 0rpx
        .image
            mixinsWidthHeight()
    .moduleTwo
        height 426rpx
        .image
            mixinsWidthHeight()
    .moduleThree
        height 660rpx
        .image
            mixinsWidthHeight()
    // 描述
    .describe
        margin 0rpx 44rpx 28rpx 44rpx
        font-family PingFang SC-Medium, PingFang SC
        .title
            font-size 40rpx
            font-weight 500
            color #FFFFFF
            line-height 56rpx
        .text
            font-size 22rpx
            font-family PingFang SC-Regular, PingFang SC
            font-weight 400
            color #FFFFFF
            line-height 40rpx
            margin-bottom 42rpx
            .name
                margin-right 20rpx
                font-size 32rpx
                font-weight 500
    // 优惠悬浮
    .favourable
        mixinsWidthHeight(100vw,70rpx)
        background-color #F0D798
        position fixed
        bottom 230rpx
        display flex
        align-items center
        .leftImg
            margin 0rpx 14rpx 0rpx 30rpx
            mixinsWidthHeight(38rpx,44rpx)
            background url('https://file.cyzl.com/g001/M01/E0/BE/oYYBAGRtqMeAUfE6AAAIks5nN7g899.png') center no-repeat
            background-size cover
        .textTime
            font-size 22rpx
            font-family PingFang SC-Medium, PingFang SC
            font-weight 500
            color #EC602A
            .text
                margin-right 16rpx
            .time
                display inline-block
                color #fff
                mixinsWidthHeight(40rpx,36rpx)
                text-align center
                line-height 36rpx
                background #EC602A
                border-radius 8rpx 8rpx 8rpx 8rpx
    // 占位
    .split
        height 260rpx
        overflow hidden
    // 底部悬浮按钮
    .handleImmediately
        width 100vw
        height 244rpx
        background #FFFFFF
        border-radius 16rpx 16rpx 0px 0px
        position fixed
        bottom 0
        opacity 1
        display flex
        align-items center
        justify-content center
        .button
            width 662rpx
            height 110rpx
            color #FFFFFF
            background #2A4F44
            line-height 110rpx
            box-shadow 0rpx 8rpx 20rpx 0rpx rgba(0,0,0,0.302)
            border-radius 64rpx
        
            