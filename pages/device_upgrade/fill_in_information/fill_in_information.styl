.iconfont
    font-family 'iconfont' !important
    font-size 16px
    font-style normal
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
mixinsWidthHeight($width = 100%, $height = 100%)
    width $width
    height $height
mixinsIconfont($content='',$size=16px,$color=#5EBE68)
    content $content
    font-size $size
    color $color
mixinsPositionPack($position=relative)
    position $position
    left 50%
    transform translateX(-50%)
textLineCenter($height)
    text-align center
    line-height $height

.index
    margin 0
    padding 0
    width 100vw
    min-height 100vh
    background-color #ECECEC
    &::before   //占位
        display block
        content ""
        mixinsWidthHeight(,28rpx)

    /* 公用模块 */
    .module
        padding 0 37rpx 44rpx 37rpx
        border-radius 16rpx
        background #FFFFFF
        margin 0rpx 28rpx 28rpx 28rpx
        box-shadow 0 4rpx 2rpx 0 rgba(212, 212, 212, 0.5)
        .title
            display flex
            padding-top 40rpx
            align-items center
            font-family PingFangSC-Semibold, PingFang SC
            .titles
                font-size 32rpx
                font-weight 600
                color #1E1E1E
                line-height 44rpx
            .colorBrand
                mixinsWidthHeight(96rpx,36rpx)
                font-size 22rpx
                font-weight 400
                color #FFFFFF
                line-height 36rpx
                text-align center
                margin-left 20rpx
                border-radius 4rpx
        .publicCode
            height 75rpx
            display flex
            margin-top 18rpx
            align-items center
            justify-content space-between
            font-family PingFangSC-Regular, PingFang SC
            .publicCodeLeft
                width 140rpx
                font-size 28rpx
                font-weight 600
                color #1E1E1E
                text-align right
            .publicCoderight
                mixinsWidthHeight(520rpx,66rpx)
                display flex
                align-items center
                justify-content space-between
                border-bottom 2rpx solid #E0E0E0
                position relative
                .input
                    margin-left 20rpx
                    color #1E1E1E
                    font-size 28rpx
                    font-weight 600
                .input-placeholder
                    font-size 28rpx
                    font-weight 400
                    color rgba(0, 0, 0, 0.5)
                    letter-spacing 3rpx
                    font-family PingFangSC-Regular, PingFang SC
                .btns
                    height 46rpx
                    color #fff
                    font-size 16rpx
                    font-weight 400
                    text-align center
                    line-height 46rpx
                    padding 0 20rpx
                    border-radius 24rpx
                    background #5EBE68
                    display flex
                    .text
                        min-width 100rpx
                        display block
                    .wChat
                        &::before
                            display block
                            content '\e6b1'
                            font-size 25rpx
                            color #f0f4f1
                .errTip
                    font-size 18rpx
                    font-weight 400
                    color #F19C38
                    line-height 26rpx
                    font-family PingFangSC-Regular, PingFang SC
                    position absolute
                    left 0
                    bottom -30rpx
                .address
                    mixinsWidthHeight(45rpx,45rpx)
                    padding 0
                    background-color #FFFFFF
                    &::before
                        display inline-block
                        content '\e64d'
                        font-size 40rpx
                        color #5EBE68
                .sim
                    mixinsWidthHeight(45rpx,45rpx)
                    padding 0
                    background-color #FFFFFF
                    &::before
                        display inline-block
                        content '\e65c'
                        font-size 40rpx
                        color #5EBE68
            &:nth-of-type(4) 
                .publicCoderight 
                    .input
                        width 100%
    .moduleOne
        mixinsWidthHeight(auto,auto)
    .moduleTwo
        mixinsWidthHeight(auto,184rpx)
        .describe
            margin-left 14rpx
            font-size 22rpx
            font-family PingFang SC-Regular, PingFang SC
            font-weight 400
            color #1E1E1E
            
    .tip_1
        margin 0rpx 0rpx 28rpx 52rpx
        mixinsWidthHeight(646rpx,68rpx)
        font-size 22rpx
        font-family PingFang SC-Regular, PingFang SC
        font-weight 400
        color #FA0000
        line-height 34rpx
    .moduleThree
        mixinsWidthHeight(auto,532rpx)
        .publicCodeLeft
            color #3D3D3D
            width 160rpx !important
        .publicCoderight
            width 500rpx !important
        .picker
            width 400rpx
     /* 占位 */
    .split
        mixinsWidthHeight(,280rpx)
    /* 底部悬浮按钮 */
    .floatButton
        mixinsWidthHeight(,244rpx)
        opacity 1
        display flex
        align-items center
        background #ffffff
        justify-content center
        border-radius 16px 16px 0 0
        box-shadow 0 -8px 30px 0 rgba(223, 223, 223, 0.36)
        position fixed
        bottom 0
        z-index 100
        .handleImmediately
            mixinsWidthHeight(662rpx,110rpx)
            font-size 36rpx
            font-weight 600
            color #FFFFFF
            text-align center
            line-height 110rpx
            background #C0C0C0
            border-radius 64rpx
            font-family PingFangSC-Semibold, PingFang SC
            text-shadow 0 -8rpx 30rpx rgba(223, 223, 223, 0.36)
            box-shadow 0 -8rpx 30rpx 0 rgba(223, 223, 223, 0.36), 0 4rpx 2rpx 0 rgba(212, 212, 212, 0)
        .btn
            background #2A4F44
    // 压缩图片
	.press-canvas
		position fixed
		left -3000rpx