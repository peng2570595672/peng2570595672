@import "../../../style/base.styl"
.container
	min-height 100vh
	background #ECECEC
	padding 32rpx 16rpx
	box-sizing border-box
	.list-box
		background: #FFFFFF;
		border-radius: 16rpx
		padding 36rpx
		.title
			padding-bottom 8rpx
			font-size: 32rpx;
			font-family: PingFang SC-Semibold, PingFang SC;
			font-weight: 600;
			color: #33333D;
			text
				font-size: 24rpx;
				font-family: PingFang SC-Regular, PingFang SC;
				font-weight: 400;
				color: #262626;
		.list
			.item
				margin-top 20rpx
				height: 158rpx;
				display flex
				align-items center
				background: #F6F6F6;
				border-radius: 8rpx;
				border: 2rpx solid #F6F6F6;
				position relative
				.tips
					position absolute
					right: 0;
					top 0
					width: 188rpx;
					height: 32rpx;
					display flex
					align-items center
					justify-content center
					background: #E8E8E8;
					font-size: 20rpx;
					font-family: PingFang SC-Regular, PingFang SC;
					font-weight: 400;
					color: rgba(0,0,0,0.6);
					border-radius: 0 8rpx 0 8rpx;
				.logo
					width: 86rpx;
					height: 86rpx;
					display flex
					align-items center
					justify-content center
					background: #FFFFFF;
					border-radius: 20rpx
					margin 0 40rpx
					box-sizing border-box
					image
						height: 44rpx;
				.info
					font-size: 24rpx;
					font-family: PingFang SC-Regular, PingFang SC;
					font-weight: 400;
					color: #66666E;
					line-height: 36rpx;
					.name
						margin-bottom 12rpx
						font-size: 32rpx;
						display flex
						align-items center
						font-family: PingFang SC-Medium, PingFang SC;
						font-weight: 500;
						color: #33333D
						line-height: 36rpx;
						.status
							padding 0 12rpx
							height: 36rpx;
							display flex
							align-items center
							justify-content center
							font-size: 20rpx;
							font-family: PingFang SC-Regular, PingFang SC;
							font-weight: 400;
							color: #FFC300;
							border: 1rpx solid #FFC300;
							margin-left 16rpx
							border-radius 36rpx
							&.activated
								color #B1B1B6
								border-color #B1B1B6
							&.to_be_activated
								color #75DDAA
								border-color #75DDAA
				&.active
					border: 2rpx solid #E9CA7B;
					position relative
					overflow hidden
					.choice
						position absolute
						left -2rpx
						top -2rpx
						width: 43rpx;
						height: 32rpx;
						display flex
						align-items center
						justify-content center
						background: #E9CA7B;
						border-bottom-right-radius: 8rpx
						&:before
							content '\e669'
							color #333333
							flex-shrink 16rpx
		.othersDevice
			width 100%
			padding 10rpx 0
			margin-top 20rpx
			text-align center
			font-size 24rpx
			font-weight: 400;
			font-family: PingFang SC-Medium, PingFang SC;
