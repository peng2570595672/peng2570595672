@import "../../../style/base.styl"
$themeColor1 = #84d157;
$themeColor2 = #14ac69;
vendors = official
//按钮渐显
@keyframes btnFadeIn {
	from {
		opacity .2
	}
	to {
		opacity 1
	}
}
//按钮渐隐
@keyframes btnFadeOut {
	from {
		opacity 1
	}
	to {
		opacity .2
	}
}
.root
	height 100vh
	overflow hidden
	.title
		margin-top 40rpx
		display flex
		align-items center
		padding 0 30rpx
		height 56rpx
		font-size 40rpx
		font-weight 500
		&:before
			margin-right 10rpx
			content ''
			width 10rpx
			height 10rpx
			border 6rpx solid $fontColor
			border-radius 50%
		& > text
			margin-left 12rpx
			font-size 24rpx
			color #7A7F83
			transform translateY(8rpx)
	.car-no-wrapper
		margin-top 21rpx
		display flex
		align-items center
		justify-content center
		& > view
			margin-right 18rpx
			flex 0 0 60rpx
			width 60rpx
			&:last-of-type
				margin-right 0
			&.selected
				& > view:last-of-type
					&::before
						left 0
						right 0
						width 100%
						background linear-gradient(to right, $deepThemeColor, $shallowThemeColor)
						transition all .5s ease-in-out
						border-radius 4rpx
			&:nth-child(2)
				margin-right 30rpx
			& > view
				&:first-of-type
					display flex
					align-items center
					justify-content center
					height 84rpx
					font-size 60rpx
				&:last-of-type
					position relative
					height 8rpx
					background $fontColor9
					border-radius 4rpx
					&::before
						content ''
						display block
						position absolute
						width 0
						top 0
						bottom 0
						left 50%
						right 50%
			&.none
				margin-right 0
				flex 0 0 60rpx
				width 60rpx
				transform translateY(18rpx)
				& > view
					&:first-of-type
						height 66rpx
						color #F5C065
						border 2rpx dotted #F5C065
						border-radius 8rpx
						&.iconfont
							&::before
								display block
								font-size 24rpx
								content '\e63d'
								font-weight bold
								transform rotateZ(45deg)
					&:last-of-type
						position relative
						text-align center
						height auto
						font-size 16rpx
						color $fontColor
						background rgba(0,0,0,0)
						transform translateY(18rpx)
	.color-box
		padding 0 60rpx
		margin-top 50rpx
		.color-title
			font-size 28rpx
			color #66666d
			white-space nowrap
		.color-container
			display flex
			align-items center
			justify-content space-between
			padding-left 10rpx
			margin-top 20rpx
			.color-btn
				position relative
				display flex
				width 117rpx
				height 74rpx
				border-radius 12rpx
				font-size 20rpx
				color #999
				align-items center
				justify-content center
				border 2rpx solid #999
				margin-right 24rpx
				&:last-child
					margin-right 0
				&.green
					color #15ad69
					border solid 2rpx #15ad69
				&.blue
					color #0eafe6
					border solid 2rpx #0eafe6
				&.yellow
					color #f7b500
					border solid 2rpx #f7b500
				&.white
					color #D8D8D8
					border solid 2rpx #ECECEC
				&.black
					color #000
					border solid 2rpx #000
				&.active
					color #fff
					border solid 2rpx #999
					background-color #999
					&.green
						border-color #15ad69
						background-color #15ad69
						.select:before
							border-color #15ad69
							color #15ad69
					&.blue
						border-color #0eafe6
						background-color #0eafe6
						.select:before
							border-color #0eafe6
							color #0eafe6
					&.yellow
						border-color #f7b500
						background-color #f7b500
						.select:before
							border-color #f7b500
							color #f7b500
					&.black
						border-color #000
						background-color #000
						.select:before
							border-color #000
							color #000
					&.white
						color #33333D
						border-color #D8D8D8
						background-color #ECECEC
						.select:before
							border-color #D8D8D8
							color #ECECEC
	.prompt
		color #66666d
		font-size 28rpx
		line-height 40rpx
		margin 40rpx 0 60rpx
		padding-left 60rpx
	.separate-line
		height 20rpx
		background-color #f7f7f7
	.text-agreement
		position fixed
		right 60rpx
		bottom 190rpx
		left 60rpx
		min-height 100rpx
		line-height 100rpx
		font-size 22rpx
		text-align center
		&:before
			display: inline-block;
			width 28rpx
			height 28rpx
			content '\e6e4'
			font-size 38rpx
			color #99999d
			border-radius 50%
			margin-right 10rpx
			position relative
			top 10rpx
		&.selected::before
			color #00B85C
		text
			display inline-block
			color #00BC58
			line-height 15rpx
	.btn
		position fixed
		right 60rpx
		bottom 80rpx
		left 60rpx
		height 98rpx
		line-height 98rpx
		border-radius 49rpx
		font-size 40rpx
		text-align center
		color #fff
		background linear-gradient(45deg, $themeColor2, $themeColor1)
		&:active
			opacity .8
		&.disabled
			opacity .24
	.alert-mask
		position fixed
		left 0
		top 0
		right 0
		bottom 0
		background rgba(0, 0, 0, .3)
		z-index 3
		overflow-x hidden
		overflow-y auto
		-webkit-overflow-scrolling touch
		.wrapper
			position fixed
			left 50%
			top 50%
			width 680rpx
			// height 500rpx
			margin-top -350rpx
			margin-left -340rpx
			text-align center
			background #fff
			border-radius 32rpx
			.sub-title
				padding-top 48rpx
				padding-bottom 16rpx
				font-weight 500
				font-size 40rpx
				line-height 56rpx
				color #33333d
			.item
				margin 27rpx 40rpx 0 40rpx
				border-bottom 1rpx solid #eee
				display flex
				justify-content space-between
				align-items center
				color #33333d
				font-size 32rpx
				line-height 48rpx
				padding-bottom 10rpx
				white-space nowrap
				.label
					color #99999d
				.input
					border 0
					outline 0
					background transparent
					text-align left
					width 160rpx
					height 48rpx
					font-size 32rpx
				.input-code-placeholder-class
					text-align left
					color #6d6d74
				.placeholder
					display block
					text-align left
					width 160rpx
					height 48rpx
					color #6d6d74
					font-size 32rpx
				.get-code-char
					flex-shrink 0
					flex-grow 0
					border-left 2rpx solid #d8d8d8
					padding-left 20rpx
					font-size 32rpx
					width 180rpx
					height 42rpx
					line-height 42rpx
					color #15ad69
					white-space nowrap
			.close
				position absolute
				right 0
				top 0
				padding 38rpx 36rpx 30rpx 30rpx
				&:before
					display block
					content '\e63d'
					font-size 21rpx
					color #66666d
			.prompt-to-sign
				color #ff563c
				font-size 28rpx
				line-height 40rpx
				margin-top 110rpx
			.sign
				width 630rpx
				height 98rpx
				line-height 98rpx
				text-align center
				color #fff
				font-size 40rpx
				background linear-gradient(45deg, $themeColor2, $themeColor1)
				border-radius 49rpx
				margin 20rpx auto 40rpx
				&:active
					opacity .8
			.next
				margin-top 26rpx
				display block
				height 104rpx
				line-height 104rpx
				font-size 32rpx
				color #15ad69
				&:active
					opacity .8
				&.disabled,
				&.disabled:active
					color #66666d
					opacity 1
