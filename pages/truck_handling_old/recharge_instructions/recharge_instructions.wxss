.recharge-instructions {
  width: 100%;
  padding: 32rpx;
  box-sizing: border-box;
  height: 100vh;
}
.recharge-instructions .card {
  background: #f6f6f6;
  border-radius: 16rpx;
  padding: 38rpx 24rpx 32rpx 26rpx;
  box-sizing: border-box;
}
.recharge-instructions .card .title {
  color: rgba(0,0,0,0.9);
  font-size: 34rpx;
  line-height: 48rpx;
  padding-bottom: 32rpx;
}
.recharge-instructions .card .transfer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  line-height: 34rpx;
}
.recharge-instructions .card .transfer > view > view {
  padding-bottom: 6rpx;
}
.recharge-instructions .card .transfer > view > view.tips {
  color: #ffc300;
  font-size: 18rpx;
  line-height: 26rpx;
}
.recharge-instructions .card .transfer > view > view:first-child {
  color: rgba(0,0,0,0.3);
}
.recharge-instructions .card .transfer > view:last-child {
  text-align: right;
}
.recharge-instructions .card .transfer > view.arrow::before {
  color: #2fb565;
  content: '\e68d';
  font-size: 32rpx;
}
.recharge-instructions .instructions {
  background: #f6f6f6;
  margin-top: 30rpx;
  padding: 32rpx;
  font-size: 24rpx;
  color: rgba(0,0,0,0.8);
}
.recharge-instructions .instructions .content {
  display: flex;
  align-items: baseline;
  line-height: 36rpx;
  padding-bottom: 22rpx;
}
.recharge-instructions .instructions .content::before {
  display: flex;
  height: 36rpx;
  font-size: 30rpx;
  line-height: 36rpx;
  align-items: flex-end;
  content: 'â€¢';
  margin-right: 10rpx;
  color: #07c160;
}
.recharge-instructions .instructions .table {
  margin: 0rpx 0 22rpx 25rpx;
}
.recharge-instructions .instructions .table .tr {
  background: #e1e1e1;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  width: 100%;
  height: 50rpx;
  align-items: center;
  border-bottom: 2rpx solid #f6f6f6;
}
.recharge-instructions .instructions .table .tr:last-child > .td {
  border-bottom: 0;
}
.recharge-instructions .instructions .table .tr .td {
  height: 50rpx;
  background: #e1e1e1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-left: 10rpx;
}
.recharge-instructions .instructions .table .tr .td:first-child {
  width: 50%;
}
.recharge-instructions .instructions .table .tr .td:last-child {
  width: 50%;
  border-left: 2rpx solid #f6f6f6;
}
.recharge-instructions .instructions .table .tr .th {
  display: flex;
  width: 50%;
  height: 50rpx;
  align-items: center;
  background: #e1e1e1;
  justify-content: center;
  padding-left: 10rpx;
}
.recharge-instructions .instructions .table .tr .th:first-child {
  width: 50%;
}
.recharge-instructions .instructions .table .tr .th:last-child {
  width: 50%;
  border-left: 2rpx solid #f6f6f6;
}
.recharge-instructions .instructions > view:last-child {
  padding-bottom: 0;
}
.recharge-instructions .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 34rpx 0rpx 70rpx;
  height: 98rpx;
  font-size: 40rpx;
  font-weight: 500;
  color: #fff;
  border-radius: 49rpx;
  background: linear-gradient(to right, #15ad69, #84d157);
}
