.binding_account {
  display: flex;
  flex-direction: column;
  padding: 52rpx 32rpx 0rpx;
  box-sizing: border-box;
  min-height: 100vh;
}
.binding_account .card {
  height: 228rpx;
  background-image: url("data:image/png;base64,");
  background-size: 354rpx 316rpx;
  background-repeat: no-repeat;
  background-position: 400rpx;
  background-color: #c25255;
  color: #fff;
  padding: 48rpx 32rpx;
  box-sizing: border-box;
  box-shadow: 0rpx 6rpx 16rpx 0rpx rgba(0,0,0,0.1);
  font-family: PingFangSC-Medium, PingFang SC;
  border-radius: 20rpx;
  margin-bottom: 32rpx;
}
.binding_account .card .name {
  display: flex;
  height: 60rpx;
  align-items: center;
  margin-right: 40rpx;
}
.binding_account .card .name::before {
  content: '\e66f';
  font-size: 60rpx;
  margin-right: 12rpx;
}
.binding_account .card .name > view {
  color: #fff;
  opacity: 0.5;
  font-family: PingFangSC-Medium, PingFang SC;
  font-size: 24rpx;
  line-height: 34rpx;
}
.binding_account .card .name > view > view:last-child {
  font-size: 18rpx;
  line-height: 26rpx;
}
.binding_account .card .card-no {
  display: flex;
  padding-top: 34rpx;
  line-height: 42rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: rgba(255,255,255,0.9);
}
.binding_account .card .card-no > view:first-child {
  flex: 1;
  font-size: 38rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  color: #fff;
}
.binding_account .fill {
  flex: 1;
}
.binding_account .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 60rpx 0 70rpx;
  height: 98rpx;
  font-size: 40rpx;
  font-weight: 500;
  color: #fff;
  border-radius: 49rpx;
  background: linear-gradient(to right, #15ad69, #84d157);
}
