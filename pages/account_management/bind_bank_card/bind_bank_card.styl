@import "../../../style/base.styl";
.binding_account
	display flex
	flex-direction column
	padding 52rpx 32rpx 0rpx
	box-sizing border-box
	min-height 100vh
	.card
		position relative
		width 100%
		height 228rpx
		background #C25255
		border-radius 20rpx
		margin-bottom 32rpx
		overflow hidden
		&::after
			position absolute
			right -39rpx
			top -49rpx
			content '\e66f'
			font-size 320rpx
			color rgba(255, 255, 255, 0.1)
			opacity .34
		.card-box
			position absolute
			left 0
			right 0
			height 228rpx
			color #fff
			padding 48rpx 32rpx
			box-sizing border-box
			box-shadow 0rpx 6rpx 16rpx 0rpx rgba(0, 0, 0, 0.1)
			font-family PingFangSC-Medium, PingFang SC
			.name
				display flex
				height 60rpx
				align-items center
				margin-right 40rpx
				&::before
					content '\e66f'
					font-size 60rpx
					margin-right 12rpx
				& > view
					color #ffffff
					opacity .5
					font-family PingFangSC-Medium, PingFang SC
					font-size 24rpx
					line-height 34rpx
					.type
						font-size 18rpx
						line-height 26rpx
			.card-no
				display flex
				padding-top 34rpx
				line-height 42rpx
				font-size 24rpx
				font-family PingFangSC-Regular, PingFang SC
				color rgba(255, 255, 255, 0.9)
				& > view:first-child
					flex 1
					font-size 38rpx
					font-family PingFangSC-Medium, PingFang SC
					color rgba(255, 255, 255, 1)
		&.abchina
			background #2F856D
			&::after
				top -90rpx
				right -120rpx
				font-size 380rpx
				content '\e672'
			.card-box
				.name
					&::before
						content '\e672'
		&.boc
			background #B81C22
			&::after
				top -90rpx
				right -120rpx
				font-size 380rpx
				content '\e674'
			.card-box
				.name
					&::before
						content '\e674'
		&.ccb
			background #003A90
			&::after
				content '\e671'
			.card-box
				.name
					&::before
						content '\e671'
		&.bankcomm
			background #00367A
			&::after
				content '\e670'
			.card-box
				.name
					&::before
						content '\e670'
		&.psbc
			background #2F856D
			&::after
				content '\e66e'
			.card-box
				.name
					&::before
						content '\e66e'
	.fill
		flex 1
	// 下一步
	.btn
		display flex
		align-items center
		justify-content center
		margin 60rpx 0 70rpx
		height 98rpx
		font-size 40rpx
		font-weight 500
		color #fff
		border-radius 49rpx
		background: linear-gradient(to right , $deepThemeColor, $shallowThemeColor)
