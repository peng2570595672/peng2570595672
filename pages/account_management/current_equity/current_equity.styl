mixinsWidthHeight($width = 100%, $height = 100%)
    width $width
    height $height
mixinsIconfont($content='',$size=16px,$color=#5EBE68)
    content $content
    font-size $size
    color $color
mixinsPositionPack($position=relative)
    position $position
    left 50%
    transform translateX(-50%)
textLineCenter($height)
    text-align center
    line-height $height
.account-details
	& > view
		padding-left 32rpx
	.currentEquity
		mixinsWidthHeight(662rpx,134rpx)
		display flex
		align-items center
		justify-content space-between
		margin-left 28rpx
		margin-top 24rpx
		background linear-gradient(315deg, #107172 0%, #158B8C 100%)
		box-shadow 0rpx 4rpx 16rpx 0rpx rgba(0,0,0,0.1)
		border-radius 16rpx 16rpx 16rpx 16rpx
		font-family PingFang SC-Regular, PingFang SC
		font-weight 400
		line-height 28rpx
		opacity 1
		.leftName
			margin-left -4rpx
			font-size 24rpx
			color rgba(255,255,255,0.9)
			.attrValue
				font-size 44rpx
				font-family Arial Black-Regular, Arial Black
				font-weight 900
				color #FFFFFF
				margin-left 10rpx
				.subText
					font-size 32rpx
					font-family Arial Hebrew-Bold, Arial Hebrew
					font-weight 700
		.rightVehPlates
			margin-right 28rpx
			font-size 28rpx
			color #FFFFFF
	.split
		height 20rpx
		background #FAFAFA
	.account-list
		padding 32rpx
		.list-title
			display flex
			height 34rpx
			align-items center
			font-size 32rpx
			font-family PingFangSC-Medium, PingFang SC
			font-weight 400
			color #3D3D3D
			padding-bottom 26rpx
			// &::before
			// 	margin-right 8rpx
			// 	content ''
			// 	width 8rpx
			// 	height 44rpx
			// 	background #2FB565
			.title
				flex 1
			.picker
				display flex
				color rgba(0,0,0,0.6)
				font-size 34rpx
				&::before
					content '\e69c'
					font-size 32rpx
					margin-right 12rpx
		.list-item
			border-bottom 1rpx solid rgba(176, 176, 176, .29)
			& > view
				color $fontColor3
				font-size 36rpx
				display flex
				& > view
					flex 1
					&:last-child
						text-align right
				&.first
					padding-top 32rpx
					padding-bottom 16rpx
					.type
						font-size 28rpx
						font-family PingFang SC-Regular, PingFang SC
						font-weight 400
						color #000000
					.price
						font-size 28rpx
						font-family PingFang SC-Semibold, PingFang SC
						font-weight 600
						color #00000
					.red
						color #f00
				&.last
					line-height 50rpx
					padding-bottom 12rpx
					.time
						font-size 24rpx
						font-family PingFang SC-Regular, PingFang SC
						font-weight 400
						color rgba(0,0,0,0.6)

