.account-details > view {
  padding-left: 32rpx;
}
.account-details .currentEquity {
  width: 662rpx;
  height: 134rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-left: 28rpx;
  margin-top: 24rpx;
  background: linear-gradient(315deg, #107172 0%, #158b8c 100%);
  box-shadow: 0rpx 4rpx 16rpx 0rpx rgba(0,0,0,0.1);
  border-radius: 16rpx 16rpx 16rpx 16rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 28rpx;
  opacity: 1;
}
.account-details .currentEquity .leftName {
  margin-left: -4rpx;
  font-size: 24rpx;
  color: rgba(255,255,255,0.9);
}
.account-details .currentEquity .leftName .attrValue {
  font-size: 44rpx;
  font-family: Arial Black-Regular, Arial Black;
  font-weight: 900;
  color: #fff;
  margin-left: 10rpx;
}
.account-details .currentEquity .leftName .attrValue .subText {
  font-size: 32rpx;
  font-family: Arial Hebrew-Bold, Arial Hebrew;
  font-weight: 700;
}
.account-details .currentEquity .rightVehPlates {
  margin-right: 28rpx;
  font-size: 28rpx;
  color: #fff;
}
.account-details .split {
  height: 20rpx;
  background: #fafafa;
}
.account-details .account-list {
  padding: 32rpx;
}
.account-details .account-list .list-title {
  display: flex;
  height: 34rpx;
  align-items: center;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 400;
  color: #3d3d3d;
  padding-bottom: 26rpx;
}
.account-details .account-list .list-title .title {
  flex: 1;
}
.account-details .account-list .list-title .picker {
  display: flex;
  color: rgba(0,0,0,0.6);
  font-size: 34rpx;
}
.account-details .account-list .list-title .picker::before {
  content: '\e69c';
  font-size: 32rpx;
  margin-right: 12rpx;
}
.account-details .account-list .list-item {
  border-bottom: 1rpx solid rgba(176,176,176,0.29);
}
.account-details .account-list .list-item > view {
  color: $fontColor3;
  font-size: 36rpx;
  display: flex;
}
.account-details .account-list .list-item > view > view {
  flex: 1;
}
.account-details .account-list .list-item > view > view:last-child {
  text-align: right;
}
.account-details .account-list .list-item > view.first {
  padding-top: 32rpx;
  padding-bottom: 16rpx;
}
.account-details .account-list .list-item > view.first .type {
  font-size: 28rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: #000;
}
.account-details .account-list .list-item > view.first .price {
  font-size: 28rpx;
  font-family: PingFang SC-Semibold, PingFang SC;
  font-weight: 600;
  color: rgba(0,0,0,0) 0;
}
.account-details .account-list .list-item > view.first .red {
  color: #f00;
}
.account-details .account-list .list-item > view.last {
  line-height: 50rpx;
  padding-bottom: 12rpx;
}
.account-details .account-list .list-item > view.last .time {
  font-size: 24rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0,0,0,0.6);
}
