/* pages/account_management/margin_recharge_model/margin_recharge_model.wxss */
#marginRecharge {
  height: 100vh;
  /* background-color: rgb(187, 187, 243); */
  padding: 0 30rpx;
}

#marginRecharge>.title {
  width: 264rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #000000;
  font-size: 28rpx;
  font-weight: 400;
  font-family: PingFangSC-Regular, PingFang SC;
  opacity: 0.9;
  padding-top: 64rpx;

}

#marginRecharge>.inputMoney {
  height: 84rpx;
  font-size: 60px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #00B85C;
  line-height: 84px;
  display: flex;
  align-items: center;
  margin-top: 32rpx;
}

#marginRecharge>.inputMoney text:nth-of-type(2) {
  font-size: 28rpx;
  font-weight: 600;
  color: #33333D;
  margin-left: 12rpx;
}

#marginRecharge>.textTip {
  width: 676rpx;
  height: 160rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  font-weight: 400;
  font-family: PingFangSC-Regular, PingFang SC;
  color: #66666D;
  margin-top: 32rpx;
}

#marginRecharge>.splitLine {
  width: 750rpx;
  height: 20rpx;
  background: #FAFAFA;
  margin: 60rpx 0 0 -30rpx;
}

#marginRecharge>.btnmarginRecharge {
  width: 610rpx;
  height: 98rpx;
  color: #FFFFFF;
  line-height: 98rpx;
  border-radius: 50rpx;
  font-size: 34rpx;
  font-weight: 500;
  font-family: PingFangSC-Medium, PingFang SC;
  background: linear-gradient(45deg, #00AF62 0%, #68D33F 100%);
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
}