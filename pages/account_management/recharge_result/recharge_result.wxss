.recharge_result {
  display: flex;
  flex-direction: column;
  background: #fff;
  min-height: 100vh;
}
.recharge_result image {
  display: block;
  margin: 80rpx auto 0;
  width: 304rpx;
}
.recharge_result .signed_title {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 76rpx;
  font-size: 44rpx;
  font-weight: 500;
}
.recharge_result .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 252rpx 60rpx 30rpx;
  height: 98rpx;
  font-size: 40rpx;
  font-weight: 500;
  color: #fff;
  border-radius: 49rpx;
  background: linear-gradient(to right, #15ad69, #84d157);
}
.recharge_result .btn.available {
  animation: btnFadeIn 0.3s;
  animation-fill-mode: forwards;
}
.recharge_result .btn.unavailable {
  animation: btnFadeOut 0.3s;
  animation-fill-mode: forwards;
}
.recharge_result .content {
  color: #66666d;
  font-size: 28rpx;
  line-height: 44rpx;
  padding: 32rpx 80rpx;
}
