@import "../../style/base.styl";
@import "animate.styl";
.index
	width 100%
	overflow-x hidden
	// 车辆类型切换
	.tab
		height 176rpx
		background #EBFFDC
		.tab-box
			padding 96rpx 32rpx 0
			font-size 48rpx
			font-family PingFangSC-Semibold, PingFang SC
			font-weight 600
			color rgba(0, 0, 0, 1)
			.check-vehicle
				display flex
				.item
					padding-right 30rpx
					display flex
					height 64rpx
					align-items center
			.line
				display flex
				width 38rpx
				height 12rpx
				background #FFC000
				border-radius 6rpx
				margin-top 4rpx
				margin-left 28rpx
				&.active
					animation linearAnimation 300ms
					animation-name linearAnimation
				&.active-trucks
					animation linearAnimation1 300ms
					animation-name linearAnimation1
				&.skewing
					margin-left 159rpx
	// 立即办理
	.deal-with
		position relative
		height 498rpx
		background-image linear-gradient(#EBFFDC, #CAFFCD)
		z-index 1
		.left
			position absolute
			z-index 1
			left 28rpx
			.introduce-box
				display flex
				.introduce
					padding-top 80rpx
					min-width 500rpx
					.title
						display flex
						height 64rpx
						align-items center
						font-size 52rpx
						font-family Arial-Black, Arial
						font-weight 900
						color #00B85C
						image
							width 114rpx
							margin-top -45rpx
					.sub-title
						padding-top 18rpx
						font-size 24rpx
						color rgba(102,102,110, 0.8)
						line-height 34rpx
					&.introduce-trucks
						padding-left 450rpx
					&.continent-insurance-introduce
						padding-top 0
						.title
							color #FB4E58
							font-size 52rpx
						.sub-title
							padding-top 32rpx
							width 470rpx
							font-size 28rpx
							line-height 40rpx
							font-family PingFangSC-Semibold, PingFang SC
							color rgba(0,0,0, 0.8)
							text
								color #F51D55
							.last
								padding-top 32rpx
								font-size 24rpx
								font-family PingFangSC-Regular, PingFang SC
								line-height 34rpx
			.btn
				display flex
				align-items center
				justify-content center
				width 158rpx
				height 50rpx
				border-radius 25rpx
				margin-top 82rpx
				background #FFC000
				font-size 24rpx
				font-family PingFangSC-Semibold, PingFang SC
				font-weight 600
				color: #FFFFFF
				&.btn-switch-trucks
					background #3CA1FF
				&.btn-switch-passenger-car
					background #FFC000
		.right
			position absolute
			right 0
			top 45rpx
			z-index 0
			image
				width 488rpx
			&.right-for-trucks
				right -488rpx
			&.continent-insurance-img
				top -65rpx
	// 订单信息开始
	.order-info
		position relative
		padding 32rpx
		border-radius 24rpx 24rpx 0rpx 0rpx
		background #FFFEFE
		margin-top -32rpx
		z-index 2
		.order-info-box
			height 290rpx
			background #FFFFFF
			box-shadow 0rpx 10rpx 30rpx 0rpx rgba(159, 159, 159, 0.15)
			border-radius 8rpx
			// 显示订单状态开始
			.vehicle-information
				display flex
				height 82rpx
				padding 52rpx 48rpx 68rpx 46rpx
				overflow hidden
				.vehicle-info
					flex 1
					position relative
					.vehicle-info-box
						flex 1
						height 82rpx
						font-size 34rpx
						font-family PingFangSC-Semibold, PingFang SC
						font-weight 600
						color #000000
						.sub-title
							font-size 24rpx
							font-family PingFangSC-Regular, PingFang SC
							font-weight 400
							color rgba(102,102,110, 0.8)
							line-height 34rpx
							padding-top 14rpx
						&.vehicle-info-trucks-box
							position absolute
							top 150rpx
				.btn
					display flex
					align-items center
					justify-content center
					width 240rpx
					height 82rpx
					background #00B85C
					border-radius 8rpx
					font-size 28rpx
					font-family PingFangSC-Semibold, PingFang SC
					font-weight 600
					color #FFFFFF
				.bill-info
					text-align center
					.bill
						height 56rpx
						display flex
						align-items center
						font-size 48rpx
						font-weight bold
						color #00B85C
						&::after
							content '\e63e'
							font-size 20rpx
							color #FFEC9A
							margin-left 12rpx
						&.failure
							color #FF3C48
					.bill-status
						display flex
						height 34rpx
						align-items center
						justify-content center
						font-size 24rpx
						color #33333E
						line-height 34rpx
						padding-top 2rpx
						&.failure
							&::before
								color #FF3C48
								content '\e617'
								margin-right 8rpx
			.other-entrance
				display flex
				height 48rpx
				align-items center
				padding 0 32rpx
				.item
					flex 1
					display flex
					height 48rpx
					align-items center
					color rgba(0, 0, 0, 1)
					font-size 24rpx
					border-right 1rpx solid #E7E7E7
					padding-left 12rpx
					&::before
						color #00B85C
						font-size 32rpx
						margin-right 8rpx
					&.invoice
						&::before
							content '\e694'
					&.violation-enquiry
						&::before
							content '\e690'
					&.my-order
						&::before
							content '\e699'
					&.icontaocan-jiayou
						&::before
							content '\e6aa'
					&.server
						&::before
							content '\e6a3'
					&.personal-center
						&::before
							content '\e695'
					&:first-child
						padding-left 0
					&:last-child
						border 0
		.notice
			height 60rpx
			background #F8FFF8
			display flex
			align-items center
			padding-left 32rpx
			padding-right 38rpx
			box-shadow 0rpx 4rpx 12rpx 0rpx rgba(0,0,0,0.04)
			.notice-left
				flex 1
				color rgba(0,0,0,.3)
				font-size 24rpx
				&::before
					content '\e698'
					font-size 28rpx
					color #00B85C
					margin-right 14rpx
			.notice-right
				width 12rpx
				height 12rpx
				background #FF3C48
				border-radius 50%
				&.no-notice-bg
					display none
			&::after
				content '\e60e'
				font-size 22rpx
				color rgba(0,0,0,.3)
				margin-left 14rpx
				transform rotateZ(-180deg)
	// 底部活动
	.my-swiper
		height 250rpx
		.my-swiper-item
			image
				width 504rpx
				&.micro_high_speed,
				&.micro_insurance_hcz,
				&.xiaoepinpin
					width 470rpx
					height 195rpx !important
					margin 20rpx
	
	// 畅游弹窗
	.moving_integral_pop-up
		width 640rpx
		height 892rpx
		background-color #fff
		border-radius 16rpx
		box-shadow 1rpx 1rpx 1rpx 1rpx rgba(0, 0, 0, 0.1)
		overflow hidden
		position absolute
		z-index 100
		top 50%
		left 50%
		transform: translate(-50%, -50%)
		.scroll_pop-up
			width 568rpx
			height 684rpx
			color #000000
			line-height 46rpx
			margin 64rpx 0 0 48rpx
			view
				width 532rpx
				height auto
				&:nth-of-type(1)
					font-size 26rpx
					font-weight bold
					font-family PingFangSC-Medium, PingFang SC
					color #000000
					padding-bottom: 10rpx
				&:nth-of-type(2)
					font-size: 24rpx;
					font-weight: 400;
					font-family: PingFangSC-Regular, PingFang SC;
					padding-bottom: 20rpx;
					text
						&:nth-of-type(1)
							color #00aff9
						.textBold
							color #000
							font-weight bold
		.solid
			width 100%
			height 2rpx
			background rgba(0, 0, 0, 0.1000)
			margin-top 36rpx
		
		.btn_scroll
			width 100%
			height 106rpx
			display flex
			button
				outline none
				border none
				width 319rpx
				height 100%
				border-radius 0
				font-size 34rpx
				font-family PingFangSC-Medium, PingFang SC
				font-weight 500
				letter-spacing 2rpx
				line-height 106rpx
				background-color #fff
				&:nth-of-type(1)
					border-right 1rpx solid rgba(0, 0, 0, 0.1000)
					color #000000
				&:nth-of-type(2)
					color #576B95
		.img_1
			width 504rpx !important
			height 195rpx !important
		
		
	/*定义滚动条轨道 内阴影+圆角*/
	::-webkit-scrollbar-track {
		border-radius: 12rpx;
	}
	
	/*定义滑块 内阴影+圆角*/
	::-webkit-scrollbar-thumb {
		border-radius: 12rpx;
		background-color: rgba(216, 216, 216, 1);
	}
	
