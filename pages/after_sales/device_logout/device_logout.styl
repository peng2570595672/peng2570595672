@import "../../../style/base.styl";
@import "../../../style/my_animate.styl";
.container
    display flex
    flex-direction column
    min-height 100vh
    padding 24rpx 24rpx 230rpx
    overflow scroll
    background #F7F7F7
    .inputContainer
        border-radius: 24rpx;
        background: #FFFFFF;
        padding 30rpx
        .title
            font-size: 36rpx;
            font-weight: 500;
            line-height: 56rpx;
            color: #33333D;
            padding-bottom 16rpx
        .inputItem
            height 110rpx
            display flex
            align-items center
            border-bottom: 1rpx solid #EDEDED;
            .label
                width 210rpx
                font-size 28rpx
                color: #333333;
                &::before
                    content '*'
                    font-size: 24rpx;
                    font-weight: normal;
                    color: #FF0000;
            .val
                flex 1
                font-family: PingFang SC;
                font-size: 28rpx;
                font-weight: normal;
                .selectInfo
                    width 100%
                    display flex
                    align-items center
                    position relative
                    &::after
                        position absolute
                        right 0
                        font-size 24rpx
                        content '\e652'
                        color #666666
                .textarea
                    width 100%
                    height 100rpx
                .input-placeholder
                    color: #999999;
                &.blueColor
                    color #276AD9
                &.yellowColor
                    color #FF8F1F
                &.blackColor
                    color #222222
                &.whiteColor
                    color #222222
                    opacity .5
                &.greenColor
                    color #5EBE68
        .reasonItem
            padding 32rpx 0
            align-items flex-start
            .val
                .textarea
                    height 90rpx
        .uploadContainer
            border-bottom: 1rpx solid #EDEDED;
            .inputItem
                border-bottom 0
            .uploadBox
                .subTips
                    display flex
                    align-items center
                    font-size: 24rpx;
                    font-weight: normal;
                    line-height: 28rpx;
                    color: #666666;
                    .example
                        color: #00B578;
                        margin-left 14rpx
                .uploadImg
                    display flex
                    flex-wrap wrap
                    padding 32rpx 0 60rpx
                    .uploaderItem
                    .addImg
                        width: 190rpx;
                        height: 190rpx;
                        display flex
                        align-items center
                        justify-content center
                        border-radius: 24rpx;
                        position relative
                        box-sizing border-box
                        .img
                            width: 190rpx;
                            height: 190rpx;
                            border-radius: 24rpx;
                        .deleteImg
                            position absolute
                            top -5rpx
                            right -5rpx
                            z-index 10
                            width: 35rpx;
                            height: 35rpx;
                            display flex
                            align-items center
                            justify-content center
                            background: #FA5151;
                            border-radius 50%
                            .line
                                background: #FFFFFF;
                                width 25rpx
                                height 5rpx
                                border-radius 2.5rpx
                    .addImg
                        border: 1rpx solid #E2E2E2;
                        font-family: PingFang SC;
                        font-size: 24rpx;
                        font-weight: normal;
                        color: #666666;
                    &.equipmentImg
                        .uploaderItem
                        .addImg
                            width: 145.5rpx;
                            height: 145.5rpx;
                            margin-right 20rpx
                            .img
                                width: 145.5rpx;
                                height: 145.5rpx;
                        :nth-child(4n)
                            margin-right 0
                        :nth-child(n+5):nth-child(-n+8)
                            // 范围 选择第5个到第8个
                            margin-top 20rpx
                            margin-bottom 20rpx
                    &.uploadImgOther
                        // 图片和上传图之和不超过三列
                        :nth-child(n+5):nth-child(-n+8)
                            margin-bottom 0rpx
        .deliveryAddress
            .subTitle
                font-family: PingFang SC;
                font-size: 24rpx;
                color: #999999;
                line-height 28rpx
                padding 40rpx 0 16rpx
            .deliveryInfo
                border-radius: 16rpx;
                background: #F7F7F7;
                line-height 36rpx
                font-size 24rpx
                padding 24rpx
                color #999
                .userInfo
                    display flex
                    align-items center
                    justify-content space-between
                    padding-bottom 14rpx
                    .userName
                        color: #222222;
                        text
                            margin-left 20rpx
    .btn-wrapper
        position fixed
        height 230rpx
        width 100%
        left 0
        bottom 0
        display flex
        z-index 100
        justify-content center
        border-radius: 16rpx 16rpx 0rpx 0rpx;
        padding 24rpx 44rpx
        box-sizing border-box
        background: #FFFFFF;
        .btn
            flex 1
            height: 110rpx;
            display flex
            align-items center
            justify-content center
            border-radius: 55rpx;
            background: #2A4F44
            box-shadow: 0rpx 4rpx 2rpx 0rpx rgba(212, 212, 212, 0);
            font-size: 36rpx;
            font-weight: 600;
            color: #FFFFFF;
            &.available
                animation btnFadeIn .3s
                animation-fill-mode forwards
            &.unavailable
                animation btnFadeOut .3s
                animation-fill-mode forwards
