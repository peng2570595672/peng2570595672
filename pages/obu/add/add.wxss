
.iconduihao:before {content: "\e638";}
.icongonghang:before {content: "\e66f";}

.but{
	background: linear-gradient(45deg, #00AF62 0%, #68D33F 100%);
	box-shadow: 0px 8rpx 10rpx 0px rgba(104, 211, 63, 0.2);
  border-radius:50rpx;
  width:100%;
  position: relative;
}
.top{
  font-size:34rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  width:100%;
  text-align: center;
  padding:20rpx;
  box-sizing: border-box;
}
.money{
  font-size:34rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  width:100%;
  text-align: center;
  padding-bottom:40rpx;
  box-sizing: border-box;
}
.money .symbol{
  font-size:24rpx;
  display: inline-block;
}

.list{
  width:90%;
  background: #F6F6F6;
  box-shadow: 0px 6rpx 16rpx 0px rgba(0, 0, 0, 0.1);
  border-radius:20rpx;
  margin:0 auto;
  box-sizing: border-box;
  padding:20rpx;
  position: relative;
  overflow: hidden;
}
.list .h3{
  font-size:34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #000000;
  border-left:12rpx solid #00AF62;
  padding-left:20rpx;
  margin-bottom:10rpx;
  display: block;
}

.step{
  width:100%;
  margin:40rpx auto;
  position: relative;
}
.step::after{
  content: "";
  position: absolute;
  left:10rpx;
  top:10rpx;
  height:90%;
  width:1rpx;
  border-left:1rpx dashed #68D33F;
  z-index:8;
}
.step>view{
  margin-bottom:40rpx;
  position: relative;
  padding-left:40rpx;
}
.step>view::after{
  content: "";
  position: absolute;
  left:0;
  top:10rpx;
  width:20rpx;
  height:20rpx;
  background-color: #00B85C;
  border-radius:50%;
  z-index:9;
}

