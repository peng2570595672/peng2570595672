mixinsWidthHeight($width=100%, $height=100%)
    width $width
    height $height
textCenter($height=30rpx)
    text-align center
    line-height $height
.index
    padding-bottom 50rpx
    margin 0
    width 100vw
    min-height 100vh
    z-index 100
    .topImg
        mixinsWidthHeight(100vw, auto)
        .image
            mixinsWidthHeight(100vw, 100%)
    .module
        margin 28rpx
        padding 28rpx
        background #FFFFFF
        box-shadow 8rpx 10rpx 0rpx 0rpx #0873E8
        border-radius 24rpx
        .head
            height 110rpx
            display flex
            align-items center
            justify-content center
            font-size 36rpx
            font-weight bold
            font-family HarmonyOS_Sans_SC_Black
            color #2386F3
            &:before
                margin-right 20rpx
                mixinsWidthHeight(100rpx, 40rpx)
                content ''
                background url('https://file.cyzl.com/g001/M01/DE/6A/oYYBAGRkLd-AfNdZAAABEFsR1YI392.png') center no-repeat
                background-size 80% 50%
            &:after
                margin-left 20rpx
                mixinsWidthHeight(100rpx, 40rpx)
                content ''
                background url('https://file.cyzl.com/g001/M01/DE/6B/oYYBAGRkMVaAGb29AAABEkhG4R0769.png') center no-repeat
                background-size 80% 50%
        .title
            height 60rpx
            display flex
            align-items center
            justify-content space-between
            font-size 32rpx
            font-weight bold
            font-family HarmonyOS_Sans_SC_Black
            color #333333
            .title_view
                mixinsWidthHeight(144rpx, 100%)
                textCenter(60rpx)
                color #fff
                background #FAAA18
                border-radius 26rpx
                font-size 28rpx
                font-family HarmonyOS_Sans_SC_Bold
        .flex
            display flex
            align-items center
            justify-content space-around
            margin 24rpx 0rpx 48rpx
            .sub_flex
                mixinsWidthHeight(112rpx, auto)
                .img_1
                    mixinsWidthHeight(100rpx, 100rpx)
                .text_1
                    display inline-block
                    margin-top 8rpx
                    font-size 28rpx
                    font-family HarmonyOS_Sans_SC
                    color #0e0e0e
    .cict_bank
        margin-top 0rpx
        .img
            margin 24rpx 0rpx 48rpx 0rpx
            width 638rpx
            .img_2
                width 100%
        .btnCiti
                height 100rpx
                display flex
                align-items center
                justify-content center
                .btn1
                    color #fff
                    border-radius 16rpx
                    padding 20rpx 30rpx
    .current
        text-align center
        .btn1
            display inline-block
            mixinsWidthHeight(374rpx, 80rpx)
            textCenter(80rpx)
            border-radius 40rpx
            border 2rpx solid #E5E5E5
            font-size 32rpx
            font-weight bold
            font-family HarmonyOS_Sans_SC_Black
            color #333333
    .service
        color #4D4D51
        text-align center
        font-family PingFangSC-Regular, PingFang SC
        .head1
            height 44rpx
            font-size 32rpx
            font-weight 600
            margin 10rpx 0rpx
        .head2
            font-size 28rpx
            font-weight 400
        .text_2
            display block
            font-size 20rpx
            font-weight 400
    .split
        height 260rpx
        overflow hidden
    .handleImmediately
        width 100vw
        height 244rpx
        background #FFFFFF
        border-radius 16rpx 16rpx 0px 0px
        position fixed
        bottom 0
        opacity 1
        display flex
        align-items center
        justify-content center
        button
            width 662rpx
            height 110rpx
            color #FFFFFF
            line-height 110rpx
            box-shadow 0rpx 4rpx 2rpx 0rpx rgba(212, 212, 212, 0.5)
            border-radius 64rpx
