.index {
  padding-bottom: 50rpx;
  margin: 0;
  width: 100vw;
  min-height: 100vh;
  z-index: 100;
}
.index .topImg {
  width: 100vw;
  height: auto;
}
.index .topImg .image {
  width: 100vw;
  height: 100%;
}
.index .module {
  margin: 28rpx;
  padding: 28rpx;
  background: #fff;
  box-shadow: 8rpx 10rpx 0rpx 0rpx #6aa5f5;
  border-radius: 24rpx;
}
.index .module .head {
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  font-family: HarmonyOS_Sans_SC_Black;
  color: #2386f3;
}
.index .module .head:before {
  margin-right: 20rpx;
  width: 100rpx;
  height: 40rpx;
  content: '';
  background: url("https://file.cyzl.com/g001/M01/DE/6A/oYYBAGRkLd-AfNdZAAABEFsR1YI392.png") center no-repeat;
  background-size: 80% 50%;
}
.index .module .head:after {
  margin-left: 20rpx;
  width: 100rpx;
  height: 40rpx;
  content: '';
  background: url("https://file.cyzl.com/g001/M01/DE/6B/oYYBAGRkMVaAGb29AAABEkhG4R0769.png") center no-repeat;
  background-size: 80% 50%;
}
.index .module .title {
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 32rpx;
  font-weight: bold;
  font-family: HarmonyOS_Sans_SC_Black;
  color: #333;
}
.index .module .title .title_view {
  width: 144rpx;
  height: 100%;
  text-align: center;
  line-height: 60rpx;
  color: #fff;
  background: #faaa18;
  border-radius: 26rpx;
  font-size: 28rpx;
  font-family: HarmonyOS_Sans_SC_Bold;
}
.index .module .flex {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin: 24rpx 0rpx 48rpx;
}
.index .module .flex .sub_flex {
  width: 112rpx;
  height: auto;
}
.index .module .flex .sub_flex .img_1 {
  width: 100rpx;
  height: 100rpx;
}
.index .module .flex .sub_flex .text_1 {
  display: inline-block;
  margin-top: 8rpx;
  font-size: 28rpx;
  font-family: HarmonyOS_Sans_SC;
  color: #0e0e0e;
}
.index .cict_bank {
  margin-top: 0rpx;
}
.index .cict_bank .img {
  width: 638rpx;
  display: flex;
  align-items: center;
  margin: 24rpx 0rpx 48rpx 0rpx;
  justify-content: space-between;
}
.index .cict_bank .img .img_2 {
  width: 100%;
}
.index .cict_bank .img .img_8 {
  width: 312rpx;
  height: 488rpx;
}
.index .cict_bank .btnCiti {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.index .cict_bank .btnCiti .btn1 {
  color: #fff;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
}
.index .current {
  text-align: center;
}
.index .current .btn1 {
  display: inline-block;
  width: 374rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 40rpx;
  border: 2rpx solid #e5e5e5;
  font-size: 32rpx;
  font-weight: bold;
  font-family: HarmonyOS_Sans_SC_Black;
  color: #333;
}
.index .service {
  color: #4d4d51;
  text-align: center;
  font-family: PingFangSC-Regular, PingFang SC;
}
.index .service .head1 {
  height: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin: 10rpx 0rpx;
}
.index .service .head2 {
  font-size: 28rpx;
  font-weight: 400;
}
.index .service .text_2 {
  display: block;
  font-size: 20rpx;
  font-weight: 400;
}
.index .split {
  height: 260rpx;
  overflow: hidden;
}
.index .handleImmediately {
  width: 100vw;
  height: 244rpx;
  background: #fff;
  border-radius: 16rpx 16rpx 0px 0px;
  position: fixed;
  bottom: 0;
  opacity: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.index .handleImmediately button {
  width: 662rpx;
  height: 110rpx;
  color: #fff;
  line-height: 110rpx;
  box-shadow: 0rpx 4rpx 2rpx 0rpx rgba(212,212,212,0.5);
  border-radius: 64rpx;
}
