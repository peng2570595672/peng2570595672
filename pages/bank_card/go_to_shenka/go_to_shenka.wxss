.iconfont {
  font-family: 'iconfont' !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.index {
  margin: 0;
  padding: 0;
  width: 100vw;
  min-height: 100vh;
  background-color: #fff;
/* 底部悬浮按钮 */
}
.index .module {
  padding: 28rpx;
  letter-spacing: 0rpx;
  font-family: PingFangSC-Regular, PingFang SC;
}
.index .module1 {
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.index .module1 .img1 {
  width: 304rpx;
  height: 238rpx;
}
.index .tip {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 70rpx;
  font-size: 60rpx;
  font-weight: 500;
}
.index .floatButton {
  width: 100%;
  height: 200rpx;
  opacity: 1;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 0;
  z-index: 100;
}
.index .floatButton .handleImmediately {
  width: 662rpx;
  height: 110rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  text-align: center;
  line-height: 110rpx;
  background: #c0c0c0;
  border-radius: 64rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  text-shadow: 0 -8rpx 30rpx rgba(223,223,223,0.36);
  box-shadow: 0 -8rpx 30rpx 0 rgba(223,223,223,0.36), 0 4rpx 2rpx 0 rgba(212,212,212,0);
}
.index .floatButton .btn {
  background: #2a4f44;
}
