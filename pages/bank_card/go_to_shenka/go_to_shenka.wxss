.iconfont {
  font-family: 'iconfont' !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.index {
  margin: 0;
  padding: 0;
  width: 100vw;
  min-height: 100vh;
  background-color: #fff;
/* 底部悬浮按钮 */
}
.index .module {
  letter-spacing: 0.8rpx;
  margin: 32rpx 28rpx 0rpx 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  position: relative;
}
.index .module1 {
  height: 400rpx;
  padding: 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.index .module1 .img1 {
  width: 100%;
  height: 100%;
}
.index .module2 {
  padding: 0rpx;
  font-size: 26rpx;
  font-weight: 500;
  text-align: justify;
}
.index .module2 .text1 {
  line-height: 40rpx;
  letter-spacing: 0.9rpx;
  display: block;
}
.index .module3 {
  font-size: 28rpx;
  font-weight: bold;
}
.index .module3 .text2 {
  display: block;
  text-align: justify;
  padding-bottom: 20rpx;
}
.index .floatButton {
  width: 100%;
  height: 170rpx;
  background: #fff;
  padding: 28rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  z-index: 100;
}
.index .floatButton .handleImmediately {
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  border-radius: 64rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  text-shadow: 0 -8rpx 30rpx rgba(223,223,223,0.36);
  box-shadow: 0 -8rpx 30rpx 0 rgba(223,223,223,0.36), 0 4rpx 2rpx 0 rgba(212,212,212,0);
}
.index .floatButton .btn {
  margin-right: 28rpx;
  background: #2a4f44;
  width: 462rpx;
  height: 110rpx;
}
.index .floatButton .grey {
  color: #fff;
  margin-left: 28rpx;
  width: 200rpx;
  height: 110rpx;
  background: #ccc;
}
