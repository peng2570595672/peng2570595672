vendors = official
.iconfont
    font-family 'iconfont' !important
    font-size 16px
    font-style normal
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
mixinsWidthHeight($width = 100%, $height = 100%)
    width $width
    height $height
mixinsIconfont($content='',$size=16px,$color=#5EBE68)
    content $content
    font-size $size
    color $color
mixinsPositionPack($position=relative)
    position $position
    left 50%
    transform translateX(-50%)
textLineCenter($height)
    text-align center
    line-height $height
flexModule($align=normal,$justify=normal)
    display flex
    align-items $align
    justify-content $justify
.index
    margin 0
    padding 0
    width 100vw
    min-height 100vh
    background-color #fff
    .module
        padding 28rpx
        letter-spacing: 0rpx;
        font-family PingFangSC-Regular, PingFang SC
    .module1
        height 300rpx
        flexModule(center,center)
        .img1
            width 304rpx
            height 238rpx
    .tip
        flexModule(center,center)
        height 70rpx
        font-size 60rpx
        font-weight 500
    /* 底部悬浮按钮 */
    .floatButton
        mixinsWidthHeight(,200rpx)
        opacity 1
        background #fff
        flexModule(center,center)
        position fixed
        bottom 0
        z-index 100
        .handleImmediately
            mixinsWidthHeight(662rpx,110rpx)
            font-size 36rpx
            font-weight 600
            color #FFFFFF
            text-align center
            line-height 110rpx
            background #C0C0C0
            border-radius 64rpx
            font-family PingFangSC-Semibold, PingFang SC
            text-shadow 0 -8rpx 30rpx rgba(223, 223, 223, 0.36)
            box-shadow 0 -8rpx 30rpx 0 rgba(223, 223, 223, 0.36), 0 4rpx 2rpx 0 rgba(212, 212, 212, 0)
        .btn
            background #2A4F44
