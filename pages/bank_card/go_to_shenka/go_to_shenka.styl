vendors = official
.iconfont
    font-family 'iconfont' !important
    font-size 16px
    font-style normal
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
mixinsWidthHeight($width = 100%, $height = 100%)
    width $width
    height $height
mixinsIconfont($content='',$size=16px,$color=#5EBE68)
    content $content
    font-size $size
    color $color
mixinsPositionPack($position=relative)
    position $position
    left 50%
    transform translateX(-50%)
textLineCenter($height)
    text-align center
    line-height $height
flexModule($align=normal,$justify=normal)
    display flex
    align-items $align
    justify-content $justify
.index
    margin 0
    padding 0
    width 100vw
    min-height 100vh
    background-color #fff
    .module
        letter-spacing: 0.8rpx;
        margin 32rpx 28rpx 0rpx 28rpx
        font-family PingFangSC-Regular, PingFang SC
        position relative
    .module1
        height 400rpx
        padding 0rpx
        flexModule(center,center)
        .img1
            mixinsWidthHeight()
    .module2
        padding 0rpx
        font-size 26rpx
        font-weight 500
        text-align justify
        .text1 
            line-height 40rpx
            letter-spacing 0.9rpx
            display block
    .module3
        font-size 28rpx
        font-weight bold
        .text2
            display block
            text-align justify
            padding-bottom 20rpx
    /* 底部悬浮按钮 */
    .floatButton
        mixinsWidthHeight(100%,170rpx)
        background #fff
        padding 28rpx 0
        flexModule(center,space-between)
        position fixed
        bottom 0
        z-index 100
        .handleImmediately
            font-size 28rpx
            font-weight 600
            color #FFFFFF
            text-align center
            flexModule(center,center)
            flex-wrap wrap
            border-radius 64rpx
            font-family PingFangSC-Semibold, PingFang SC
            text-shadow 0 -8rpx 30rpx rgba(223, 223, 223, 0.36)
            box-shadow 0 -8rpx 30rpx 0 rgba(223, 223, 223, 0.36), 0 4rpx 2rpx 0 rgba(212, 212, 212, 0)
        .btn
            margin-right 28rpx
            background #2A4F44
            mixinsWidthHeight(462rpx,110rpx)
        .grey
            color #fff
            margin-left 28rpx
            mixinsWidthHeight(200rpx,110rpx)
            background #ccc