.index {
  width: 100vw;
  height: 100vh;
  background: #ececec;
}
.index .topImg {
  width: 314rpx;
  height: 230rpx;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  top: 22rpx;
}
.index .topImg .image {
  width: 100%;
  height: 100%;
}
.index .text {
  margin-top: 40rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: 400;
  color: #000;
  line-height: 48rpx;
  font-family: PingFang SC-Regular, PingFang SC;
}
.index .btn {
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  width: 330rpx;
  height: 98rpx;
  text-align: center;
  line-height: 98rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 400;
  margin-top: 206rpx;
  background: #2a4f44;
  border-radius: 49rpx 49rpx 49rpx 49rpx;
  opacity: 1;
}
