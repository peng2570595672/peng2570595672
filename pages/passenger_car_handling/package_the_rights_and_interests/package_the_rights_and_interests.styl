@import "../../../style/base.styl";
$yellowColor = #FFC300;
.package-the-rights-and-interests
	min-height 100vh
	padding-bottom 170rpx
	box-sizing border-box
	background #F6F6F6
	.swiper-box
		.my-swiper
			padding-top 30rpx
			height 800rpx
			.my-swiper-item
				width 646rpx
				border-radius 20rpx
				.my-swiper-item-box
					width 646rpx
					background #fff
					border-radius 20rpx
					min-height 800rpx
					margin 0 20rpx
					padding 48rpx 32rpx 32px
					box-sizing border-box
					font-family PingFangSC-Semibold, PingFang SC
					font-weight 600
					z-index 99999
					.package
						display flex
						align-items center
						height 84rpx
						font-size 44rpx
						padding-bottom 30rpx
						color rgba(0, 0, 0, 0.9)
						font-weight 600
						image
							width 70rpx
							height 44rpx
							margin-right 12rpx
						.title-name
							flex 1
							.title
								font-size 34rpx
							.sub-title
								font-size 24rpx
								font-family PingFangSC-Regular, PingFang SC
								font-weight 400
								color rgba(0, 0, 0, 0.3)
								line-height 34rpx
						&::after
							content '\e64f'
							font-size 48rpx
							color rgba(0, 0, 0, 0.1)
							margin-left 22rpx
						&.active
							&::after
								color #07C160
					.related-service-title
						display flex
						height 44rpx
						align-items center
						color rgba(0, 0, 0, 0.6)
						font-size 28rpx
						.tips
							color $yellowColor
							font-size 18rpx
							margin-top -20rpx
							margin-left 8rpx
						&::before
							margin-right 8rpx
							content ''
							width 8rpx
							height 44rpx
							background #2FB565
					.basic-service-list
						display flex
						flex-wrap wrap
						margin-top 6rpx
						& > view
							margin-top 32rpx
						.basic-service-item
							width 50%
							display flex
							height 40rpx
							align-items center
							color rgba(0, 0, 0, 0.5)
							font-size 24rpx
							.tips
								color $yellowColor
								font-size 18rpx
								margin-top -20rpx
								margin-left 8rpx
						.other-service-item
							width 274rpx
							height 134rpx
							border-radius 12rpx
							padding 32rpx
							box-sizing border-box
							background #FFEC9A
							color rgba(0, 0, 0, 0.8)
							line-height 48rpx
							font-size 24rpx
							margin-bottom 32rpx
							& > view:last-child
								color $yellowColor
								font-size 18rpx
								line-height 26rpx
							&.other-service-first
								margin-right auto
					.pay-tips
						color $yellowColor
						font-size 24rpx
						line-height 34rpx
						font-family PingFangSC-Semibold, PingFang SC
						font-weight 600
						margin-top 32rpx
	// 权益选择
	.rights-and-interests
		width 670rpx
		background #fff
		margin -100rpx auto 0
		padding 30rpx
		box-sizing border-box
		border-radius 20rpx
		.rights-and-interests-header
			display flex
			height 40rpx
			align-items center
			font-size 28rpx
			color #999999
			margin-bottom 38rpx
			.line
				width 6rpx
				height 28rpx
				background #16AD69
				border-radius 3rpx
				margin-right 16rpx
			.header
				color #333333
		.rights-and-interests-list
			margin auto
			.rights-and-interests-item
				width 620rpx
				min-height 160rpx
				padding 15rpx 20rpx
				background linear-gradient(95deg, #FFEDCD 0%, #F1D3AF 100%)
				border-radius 20rpx
				box-sizing border-box
				margin-bottom 20rpx
				opacity .6
				color #894040
				font-family PingFangSC-Medium, PingFang SC
				font-weight 500
				.title
					font-size 28rpx
					line-height 40rpx
				.sub-title
					font-size 20rpx
					font-family PingFangSC-Regular, PingFang SC
					font-weight 400
					line-height 28rpx
				.details
					display flex
					width 100%
					height 50rpx
					align-items center
					margin-top 18rpx
					font-size 36rpx
					& > view:first-child
						font-size 28rpx
					.details-box
						font-size 20rpx
						font-weight 400
						margin-left 20rpx
						&::after
							display inline-block
							content '\e60e'
							transform scaleX(-1)
					&.active
						&::after
							flex 1
							text-align right
							content '\e64f'
							font-size 40rpx
				&.item-active
					opacity 1
		&.rights-and-interests-margin
			margin-top 30rpx
		&.rights-and-interests-margin1
			margin-top 0rpx
	// 下一步
	.next
		position fixed
		bottom 0
		width 100%
		height 160rpx
		background #F6F6F6
		.btn
			width 650rpx
			height 96rpx
			line-height 96rpx
			font-size 36rpx
			font-family PingFangSC-Medium, PingFang SC
			font-weight 500
			color #FFFFFF
			text-align center
			background linear-gradient(132deg, #16AD69 0%, #82D057 100%)
			border-radius 48rpx
			margin-top 20rpx
			&.unavailable
				opacity .6
