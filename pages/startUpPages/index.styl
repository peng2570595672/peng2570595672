.box
    margin 0
    padding 0
    width 100vw
    height 100vh
    display flex
    justify-content center
    .marginBox 
        width 110rpx
        height 200rpx
        margin-top 70rpx
        .imgTitle
            width 100rpx
            height 100rpx
            overflow hidden
            border-radius 50%
            position relative
            left 50%
            transform translateX(-50%)
            image 
                width 100%
                height 100%
        .textContent
            margin-top 20rpx
            text-align center
        .animationLoading
            width 100%
            height 25rpx
            display flex
            margin-top 15rpx
            justify-content center
            .dot-flashing 
                position relative
                width 15rpx
                height 15rpx
                color #acacac
                border-radius 50%
                background-color #acacac
                animation dotFlashing 0.5s infinite linear alternate
                animation-delay .25s
                &::before
                    content ''
                    display inline-block
                    position absolute
                    top 0
                    width 15rpx
                    height 15rpx
                    border-radius 50%
                    background-color #acacac
                    color #acacac
                    left -30rpx
                    animation dotFlashing 0.5s infinite alternate
                    animation-delay 0s
                &::after
                    content ''
                    display inline-block
                    position absolute
                    top 0
                    width 15rpx
                    height 15rpx
                    border-radius 50%
                    background-color #acacac
                    left 30rpx
                    animation dotFlashing 0.5s infinite alternate
                    animation-delay .5s
@keyframes dotFlashing {
    0% {
        background-color #acacac
    }
    100% {
        background-color #6c6c6c
    }
}