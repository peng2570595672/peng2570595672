vendors = official
.iconfont
    font-family 'iconfont' !important
    font-size 16px
    font-style normal
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
mixinsWidthHeight($width = 100%, $height = 100%)
    width $width
    height $height
mixinsIconfont($content='',$size=16px,$color=#5EBE68)
    content $content
    font-size $size
    color $color
mixinsPositionPack($position=relative)
    position $position
    left 50%
    transform translateX(-50%)
textLineCenter($height)
    text-align center
    line-height $height
flexModule($align=normal,$justify=normal)
    display flex
    align-items $align
    justify-content $justify
.index
    margin 0
    padding 0
    width 100vw
    min-height 100vh
    background-color #ECECEC
    &::after
        display block
        content ''
        height 56rpx
    &::before
        display block
        content ''
        height 0.1rpx
        // background #0f0
    /* 公共模块 */
    .module
        width 658rpx
        margin-top 28rpx
        border-radius 16rpx
        background-color #fff
        padding 28rpx 0rpx 28rpx 36rpx
        font-family PingFangSC-Regular, PingFang SC
        box-shadow 0px 4rpx 2rpx 0rpx rgba(212, 212, 212, 0.5)
        position relative
        left 50%
        transform translateX(-50%)
        .title
            font-size 32rpx
            font-weight 600
            color #1E1E1E
            font-family PingFangSC-Semibold, PingFang SC
    .module1
        height 500rpx
    /* 底部悬浮按钮 */
    .floatButton
        mixinsWidthHeight(,200rpx)
        opacity 1
        background #ECECEC
        flexModule(center,center)
        border-radius 16px 16px 0 0
        // box-shadow 0 -8px 30px 0 rgba(223, 223, 223, 0.36)
        position fixed
        bottom 0
        z-index 100
        .handleImmediately
            mixinsWidthHeight(662rpx,110rpx)
            font-size 36rpx
            font-weight 600
            color #FFFFFF
            text-align center
            line-height 110rpx
            background #C0C0C0
            border-radius 64rpx
            font-family PingFangSC-Semibold, PingFang SC
            text-shadow 0 -8rpx 30rpx rgba(223, 223, 223, 0.36)
            box-shadow 0 -8rpx 30rpx 0 rgba(223, 223, 223, 0.36), 0 4rpx 2rpx 0 rgba(212, 212, 212, 0)
        .btn
            background #2A4F44