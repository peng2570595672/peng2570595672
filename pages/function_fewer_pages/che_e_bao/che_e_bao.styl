vendors = official
.iconfont
    font-family 'iconfont' !important
    font-size 16px
    font-style normal
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
mixinsWidthHeight($width = 100%, $height = 100%)
    width $width
    height $height
mixinsIconfont($content='',$size=16px,$color=#5EBE68)
    content $content
    font-size $size
    color $color
mixinsPositionPack($position=relative)
    position $position
    left 50%
    transform translateX(-50%)
textLineCenter($height)
    text-align center
    line-height $height
flexModule($align=normal,$justify=normal)
    display flex
    align-items $align
    justify-content $justify
.index
    margin 0
    padding 0
    width 100vw
    min-height 100vh
    background-color #fff
    &::after
        display block
        content ''
        height 56rpx
    &::before
        display block
        content ''
        height 0.1rpx
        // background #0f0
    /* 公共模块 */
    .module
        padding 28rpx
        letter-spacing: 0rpx;
        font-family PingFangSC-Regular, PingFang SC
        .title
            font-size 40rpx
            font-weight 600
            color #1E1E1E
            font-family PingFangSC-Semibold, PingFang SC
    .module1
        mixinsWidthHeight(,50rpx)
        line-height 50rpx
        flexModule(center,normal)
        border-bottom 16rpx solid #ECECEC
        .icon1
            mixinsWidthHeight(22rpx,22rpx)
            border-radius 50%
            margin-right 47rpx
            flexModule(center,center)
            background linear-gradient(48deg, #14AC69 0%, #84D157 207%)
            &:before
                display block
                content ''
                background #fff
                border-radius 50%
                mixinsWidthHeight(10rpx,10rpx)
    .module2
        text-align justify
        .subTitle
            font-size 22rpx
            font-weight 500
            line-height 34rpx
            letter-spacing 0rpx
            font-variation-settings "opsz" auto
            color rgba(0, 0, 0, 0.6)
        .text
            font-size 24rpx
            font-weight normal
            line-height 40rpx
            letter-spacing 0rpx
            color #66666D
            padding-bottom 28rpx
    /* 底部悬浮按钮 */
    .floatButton
        mixinsWidthHeight(,248rpx)
        opacity 1
        background #fff
        flexModule(center,center)
        border-radius 16px 16px 0 0
        box-shadow 0 -8px 30px 0 rgba(223, 223, 223, 0.36)
        position fixed
        bottom 0
        z-index 100
        .handleImmediately
            mixinsWidthHeight(662rpx,110rpx)
            font-size 36rpx
            font-weight 600
            color #FFFFFF
            text-align center
            line-height 110rpx
            background #C0C0C0
            border-radius 64rpx
            font-family PingFangSC-Semibold, PingFang SC
            text-shadow 0 -8rpx 30rpx rgba(223, 223, 223, 0.36)
            box-shadow 0 -8rpx 30rpx 0 rgba(223, 223, 223, 0.36), 0 4rpx 2rpx 0 rgba(212, 212, 212, 0)
        .btn
            background #2A4F44