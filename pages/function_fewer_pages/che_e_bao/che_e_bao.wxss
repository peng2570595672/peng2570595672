.iconfont {
  font-family: 'iconfont' !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.index {
  margin: 0;
  padding: 0;
  width: 100vw;
  min-height: 100vh;
  background-color: #ececec;
/* 公共模块 */
/* 底部悬浮按钮 */
}
.index::after {
  display: block;
  content: '';
  height: 56rpx;
}
.index::before {
  display: block;
  content: '';
  height: 0.1rpx;
}
.index .module {
  width: 658rpx;
  margin-top: 28rpx;
  border-radius: 16rpx;
  background-color: #fff;
  padding: 28rpx 0rpx 28rpx 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  box-shadow: 0px 4rpx 2rpx 0rpx rgba(212,212,212,0.5);
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}
.index .module .title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e1e1e;
  font-family: PingFangSC-Semibold, PingFang SC;
}
.index .module1 {
  height: 500rpx;
}
.index .floatButton {
  width: 100%;
  height: 200rpx;
  opacity: 1;
  background: #ececec;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16px 16px 0 0;
  position: fixed;
  bottom: 0;
  z-index: 100;
}
.index .floatButton .handleImmediately {
  width: 662rpx;
  height: 110rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  text-align: center;
  line-height: 110rpx;
  background: #c0c0c0;
  border-radius: 64rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  text-shadow: 0 -8rpx 30rpx rgba(223,223,223,0.36);
  box-shadow: 0 -8rpx 30rpx 0 rgba(223,223,223,0.36), 0 4rpx 2rpx 0 rgba(212,212,212,0);
}
.index .floatButton .btn {
  background: #2a4f44;
}
