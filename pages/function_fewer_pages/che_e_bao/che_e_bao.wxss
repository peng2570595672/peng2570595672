.iconfont {
  font-family: 'iconfont' !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.index {
  margin: 0;
  padding: 0;
  width: 100vw;
  min-height: 100vh;
  background-color: #fff;
/* 公共模块 */
/* 底部悬浮按钮 */
}
.index::after {
  display: block;
  content: '';
  height: 56rpx;
}
.index::before {
  display: block;
  content: '';
  height: 0.1rpx;
}
.index .module {
  padding: 28rpx;
  letter-spacing: 0rpx;
  font-family: PingFangSC-Regular, PingFang SC;
}
.index .module .title {
  font-size: 40rpx;
  font-weight: 600;
  color: #1e1e1e;
  font-family: PingFangSC-Semibold, PingFang SC;
}
.index .module1 {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: normal;
  border-bottom: 16rpx solid #ececec;
}
.index .module1 .icon1 {
  width: 22rpx;
  height: 22rpx;
  border-radius: 50%;
  margin-right: 47rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(48deg, #14ac69 0%, #84d157 207%);
}
.index .module1 .icon1:before {
  display: block;
  content: '';
  background: #fff;
  border-radius: 50%;
  width: 10rpx;
  height: 10rpx;
}
.index .module2 {
  text-align: justify;
}
.index .module2 .subTitle {
  font-size: 22rpx;
  font-weight: 500;
  line-height: 34rpx;
  letter-spacing: 0rpx;
  font-variation-settings: "opsz" auto;
  color: rgba(0,0,0,0.6);
}
.index .module2 .text {
  font-size: 24rpx;
  font-weight: normal;
  line-height: 40rpx;
  letter-spacing: 0rpx;
  color: #66666d;
  padding-bottom: 28rpx;
}
.index .floatButton {
  width: 100%;
  height: 248rpx;
  opacity: 1;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16px 16px 0 0;
  box-shadow: 0 -8px 30px 0 rgba(223,223,223,0.36);
  position: fixed;
  bottom: 0;
  z-index: 100;
}
.index .floatButton .handleImmediately {
  width: 662rpx;
  height: 110rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  text-align: center;
  line-height: 110rpx;
  background: #c0c0c0;
  border-radius: 64rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  text-shadow: 0 -8rpx 30rpx rgba(223,223,223,0.36);
  box-shadow: 0 -8rpx 30rpx 0 rgba(223,223,223,0.36), 0 4rpx 2rpx 0 rgba(212,212,212,0);
}
.index .floatButton .btn {
  background: #2a4f44;
}
