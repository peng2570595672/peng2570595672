@keyframes btnFadeIn {
  from {
    opacity: 0.2;
  }
  to {
    opacity: 1;
  }
}
@keyframes btnFadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0.2;
  }
}
.page-wrapper {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: #fcfcfc;
  padding: 0 32rpx;
}
.page-wrapper .index-title {
  display: flex;
  align-items: center;
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #000;
  padding: 32rpx 0rpx 13rpx;
}
.page-wrapper .index-title::before {
  margin-right: 8rpx;
  content: '';
  width: 8rpx;
  height: 44rpx;
  background: #2fb565;
}
.page-wrapper .prompt {
  font-size: 24rpx;
  color: #ffc000;
  line-height: 34rpx;
}
.page-wrapper .license-plate-list .item {
  margin-top: 32rpx;
  height: 132rpx;
  display: flex;
  align-items: center;
  background: #fff;
  box-shadow: 0rpx 0rpx 18rpx 0rpx rgba(0,0,0,0.04);
  border-radius: 16rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(0,0,0,0.9);
  padding: 0 44rpx;
}
.page-wrapper .license-plate-list .item.active {
  border: 1rpx solid #00b062;
}
.page-wrapper .license-plate-list .item image {
  width: 58rpx;
  margin-right: 12rpx;
}
.page-wrapper .license-plate-list .item .activated {
  width: 94rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  border: 1rpx solid #00b85c;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #00b85c;
  margin-left: 32rpx;
}
.page-wrapper .instructions {
  padding-top: 32rpx;
}
.page-wrapper .instructions .title {
  font-size: 30rpx;
  color: #000;
  line-height: 42rpx;
  padding-bottom: 8rpx;
}
.page-wrapper .instructions .content {
  font-size: 24rpx;
  color: rgba(0,0,0,0.5);
  line-height: 38rpx;
}
.page-wrapper .fill {
  flex: 1;
}
.page-wrapper .btn-content {
  margin-top: 68rpx;
  margin-bottom: 100rpx;
}
.page-wrapper .btn-content .btn {
  display: flex;
  margin: auto;
  width: 610rpx;
  height: 98rpx;
  border-radius: 49rpx;
  align-items: center;
  justify-content: center;
  background: linear-gradient(45deg, #00af62 0%, #68d33f 100%);
  font-size: 34rpx;
  font-weight: 500;
  color: #fff;
  line-height: 50rpx;
}
