.index
	min-height 100vh
	background #F8F8F8
	display flex
	flex-direction column
	.index-title
		display flex
		align-items center
		font-size 34rpx
		font-family PingFangSC-Medium, PingFang SC;
		font-weight 500
		color #000
		padding 32rpx 32rpx 26rpx
		&::before
			margin-right 8rpx
			content ''
			width 8rpx
			height 44rpx
			background #2FB565
	.list
		.item
			display flex
			padding 30rpx 32rpx 42rpx
			border-bottom 1rpx solid rgba(0,0,0,.03)
			.ico
				width 212rpx
				height 126rpx
				display flex
				align-items center
				justify-content center
				background #FFFFFF
				border-radius 10rpx
				image
					height 104rpx
			.content
				flex 1
				margin-left 32rpx
				font-size 34rpx
				line-height 48rpx
				.title
					color rgba(0,0,0,.9)
				.price
					opacity .9
					color #00B85C
					font-family PingFangSC-Medium, PingFang SC
				.introduce
					color rgba(0,0,0,.3)
					font-size 20rpx
					line-height 28rpx
					padding-top 10rpx
				.choice
					margin-top 14rpx
					width 240rpx
					height 34rpx
					display flex
					align-items center
					justify-content center
					background #FFC000
					font-size 20rpx
					color #fff
					border-radius 4px
					&.sell-out
						background rgba(0,0,0,.03)
					&.choice-margin
						margin-top 28rpx
			.pay
				width 114rpx
				height 52rpx
				display flex
				align-items center
				justify-content center
				border-radius 4rpx
				border 2rpx solid #00B85C
				color #00B85C
				font-size 24rpx
				&.sell-out
					border-color #DFDFDF
					color rgba(0,0,0,.13)
	.fill
		flex 1
	.server
		margin 60rpx 0
		text-align center
		color #0099FF
		font-size 24rpx
