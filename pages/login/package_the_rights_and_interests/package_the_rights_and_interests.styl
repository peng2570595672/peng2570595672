@import "../../../style/base.styl";
page
	height 100vh
	//box-sizing border-box
	//overflow hidden
.package-the-rights-and-interests
	height 100vh
	padding 0 32rpx
	padding-bottom 180rpx
	box-sizing border-box
	background #F6F6F6
	overflow hidden
	// 套餐列表
	.package-list
		overflow hidden
		.package-item
			position absolute
			background #fff
			border-radius 16rpx
			margin-bottom 20rpx
			//height 800rpx
			//padding 32rpx
			//overflow-x hidden
			//box-shadow 0px -80px 10px 0px #A1A1A1
			.outline
				position absolute
				z-index 1
				width 100%
				height 162rpx
				top 196rpx
				background linear-gradient(180deg, rgba(238, 238, 238, 0) 0%, #A1A1A1 100%)
				//background red
			.package-details
				display flex
			.basic-service-list
				display flex
				flex-wrap wrap
				.basic-service-item
					width 50%
				.other-service-item
					width 50%
					background #FFEC9A
		& > view:nth-child(1)
			top -600px
			z-index 2
		& > view:nth-child(2)
			z-index 3
			top -300px
		& > view:nth-child(3)
			z-index 3
			top 0px
	// 加购权益包
	.equities
		.title
			font-size 34rpx
			line-height 48rpx
			padding-bottom 28rpx
			color rgba(0, 0, 0, .9)
			position relative
			//left 0px
		.equities-item
			position relative
			display flex
			height 112rpx
			align-items center
			background #fff
			border-radius 16rpx
			margin-bottom 12rpx
			//left 0px
	.bottom
		position fixed
		bottom 0
		left 0
		display flex
		background #F6F6F6
		width 100%
		height 180rpx
		padding 10rpx 32rpx
		box-sizing border-box
		& > view
			display flex
			align-items center
			justify-content center
			height 98rpx
			border-radius 49rpx
			&.more-package
				width 214rpx
				font-size 28rpx
				color #2FB565
				border 2rpx solid #2FB565
				margin-right 32rpx
			&.pay
				flex 1
				font-size 34rpx
				font-family PingFangSC-Medium, PingFang SC
				font-weight 500
				color #FFF
				background linear-gradient(45deg, #14AC69 0%, #84D157 100%)
.my-swiper
	height 800rpx
