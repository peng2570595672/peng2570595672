@import "../../../style/base.styl";
.signed_successfully
	display flex
	flex-direction column
	background #FFFFFF
	padding 0 32rpx
	box-sizing border-box
	text-align center
	min-height 100vh
	// 成功结果
	& > image
		display block
		margin 80rpx auto 0
		width 304rpx
		height 238rpx
	// 主标题
	.signed_title
		display flex
		align-items center
		justify-content center
		height 76rpx
		color rgba(0, 0, 0, .9)
		font-size 44rpx
		font-weight 500
	.tips
		color $fontColor6
		font-size 28rpx
		line-height 44rpx
		padding-top 32rpx
		text
			color #39A6F8
	// 操作部分
	.fill
		flex 1
	// 下一步
	.btn
		display flex
		align-items center
		justify-content center
		margin 86rpx 0rpx 48rpx
		height 98rpx
		font-size 40rpx
		font-weight 500
		color #fff
		border-radius 49rpx
		background: linear-gradient(to right , $deepThemeColor, $shallowThemeColor)
		&.available
			animation btnFadeIn .3s
			animation-fill-mode forwards
		&.unavailable
			animation btnFadeOut .3s
			animation-fill-mode forwards
	.service
		margin-bottom 90rpx
		font-size 28rpx
		color #1797F7
