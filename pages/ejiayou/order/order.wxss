page{
  background-color: #eee;
}

.error{position: absolute;left:50%;top:50%;transform: translate(-50%,-50%);width:100%;text-align: center;color: #d5d5d5;}
.error .text{font-size: 28rpx;}
.error .icondiushi{font-size: 80rpx;display:block;margin:20rpx auto;}
.error .icondiushi:before {content: "\e627";}

.list{
  position: relative;
  width:100%;
  overflow: hidden;
  background-color:#fff;
  margin-bottom:20rpx;
  border-radius:10rpx;
  box-sizing: border-box;
}
.list .box{
  display: flex;
  padding:20rpx;

}
.list .box .logo{
  width:88rpx;
  height: 88rpx;
  background: #D7D7D7;
  border-radius: 4rpx;
  border-radius:10rpx;
  overflow: hidden;
}
.list .box .logo .img{
  width:100%;
  height:100%;
}
.list .box  .title{
  width:60%;
  padding:0 20rpx;
  overflow: hidden;
}
.h3{
  font-size:30rpx;
  font-weight: 400;
  color: #000000;
  padding-bottom:10px;
}
.h4{
  font-size:24rpx;
  font-weight: 400;
  color: #66666D;
  padding-bottom:10rpx;
}
.list  .price{ 
  width: 30%;
  text-align:right;
  position: relative;
}
.list  .pay-state{
font-size:30rpx;
font-weight: 400;
color: #00B85C;
}
.list  .pay-price{
  font-size:34rpx;
  font-weight: 700;
  color: #000;
  position: absolute;
  right:0;
  bottom:10rpx;
  }

.bottom{
  border-top:1rpx solid #eeee;
  width:100%;
  padding:20rpx;
  overflow: hidden;
  width:100%;
  box-sizing: border-box;
}
.but{
  width:104rpx;
  height:52rpx;
  line-height:52rpx;
  border-radius:30rpx;
  border:1rpx solid #00B85C;
  color: #00B85C;
  text-align: center;
  float:right;
  overflow: hidden;
}
.but-on{
  width:164rpx;
  height:52rpx;
  line-height:52rpx;
  border-radius:30rpx;
  border:1rpx solid #ccc;
  color: #ccc;
  text-align: center;
  float:right;
  overflow: hidden;
}

.service{
  text-align: center;
  width:100%;
  box-sizing: border-box;
  padding:20rpx;
}
.service .phone{
  color: #00A9FF;
}
