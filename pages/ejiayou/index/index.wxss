.tablist{
  width:95%;
  position: absolute;
  text-align:left;
  top:30%;
  left:50%;
  z-index:99;
  background: rgba(0, 0, 0, 0.5);
  border:1rpx solid #eee;
  padding:0;
  box-sizing: border-box;
  height:calc(100% - 30%);
  max-height:100%;
  transform: translate(-50%,0);
}
.tablist .item{
  width:100%;
  background:#fff;
  height: 80rpx;
  line-height: 80rpx;
  padding:0 20rpx;
  box-sizing: border-box;
  border-bottom:1rpx solid #eee;
  position: relative;
}
.tablist .item:hover{
  background-color: #eee;
}


.box{
  position: absolute;
  background: #fff;
  width: 95%;
  box-sizing: border-box;
  margin:0 auto;
  padding:20rpx;
  height:100%;
  max-height:800rpx;
  overflow:auto;
  left:50%;
  transform: translate(-50%,0);
}
.box .bottom{
  width:100%;
  padding:20px;
  text-align: center;
  box-sizing: border-box;
  color: #888;
}
.list{
  border-bottom:1rpx solid #eee;
  padding:20rpx;
  width:100%;
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
}
.list .title{
  display: flex;
}
.list .title .title-text{
  width:55%;
  font-size: 30rpx;
  font-weight:700;
  padding-right:10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.list .title .title-nav{
  width:55%;
  word-wrap: break-word;
  box-sizing: border-box;
  padding:0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-left:10rpx;
  text-align: right;
}
.list  .addstr{
font-size:24rpx;
font-family: PingFangSC-Regular, PingFang SC;
font-weight: 400;
color: rgba(0, 0, 0, 0.5);
padding:20rpx 0 0;
}
.list .describe{
  display: flex;
  padding:20rpx 0 0;
  line-height: 34rpx;
  color: #525252;
}
.list .describe .price{
    font-size: 34rpx;
    font-weight: 500;
    color: #00B85C;
    font-size: 700;
}
.list .describe .unit{
  padding:0 20rpx;
}
.list .del{
  position: relative;
  display: inline-block;
}
.list .del::before{
  content: "";
  position: absolute;
  width:100%;
  height:1rpx;
  background: rgba(0, 0, 0, 0.5);
  top:50%;
  left:0;
  z-index:99;
}
.but{
  width:104rpx;
