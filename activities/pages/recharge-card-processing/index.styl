@import "../../../style/base.styl"
@import "../../../style/my_animate.styl"
@import "/animate.styl";
page
	.recharge-container
		display block
		position relative
		width 100vw
		min-height 100vh
		background linear-gradient(142deg, #F2A449 30%, #E95331 100%)
		.top
			.top-title
				text-align center
				width  100%
				height 104rpx
				font-size 50rpx
				font-weight 600
				font-family HYYaKuHeiW
				color rgba(255,255,255,1)
				line-height 104rpx
				text-shadow 0rpx 4rpx 8rpx rgba(176,33,0,0.36)
			.top-tips
				text-align center
				width  100%
				height 144rpx
				font-size 50rpx
				font-family PingFangSC-Semibold,PingFang SC
				color rgba(255,255,255,1)
				line-height 72rpx
				letter-spacing 4rpx
		.body
			.coupon-img
				display flex
				flex-direction column
				justify-content center
				align-items center
				image
					width 522rpx
					height 270rpx
			.body-coupon
				width 710rpx
				height 350rpx
				margin:-10rpx 20rpx 0 20rpx
				display flex
				flex-direction column
				justify-content center
				align-items center
				background rgba(255,255,255,1)
				border-radius 20rpx
				.coupon
					width 654rpx
					height 268rpx
					background-image  url("https://file.cyzl.com/g001/M05/1C/58/oYYBAF7ZqP2ACV61AAQygVRvr-8774.png")
					background-size 100% 100%
					.icon
						margin-left 40rpx
						font-size 50rpx
						font-style oblique
						font-family DIN-BlackItalicAlt,DIN
						font-weight normal
						color rgba(255,255,255,1)
						line-height 160rpx
					.amount
						margin-top -110rpx
						width 132rpx
						height 160rpx
						margin-left 50rpx
						font-size 100rpx
						font-style oblique
						font-weight: 900
						font-family DIN-BlackItalicAlt,DIN
						color rgba(255,255,255,1)
						line-height 160rpx
					.line
						margin-top -140rpx
						margin-left 198rpx
						border-right 3rpx dashed #fff
						width 2rpx
						height 110rpx
					.coupon-info
						margin-top -120rpx
						margin-left 250rpx
						display flex
						flex-direction column
						justify-content center
						align-items flex-start
						.item-name
							margin-bottom 10rpx
							font-size:22rpx
							font-weight:600
							color:rgba(255,255,255,1)
						.item-restrictions
							margin-bottom 10rpx
							font-size:16rpx
							font-weight:400
							color:rgba(255,255,255,1)
						.item-expiration-date
							font-size:24rpx
							font-weight:400
							color:rgba(255,255,255,1)
			.body-directions
				position relative
				padding-top 30rpx
				padding-bottom 30rpx
				padding-right 30rpx
				font-size:28rpx
				line-height 50rpx
				color rgba(255,255,255,1)
				text-align right
				image
					position absolute
					right 0
					top 40rpx
					width 20rpx
			.button-buy
				margin:-10rpx 20rpx 20rpx 20rpx
				width 710rpx
				height 350rpx
				display flex
				flex-direction column
				justify-content center
				align-items flex-start
				background rgba(255,255,255,1)
				border-radius 20rpx
				.button-buy-plates
					margin-left 60rpx
					display flex
					align-items center
					padding 10rpx 30rpx
					height 56rpx
					font-size 40rpx
					font-weight 500
					&::before
						margin-right 10rpx
						content ''
						width 10rpx
						height 10rpx
						border 6rpx solid $error
						border-radius 50%
					& > text
						margin-left 12rpx
						font-size 24rpx
						color #7A7F83
						transform translateY(8rpx)
				.button-plates-border
					width 80%
					height 2rpx
					margin-left 80rpx
					background #979797
					opacity .13
				.button-promote-name
					margin 30rpx 0 30rpx 80rpx
				.button-btn-buy
					width 564rpx
					height 128rpx
					margin 0 auto
					-webkit-animation scaleDraw 2s ease-in-out infinite
					-webkit-backface-visibility hidden
					background url("https://file.cyzl.com/g001/M05/1C/58/oYYBAF7ZqTKAMUi3AAEDmfmYvhc127.png")
					background-size 100% 100%
					border-radius 54rpx
			.footer-title
				margin-top 30rpx
				text-align center
				font-size 24rpx
				font-family PingFangSC-Regular,PingFang SC
				font-weight 400
				color rgba(255,255,255,1)
				line-height 34rpx
			.footer-bottom
				margin-top 50rpx
				text-align center
				padding-bottom 30rpx
				color rgba(255,255,255,1)
				width 750rpx
		.alert-mask
			position fixed
			left 0
			top 0
			right 0
			bottom 0
			background rgba(0, 0, 0, 0.3)
			z-index 3
			overflow-x hidden
			overflow-y auto
			-webkit-overflow-scrolling touch
			.wrapper
				position absolute
				left 50%
				top 50%
				width 621rpx
				margin-top -480rpx
				margin-left -310rpx
				text-align center
				background #E95331
				border-radius 20rpx
				padding-bottom 30rpx
				.close
					position absolute
					right 0
					top 0
					padding 52rpx 40rpx 30rpx 30rpx
					&:before
						display block
						content '\e63d'
						font-size 30rpx
						color #666
				.head1
					font-size 36rpx
					text-align center
					padding 30rpx 0 40rpx 0
					color #fff
				.cont1
					font-size 26rpx
					line-height 46rpx
					color #333
					text-align justify
					padding 0 40rpx
					display flex
					flex-direction row
					flex-wrap nowrap
					justify-content flex-start
					background #fff
					border-left #E95331 solid 20rpx
					border-right #E95331 solid 20rpx
					.table
						margin 20rpx 0 0 0
						.tr
							display flex
							flex-direction row
							flex-wrap nowrap
							justify-content flex-start
							width 100%
							height 50rpx
							align-items center
							&:last-child > .td
								border-bottom solid rgba(0,0,0,0.3) 1rpx
							.td
								display flex
								justify-content center
								border-top solid rgba(0,0,0,0.3) 1rpx
								border-left solid rgba(0,0,0,0.3) 1rpx
								padding-left 10rpx
								&:first-child
									width 40%
								&:last-child
									width 60%
									border-right solid rgba(0,0,0,0.3) 1rpx
							.th
								display flex
								width 50%
								justify-content center
								padding-left 10rpx
								border-top solid rgba(0,0,0,0.3) 1rpx
								border-left solid rgba(0,0,0,0.3) 1rpx
								&:first-child
									width 40%
								&:last-child
									width 60%
									border-right solid rgba(0,0,0,0.3) 1rpx
					.table-prompt
						position relative
						top 10rpx
						display block
