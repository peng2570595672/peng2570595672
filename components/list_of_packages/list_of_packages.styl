@import "../../style/base.styl";
@import "../../style/animate.styl";
.list-of-packages
	position fixed
	left 0
	right 0
	top 0
	bottom 0
	background: rgba(0,0,0, .5)
	z-index 9999999999999
	// 支付方式
	.list-of-packages-wrapper
		position fixed
		left 0
		right 0
		bottom 0
		display flex
		flex-direction column
		//min-height 768rpx
		height 768rpx
		padding-bottom 20rpx
		background: #fff
		border-top-left-radius 32rpx
		border-top-right-radius 32rpx
		// 标题
		.choice-bank-title
			margin-top 20rpx
			display flex
			align-items center
			justify-content center
			height 96rpx
			font-size 40rpx
			font-weight 500
		// 内容容器
		.ul
			display flex
			flex-wrap wrap
			width 670rpx
			height 700rpx
			overflow-y scroll
			margin 0 auto
			.li
				flex 0 0 320rpx
				width 320rpx
				height 132rpx
				padding 1rpx
				border-radius 6rpx
				box-sizing border-box
				border 1rpx solid rgba(153,153,157,0.69)
				overflow hidden
				&.selected
					border 1rpx solid $deepThemeColor
				&:nth-child(2n)
					margin-left 30rpx
				&:nth-child(n+3)
					margin-top 20rpx
				& > view
					display flex
					align-items center
					height 100%
					background: #fff
					border-radius 4rpx
					& > image
						margin-left 20rpx
						flex 0 0 70rpx
						width 70rpx
						height 70rpx
					& > view
						margin-left 20rpx
						display flex
						flex-direction column
						justify-content center
						.li-title
							display flex
							height 44rpx
							line-height 44rpx
							font-size 28rpx
							font-weight 500
						.new-title
							padding-top 30rpx
						.li-sub-title
							display flex
							height 28rpx
							line-height 28rpx
							font-size 20rpx
							color $fontColor9
		// 占位
		.split
			flex 1
		.choice-bank-card
			display flex
			align-items center
			justify-content center
			margin-bottom 60rpx
			height 48rpx
			font-size 28rpx
			color #1797F7
