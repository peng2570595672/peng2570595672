@import "../../style/base.styl";
@import "../../style/animate.styl";
//字体图标
@import "../../fonts/iconfont.styl";
.iconfont {
	font-family:"iconfont" !important;
	font-size:16px;
	font-style:normal;
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}
.rights-and-interests
	position fixed
	left 0
	right 0
	top 0
	bottom 0
	background: rgba(0,0,0, .5)
	z-index 9999999999999
	// 支付方式
	.rights-and-interests-wrapper
		position fixed
		left 0
		right 0
		bottom 0
		display flex
		flex-direction column
		//min-height 768rpx
		height 1040rpx
		padding-bottom 20rpx
		background: #fff
		border-top-left-radius 32rpx
		border-top-right-radius 32rpx
		// 标题
		.rights-and-interests-title
			margin-top 20rpx
			display flex
			align-items center
			justify-content center
			height 96rpx
			font-size 40rpx
			font-weight 500
			position relative
			.close
				position absolute
				right 40rpx
				top 0
				padding 30rpx 40rpx 30rpx 30rpx
				&::after
					display block
					text-align right
					content '\e63d'
					font-size 20rpx
		.rights-and-interests-content
			padding-top 30rpx
			//tab切换
			.list-title
				width 100%
				overflow-x auto
				white-space nowrap
				.list-title-child
					display inline-block
					width 116rpx
					font-size 24rpx
					font-family PingFangSC-Medium, PingFang SC
					font-weight 500
					text-align center
					color #666666
					line-height 60rpx
					margin 0 70rpx
					.logo
						height 88rpx
						image
							width 88rpx
							height 88rpx
							border-radius 50%
					.line
						width 116rpx
						height 8rpx
				.tab_index
					.line
						border-radius 6rpx
						background #17AD69
			.list-content
				width 664rpx
				height 552rpx
				padding 20rpx
				background #F5F5F7
				border-radius 20rpx
				box-sizing border-box
				overflow-y scroll
				margin 38rpx auto 0
				.content
					.wscnph,
					.img
						max-width 100%
		// 高度填充
		.fill
			flex 1
		.btns
			width 650rpx
			height 96rpx
			line-height 96rpx
			font-size 36rpx
			font-family PingFangSC-Medium, PingFang SC
			font-weight 500
			color #FFFFFF
			text-align center
			background linear-gradient(132deg, #16AD69 0%, #82D057 100%)
			border-radius 48rpx
