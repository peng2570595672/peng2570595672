@import "../../style/base.styl";
@import "../../style/animate.styl";
//字体图标
@import "../../fonts/iconfont.styl";
.iconfont {
	font-family:"iconfont" !important;
	font-size:16px;
	font-style:normal;
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}
.related-service
	position fixed
	left 0
	right 0
	top 0
	bottom 0
	background: rgba(0,0,0, .5)
	z-index 9999999999999
	// 支付方式
	.related-service-wrapper
		position fixed
		left 0
		right 0
		bottom 0
		display flex
		flex-direction column
		//min-height 768rpx
		height 1040rpx
		padding-bottom 20rpx
		background: #fff
		border-top-left-radius 32rpx
		border-top-right-radius 32rpx
		.related-service-box
			overflow scroll
			padding 52rpx 0 220rpx
			// 标题
			.related-service-title
				display flex
				align-items center
				justify-content center
				height 48rpx
				font-size 44rpx
				font-weight 500
				position relative
				padding 0 48rpx
				color rgba(0, 0, 0, 0.9)
				.name
					flex 1
			.related-service-list
				padding 0 32rpx
				// 标题
				.title
					margin-top 50rpx
					display flex
					align-items center
					height 56rpx
					font-size 34rpx
					font-weight 500
					font-family PingFangSC-Medium, PingFang SC
					color #000
					&::before
						margin-right 12rpx
						content ''
						width 8rpx
						height 44rpx
						background #2FB565
				.related-service-item
					display flex
					height 176rpx
					align-items center
					background #F7F7F7
					margin-top 32rpx
					&::after,
					&::before
						display inline-block
						content ''
						width 32rpx
						height 32rpx
						border-radius 50%
						background #fff
						margin-right -16rpx
					&::before
						margin-left -16rpx
					.list-name
						flex 1
						display flex
						height 80rpx
						align-items center
						color rgba(0, 0, 0, 0.3)
						font-size 24rpx
						line-height 34rpx
						& > view > view:first-child
							color rgba(0, 0, 0, 0.5)
							font-size 28rpx
							line-height 40rpx
							font-family PingFangSC-Medium, PingFang SC
							font-weight 500
						&::before
							content '\e666'
							color #2FB565
							font-size 80rpx
							margin-left 48rpx
							margin-right 18rpx
					.amount
						display flex
						height 40rpx
						align-items center
						color #66666D
						font-size 40rpx
						margin-right 40rpx
						&::before
							content '\e63d'
							font-size 20rpx
							margin-right 8rpx
		.bottom
			position fixed
			bottom 0
			left 0
			display flex
			background #fff
			width 100%
			height 180rpx
			padding 10rpx 32rpx
			box-sizing border-box
			& > view
				display flex
				align-items center
				justify-content center
				height 98rpx
				border-radius 49rpx
				&.close
					width 214rpx
					font-size 28rpx
					color #2FB565
					border 2rpx solid #2FB565
					margin-right 32rpx
				&.pay
					flex 1
					font-size 34rpx
					font-family PingFangSC-Medium, PingFang SC
					font-weight 500
					color #FFF
					background linear-gradient(45deg, #14AC69 0%, #84D157 100%)
