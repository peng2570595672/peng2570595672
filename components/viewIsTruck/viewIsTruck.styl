// Global variables
$animation-duration = 0.4s
$animation-fill-mode = both
// 以下配置用于stylus编译后不添加前缀 如@-moz-keyframes 小程序会报错
vendors = official
// Animation mixin
animation(name)
  -webkit-animation-name name
  animation-name name
  -webkit-animation-duration $animation-duration
  animation-duration $animation-duration
  -webkit-animation-fill-mode $animation-fill-mode
  animation-fill-mode $animation-fill-mode

// Animation classes
.animated
  animation(fadeIn)

.fadeIn
  animation(fadeIn)

.fadeOut
  animation(fadeOut)

.zoomIn
  animation(zoomIn)

.zoomOut
  animation(zoomOut)

// Keyframes
@keyframes fadeIn
  from
    opacity 0
  to
    opacity 1

@-webkit-keyframes fadeIn
  from
    opacity 0
  to
    opacity 1

@keyframes fadeOut
  from
    opacity 1
  to
    opacity 0

@-webkit-keyframes fadeOut
  from
    opacity 1
  to
    opacity 0

@keyframes zoomIn
  from
    opacity 0
    -webkit-transform translateY(-50%) scale3d(0.3, 0.3, 0.3)
    transform translateY(-50%) scale3d(0.3, 0.3, 0.3)
  50%
    opacity 1

@-webkit-keyframes zoomIn
  from
    opacity 0
    -webkit-transform translateY(-50%) scale3d(0.3, 0.3, 0.3)
    transform translateY(-50%) scale3d(0.3, 0.3, 0.3)
  50%
    opacity 1

@keyframes zoomOut
  from
    opacity 1
  50%
    opacity 0
    -webkit-transform translateY(-50%) scale3d(0.3, 0.3, 0.3)
    transform translateY(-50%) scale3d(0.3, 0.3, 0.3)
  to
    opacity 0

@-webkit-keyframes zoomOut
  from
    opacity 1
  50%
    opacity 0
    -webkit-transform translateY(-50%) scale3d(0.3, 0.3, 0.3)
    transform translateY(-50%) scale3d(0.3, 0.3, 0.3)
  to
    opacity 0

// Alert styles
.alert-for-not-finished
  position fixed
  left 0
  right 0
  top 0
  bottom 0
  background rgba(0, 0, 0, 0.6)
  z-index 10000

.alert-for-not-finished-content
  position fixed
  top 15%
  right 0
  width 100%
  height 100%
  padding 0 20rpx
  box-sizing border-box
  margin 0 auto
  background linear-gradient(180deg, #FAFAFA 0%, #FFFFFF 42%) !important
  border-radius 26rpx
  box-shadow 4rpx 12rpx 56rpx 0px rgba(102, 102, 109, 0.19)
  z-index 100002

// Communal styles
.alert-for-not-finished-content .communal
  overflow-y scroll
  height 80%

.alert-for-not-finished-content .communal .title
  width 100%
  height 140rpx
  font-size 34rpx
  font-weight bold
  text-align center
  line-height 140rpx

.alert-for-not-finished-content .communal .module
  width 100%
  height 800rpx

.alert-for-not-finished-content .communal .module .titles
  height 80rpx

.alert-for-not-finished-content .communal .module .carColor
  width 100%
  display flex
  justify-content space-around
  align-items center
  margin-bottom 50rpx

.alert-for-not-finished-content .communal .module .carColor .item
  display flex
  align-items center
  justify-content center
  background #fff
