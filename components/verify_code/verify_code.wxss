.verify_mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(76,76,76,0.8);
}
.verify_mask .verify_wrapper {
  display: flex;
  flex-direction: column;
  position: absolute;
  left: 56rpx;
  right: 56rpx;
  top: 50%;
  transform: translate(0, -50%);
  background: #fff;
  border-radius: 16px;
  z-index: 2;
}
.verify_mask .verify_wrapper .authentication-title {
  margin-top: 64rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #000;
  line-height: 48rpx;
  text-align: center;
}
.verify_mask .verify_wrapper .input-wrapper {
  padding: 0 32rpx;
}
.verify_mask .verify_wrapper .input-wrapper .input-item {
  display: flex;
  padding: 32rpx 0rpx 10rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #f4f4f4;
}
.verify_mask .verify_wrapper .input-wrapper .input-item:last-of-type {
  padding-top: 46rpx;
}
.verify_mask .verify_wrapper .input-wrapper .input-item > view {
  text-align: left;
  width: 144rpx;
  color: rgba(0,0,0,0.5);
  box-sizing: border-box;
}
.verify_mask .verify_wrapper .input-wrapper .input-item > input {
  flex: 1;
  text-align: left;
}
.verify_mask .verify_wrapper .input-wrapper .input-item .validate-code {
  flex: 0 0 216rpx;
  width: 216rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-left: 50rpx;
  height: 44rpx;
  color: #99999d;
  box-sizing: border-box;
}
.verify_mask .verify_wrapper .input-wrapper .input-item .validate-code.ok {
  font-weight: 500;
  color: #2fb565;
}
.verify_mask .verify_wrapper .input-wrapper .input-item .validate-code.acquisition {
  color: #2fb565;
  font-weight: 400 !important;
}
.verify_mask .verify_wrapper .code-img {
  width: 314rpx;
  height: 314rpx;
  background: #e7e7e7;
  border-radius: 2rpx;
  margin: 0 auto 64rpx;
}
.verify_mask .verify_wrapper .code-img > image {
  margin: 42rpx;
  width: 230rpx;
  height: 230rpx;
}
.verify_mask .verify_wrapper .authentication-tips {
  text-align: center;
  margin: 32rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 400;
  color: #ffc000;
  line-height: 40rpx;
}
.verify_mask .verify_wrapper .verify-button {
  display: flex;
  justify-content: center;
  text-align: center;
  margin: 46rpx;
}
.verify_mask .verify_wrapper .verify-button > button {
  width: 240rpx;
  height: 82rpx;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 400;
  color: #fff;
  border-radius: 8rpx;
  line-height: 82rpx;
  background: #00b85c;
  opacity: 0.6;
}
.verify_mask .verify_wrapper .verify-button > button.available {
  opacity: 1;
}
