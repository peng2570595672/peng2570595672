@import "../../style/animate.styl";
//字体图标
@import "../../fonts/iconfont.styl"
.iconfont
	font-family "iconfont" !important
	font-size 16px
	font-style normal
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

.alert-for-not-finished
	position fixed
	left 0
	right 0
	top 0
	bottom 0
	background rgba(0, 0, 0, 0.6)
	z-index 10000
.alert-for-not-finished-content
	position absolute
	left 0
	right 0
	top 50%
	transform translate(0, -50%)
	width 650rpx
	height 850rpx
	background rgba(255,255,255,1)
	box-shadow 4rpx 12rpx 56rpx 0px rgba(102,102,109,0.19)
	border-radius 16rpx
	margin 0 auto
	z-index 100002
	/* 自助办理流程 */
	.moduleOne
		height 100%
		padding 0 20rpx
		.topImg
			height 200rpx
			border-radius 16rpx
			background-color blanchedalmond
		.content
			height 200rpx
			margin-top 20rpx
			border-radius 16rpx
			background-color rgb(98, 154, 192)
	.communal .title
		width 100%
		height 100rpx
		font-size 34rpx
		font-weight bold
		text-align center
		line-height 100rpx
	/* 热门问答 */
	.moduleTwo
		width 610rpx
		height 60vh
		padding 0 20rpx
		.substance
			height auto
			text-align justify
			margin-bottom 10rpx
			padding-bottom 30rpx
			.subTitle
				color #4D4D51
				font-size 28rpx
				font-weight 500
				line-height 44rpx
				font-family PingFangSC-Medium, PingFang SC
			.text
				color #4D4D51
				font-size 22rpx
				font-weight 400
				line-height 40rpx
				font-family PingFangSC-Regular, PingFang SC
	// 移动积分弹窗提示
	.moving_integral_pop-up
		width 640rpx
		background-color #fff
		border-radius 16rpx
		.scroll_pop-up
			width 568rpx
			height 684rpx
			color #000
			line-height 46rpx
			margin 64rpx 0 0 48rpx
			.view
				width 532rpx
				height auto
				text-align justify
				.view1
					font-size 26rpx
					font-weight bold
					font-family PingFangSC-Medium, PingFang SC
					color #000
					padding-bottom 10rpx
				.view2
					font-size 24rpx
					font-weight 400
					font-family PingFangSC-Regular, PingFang SC
					padding-bottom 20rpx
					.textColor
						color #00aff9
					.textBold
						color #000
						font-weight bold
		.solid
			width 100%
			height 2rpx
			background rgba(0, 0, 0, 0.1)
			margin-top 36rpx
		.btn_scroll
			width 100%
			height 106rpx
			display flex
			.button
				outline none
				border none
				width 319rpx
				height 100%
				border-radius 0
				font-size 34rpx
				font-family PingFangSC-Medium, PingFang SC
				font-weight 500
				letter-spacing 2rpx
				line-height 106rpx
				background-color #fff
				.cancel
					border-right 1rpx solid rgba(0, 0, 0, 0.1)
					color #000
				.confirm
					color #576b95
		.img_1
			width 504rpx !important
			height 195rpx !important
		// 定义滚动条轨道
		::-webkit-scrollbar
			width 12rpx
			height 672rpx
			border-radius 6rpx
			background #f0f0f0
		/*定义滚动条轨道 内阴影+圆角*/
		::-webkit-scrollbar-track
			border-radius 12rpx
		/*定义滑块 内阴影+圆角*/
		::-webkit-scrollbar-thumb
			border-radius 12rpx
			background-color #d8d8d8
