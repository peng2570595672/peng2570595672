@import "../../style/animate.styl"
//字体图标
@import "../../fonts/iconfont.styl"
.iconfont
	font-family "iconfont" !important
	font-size 16px
	font-style normal
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

.alert-for-not-finished
	position fixed
	left 0
	right 0
	top 0
	bottom 0
	background rgba(0, 0, 0, 0.6)
	z-index 10000
.alert-for-not-finished-content
	position fixed
	left 0
	right 0
	top 50%
	width 694rpx
	height 850rpx
	margin 0 auto
	border-radius 16rpx
	transform translate(0, -50%)
	background rgba(255,255,255,1)
	box-shadow 4rpx 12rpx 56rpx 0px rgba(102,102,109,0.19)
	z-index 100002
	/* 自助办理流程 */
	.moduleOne
		height 100%
		padding 0 48rpx
		border-radius 16rpx
		padding-bottom 10rpx
		background-color #F5F5F5
		.topImg
			padding 20rpx 10rpx
			border-radius 16rpx
			.photo
				margin-top 32rpx
				display flex
				align-items center
				justify-content space-between
				.photo-item
					padding-top 20rpx
					border-radius 16rpx
					.image
						width 248rpx
						height 148rpx
					.textm
						font-size 28rpx
						font-weight 400
						color #262626
						line-height 40rpx
						margin-top 16rpx
						font-family PingFangSC-Regular, PingFang SC
		.content
			padding 20rpx
			margin-top 12rpx
			border-radius 16rpx
			.showHeight
				height 300rpx
				overflow-y scroll
			.item
				position relative
				padding-bottom 40rpx
				border-left 4rpx solid #2A4F44
				&::before
					display inline-block
					content ''
					width 17rpx
					height 17rpx
					border-radius 50%
					background #2A4F44
					position absolute
					top -8rpx
					left -10rpx
				:&:last-of-type
					border-left 0
					padding-bottom 10rpx
					::before
						left -8rpx
				.content-title
					position relative
					padding-left 32rpx
					display flex
					align-items center
					font-size 32rpx
					font-family PingFangSC-Medium, PingFang SC
					font-weight 500
					color #2A4F44
					transform translateY(-24rpx)
				.content-des
					display flex
					margin-top 10rpx
					padding-left 32rpx
					padding-right 6rpx
					line-height 40rpx
					color #66666D
					font-size 24rpx
					font-weight 400
					transform translateY(-24rpx)
		.close
			width 70rpx
			height 70rpx
			overflow hidden
			border-radius 50%
			border 7.3rpx solid #ffffff
			position absolute
			bottom -150rpx
			left 50%
			transform translateX(-50%)
			::before
				width 70rpx
				height 70rpx
				display block
				content '\e63d'
				font-size 40rpx
				color #FFFFFF
				text-align center
				line-height 70rpx

	.communal .title
		width 100%
		height 100rpx
		font-size 34rpx
		font-weight bold
		text-align center
		line-height 100rpx
	/* 热门问答 */
	.moduleTwo
		width 610rpx
		height 60vh
		padding 0 20rpx
		.substance
			height auto
			text-align justify
			margin-bottom 10rpx
			padding-bottom 30rpx
			.subTitle
				color #4D4D51
				font-size 28rpx
				font-weight 500
				line-height 44rpx
				font-family PingFangSC-Medium, PingFang SC
			.text
				color #4D4D51
				font-size 22rpx
				font-weight 400
				line-height 40rpx
				font-family PingFangSC-Regular, PingFang SC
	// 移动积分弹窗提示
	.moving_integral_pop-up
		width 640rpx
		background-color #fff
		border-radius 16rpx
		.scroll_pop-up
			width 568rpx
			height 684rpx
			color #000
			line-height 46rpx
			margin 64rpx 0 0 48rpx
			.view
				width 532rpx
				height auto
				text-align justify
				.view1
					font-size 26rpx
					font-weight bold
					font-family PingFangSC-Medium, PingFang SC
					color #000
					padding-bottom 10rpx
				.view2
					font-size 24rpx
					font-weight 400
					font-family PingFangSC-Regular, PingFang SC
					padding-bottom 20rpx
					.textColor
						color #00aff9
					.textBold
						color #000
						font-weight bold
		.solid
			width 100%
			height 2rpx
			background rgba(0, 0, 0, 0.1)
			margin-top 36rpx
		.btn_scroll
			width 100%
			height 106rpx
			display flex
			.button
				outline none
				border none
				width 319rpx
				height 100%
				border-radius 0
				font-size 34rpx
				font-family PingFangSC-Medium, PingFang SC
				font-weight 500
				letter-spacing 2rpx
				line-height 106rpx
				background-color #fff
				.cancel
					border-right 1rpx solid rgba(0, 0, 0, 0.1)
					color #000
				.confirm
					color #576b95
		.img_1
			width 504rpx !important
			height 195rpx !important
		// 定义滚动条轨道
		::-webkit-scrollbar
			width 12rpx
			height 672rpx
			border-radius 6rpx
			background #f0f0f0
		/*定义滚动条轨道 内阴影+圆角*/
		::-webkit-scrollbar-track
			border-radius 12rpx
		/*定义滑块 内阴影+圆角*/
		::-webkit-scrollbar-thumb
			border-radius 12rpx
			background-color #d8d8d8
