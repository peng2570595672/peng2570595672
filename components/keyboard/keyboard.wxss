@import "animate.wxss";

.keyboard {
	position: fixed;
	left: 0;
	right: 0;
	bottom: 0;
	z-index: 100;
	padding-top: 24rpx;
	height: 457rpx;
	display: flex;
	justify-content: center;
	flex-grow: 4;
	flex-flow: row wrap; /* 换行 */
	background: #dadada;
	box-sizing: border-box;
}

.keyboard > text {
	display: flex;
	align-items: center;
	justify-content: center;
	margin-left: 9rpx;
	flex: 0 0 65rpx;
	width: 65rpx;
	height: 86rpx;
	font-size: 40rpx;
	background: #fff;
	border-radius: 10rpx;
	margin-bottom: 0;
	box-sizing: border-box;
	box-shadow: 0 4rpx 0 rgba(0, 0, 0, .2);
	-webkit-user-select: none;
	user-select: none;
}

.keyboard > text:nth-child(10n+1) {
	margin-left: 0;
}

.keyboard > text:active {
	box-shadow: none;
	background: #dadada;
}

.keyboard > text.empty,
.keyboard > text.half {
	background: rgba(0, 0, 0, 0);
	box-shadow: none;
}

.keyboard > text.half {
	flex: 0 0 37rpx;
	width: 37rpx;
}

.keyboard > text.del {
	width: 93rpx;
	flex: 0 0 93rpx;
}

.keyboard > text.del::before {
	content: '';
	display: inline-block;
	width: 53rpx;
	height: 42rpx;
	background: url("data:image/png;base64,") no-repeat center;
	-webkit-background-size: cover;
	background-size: contain;
}

.keyboard > text.disabled {
	color: #666;
	box-shadow: none;
	background: #EEEEEE;
}

.keyboard > text.disabled:active {
	background: #EEEEEE;
}

.keyboard > text.ok {
	flex: 0 0 139rpx !important;
	width: 139rpx !important;
}
