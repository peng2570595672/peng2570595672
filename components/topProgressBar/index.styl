.top
    width 100%
    height 92rpx
    display flex
    align-items center
    position fixed
    top 0
    background-color #ECECEC
    z-index 10
    .innerBox
        width 100%
        height 36rpx
        display flex
        font-size 20rpx
        padding 0rpx 44rpx
        align-items center
        justify-content space-between
        .stage
            width 38rpx
            height 28rpx
            color #FFFFFF
            line-height 28rpx
            text-align center
            font-weight normal
            line-height 32rpx
            border-radius 28rpx
            background #E3E3E3
            border 4rpx solid #ECECEC
            font-family Arial-BoldItalicMT, Arial
        .bar
            width 158rpx
            height 12rpx
            overflow hidden
            border-radius 6px
            background #E3E3E3
            .innerBar
                height 12rpx
                border-radius 6px