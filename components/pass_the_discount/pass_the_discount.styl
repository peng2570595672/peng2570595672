@import "../../style/base.styl";
@import "../../style/animate.styl";
.pass-the-discount
	position fixed
	left 0
	right 0
	top 0
	bottom 0
	background: rgba(0,0,0, .5)
	z-index 9999999999999
	.pass-the-discount-wrapper
		position fixed
		left 48rpx
		right 32rpx
		top 360rpx
		display flex
		flex-direction column
		height 568rpx
		padding-bottom 30rpx
		background: #fff
		box-shadow: 2rpx 2rpx 23rpx 0rpx rgba(126, 132, 156, 0.1);
		border-radius: 32rpx;
		// 标题
		.title
			margin-top 34rpx
			display flex
			align-items center
			justify-content center
			height 96rpx
			font-size 36rpx
			font-weight 500
			color #33333D
		.list-content
			margin-left 46rpx
			margin-right 46rpx
			font-size 28rpx;
			color: #404040;
			background rgba(255,255,255,0.12);
			border: 1rpx solid rgba(151,151,151,0.1);
			.list-title
				font-family: PingFangSC-Semibold, PingFang SC;
				font-weight: 600;
				height 118rpx
				line-height 118rpx
				display flex
				align-items center
				text-align center
				.left
					flex 3
					border-right 1rpx solid rgba(151,151,151,0.1)
				.middle
					flex 4
					border-right 1rpx solid rgba(151,151,151,0.1)
				.right
					flex 4
		.list-item
			height 72rpx
			line-height 72rpx
			display flex
			font-size 24rpx
			align-items center
			color #404040
			text-align center
			&.gray
				height 40rpx
				background #EEEEEE
			.left
				flex 3
				border-right 1rpx solid rgba(151,151,151,0.1)
			.middle
				display flex
				justify-content center
				align-items center
				flex 4
				border-right 1rpx solid rgba(151,151,151,0.1)
				& > view:nth-child(2)
					color #F7B500
			.right
				flex 4


