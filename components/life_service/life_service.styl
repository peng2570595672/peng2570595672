@import "../../style/base.styl";
@import "../../style/animate.styl";
//字体图标
@import "../../fonts/iconfont.styl";
.iconfont {
	font-family:"iconfont" !important;
	font-size:16px;
	font-style:normal;
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}
.related-service
	position fixed
	left 0
	right 0
	top 0
	bottom 0
	background: rgba(0,0,0, .5)
	z-index 9999999999999
	// 支付方式
	.related-service-wrapper
		position fixed
		left 0
		right 0
		bottom 0
		display flex
		flex-direction column
		//min-height 768rpx
		height 1040rpx
		padding-bottom 20rpx
		background: #fff
		border-top-left-radius 32rpx
		border-top-right-radius 32rpx
		// 标题
		.related-service-title
			margin-top 44rpx
			display flex
			align-items center
			justify-content center
			height 96rpx
			font-size 30rpx
			font-weight 500
			position relative
			color rgba(0, 0, 0, 0.9)
			font-family PingFangSC-Medium, PingFang SC
			.close
				position absolute
				left 0rpx
				top 0
				padding 30rpx 40rpx 30rpx 30rpx
				&::after
					display block
					text-align left
					content '\e60e'
					font-size 40rpx
		.sub-title
			display flex
			font-size 28rpx
			color rgba(0, 0, 0, 0.9)
			line-height 40rpx
			margin-left 30rpx
			margin-top 32rpx
			&::before
				display flex
				margin-right 8rpx
				content ''
				width 8rpx
				height 44rpx
				background #2FB565
		.related-service-list
			padding-top 44rpx
			padding-left 32rpx
			.related-service-item
				padding 32rpx 13rpx
				border-bottom 1rpx solid rgba(0, 0, 0, 0.1)
				.title
					display flex
					height 48rpx
					font-size 34rpx
					color rgba(0, 0, 0, 0.9)
					align-items top
					padding-bottom 20rpx
				.logo-list
					display flex
					image
						height 44rpx
						margin-right 40rpx
		// 高度填充
		.fill
			flex 1
		.btns
			width 368rpx
			height 80rpx
			display flex
			align-items center
			justify-content center
			background #F2F2F2
			color #07C160
			font-weight 500
			font-size 34rpx
			border-radius 8rpx
			margin 0 auto 100rpx
