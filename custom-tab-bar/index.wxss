.tab-bar {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: 168rpx;
    display: flex;
    overflow: hidden;
    background: #FFFFFF;
    border-radius: 16rpx 16rpx 0px 0px;
    padding-bottom: env(safe-area-inset-bottom);
    box-shadow: 0rpx -8rpx 30rpx 0rpx rgba(223, 223, 223, 0.36);
}

.tab-bar .tab-bar-item {
    flex: 1;
    display: flex;
    font-size: 20rpx;
    margin-top: -50rpx;
    text-align: center;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    font-family: PingFangSC-Semibold, PingFang SC;
    padding-top: 30rpx;
}

.tab-bar .tab-bar-item .pic {
    width: 54rpx;
    height: 54rpx;
    margin-bottom: 10rpx;
}

.tab-bar .tab-bar-item .pic .coverImg {
    width: 100%;
    height: 100%;
}

.tab-bar .tab-bar-item .titleBar {
    font-size: 24rpx;
    font-weight: 400;
    color: #66666E;
    line-height: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
}

.tab-bar .tab-bar-item .selectBar {
    font-size: 24rpx;
    font-weight: 600;
    color: #000000;
    line-height: 34rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
}

.fadeIn {
    -webkit-animation: fade_in 0.5s linear;
    animation: fade_in 0.5s linear;
}


@keyframes fade_in {
    0% {
        transform: translateY(300rpx);
    }

    100% {
        transform: translateY(0rpx);
    }
}

@-webkit-keyframes fade_in {
    0% {
        transform: translateY(300rpx);
    }

    100% {
        transform: translateY(0rpx);
    }
}