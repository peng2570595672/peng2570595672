@keyframes btnFadeIn {
  from {
    opacity: 0.2;
  }
  to {
    opacity: 1;
  }
}
@keyframes btnFadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0.2;
  }
}
.pinan {
  height: 100vh;
  overflow: hidden;
  text-align: center;
}
.pinan .small-program-code {
  margin-top: 20vh;
}
.pinan .small-program-code image {
  width: 500rpx;
}
.pinan .activation {
  position: absolute;
  bottom: 100rpx;
  width: 100%;
}
.pinan .activation .btns {
  margin: 51rpx 60rpx 0;
  box-sizing: border-box;
}
.pinan .activation .btns .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 98rpx;
  font-size: 40rpx;
  font-weight: 500;
  color: #fff;
  border-radius: 49rpx;
  background: linear-gradient(to right, #15ad69, #84d157);
}
